# VibeLife Nginx Configuration
# 部署到: /etc/nginx/sites-available/vibelife
# 启用命令: sudo ln -sf /etc/nginx/sites-available/vibelife /etc/nginx/sites-enabled/
# 重载命令: sudo nginx -t && sudo systemctl reload nginx

# VibeLife 统一入口 (端口 8230)
server {
    listen 8230;
    server_name 106.37.170.238;

    # 前端 Next.js
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # API 代理到 FastAPI
    location /api/ {
        proxy_pass http://127.0.0.1:8000/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # SSE 流式响应支持
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # 健康检查
    location = /health {
        proxy_pass http://127.0.0.1:8000/health;
    }
}

# Bazi 专属入口 (端口 8231) - 自动设置 skill cookie
server {
    listen 8231;
    server_name _;

    location / {
        proxy_pass http://127.0.0.1:8230;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        add_header Set-Cookie "vibelife-skill=bazi; Path=/; Max-Age=31536000";
    }
}

# Zodiac 专属入口 (端口 8232) - 自动设置 skill cookie
server {
    listen 8232;
    server_name _;

    location / {
        proxy_pass http://127.0.0.1:8230;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        add_header Set-Cookie "vibelife-skill=zodiac; Path=/; Max-Age=31536000";
    }
}
