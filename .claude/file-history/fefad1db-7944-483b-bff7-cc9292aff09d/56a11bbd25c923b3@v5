"use client"

import { useState, Suspense } from "react"
import { useRouter, useSearchParams } from "next/navigation"
import Link from "next/link"
import { cn } from "@/lib/utils"

const API_BASE = process.env.NEXT_PUBLIC_API_BASE || ''

// Fortune mode types
type FortuneMode = 'bazi' | 'ziwei' | 'astro'

const MODE_CONFIG = {
  bazi: { label: 'å…«å­—', icon: 'ğŸ”®', desc: 'å››æŸ±å‘½ç†' },
  ziwei: { label: 'ç´«å¾®', icon: 'â­', desc: 'ç´«å¾®æ–—æ•°' },
  astro: { label: 'æ˜Ÿåº§', icon: 'ğŸŒ™', desc: 'è¥¿æ–¹å æ˜Ÿ' },
} as const

// API response types
interface BaziPreviewData {
  pillars: {
    year?: string  // "åºšç”³" (gan+zhi combined as 2-char string)
    month?: string
    day?: string
    hour?: string
  }
  day_master: { gan: string; element: string }
  wuxing_count: Record<string, number>
  strength: string
  favorable_elements: string[]
  digest: string
}

interface ValidationPoint {
  text: string
  confidence: number
}

// Main page component
export default function LoginPage() {
  return (
    <div className="min-h-screen flex bg-background">
      {/* Left Side - Auth Forms */}
      <div className="w-full lg:w-[420px] xl:w-[480px] flex flex-col justify-center p-6 lg:p-10">
        <Suspense fallback={<AuthFormSkeleton />}>
          <AuthSection />
        </Suspense>
      </div>

      {/* Right Side - Fortune Preview (hidden on mobile) */}
      <div className="hidden lg:flex flex-1 bg-sidebar border-l border-border overflow-hidden">
        <FortunePreviewSection />
      </div>
    </div>
  )
}

// Auth section with login/register forms
function AuthSection() {
  const router = useRouter()
  const searchParams = useSearchParams()
  const redirectTo = searchParams.get('redirect') || '/'

  const [mode, setMode] = useState<'login' | 'register'>('login')
  const [email, setEmail] = useState("")
  const [password, setPassword] = useState("")
  const [name, setName] = useState("")
  const [error, setError] = useState("")
  const [loading, setLoading] = useState(false)

  const handleLogin = async (e: React.FormEvent) => {
    e.preventDefault()
    setError("")
    setLoading(true)

    try {
      const res = await fetch(`${API_BASE}/api/auth/login`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({ email, password }),
      })
      const json = await res.json()
      if (!res.ok || !json.ok) {
        setError(json.error?.message || "ç™»å½•å¤±è´¥")
        return
      }
      router.push(redirectTo)
    } catch {
      setError("ç½‘ç»œé”™è¯¯ï¼Œè¯·é‡è¯•")
    } finally {
      setLoading(false)
    }
  }

  const handleRegister = async (e: React.FormEvent) => {
    e.preventDefault()
    setError("")
    setLoading(true)

    try {
      const res = await fetch(`${API_BASE}/api/auth/register`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({
          email,
          password,
          name: name || email.split('@')[0],
          gender: 'ç”·',
          birthday_local: '1990-01-01 12:00:00',
          tz_offset_hours: 8,
          location: { name: 'åŒ—äº¬', longitude: 116.4074, latitude: 39.9042 },
        }),
      })
      const json = await res.json()
      if (!res.ok || !json.ok) {
        setError(json.error?.message || "æ³¨å†Œå¤±è´¥")
        return
      }
      router.push(redirectTo)
    } catch {
      setError("ç½‘ç»œé”™è¯¯ï¼Œè¯·é‡è¯•")
    } finally {
      setLoading(false)
    }
  }

  return (
    <div className="max-w-sm mx-auto w-full space-y-6">
      {/* Logo */}
      <div>
        <h1 className="text-3xl font-serif font-bold text-foreground">Fortune AI</h1>
        <p className="mt-2 text-muted-foreground">ç²¾ç¥æ•°å­—å­ªç”Ÿ Â· äººç”Ÿæ™ºèƒ½OS</p>
      </div>

      {/* Mode Toggle */}
      <div className="flex gap-1 p-1 bg-sidebar rounded-lg">
        <button
          type="button"
          onClick={() => setMode('login')}
          className={cn(
            "flex-1 py-2 px-4 rounded-md text-sm font-medium transition-colors",
            mode === 'login'
              ? "bg-background text-foreground shadow-sm"
              : "text-muted-foreground hover:text-foreground"
          )}
        >
          ç™»å½•
        </button>
        <button
          type="button"
          onClick={() => setMode('register')}
          className={cn(
            "flex-1 py-2 px-4 rounded-md text-sm font-medium transition-colors",
            mode === 'register'
              ? "bg-background text-foreground shadow-sm"
              : "text-muted-foreground hover:text-foreground"
          )}
        >
          æ³¨å†Œ
        </button>
      </div>

      {/* Error Message */}
      {error && (
        <div className="p-3 rounded-lg bg-destructive/10 text-destructive text-sm">
          {error}
        </div>
      )}

      {/* Forms */}
      {mode === 'login' ? (
        <form onSubmit={handleLogin} className="space-y-4">
          <div className="space-y-1">
            <label className="text-sm font-medium text-foreground">é‚®ç®±</label>
            <input
              type="email"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              required
              placeholder="your@email.com"
              className={cn(
                "w-full px-4 py-3 rounded-lg",
                "bg-sidebar border border-border",
                "text-foreground placeholder:text-muted-foreground",
                "focus:outline-none focus:ring-2 focus:ring-foreground/20"
              )}
            />
          </div>
          <div className="space-y-1">
            <label className="text-sm font-medium text-foreground">å¯†ç </label>
            <input
              type="password"
              value={password}
              onChange={(e) => setPassword(e.target.value)}
              required
              minLength={8}
              placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
              className={cn(
                "w-full px-4 py-3 rounded-lg",
                "bg-sidebar border border-border",
                "text-foreground placeholder:text-muted-foreground",
                "focus:outline-none focus:ring-2 focus:ring-foreground/20"
              )}
            />
          </div>
          <button
            type="submit"
            disabled={loading}
            className={cn(
              "w-full py-3 px-4 rounded-lg",
              "bg-foreground text-background",
              "font-medium",
              "hover:opacity-90 transition-opacity",
              "disabled:opacity-50 disabled:cursor-not-allowed"
            )}
          >
            {loading ? "ç™»å½•ä¸­..." : "ç™»å½•"}
          </button>
        </form>
      ) : (
        <form onSubmit={handleRegister} className="space-y-4">
          <div className="space-y-1">
            <label className="text-sm font-medium text-foreground">æ˜µç§°</label>
            <input
              type="text"
              value={name}
              onChange={(e) => setName(e.target.value)}
              placeholder="æ‚¨çš„æ˜µç§°ï¼ˆå¯é€‰ï¼‰"
              className={cn(
                "w-full px-4 py-3 rounded-lg",
                "bg-sidebar border border-border",
                "text-foreground placeholder:text-muted-foreground",
                "focus:outline-none focus:ring-2 focus:ring-foreground/20"
              )}
            />
          </div>
          <div className="space-y-1">
            <label className="text-sm font-medium text-foreground">é‚®ç®±</label>
            <input
              type="email"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              required
              placeholder="your@email.com"
              className={cn(
                "w-full px-4 py-3 rounded-lg",
                "bg-sidebar border border-border",
                "text-foreground placeholder:text-muted-foreground",
                "focus:outline-none focus:ring-2 focus:ring-foreground/20"
              )}
            />
          </div>
          <div className="space-y-1">
            <label className="text-sm font-medium text-foreground">å¯†ç </label>
            <input
              type="password"
              value={password}
              onChange={(e) => setPassword(e.target.value)}
              required
              minLength={8}
              placeholder="è‡³å°‘8ä½"
              className={cn(
                "w-full px-4 py-3 rounded-lg",
                "bg-sidebar border border-border",
                "text-foreground placeholder:text-muted-foreground",
                "focus:outline-none focus:ring-2 focus:ring-foreground/20"
              )}
            />
          </div>
          <button
            type="submit"
            disabled={loading}
            className={cn(
              "w-full py-3 px-4 rounded-lg",
              "bg-foreground text-background",
              "font-medium",
              "hover:opacity-90 transition-opacity",
              "disabled:opacity-50 disabled:cursor-not-allowed"
            )}
          >
            {loading ? "æ³¨å†Œä¸­..." : "æ³¨å†Œ"}
          </button>
          <p className="text-xs text-muted-foreground text-center">
            æ³¨å†Œå³è¡¨ç¤ºæ‚¨åŒæ„æˆ‘ä»¬çš„æœåŠ¡æ¡æ¬¾å’Œéšç§æ”¿ç­–
          </p>
        </form>
      )}

      {/* Mobile: Show link to preview */}
      <div className="lg:hidden pt-4 border-t border-border">
        <p className="text-sm text-muted-foreground text-center">
          å…ˆä½“éªŒä¸€ä¸‹ï¼Ÿ
          <Link href="/register" className="text-foreground hover:underline ml-1">
            å…è´¹é¢„è§ˆå‘½ç›˜
          </Link>
        </p>
      </div>
    </div>
  )
}

// Fortune preview section (right side)
function FortunePreviewSection() {
  const [mode, setMode] = useState<FortuneMode>('bazi')
  const [birthDate, setBirthDate] = useState('1980-02-11')
  const [birthTime, setBirthTime] = useState('14:30')
  const [gender, setGender] = useState<'ç”·' | 'å¥³'>('ç”·')
  const [loading, setLoading] = useState(false)
  const [error, setError] = useState('')
  const [previewData, setPreviewData] = useState<BaziPreviewData | null>(null)
  const [validationPoints, setValidationPoints] = useState<ValidationPoint[]>([])

  const handleGeneratePreview = async () => {
    setLoading(true)
    setError('')

    const birthdayLocal = `${birthDate} ${birthTime}:00`
    const payload = {
      gender,
      birthday_local: birthdayLocal,
      tz_offset_hours: 8,
      location: { name: 'åŒ—äº¬', longitude: 116.4074, latitude: 39.9042 },
    }

    try {
      // Fetch preview and validation points in parallel
      const [previewRes, validationRes] = await Promise.all([
        fetch(`${API_BASE}/api/auth/preview`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload),
        }),
        fetch(`${API_BASE}/api/auth/validation-points`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ ...payload, mode }),
        }),
      ])

      const previewJson = await previewRes.json()
      const validationJson = await validationRes.json()

      if (!previewRes.ok || !previewJson.ok) {
        throw new Error(previewJson.error?.message || 'é¢„è§ˆç”Ÿæˆå¤±è´¥')
      }

      setPreviewData(previewJson.data)

      // Parse validation points
      if (validationRes.ok && validationJson.ok && validationJson.data?.points) {
        const points = validationJson.data.points.map((text: string, i: number) => ({
          text,
          confidence: 0.85 - i * 0.05 + Math.random() * 0.1,
        }))
        setValidationPoints(points)
      }
    } catch (err) {
      setError(err instanceof Error ? err.message : 'ç½‘ç»œé”™è¯¯')
    } finally {
      setLoading(false)
    }
  }

  return (
    <div className="flex-1 flex flex-col p-6 xl:p-8 overflow-y-auto">
      <div className="max-w-3xl mx-auto w-full space-y-5 pb-8">
        {/* Header */}
        <div>
          <h2 className="text-xl font-semibold text-foreground">å…è´¹ä½“éªŒ</h2>
          <p className="text-sm text-muted-foreground mt-1">
            è¾“å…¥ç”Ÿè¾°ï¼Œè·å¾—ä¸“å±å‘½ç›˜é¢„è§ˆ
          </p>
        </div>

        {/* Mode Tabs - Horizontal, compact */}
        <div className="flex gap-2">
          {(Object.keys(MODE_CONFIG) as FortuneMode[]).map((m) => (
            <button
              key={m}
              type="button"
              onClick={() => setMode(m)}
              className={cn(
                "flex-1 py-2.5 px-3 rounded-lg border transition-all",
                "flex items-center justify-center gap-2",
                mode === m
                  ? "border-foreground/30 bg-background shadow-sm"
                  : "border-border hover:border-foreground/20"
              )}
            >
              <span className="text-lg">{MODE_CONFIG[m].icon}</span>
              <span className="font-medium text-foreground text-sm">{MODE_CONFIG[m].label}</span>
              <span className="text-xs text-muted-foreground hidden xl:inline">{MODE_CONFIG[m].desc}</span>
            </button>
          ))}
        </div>

        {/* Birth Input - More compact, horizontal */}
        <div className="p-4 rounded-lg bg-background border border-border">
          <h3 className="font-medium text-foreground text-sm mb-3">å‡ºç”Ÿä¿¡æ¯</h3>
          <div className="grid grid-cols-4 gap-3">
            <div className="space-y-1">
              <label className="text-xs text-muted-foreground">æ—¥æœŸ</label>
              <input
                type="date"
                value={birthDate}
                onChange={(e) => setBirthDate(e.target.value)}
                className={cn(
                  "w-full px-2 py-1.5 rounded text-sm",
                  "bg-sidebar border border-border",
                  "text-foreground",
                  "focus:outline-none focus:ring-1 focus:ring-foreground/20"
                )}
              />
            </div>
            <div className="space-y-1">
              <label className="text-xs text-muted-foreground">æ—¶é—´</label>
              <input
                type="time"
                value={birthTime}
                onChange={(e) => setBirthTime(e.target.value)}
                className={cn(
                  "w-full px-2 py-1.5 rounded text-sm",
                  "bg-sidebar border border-border",
                  "text-foreground",
                  "focus:outline-none focus:ring-1 focus:ring-foreground/20"
                )}
              />
            </div>
            <div className="space-y-1">
              <label className="text-xs text-muted-foreground">æ€§åˆ«</label>
              <select
                value={gender}
                onChange={(e) => setGender(e.target.value as 'ç”·' | 'å¥³')}
                className={cn(
                  "w-full px-2 py-1.5 rounded text-sm",
                  "bg-sidebar border border-border",
                  "text-foreground",
                  "focus:outline-none focus:ring-1 focus:ring-foreground/20"
                )}
              >
                <option value="ç”·">ç”·</option>
                <option value="å¥³">å¥³</option>
              </select>
            </div>
            <div className="space-y-1">
              <label className="text-xs text-muted-foreground">åœ°ç‚¹</label>
              <input
                type="text"
                defaultValue="åŒ—äº¬"
                disabled
                className={cn(
                  "w-full px-2 py-1.5 rounded text-sm",
                  "bg-sidebar border border-border",
                  "text-foreground opacity-60 cursor-not-allowed"
                )}
              />
            </div>
          </div>
          <button
            type="button"
            onClick={handleGeneratePreview}
            disabled={loading}
            className={cn(
              "w-full mt-3 py-2 px-4 rounded-lg",
              "bg-foreground/10 text-foreground",
              "font-medium text-sm",
              "hover:bg-foreground/20 transition-colors",
              "disabled:opacity-50 disabled:cursor-not-allowed"
            )}
          >
            {loading ? "è®¡ç®—ä¸­..." : "ç”Ÿæˆé¢„è§ˆ"}
          </button>
        </div>

        {/* Error */}
        {error && (
          <div className="p-3 rounded-lg bg-destructive/10 text-destructive text-sm">
            {error}
          </div>
        )}

        {/* Preview Content - Two column layout */}
        {previewData && (
          <div className="grid grid-cols-1 xl:grid-cols-2 gap-4">
            {/* Chart Preview */}
            <div className="p-4 rounded-lg bg-background border border-border">
              <h3 className="font-medium text-foreground text-sm mb-3">
                {MODE_CONFIG[mode].label}å‘½ç›˜é¢„è§ˆ
              </h3>
              {mode === 'bazi' && <BaziPreviewReal data={previewData} />}
              {mode === 'ziwei' && <ZiweiPreview />}
              {mode === 'astro' && <AstroPreview />}
            </div>

            {/* Validation Points */}
            <div className="p-4 rounded-lg bg-background border border-border">
              <h3 className="font-medium text-foreground text-sm mb-3 flex items-center gap-2">
                <span>âœ¨</span>
                <span>ã€Œé‚£å°±æ˜¯æˆ‘ã€éªŒè¯ç‚¹</span>
              </h3>
              <div className="space-y-2">
                {validationPoints.length > 0 ? (
                  validationPoints.map((point, i) => (
                    <ValidationPointItem key={i} text={point.text} confidence={point.confidence} />
                  ))
                ) : (
                  <>
                    <ValidationPointItem text="ä½ æ˜¯ä¸æ˜¯ç»å¸¸æƒ³å¤ªå¤šï¼Œå†³å®šä¸€ä»¶å°äº‹éƒ½è¦çº ç»“å¾ˆä¹…ï¼Ÿ" confidence={0.85} />
                    <ValidationPointItem text="ä½ åœ¨äººé™…å…³ç³»ä¸­å¾€å¾€æ˜¯ä»˜å‡ºæ›´å¤šçš„é‚£ä¸ªï¼Ÿ" confidence={0.78} />
                    <ValidationPointItem text="ä½ é¢å¯¹å‹åŠ›æ—¶ï¼Œç¬¬ä¸€ååº”æ˜¯ç‹¬è‡ªæ¶ˆåŒ–ï¼Ÿ" confidence={0.82} />
                  </>
                )}
              </div>
            </div>
          </div>
        )}

        {/* CTA - Only show when preview is visible */}
        {previewData && (
          <div className="p-4 rounded-lg bg-foreground/5 border border-foreground/10 text-center">
            <p className="text-foreground font-medium text-sm">
              æ³¨å†Œè§£é”å®Œæ•´å‘½ç›˜åˆ†æå’Œä¸ªæ€§åŒ–æŒ‡å¯¼
            </p>
            <p className="text-xs text-muted-foreground mt-1">
              æ·±åº¦æŠ¥å‘Š Â· æ¯æ—¥è¿åŠ¿ Â· AI æ•™ç»ƒ
            </p>
          </div>
        )}

        {/* Initial placeholder when no preview */}
        {!previewData && !loading && (
          <div className="flex-1 flex items-center justify-center min-h-[200px]">
            <div className="text-center text-muted-foreground">
              <div className="text-4xl mb-2">ğŸ”®</div>
              <p className="text-sm">è¾“å…¥å‡ºç”Ÿä¿¡æ¯ï¼Œç‚¹å‡»ã€Œç”Ÿæˆé¢„è§ˆã€</p>
              <p className="text-xs mt-1">å³åˆ»è·å¾—å‘½ç›˜åˆ†æé¢„è§ˆ</p>
            </div>
          </div>
        )}
      </div>
    </div>
  )
}

// Helper to split pillar string "åºšç”³" into { gan: "åºš", zhi: "ç”³" }
function parsePillar(pillar?: string): { gan: string; zhi: string } {
  if (!pillar || pillar.length < 2) return { gan: '?', zhi: '?' }
  return { gan: pillar[0], zhi: pillar[1] }
}

// Translate strength from English to Chinese
function translateStrength(strength?: string): string {
  if (!strength) return '?'
  const map: Record<string, string> = {
    'strong': 'èº«å¼º',
    'weak': 'èº«å¼±',
    'balanced': 'ä¸­å’Œ',
  }
  return map[strength.toLowerCase()] || strength
}

// Real Bazi preview with API data
function BaziPreviewReal({ data }: { data: BaziPreviewData }) {
  const yearPillar = parsePillar(data.pillars.year)
  const monthPillar = parsePillar(data.pillars.month)
  const dayPillar = parsePillar(data.pillars.day)
  const hourPillar = parsePillar(data.pillars.hour)

  const pillars = [
    { label: 'å¹´æŸ±', stem: yearPillar.gan, branch: yearPillar.zhi },
    { label: 'æœˆæŸ±', stem: monthPillar.gan, branch: monthPillar.zhi },
    { label: 'æ—¥æŸ±', stem: dayPillar.gan, branch: dayPillar.zhi },
    { label: 'æ—¶æŸ±', stem: hourPillar.gan, branch: hourPillar.zhi },
  ]

  const elements = ['é‡‘', 'æœ¨', 'æ°´', 'ç«', 'åœŸ']

  return (
    <div className="space-y-3">
      {/* Four Pillars - Compact */}
      <div className="grid grid-cols-4 gap-1.5">
        {pillars.map((p) => (
          <div
            key={p.label}
            className="p-2 rounded bg-sidebar border border-border text-center"
          >
            <div className="text-[10px] text-muted-foreground mb-0.5">{p.label}</div>
            <div className="text-base font-serif text-foreground leading-tight">{p.stem}</div>
            <div className="text-base font-serif text-foreground leading-tight">{p.branch}</div>
          </div>
        ))}
      </div>

      {/* Five Elements - Compact horizontal */}
      <div className="flex items-center justify-center gap-3 py-2">
        {elements.map((e) => (
          <div key={e} className="text-center">
            <div className="w-7 h-7 rounded-full bg-foreground/10 flex items-center justify-center text-foreground font-medium text-sm">
              {e}
            </div>
            <div className="text-[10px] text-muted-foreground mt-0.5">
              {data.wuxing_count[e] || 0}
            </div>
          </div>
        ))}
      </div>

      {/* Summary - Compact */}
      <div className="p-2.5 rounded bg-sidebar border border-border text-sm space-y-1">
        <div>
          <span className="text-muted-foreground">æ—¥ä¸»ï¼š</span>
          <span className="text-foreground font-medium">
            {data.day_master?.gan || '?'}{data.day_master?.element || ''} Â· {translateStrength(data.strength)}
          </span>
        </div>
        {data.favorable_elements?.length > 0 && (
          <div>
            <span className="text-muted-foreground">æœ‰åˆ©äº”è¡Œï¼š</span>
            <span className="text-foreground">{data.favorable_elements.join('ã€')}</span>
          </div>
        )}
      </div>
    </div>
  )
}

// Ziwei preview component (placeholder)
function ZiweiPreview() {
  return (
    <div className="space-y-3">
      {/* 12 Palace Grid (simplified 4x4) */}
      <div className="grid grid-cols-4 gap-1">
        {['å·³', 'åˆ', 'æœª', 'ç”³', 'è¾°', '', '', 'é…‰', 'å¯', '', '', 'æˆŒ', 'å¯…', 'ä¸‘', 'å­', 'äº¥'].map((palace, i) => (
          <div
            key={i}
            className={cn(
              "aspect-square rounded flex items-center justify-center text-xs",
              palace ? "bg-sidebar border border-border" : "bg-transparent"
            )}
          >
            {palace && <span className="text-foreground font-serif">{palace}</span>}
          </div>
        ))}
      </div>

      {/* Summary */}
