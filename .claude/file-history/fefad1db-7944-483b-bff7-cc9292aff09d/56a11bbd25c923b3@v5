// Validation point component - Compact
function ValidationPointItem({ text, confidence }: { text: string; confidence: number }) {
  return (
    <div className="flex items-start gap-2 p-2 rounded bg-sidebar border border-border">
      <div className="flex-shrink-0 w-4 h-4 rounded-full bg-foreground/10 flex items-center justify-center mt-0.5">
        <svg className="w-2.5 h-2.5 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <div className="flex-1 min-w-0">
        <p className="text-xs text-foreground leading-relaxed">{text}</p>
        <div className="mt-1 flex items-center gap-2">
          <div className="flex-1 h-1 bg-border rounded-full overflow-hidden">
            <div
              className="h-full bg-foreground/60 rounded-full transition-all"
              style={{ width: `${confidence * 100}%` }}
            />
          </div>
          <span className="text-[10px] text-muted-foreground whitespace-nowrap">
            {Math.round(confidence * 100)}%
          </span>
        </div>
      </div>
    </div>
  )
}

