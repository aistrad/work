// Bazi preview component
function BaziPreview() {
  const pillars = [
    { label: 'å¹´æŸ±', stem: 'ç”²', branch: 'å­' },
    { label: 'æœˆæŸ±', stem: 'ä¸™', branch: 'å¯…' },
    { label: 'æ—¥æŸ±', stem: 'æˆŠ', branch: 'è¾°' },
    { label: 'æ—¶æŸ±', stem: 'åºš', branch: 'åˆ' },
  ]

  return (
    <div className="space-y-4">
      {/* Four Pillars */}
      <div className="grid grid-cols-4 gap-2">
        {pillars.map((p) => (
          <div
            key={p.label}
            className="p-3 rounded-lg bg-sidebar border border-border text-center"
          >
            <div className="text-xs text-muted-foreground mb-1">{p.label}</div>
            <div className="text-xl font-serif text-foreground">{p.stem}</div>
            <div className="text-xl font-serif text-foreground">{p.branch}</div>
          </div>
        ))}
      </div>

      {/* Five Elements Radar (simplified) */}
      <div className="flex items-center justify-center gap-4 py-4">
        {['é‡‘', 'æœ¨', 'æ°´', 'ç«', 'åœŸ'].map((e, i) => (
          <div key={e} className="text-center">
            <div className="w-8 h-8 rounded-full bg-foreground/10 flex items-center justify-center text-foreground font-medium">
              {e}
            </div>
            <div className="text-xs text-muted-foreground mt-1">
              {[2, 3, 1, 2, 0][i]}
            </div>
          </div>
        ))}
      </div>

      {/* Summary */}
      <div className="p-3 rounded-lg bg-sidebar border border-border">
        <div className="text-sm">
          <span className="text-muted-foreground">æ—¥ä¸»ï¼š</span>
          <span className="text-foreground font-medium">æˆŠåœŸ Â· èº«å¼º</span>
        </div>
        <div className="text-sm mt-1">
          <span className="text-muted-foreground">æœ‰åˆ©äº”è¡Œï¼š</span>
          <span className="text-foreground">é‡‘ã€æ°´</span>
        </div>
      </div>
    </div>
  )
}

