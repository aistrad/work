```typescript
// Dashboard å¡ç‰‡æ•°æ®æ¥æº
interface DashboardData {
  // ç­¾åˆ°çŠ¶æ€
  checkin: {
    checked_today: boolean;
    streak: number;              // progress.streak
    identity: string;            // identity.target
    levers: string[];            // current.daily.levers
  };

  // åŒ—ææ˜Ÿ
  north_star: {
    vision: string;
    vision_scene?: string;       // ç”¨äº future_self å¯¹è¯
    anti_vision?: string;
  };

  // æœ¬å‘¨å¤§çŸ³å¤´
  weekly_rocks: {
    rocks: Array<{
      rock: string;
      goal_id: string;
      done: boolean;
    }>;
    start: string;
    end: string;
  };

  // æœˆåº¦é¡¹ç›®
  monthly_project: {
    project: string;
    deadline: string;
    tasks: Array<{
      task: string;
      status: 'done' | 'in_progress' | 'pending';
    }>;
  };

  // æ ¸å¿ƒç›®æ ‡
  goals: Array<{
    id: string;
    name: string;
    progress: number;  // 0-1
  }>;

  // ç»Ÿè®¡
  stats: {
    weekly_rocks_done: number;
    weekly_rocks_total: number;
    streak: number;
    last_review_days: number;
  };
}
