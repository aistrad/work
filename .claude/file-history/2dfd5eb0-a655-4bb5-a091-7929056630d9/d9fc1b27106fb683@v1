/**
 * PairingSynastryResultCard - 隐私安全的合盘结果卡片
 *
 * 展示合盘分析结果，不包含任何原始出生数据
 * 与 SynastryOverviewCard 类似但强调隐私保护
 */

"use client";

import { memo, useState } from "react";
import { registerCard } from "@/skills/CardRegistry";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

interface Person {
  name: string;
}

interface Dimension {
  skill: string;
  name: string;
  icon: string;
  score: number;
  summary: string;
}

interface PairingSynastryResultProps {
  person1: Person;
  person2: Person;
  relationshipType?: string;
  relationshipLabel?: string;
  overallScore: number;
  overallLabel: string;
  dimensions: Dimension[];
  strengths?: string[];
  challenges?: string[];
  advice?: string[];
}

// ═══════════════════════════════════════════════════════════════════════════
// Constants
// ═══════════════════════════════════════════════════════════════════════════

const SCORE_COLORS: Record<string, { bg: string; text: string; glow: string; gradient: string }> = {
  high: {
    bg: "from-green-400 to-emerald-500",
    text: "text-green-600 dark:text-green-400",
    glow: "shadow-green-500/30",
    gradient: "from-green-50 to-emerald-50 dark:from-green-950/30 dark:to-emerald-950/30",
  },
  medium: {
    bg: "from-blue-400 to-cyan-500",
    text: "text-blue-600 dark:text-blue-400",
    glow: "shadow-blue-500/30",
    gradient: "from-blue-50 to-cyan-50 dark:from-blue-950/30 dark:to-cyan-950/30",
  },
  low: {
    bg: "from-amber-400 to-orange-500",
    text: "text-amber-600 dark:text-amber-400",
    glow: "shadow-amber-500/30",
    gradient: "from-amber-50 to-orange-50 dark:from-amber-950/30 dark:to-orange-950/30",
  },
};

const getScoreColorKey = (score: number): string => {
  if (score >= 70) return "high";
  if (score >= 50) return "medium";
  return "low";
};

const getIconComponent = (icon: string) => {
  const icons: Record<string, string> = {
    star: "star",
    "yin-yang": "yin-yang",
    brain: "brain",
    heart: "heart",
    sparkles: "sparkles",
  };
  return icons[icon] || "sparkles";
};

// ═══════════════════════════════════════════════════════════════════════════
// Sub-components
// ═══════════════════════════════════════════════════════════════════════════

const PersonAvatar = memo(function PersonAvatar({
  person,
  side,
}: {
  person: Person;
  side: "left" | "right";
}) {
  return (
    <div className={`flex flex-col items-center ${side === "right" ? "order-2" : ""}`}>
      <div className="w-14 h-14 rounded-full bg-gradient-to-br from-pink-200 to-purple-200 dark:from-pink-800 dark:to-purple-800 flex items-center justify-center text-xl font-semibold text-pink-700 dark:text-pink-200 shadow-lg">
        {person.name.charAt(0)}
      </div>
      <span className="mt-2 text-sm font-medium text-slate-700 dark:text-slate-300">
        {person.name}
      </span>
    </div>
  );
});

const ScoreCircle = memo(function ScoreCircle({
  score,
  label,
}: {
  score: number;
  label: string;
}) {
  const colorKey = getScoreColorKey(score);
  const colors = SCORE_COLORS[colorKey];

  return (
    <div className="relative">
      {/* Glow effect */}
      <div className={`absolute inset-0 rounded-full bg-gradient-to-br ${colors.bg} blur-xl opacity-30`} />
      {/* Main circle */}
      <div className={`relative w-20 h-20 rounded-full bg-gradient-to-br ${colors.bg} shadow-lg ${colors.glow} flex flex-col items-center justify-center`}>
        <span className="text-2xl font-bold text-white">{score}</span>
        <span className="text-[10px] text-white/80">{label}</span>
      </div>
    </div>
  );
});

const DimensionBar = memo(function DimensionBar({
  dimension,
}: {
  dimension: Dimension;
}) {
  const colorKey = getScoreColorKey(dimension.score);

  return (
    <div className="flex items-center gap-3 p-3 bg-white/60 dark:bg-slate-800/60 rounded-lg">
      {/* Icon */}
      <div className="w-8 h-8 rounded-full bg-slate-100 dark:bg-slate-700 flex items-center justify-center">
        <span className="text-sm">
          {dimension.icon === "star" && ""}
          {dimension.icon === "yin-yang" && ""}
          {dimension.icon === "brain" && ""}
          {dimension.icon === "sparkles" && ""}
        </span>
      </div>

      {/* Content */}
      <div className="flex-1 min-w-0">
        <div className="flex items-center justify-between mb-1">
          <span className="text-sm font-medium text-slate-700 dark:text-slate-300">
            {dimension.name}
          </span>
          <span className={`text-sm font-semibold ${SCORE_COLORS[colorKey].text}`}>
            {dimension.score}
          </span>
        </div>

        {/* Progress Bar */}
        <div className="h-1.5 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
          <div
            className={`h-full rounded-full bg-gradient-to-r ${SCORE_COLORS[colorKey].bg} transition-all duration-500`}
            style={{ width: `${dimension.score}%` }}
          />
        </div>

        {/* Summary */}
        <p className="text-xs text-slate-500 dark:text-slate-400 mt-1 truncate">
          {dimension.summary}
        </p>
      </div>
    </div>
  );
});

const InsightSection = memo(function InsightSection({
  title,
  icon,
  items,
  colorClass,
}: {
  title: string;
  icon: string;
  items: string[];
  colorClass: string;
}) {
  if (!items || items.length === 0) return null;

  return (
    <div className={`p-3 rounded-lg ${colorClass}`}>
      <div className="flex items-center gap-2 mb-2">
        <span>{icon}</span>
        <span className="text-sm font-medium">{title}</span>
      </div>
      <ul className="space-y-1">
        {items.slice(0, 3).map((item, i) => (
          <li key={i} className="text-sm text-slate-600 dark:text-slate-300 flex items-start gap-1">
            <span className="text-slate-400 mt-0.5">-</span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
  );
});

// ═══════════════════════════════════════════════════════════════════════════
// Main Component
// ═══════════════════════════════════════════════════════════════════════════

function PairingSynastryResultCard({
  person1,
  person2,
  relationshipLabel,
  overallScore,
  overallLabel,
  dimensions = [],
  strengths = [],
  challenges = [],
  advice = [],
}: PairingSynastryResultProps) {
  const [expanded, setExpanded] = useState(false);
  const colorKey = getScoreColorKey(overallScore);
  const colors = SCORE_COLORS[colorKey];

  return (
    <div className={`pairing-synastry-result-card bg-gradient-to-br ${colors.gradient} rounded-xl border border-pink-200 dark:border-pink-800 overflow-hidden my-2 animate-fade-in`}>
      {/* Privacy Badge */}
      <div className="px-4 pt-3">
        <div className="flex items-center justify-center gap-1.5">
          <svg className="w-3.5 h-3.5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fillRule="evenodd" clipRule="evenodd"
              d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            />
          </svg>
          <span className="text-xs text-green-600 dark:text-green-400 font-medium">
            隐私保护 - 不含出生信息
          </span>
        </div>
      </div>

      {/* Header - Two Persons with Score */}
      <div className="p-5 pb-4">
        <div className="flex items-center justify-center gap-3 mb-4">
          <PersonAvatar person={person1} side="left" />

          <div className="flex flex-col items-center">
            <ScoreCircle score={overallScore} label={overallLabel} />
          </div>

          <PersonAvatar person={person2} side="right" />
        </div>

        {relationshipLabel && (
          <p className="text-center text-sm text-slate-500 dark:text-slate-400">
            {relationshipLabel}关系
          </p>
        )}
      </div>

      {/* Dimensions */}
      {dimensions.length > 0 && (
        <div className="px-5 pb-4">
          <h4 className="text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
            各维度评分
          </h4>
          <div className="space-y-2">
            {dimensions.map((dim, i) => (
              <DimensionBar key={i} dimension={dim} />
            ))}
          </div>
        </div>
      )}

      {/* Insights */}
      {(strengths.length > 0 || challenges.length > 0) && (
        <div className="px-5 pb-4 grid grid-cols-2 gap-3">
          <InsightSection
            title="你们的亮点"
            icon=""
            items={strengths}
            colorClass="bg-green-50 dark:bg-green-900/20"
          />
          <InsightSection
            title="需要注意"
            icon=""
            items={challenges}
            colorClass="bg-amber-50 dark:bg-amber-900/20"
          />
        </div>
      )}

      {/* Advice (Expandable) */}
      {advice.length > 0 && (
        <div className="px-5 pb-4">
          <button
            onClick={() => setExpanded(!expanded)}
            className="w-full flex items-center justify-between p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg"
          >
            <div className="flex items-center gap-2">
              <span className="text-sm font-medium text-blue-700 dark:text-blue-300">
                相处建议
              </span>
            </div>
            <svg
              className={`w-4 h-4 text-blue-500 transition-transform ${expanded ? "rotate-180" : ""}`}
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </button>

          {expanded && (
            <div className="mt-2 p-3 bg-blue-50/50 dark:bg-blue-900/10 rounded-lg">
              <ul className="space-y-2">
                {advice.map((item, i) => (
                  <li
                    key={i}
                    className="text-sm text-slate-600 dark:text-slate-300 flex items-start gap-2"
                  >
                    <span className="text-blue-500 mt-0.5">-</span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      )}

      {/* Footer */}
      <div className="px-5 pb-4">
        <p className="text-xs text-center text-slate-400">
          此结果仅供参考，关系需要双方共同经营
        </p>
      </div>
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Register to CardRegistry
// ═══════════════════════════════════════════════════════════════════════════

registerCard("privacy_synastry_result", PairingSynastryResultCard);

export default memo(PairingSynastryResultCard);
