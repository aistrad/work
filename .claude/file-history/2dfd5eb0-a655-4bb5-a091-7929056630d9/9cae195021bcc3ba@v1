/**
 * PairingRequestCard - 配对请求卡片
 *
 * 展示待处理的配对请求，支持接受/拒绝操作
 */

"use client";

import { memo, useState } from "react";
import { registerCard } from "@/skills/CardRegistry";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

interface PairingRequest {
  id: string;
  requesterVibeId: string;
  requesterName: string;
  relationshipType: string;
  relationshipLabel: string;
  message?: string;
  createdAt: string;
  expiresAt?: string;
}

interface PairingRequestCardProps {
  requests: PairingRequest[];
  count: number;
  onAccept?: (requestId: string) => void;
  onReject?: (requestId: string) => void;
}

// ═══════════════════════════════════════════════════════════════════════════
// Helper Functions
// ═══════════════════════════════════════════════════════════════════════════

const getRelationshipIcon = (type: string): string => {
  const icons: Record<string, string> = {
    romantic: "heart",
    spouse: "ring",
    parent_child: "users",
    sibling: "user-group",
    business: "briefcase",
    friend: "user-friends",
  };
  return icons[type] || "user";
};

const formatTime = (isoString: string): string => {
  const date = new Date(isoString);
  const now = new Date();
  const diffMs = now.getTime() - date.getTime();
  const diffHours = Math.floor(diffMs / (1000 * 60 * 60));
  const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));

  if (diffHours < 1) return "刚刚";
  if (diffHours < 24) return `${diffHours}小时前`;
  if (diffDays < 7) return `${diffDays}天前`;
  return date.toLocaleDateString("zh-CN", { month: "numeric", day: "numeric" });
};

// ═══════════════════════════════════════════════════════════════════════════
// Sub-components
// ═══════════════════════════════════════════════════════════════════════════

const RequestItem = memo(function RequestItem({
  request,
  onAccept,
  onReject,
}: {
  request: PairingRequest;
  onAccept?: (id: string) => void;
  onReject?: (id: string) => void;
}) {
  const [loading, setLoading] = useState<"accept" | "reject" | null>(null);

  const handleAccept = async () => {
    setLoading("accept");
    onAccept?.(request.id);
  };

  const handleReject = async () => {
    setLoading("reject");
    onReject?.(request.id);
  };

  return (
    <div className="bg-white dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700 p-4">
      {/* Header */}
      <div className="flex items-start justify-between mb-3">
        <div className="flex items-center gap-3">
          <div className="w-10 h-10 rounded-full bg-gradient-to-br from-pink-200 to-purple-200 dark:from-pink-800 dark:to-purple-800 flex items-center justify-center text-lg font-semibold text-pink-700 dark:text-pink-200">
            {request.requesterName.charAt(0)}
          </div>
          <div>
            <h4 className="font-medium text-slate-800 dark:text-slate-100">
              {request.requesterName}
            </h4>
            <p className="text-xs text-slate-500 dark:text-slate-400">
              {request.requesterVibeId}
            </p>
          </div>
        </div>
        <span className="text-xs text-slate-400 dark:text-slate-500">
          {formatTime(request.createdAt)}
        </span>
      </div>

      {/* Relationship Type */}
      <div className="flex items-center gap-2 mb-3">
        <span className="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-pink-100 text-pink-700 dark:bg-pink-900/30 dark:text-pink-300">
          {request.relationshipLabel}
        </span>
        <span className="text-sm text-slate-600 dark:text-slate-300">
          想和你合盘
        </span>
      </div>

      {/* Message */}
      {request.message && (
        <div className="mb-3 p-3 bg-slate-50 dark:bg-slate-700/50 rounded-lg">
          <p className="text-sm text-slate-600 dark:text-slate-300 italic">
            &ldquo;{request.message}&rdquo;
          </p>
        </div>
      )}

      {/* Actions */}
      <div className="flex gap-2">
        <button
          onClick={handleReject}
          disabled={loading !== null}
          className="flex-1 py-2 px-4 rounded-lg font-medium text-slate-600 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 transition-all disabled:opacity-50"
        >
          {loading === "reject" ? "处理中..." : "婉拒"}
        </button>
        <button
          onClick={handleAccept}
          disabled={loading !== null}
          className="flex-1 py-2 px-4 rounded-lg font-medium text-white bg-gradient-to-r from-pink-500 to-purple-500 hover:from-pink-600 hover:to-purple-600 transition-all disabled:opacity-50"
        >
          {loading === "accept" ? "计算中..." : "同意合盘"}
        </button>
      </div>
    </div>
  );
});

// ═══════════════════════════════════════════════════════════════════════════
// Main Component
// ═══════════════════════════════════════════════════════════════════════════

function PairingRequestCard({
  requests,
  count,
  onAccept,
  onReject,
}: PairingRequestCardProps) {
  if (count === 0 || requests.length === 0) {
    return (
      <div className="pairing-request-card bg-gradient-to-br from-pink-50 to-purple-50 dark:from-pink-950/30 dark:to-purple-950/30 rounded-xl border border-pink-200 dark:border-pink-800 overflow-hidden my-2 animate-fade-in p-5 text-center">
        <div className="inline-flex items-center justify-center w-12 h-12 rounded-full bg-pink-100 dark:bg-pink-900/50 mb-3">
          <svg className="w-6 h-6 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2}
              d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
            />
          </svg>
        </div>
        <h3 className="text-lg font-semibold text-slate-800 dark:text-slate-100 mb-1">
          暂无配对请求
        </h3>
        <p className="text-sm text-slate-500 dark:text-slate-400">
          当有人向你发起配对请求时，会在这里显示
        </p>
      </div>
    );
  }

  return (
    <div className="pairing-request-card bg-gradient-to-br from-pink-50 to-purple-50 dark:from-pink-950/30 dark:to-purple-950/30 rounded-xl border border-pink-200 dark:border-pink-800 overflow-hidden my-2 animate-fade-in">
      {/* Header */}
      <div className="p-4 border-b border-pink-200 dark:border-pink-800">
        <div className="flex items-center justify-between">
          <div className="flex items-center gap-2">
            <span className="text-lg">
              <svg className="w-5 h-5 text-pink-500" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" clipRule="evenodd"
                  d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                />
              </svg>
            </span>
            <h3 className="font-semibold text-slate-800 dark:text-slate-100">
              配对请求
            </h3>
          </div>
          <span className="inline-flex items-center justify-center w-6 h-6 rounded-full bg-pink-500 text-white text-xs font-medium">
            {count}
          </span>
        </div>
      </div>

      {/* Requests List */}
      <div className="p-4 space-y-3 max-h-96 overflow-y-auto">
        {requests.map((request) => (
          <RequestItem
            key={request.id}
            request={request}
            onAccept={onAccept}
            onReject={onReject}
          />
        ))}
      </div>

      {/* Privacy Notice */}
      <div className="px-4 pb-4">
        <p className="text-xs text-center text-slate-400 dark:text-slate-500">
          同意后，系统会计算合盘但不会泄露你的出生信息
        </p>
      </div>
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Register to CardRegistry
// ═══════════════════════════════════════════════════════════════════════════

registerCard("pairing_request_list", PairingRequestCard);

export default memo(PairingRequestCard);
