/**
 * PairingInviteCard - 邀请链接卡片
 *
 * 展示生成的邀请链接，支持复制和分享
 * 设计风格：密影海报风格，神秘感
 */

"use client";

import { memo, useState, useCallback, useEffect } from "react";
import { registerCard } from "@/skills/CardRegistry";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

interface PairingInviteCardProps {
  url: string;
  token: string;
  relationshipType: string;
  relationshipLabel: string;
  expiresAt?: string;
}

// ═══════════════════════════════════════════════════════════════════════════
// Icons
// ═══════════════════════════════════════════════════════════════════════════

const CopyIcon = () => (
  <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2}
      d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
    />
  </svg>
);

const CheckIcon = () => (
  <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
  </svg>
);

const ShareIcon = () => (
  <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2}
      d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"
    />
  </svg>
);

const QRIcon = () => (
  <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2}
      d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h2M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"
    />
  </svg>
);

// ═══════════════════════════════════════════════════════════════════════════
// Helper Functions
// ═══════════════════════════════════════════════════════════════════════════

const formatExpiry = (isoString?: string): string => {
  if (!isoString) return "";
  const date = new Date(isoString);
  const now = new Date();
  const diffMs = date.getTime() - now.getTime();
  const diffDays = Math.ceil(diffMs / (1000 * 60 * 60 * 24));

  if (diffDays <= 0) return "已过期";
  if (diffDays === 1) return "1天后过期";
  return `${diffDays}天后过期`;
};

// ═══════════════════════════════════════════════════════════════════════════
// Main Component
// ═══════════════════════════════════════════════════════════════════════════

function PairingInviteCard({
  url,
  token,
  relationshipType,
  relationshipLabel,
  expiresAt,
}: PairingInviteCardProps) {
  const [copied, setCopied] = useState(false);
  const [showQR, setShowQR] = useState(false);

  const handleCopy = useCallback(async () => {
    try {
      await navigator.clipboard.writeText(url);
      setCopied(true);
      setTimeout(() => setCopied(false), 2000);
    } catch (err) {
      console.error("Failed to copy:", err);
    }
  }, [url]);

  const handleShare = useCallback(async () => {
    if (navigator.share) {
      try {
        await navigator.share({
          title: "有人想和你看缘分",
          text: `来 VibeLife 看看我们的关系吧`,
          url: url,
        });
      } catch (err) {
        // User cancelled or share failed
      }
    } else {
      handleCopy();
    }
  }, [url, handleCopy]);

  return (
    <div className="pairing-invite-card overflow-hidden my-2 animate-fade-in">
      {/* Mysterious Poster Style */}
      <div className="relative bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 rounded-xl overflow-hidden">
        {/* Decorative Elements */}
        <div className="absolute inset-0 opacity-20">
          <div className="absolute top-0 left-0 w-32 h-32 bg-purple-500 rounded-full blur-3xl" />
          <div className="absolute bottom-0 right-0 w-32 h-32 bg-pink-500 rounded-full blur-3xl" />
          <div className="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-48 h-48 bg-indigo-500 rounded-full blur-3xl" />
        </div>

        {/* Star Pattern */}
        <div className="absolute inset-0 opacity-30">
          {[...Array(20)].map((_, i) => (
            <div
              key={i}
              className="absolute w-1 h-1 bg-white rounded-full animate-pulse"
              style={{
                top: `${Math.random() * 100}%`,
                left: `${Math.random() * 100}%`,
                animationDelay: `${Math.random() * 2}s`,
              }}
            />
          ))}
        </div>

        {/* Content */}
        <div className="relative z-10 p-6">
          {/* Header */}
          <div className="text-center mb-6">
            <div className="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-pink-500/30 to-purple-500/30 border border-pink-400/30 mb-4">
              <svg className="w-8 h-8 text-pink-300" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" clipRule="evenodd"
                  d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                />
              </svg>
            </div>
            <h3 className="text-xl font-bold text-white mb-2">
              有人想和你看缘分
            </h3>
            <p className="text-purple-200 text-sm">
              VibeLink 邀请链接
            </p>
          </div>

          {/* Relationship Badge */}
          <div className="flex justify-center mb-6">
            <span className="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-pink-500/20 text-pink-200 border border-pink-400/30">
              {relationshipLabel}
            </span>
          </div>

          {/* Link Display */}
          <div className="bg-black/30 rounded-lg p-4 mb-4 backdrop-blur">
            <p className="text-purple-200 text-xs mb-2">邀请链接</p>
            <p className="text-white text-sm font-mono break-all">
              {url}
            </p>
          </div>

          {/* Expiry Info */}
          {expiresAt && (
            <div className="text-center mb-4">
              <span className="text-purple-300 text-xs">
                {formatExpiry(expiresAt)}
              </span>
            </div>
          )}

          {/* Actions */}
          <div className="flex gap-3">
            <button
              onClick={handleCopy}
              className={`flex-1 flex items-center justify-center gap-2 py-3 px-4 rounded-lg font-medium transition-all ${
                copied
                  ? "bg-green-500/30 text-green-200 border border-green-400/30"
                  : "bg-white/10 text-white border border-white/20 hover:bg-white/20"
              }`}
            >
              {copied ? <CheckIcon /> : <CopyIcon />}
              <span>{copied ? "已复制" : "复制链接"}</span>
            </button>
            <button
              onClick={handleShare}
              className="flex-1 flex items-center justify-center gap-2 py-3 px-4 rounded-lg font-medium bg-gradient-to-r from-pink-500 to-purple-500 text-white hover:from-pink-600 hover:to-purple-600 transition-all"
            >
              <ShareIcon />
              <span>分享</span>
            </button>
          </div>

          {/* Privacy Notice */}
          <div className="mt-4 text-center">
            <p className="text-purple-300/70 text-xs">
              对方加入后，你们的合盘结果将不会泄露任何出生信息
            </p>
          </div>
        </div>
      </div>
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Register to CardRegistry
// ═══════════════════════════════════════════════════════════════════════════

registerCard("pairing_invite", PairingInviteCard);

export default memo(PairingInviteCard);
