import React from 'react';
import { useParams, useRouter } from 'next/navigation';
import useSWR from 'swr';
import { Star, Calendar, AlertCircle, ArrowRight } from 'lucide-react';
import { apiClient } from '@/lib/api';

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Types
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

interface SharedInsight {
  id: string;
  title: string;
  content: string;
  chartData: {
    sunSign?: string;
    sun_sign?: string;
    moonSign?: string;
    moon_sign?: string;
    risingSign?: string;
    rising_sign?: string;
  };
  createdAt: string;
}

interface SharedResponse {
  status: string;
  insight?: SharedInsight;
  error?: string;
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Helpers
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function formatDate(dateStr: string): string {
  try {
    const date = new Date(dateStr);
    return date.toLocaleDateString("zh-CN", {
      year: "numeric",
      month: "long",
      day: "numeric",
    });
  } catch {
    return dateStr;
  }
}

function getSignEmoji(sign: string): string {
  const signEmojis: Record<string, string> = {
    ç™½ç¾Šåº§: "â™ˆ", é‡‘ç‰›åº§: "â™‰", åŒå­åº§: "â™Š", å·¨èŸ¹åº§: "â™‹",
    ç‹®å­åº§: "â™Œ", å¤„å¥³åº§: "â™", å¤©ç§¤åº§: "â™", å¤©èåº§: "â™",
    å°„æ‰‹åº§: "â™", æ‘©ç¾¯åº§: "â™‘", æ°´ç“¶åº§: "â™’", åŒé±¼åº§: "â™“",
  };
  return signEmojis[sign] || "â˜…";
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// API Functions
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

async function fetchSharedInsight(token: string): Promise<SharedResponse> {
  const response = await apiClient.post<SharedResponse>('/api/v1/skills/zodiac/shared', {
    args: { share_token: token },
  });
  return response.data;
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Loading Skeleton
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function LoadingSkeleton() {
  return (
    <div className="max-w-2xl mx-auto px-4 py-8">
      <div className="h-8 w-48 bg-white/10 rounded animate-pulse mb-4" />
      <div className="h-64 bg-white/5 rounded-xl animate-pulse mb-6" />
      <div className="space-y-3">
        <div className="h-4 bg-white/10 rounded animate-pulse" />
        <div className="h-4 bg-white/10 rounded animate-pulse w-3/4" />
        <div className="h-4 bg-white/10 rounded animate-pulse w-5/6" />
      </div>
    </div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Error States
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function NotFoundState() {
  const router = useRouter();

  return (
    <div className="min-h-screen flex items-center justify-center bg-gradient-to-b from-bg-primary to-bg-secondary">
      <div className="text-center px-4">
        <div className="w-20 h-20 mx-auto mb-6 rounded-full bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
          <AlertCircle className="w-10 h-10 text-amber-500" />
        </div>
        <h1 className="text-2xl font-bold mb-2">é“¾æ¥å·²å¤±æ•ˆ</h1>
        <p className="text-muted-foreground mb-6">
          è¯¥åˆ†äº«é“¾æ¥å¯èƒ½å·²è¿‡æœŸæˆ–ä¸å­˜åœ¨
        </p>
        <button
          onClick={() => router.push('/')}
          className="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
        >
          è¿”å›é¦–é¡µ
        </button>
      </div>
    </div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Main Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export default function SharedZodiacPage(): React.ReactElement {
  const params = useParams<{ token: string }>();
  const token = params?.token ?? '';
  const router = useRouter();

  const { data, error, isLoading } = useSWR(
    token ? `shared-zodiac-${token}` : null,
    () => fetchSharedInsight(token),
    { revalidateOnFocus: false }
  );

  if (isLoading) {
    return (
      <div className="min-h-screen bg-gradient-to-b from-bg-primary to-bg-secondary">
        <LoadingSkeleton />
      </div>
    );
  }

  if (error || !data || data.status !== 'success' || !data.insight) {
    return <NotFoundState />;
  }

  const { insight } = data;
  const chartData = insight.chartData || {};
  const sunSign = chartData.sunSign || chartData.sun_sign || "";
  const moonSign = chartData.moonSign || chartData.moon_sign || "";
  const risingSign = chartData.risingSign || chartData.rising_sign || "";

  return (
    <div className="min-h-screen bg-gradient-to-b from-bg-primary to-bg-secondary">
      {/* Header */}
      <header className="bg-bg-primary/80 backdrop-blur-xl border-b border-white/5">
        <div className="max-w-2xl mx-auto px-4 py-4">
          <div className="flex items-center gap-2 text-indigo-500">
            <Star className="w-5 h-5" />
            <span className="font-medium">VibeLife æ˜Ÿåº§åˆ†æ</span>
          </div>
        </div>
      </header>

      <main className="max-w-2xl mx-auto px-4 py-8">
        {/* Title Card */}
        <div className="bg-gradient-to-br from-indigo-50 to-purple-50 dark:from-indigo-950/30 dark:to-purple-950/30 rounded-2xl border border-indigo-200 dark:border-indigo-800 p-6 mb-8">
          <h1 className="text-2xl font-bold text-indigo-900 dark:text-indigo-100 mb-2">
            {insight.title}
          </h1>
          <div className="flex items-center gap-2 text-sm text-indigo-600 dark:text-indigo-300">
            <Calendar className="w-4 h-4" />
            <span>{formatDate(insight.createdAt)}</span>
          </div>

          {/* Big Three */}
          {(sunSign || moonSign || risingSign) && (
            <div className="grid grid-cols-3 gap-4 mt-6">
              {[
                { label: "å¤ªé˜³", sign: sunSign, icon: "â˜€ï¸" },
                { label: "æœˆäº®", sign: moonSign, icon: "ğŸŒ™" },
                { label: "ä¸Šå‡", sign: risingSign, icon: "â¬†ï¸" },
              ].filter(item => item.sign).map((item) => (
                <div
                  key={item.label}
                  className="text-center p-3 bg-white/60 dark:bg-black/30 rounded-xl"
                >
                  <div className="text-xs text-muted-foreground mb-1">
                    {item.icon} {item.label}
                  </div>
                  <div className="text-2xl font-medium">
                    {getSignEmoji(item.sign)}
                  </div>
                  <div className="text-sm font-medium">{item.sign}</div>
                </div>
              ))}
            </div>
          )}
        </div>

        {/* Analysis Content */}
        <div className="bg-white/5 rounded-xl border border-white/10 p-6 mb-8">
          <h2 className="text-lg font-semibold mb-4">AI åˆ†æè§£è¯»</h2>
          <div className="prose prose-sm dark:prose-invert max-w-none text-text-secondary whitespace-pre-wrap">
            {insight.content}
          </div>
        </div>

        {/* CTA */}
        <div className="bg-gradient-to-r from-indigo-500 to-purple-500 rounded-xl p-6 text-white text-center">
          <h3 className="text-xl font-bold mb-2">æƒ³è¦è·å–ä½ çš„ä¸“å±æ˜Ÿç›˜åˆ†æï¼Ÿ</h3>
          <p className="text-white/80 mb-4">
            VibeLife ä½¿ç”¨ AI æä¾›ä¸ªæ€§åŒ–çš„æ˜Ÿåº§è§£è¯»
          </p>
          <button
            onClick={() => router.push('/')}
            className="inline-flex items-center gap-2 px-6 py-3 bg-white text-indigo-600 rounded-lg font-medium hover:bg-white/90 transition-colors"
          >
            <span>å¼€å§‹åˆ†ææˆ‘çš„æ˜Ÿç›˜</span>
            <ArrowRight className="w-4 h-4" />
          </button>
        </div>

        {/* Footer */}
        <footer className="text-center text-sm text-muted-foreground mt-12 py-6 border-t border-white/5">
          <p>ç”± VibeLife AI ç”Ÿæˆ Â· ä»…ä¾›å¨±ä¹å‚è€ƒ</p>
        </footer>
      </main>
    </div>
  );
}
