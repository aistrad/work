"use client";

import { useState } from "react";
import { ChevronDown, ChevronUp, Share2, Trash2, Calendar, Star } from "lucide-react";

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Types
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

interface ZodiacInsight {
  id: string;
  title: string;
  content: string;
  fullContent: string;
  evidence: {
    chart_data?: {
      sunSign?: string;
      sun_sign?: string;
      moonSign?: string;
      moon_sign?: string;
      risingSign?: string;
      rising_sign?: string;
    };
    generated_at?: string;
  };
  createdAt: string;
  userReaction?: string;
}

interface ZodiacHistoryCardProps {
  insight: ZodiacInsight;
  onShare?: (insight: ZodiacInsight) => void;
  onDelete?: (insightId: string) => void;
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Helpers
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function formatDate(dateStr: string): string {
  try {
    const date = new Date(dateStr);
    return date.toLocaleDateString("zh-CN", {
      year: "numeric",
      month: "long",
      day: "numeric",
      hour: "2-digit",
      minute: "2-digit",
    });
  } catch {
    return dateStr;
  }
}

function getSignEmoji(sign: string): string {
  const signEmojis: Record<string, string> = {
    ç™½ç¾Šåº§: "â™ˆ", é‡‘ç‰›åº§: "â™‰", åŒå­åº§: "â™Š", å·¨èŸ¹åº§: "â™‹",
    ç‹®å­åº§: "â™Œ", å¤„å¥³åº§: "â™", å¤©ç§¤åº§: "â™", å¤©èåº§: "â™",
    å°„æ‰‹åº§: "â™", æ‘©ç¾¯åº§: "â™‘", æ°´ç“¶åº§: "â™’", åŒé±¼åº§: "â™“",
  };
  return signEmojis[sign] || "â˜…";
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export default function ZodiacHistoryCard({
  insight,
  onShare,
  onDelete,
}: ZodiacHistoryCardProps) {
  const [isExpanded, setIsExpanded] = useState(false);

  const chartData = insight.evidence?.chart_data || {};
  const sunSign = chartData.sunSign || chartData.sun_sign || "";
  const moonSign = chartData.moonSign || chartData.moon_sign || "";
  const risingSign = chartData.risingSign || chartData.rising_sign || "";

  return (
    <div className="zodiac-history-card bg-gradient-to-br from-indigo-50 to-purple-50 dark:from-indigo-950/30 dark:to-purple-950/30 rounded-xl border border-indigo-200 dark:border-indigo-800 overflow-hidden transition-all">
      {/* Header - Always visible */}
      <div
        className="p-4 cursor-pointer hover:bg-white/30 dark:hover:bg-black/20 transition-colors"
        onClick={() => setIsExpanded(!isExpanded)}
      >
        <div className="flex items-center justify-between">
          <div className="flex items-center gap-3">
            {/* Sign Badge */}
            <div className="flex items-center justify-center w-12 h-12 rounded-full bg-indigo-100 dark:bg-indigo-900/40 text-2xl">
              {getSignEmoji(sunSign)}
            </div>

            <div>
              <h3 className="font-semibold text-indigo-900 dark:text-indigo-100">
                {insight.title}
              </h3>
              <div className="flex items-center gap-2 text-sm text-indigo-600 dark:text-indigo-300">
                <Calendar className="w-3 h-3" />
                <span>{formatDate(insight.createdAt)}</span>
              </div>
            </div>
          </div>

          <div className="flex items-center gap-2">
            {/* Big Three Preview */}
            {sunSign && (
              <div className="hidden sm:flex items-center gap-1 px-2 py-1 bg-white/60 dark:bg-black/30 rounded text-xs">
                <span>{getSignEmoji(sunSign)}</span>
                {moonSign && <span>{getSignEmoji(moonSign)}</span>}
                {risingSign && <span>{getSignEmoji(risingSign)}</span>}
              </div>
            )}

            {/* Expand/Collapse Icon */}
            {isExpanded ? (
              <ChevronUp className="w-5 h-5 text-indigo-500" />
            ) : (
              <ChevronDown className="w-5 h-5 text-indigo-500" />
            )}
          </div>
        </div>

        {/* Preview Content */}
        {!isExpanded && insight.content && (
          <p className="mt-2 text-sm text-muted-foreground line-clamp-2">
            {insight.content}
          </p>
        )}
      </div>

      {/* Expanded Content */}
      {isExpanded && (
        <div className="px-4 pb-4 animate-fade-in">
          {/* Big Three Display */}
          {(sunSign || moonSign || risingSign) && (
            <div className="grid grid-cols-3 gap-3 mb-4">
              {[
                { label: "å¤ªé˜³", sign: sunSign, icon: "â˜€ï¸" },
                { label: "æœˆäº®", sign: moonSign, icon: "ğŸŒ™" },
                { label: "ä¸Šå‡", sign: risingSign, icon: "â¬†ï¸" },
              ].filter(item => item.sign).map((item) => (
                <div
                  key={item.label}
                  className="text-center p-2 bg-white/60 dark:bg-black/30 rounded-lg"
                >
                  <div className="text-xs text-muted-foreground mb-1">{item.icon} {item.label}</div>
                  <div className="text-lg font-medium">{getSignEmoji(item.sign)}</div>
                  <div className="text-sm">{item.sign}</div>
                </div>
              ))}
            </div>
          )}

          {/* Full Analysis Content */}
          <div className="prose prose-sm dark:prose-invert max-w-none">
            <div className="bg-white/40 dark:bg-black/20 rounded-lg p-4 text-sm text-foreground whitespace-pre-wrap">
              {insight.fullContent}
            </div>
          </div>

          {/* Action Buttons */}
          <div className="flex items-center justify-end gap-2 mt-4 pt-4 border-t border-indigo-200/50 dark:border-indigo-800/50">
            {onShare && (
              <button
                onClick={(e) => {
                  e.stopPropagation();
                  onShare(insight);
                }}
                className="flex items-center gap-1 px-3 py-1.5 text-sm text-indigo-600 dark:text-indigo-300 hover:bg-indigo-100 dark:hover:bg-indigo-900/30 rounded-lg transition-colors"
              >
                <Share2 className="w-4 h-4" />
                <span>åˆ†äº«</span>
              </button>
            )}
            {onDelete && (
              <button
                onClick={(e) => {
                  e.stopPropagation();
                  if (confirm("ç¡®å®šè¦åˆ é™¤è¿™æ¡åˆ†æè®°å½•å—ï¼Ÿ")) {
                    onDelete(insight.id);
                  }
                }}
                className="flex items-center gap-1 px-3 py-1.5 text-sm text-red-500 hover:bg-red-100 dark:hover:bg-red-900/30 rounded-lg transition-colors"
              >
                <Trash2 className="w-4 h-4" />
                <span>åˆ é™¤</span>
              </button>
            )}
          </div>
        </div>
      )}
    </div>
  );
}
