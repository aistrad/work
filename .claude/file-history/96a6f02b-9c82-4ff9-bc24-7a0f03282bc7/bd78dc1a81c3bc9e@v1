/**
 * useImageShare - Hook for sharing content as images
 *
 * Provides utilities for:
 * 1. Exporting DOM elements to images (requires html2canvas)
 * 2. Fallback screenshot mode
 */

import { useCallback, useState } from 'react';

export interface ImageShareState {
  isGenerating: boolean;
  error: string | null;
}

export interface ImageShareResult {
  state: ImageShareState;
  captureElement: (element: HTMLElement) => Promise<Blob | null>;
  downloadImage: (blob: Blob, filename: string) => void;
  shareImage: (blob: Blob, title: string) => Promise<boolean>;
  openScreenshotMode: (element: HTMLElement) => void;
}

/**
 * Hook for image sharing functionality
 */
export function useImageShare(): ImageShareResult {
  const [state, setState] = useState<ImageShareState>({
    isGenerating: false,
    error: null,
  });

  /**
   * Capture an element to a Blob using html2canvas (if available)
   */
  const captureElement = useCallback(async (element: HTMLElement): Promise<Blob | null> => {
    setState({ isGenerating: true, error: null });

    try {
      // Try to dynamically import html2canvas
      const html2canvas = await import('html2canvas').then(m => m.default).catch(() => null);

      if (!html2canvas) {
        setState({ isGenerating: false, error: 'å›¾ç‰‡ç”ŸæˆåŠŸèƒ½éœ€è¦å®‰è£…é¢å¤–ä¾èµ–' });
        return null;
      }

      const canvas = await html2canvas(element, {
        backgroundColor: '#1a1a2e',
        scale: 2, // High DPI
        useCORS: true,
        logging: false,
      });

      const blob = await new Promise<Blob | null>((resolve) => {
        canvas.toBlob((b) => resolve(b), 'image/png', 1.0);
      });

      setState({ isGenerating: false, error: null });
      return blob;
    } catch (error) {
      setState({ isGenerating: false, error: 'ç”Ÿæˆå›¾ç‰‡å¤±è´¥' });
      console.error('Image capture failed:', error);
      return null;
    }
  }, []);

  /**
   * Download a blob as a file
   */
  const downloadImage = useCallback((blob: Blob, filename: string) => {
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = filename;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
  }, []);

  /**
   * Share image using Web Share API
   */
  const shareImage = useCallback(async (blob: Blob, title: string): Promise<boolean> => {
    if (!navigator.share || !navigator.canShare) {
      return false;
    }

    try {
      const file = new File([blob], `${title}.png`, { type: 'image/png' });

      if (navigator.canShare({ files: [file] })) {
        await navigator.share({
          title,
          files: [file],
        });
        return true;
      }
    } catch (error) {
      if ((error as Error).name !== 'AbortError') {
        console.error('Share failed:', error);
      }
    }

    return false;
  }, []);

  /**
   * Open element in a new window for screenshot
   * Fallback when html2canvas is not available
   */
  const openScreenshotMode = useCallback((element: HTMLElement) => {
    const htmlContent = element.outerHTML;

    // Create a standalone HTML page for screenshot
    const fullHtml = `
      <!DOCTYPE html>
      <html>
      <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>VibeLife æ˜Ÿåº§åˆ†æ - æˆªå›¾æ¨¡å¼</title>
        <style>
          * { box-sizing: border-box; }
          body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
          }
          .instructions {
            color: #a5b4fc;
            font-family: system-ui, sans-serif;
            font-size: 14px;
            margin-bottom: 20px;
            text-align: center;
          }
          .card-container {
            max-width: 500px;
            width: 100%;
          }
          /* Copied styles for the card */
          .zodiac-chart-card {
            background: linear-gradient(to bottom right, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
            border-radius: 16px;
            border: 1px solid rgba(99, 102, 241, 0.3);
            padding: 16px;
            color: #e2e8f0;
            font-family: system-ui, sans-serif;
          }
        </style>
      </head>
      <body>
        <div class="instructions">
          ğŸ“¸ é•¿æŒ‰å›¾ç‰‡ä¿å­˜ï¼Œæˆ–ä½¿ç”¨æˆªå›¾åŠŸèƒ½
        </div>
        <div class="card-container">
          ${htmlContent}
        </div>
      </body>
      </html>
    `;

    const newWindow = window.open('', '_blank');
    if (newWindow) {
      newWindow.document.write(fullHtml);
      newWindow.document.close();
    } else {
      alert('æ— æ³•æ‰“å¼€æˆªå›¾çª—å£ï¼Œè¯·å…è®¸å¼¹å‡ºçª—å£');
    }
  }, []);

  return {
    state,
    captureElement,
    downloadImage,
    shareImage,
    openScreenshotMode,
  };
}
