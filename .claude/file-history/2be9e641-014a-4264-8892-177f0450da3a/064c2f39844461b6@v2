"use client";

import { useState } from "react";
import { registerCard } from "@/skills/CardRegistry";
import { Card } from "@/components/ui/Card";

interface Module {
  week: number;
  title: string;
  topics: string[];
}

interface WorkshopIntroData {
  workshopType: string;
  title: string;
  duration: string;
  description: string;
  modules: Module[];
}

interface WorkshopIntroCardProps {
  data: WorkshopIntroData;
  onSubmit?: (answer: string) => void;
}

function WorkshopIntroCard({ data, onSubmit }: WorkshopIntroCardProps) {
  const [expandedWeek, setExpandedWeek] = useState<number | null>(null);

  const getWorkshopColor = (type: string) => {
    const colors: Record<string, string> = {
      anxiety_management: "from-cyan-500 to-blue-500",
      depression_coping: "from-purple-500 to-indigo-500",
      stress_management: "from-green-500 to-teal-500",
      relationship: "from-pink-500 to-rose-500",
      self_discovery: "from-amber-500 to-orange-500",
    };
    return colors[type] || "from-purple-500 to-indigo-500";
  };

  const getWorkshopIcon = (type: string) => {
    const icons: Record<string, string> = {
      anxiety_management: "ğŸ§˜",
      depression_coping: "ğŸŒ±",
      stress_management: "âš–ï¸",
      relationship: "ğŸ’",
      self_discovery: "ğŸ”®",
    };
    return icons[type] || "ğŸ“š";
  };

  const handleStart = () => {
    if (onSubmit) {
      onSubmit(`æˆ‘æƒ³å¼€å§‹"${data.title}"å·¥ä½œåŠ`);
    }
  };

  return (
    <Card className="max-w-lg mx-auto bg-white dark:bg-gray-900 overflow-hidden">
      {/* å¤´éƒ¨ */}
      <div
        className={`p-6 bg-gradient-to-r ${getWorkshopColor(
          data.workshopType
        )} text-white`}
      >
        <div className="flex items-center gap-3 mb-3">
          <span className="text-4xl">{getWorkshopIcon(data.workshopType)}</span>
          <div>
            <h3 className="text-xl font-semibold">{data.title}</h3>
            <p className="text-sm opacity-90">æ—¶é•¿ï¼š{data.duration}</p>
          </div>
        </div>
        <p className="text-sm opacity-90">{data.description}</p>
      </div>

      {/* è¯¾ç¨‹å¤§çº² */}
      <div className="p-4">
        <h4 className="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3">
          è¯¾ç¨‹å¤§çº²
        </h4>
        <div className="space-y-2">
          {data.modules.map((module) => (
            <div
              key={module.week}
              className="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
            >
              <button
                onClick={() =>
                  setExpandedWeek(
                    expandedWeek === module.week ? null : module.week
                  )
                }
                className="w-full p-3 flex items-center justify-between text-left hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
              >
                <div className="flex items-center gap-3">
                  <span
                    className={`w-8 h-8 rounded-full flex items-center justify-center text-white text-sm font-medium bg-gradient-to-r ${getWorkshopColor(
                      data.workshopType
                    )}`}
                  >
                    {module.week}
                  </span>
                  <div>
                    <p className="font-medium text-gray-800 dark:text-gray-200">
                      ç¬¬ {module.week} å‘¨
                    </p>
                    <p className="text-sm text-gray-500 dark:text-gray-400">
                      {module.title}
                    </p>
                  </div>
                </div>
                <span className="text-gray-400">
                  {expandedWeek === module.week ? "â–²" : "â–¼"}
                </span>
              </button>

              {expandedWeek === module.week && (
                <div className="px-4 pb-3 pt-1 bg-gray-50 dark:bg-gray-800/50">
                  <ul className="space-y-1">
                    {module.topics.map((topic, idx) => (
                      <li
                        key={idx}
                        className="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400"
                      >
                        <span className="text-purple-500">â€¢</span>
                        {topic}
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>

      {/* å¼€å§‹æŒ‰é’® */}
      <div className="p-4 border-t border-gray-100 dark:border-gray-800">
        <button
          onClick={handleStart}
          className={`w-full py-3 rounded-lg text-white font-medium bg-gradient-to-r ${getWorkshopColor(
            data.workshopType
          )} hover:opacity-90 transition-opacity`}
        >
          å¼€å§‹å·¥ä½œåŠ
        </button>
        <p className="text-center text-xs text-gray-500 dark:text-gray-400 mt-2">
          æ¯å‘¨ 2-3 æ¬¡ç»ƒä¹ ï¼Œæ¯æ¬¡ 10-20 åˆ†é’Ÿ
        </p>
      </div>
    </Card>
  );
}

