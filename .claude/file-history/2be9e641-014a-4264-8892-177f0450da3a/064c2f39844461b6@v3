import { useState } from "react";
import { motion, AnimatePresence } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";
import { cn } from "@/lib/utils";
import {
  ChevronDown,
  Clock,
  BookOpen,
  Play,
  CheckCircle2,
  Calendar,
} from "lucide-react";
import { cardVariants, containerVariants, itemVariants, workshopThemes } from "../styles";

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Types
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

interface Module {
  week: number;
  title: string;
  topics: string[];
}

interface WorkshopIntroData {
  workshopType: string;
  title: string;
  duration: string;
  description: string;
  modules: Module[];
}

interface WorkshopIntroCardProps {
  data: WorkshopIntroData;
  onSubmit?: (answer: string) => void;
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Main Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function WorkshopIntroCard({ data, onSubmit }: WorkshopIntroCardProps) {
  const [expandedWeek, setExpandedWeek] = useState<number | null>(null);

  const workshopConfig = workshopThemes[data.workshopType] || {
    gradient: "from-purple-500 to-indigo-600",
    icon: "ğŸ“š",
  };

  const handleStart = () => {
    if (onSubmit) {
      onSubmit(`æˆ‘æƒ³å¼€å§‹"${data.title}"å·¥ä½œåŠ`);
    }
  };

  return (
    <motion.div
      variants={cardVariants}
      initial="hidden"
      animate="visible"
      className={cn(
        "relative overflow-hidden rounded-2xl max-w-lg mx-auto",
        "bg-gradient-to-br from-white via-gray-50/80 to-slate-50/60",
        "dark:from-gray-900 dark:via-gray-900/80 dark:to-gray-950/60",
        "border border-white/50 dark:border-gray-800/50",
        "shadow-[0_4px_24px_-4px_rgba(0,0,0,0.08)]"
      )}
    >
      {/* è£…é¥°æ€§èƒŒæ™¯å…ƒç´  */}
      <div
        className={cn(
          "absolute top-0 right-0 w-40 h-40 rounded-full blur-3xl -translate-y-1/2 translate-x-1/4 opacity-50",
          data.workshopType === "anxiety_management" && "bg-cyan-200/50",
          data.workshopType === "depression_coping" && "bg-violet-200/50",
          data.workshopType === "stress_management" && "bg-emerald-200/50",
          data.workshopType === "relationship" && "bg-pink-200/50",
          data.workshopType === "self_discovery" && "bg-amber-200/50"
        )}
      />

      {/* å¤´éƒ¨ */}
      <div
        className={cn(
          "relative p-6 text-white",
          "bg-gradient-to-r",
          workshopConfig.gradient
        )}
      >
        <div className="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(255,255,255,0.2),transparent_50%)]" />

        <motion.div
          initial={{ scale: 0.9, opacity: 0 }}
          animate={{ scale: 1, opacity: 1 }}
          transition={{ delay: 0.2 }}
          className="relative"
        >
          <div className="flex items-start gap-4 mb-4">
            <div className="flex-shrink-0 w-14 h-14 rounded-xl bg-white/20 backdrop-blur-sm flex items-center justify-center text-3xl">
              {workshopConfig.icon}
            </div>
            <div className="flex-1 min-w-0">
              <h3 className="text-xl font-semibold mb-1">{data.title}</h3>
              <div className="flex items-center gap-3 text-white/80 text-sm">
                <span className="flex items-center gap-1">
                  <Clock className="w-4 h-4" />
                  {data.duration}
                </span>
                <span className="flex items-center gap-1">
                  <BookOpen className="w-4 h-4" />
                  {data.modules.length} æ¨¡å—
                </span>
              </div>
            </div>
          </div>
          <p className="text-white/90 text-sm leading-relaxed">
            {data.description}
          </p>
        </motion.div>
      </div>

      {/* è¯¾ç¨‹å¤§çº² */}
      <motion.div
        variants={containerVariants}
        initial="hidden"
        animate="visible"
        className="p-5"
      >
        <h4 className="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-4 flex items-center gap-2">
          <Calendar className="w-4 h-4" />
          è¯¾ç¨‹å¤§çº²
        </h4>

        <div className="space-y-2">
          {data.modules.map((module) => (
            <motion.div
              key={module.week}
              variants={itemVariants}
              className="overflow-hidden rounded-xl border border-gray-200/70 dark:border-gray-700/50 bg-white/70 dark:bg-gray-800/50 backdrop-blur-sm"
            >
              <button
                onClick={() =>
                  setExpandedWeek(
                    expandedWeek === module.week ? null : module.week
                  )
                }
                className="w-full p-4 flex items-center justify-between text-left hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
              >
                <div className="flex items-center gap-3">
                  <span
                    className={cn(
                      "w-9 h-9 rounded-full flex items-center justify-center text-white text-sm font-medium",
                      "bg-gradient-to-r",
                      workshopConfig.gradient
                    )}
                  >
                    {module.week}
                  </span>
                  <div>
                    <p className="text-xs text-gray-500 dark:text-gray-400">
                      ç¬¬ {module.week} å‘¨
                    </p>
                    <p className="font-medium text-gray-800 dark:text-gray-200">
                      {module.title}
                    </p>
                  </div>
                </div>
                <motion.div
                  animate={{ rotate: expandedWeek === module.week ? 180 : 0 }}
                  transition={{ duration: 0.2 }}
                  className="text-gray-400"
                >
                  <ChevronDown className="w-5 h-5" />
                </motion.div>
              </button>

              <AnimatePresence>
                {expandedWeek === module.week && (
                  <motion.div
                    initial={{ height: 0, opacity: 0 }}
                    animate={{ height: "auto", opacity: 1 }}
                    exit={{ height: 0, opacity: 0 }}
                    transition={{ duration: 0.3, ease: "easeInOut" }}
                    className="overflow-hidden"
                  >
                    <div className="px-4 pb-4 pt-1 bg-gray-50/70 dark:bg-gray-800/30">
                      <ul className="space-y-2">
                        {module.topics.map((topic, idx) => (
                          <motion.li
                            key={idx}
                            initial={{ opacity: 0, x: -10 }}
                            animate={{ opacity: 1, x: 0 }}
                            transition={{ delay: idx * 0.05 }}
                            className="flex items-start gap-2 text-sm text-gray-600 dark:text-gray-400"
                          >
                            <CheckCircle2 className="w-4 h-4 text-emerald-500 flex-shrink-0 mt-0.5" />
                            <span>{topic}</span>
                          </motion.li>
                        ))}
                      </ul>
                    </div>
                  </motion.div>
                )}
              </AnimatePresence>
            </motion.div>
          ))}
        </div>
      </motion.div>

      {/* å¼€å§‹æŒ‰é’® */}
      <motion.div
        initial={{ opacity: 0, y: 10 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ delay: 0.5 }}
        className="p-5 pt-0"
      >
        <motion.button
          whileHover={{ scale: 1.02 }}
          whileTap={{ scale: 0.98 }}
          onClick={handleStart}
          className={cn(
            "w-full flex items-center justify-center gap-2 py-3.5 rounded-xl",
            "text-white font-medium",
            "bg-gradient-to-r shadow-lg hover:shadow-xl transition-all",
            workshopConfig.gradient
          )}
        >
          <Play className="w-5 h-5" />
          å¼€å§‹å·¥ä½œåŠ
        </motion.button>
        <p className="text-center text-xs text-gray-500 dark:text-gray-400 mt-3">
          æ¯å‘¨ 2-3 æ¬¡ç»ƒä¹ ï¼Œæ¯æ¬¡ 10-20 åˆ†é’Ÿ
        </p>
      </motion.div>
    </motion.div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Skeleton
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export function WorkshopIntroCardSkeleton() {
  return (
    <div
      className={cn(
        "relative overflow-hidden rounded-2xl max-w-lg mx-auto animate-pulse",
        "bg-gradient-to-br from-white via-gray-50/80 to-slate-50/60",
        "dark:from-gray-900 dark:via-gray-900/80 dark:to-gray-950/60"
      )}
    >
      <div className="p-6 bg-gradient-to-r from-purple-500/50 to-indigo-600/50">
        <div className="flex items-start gap-4 mb-4">
          <div className="w-14 h-14 rounded-xl bg-white/30" />
          <div className="flex-1 space-y-2">
            <div className="h-6 bg-white/30 rounded w-3/4" />
            <div className="h-4 bg-white/20 rounded w-1/2" />
          </div>
        </div>
        <div className="h-4 bg-white/20 rounded w-full" />
      </div>

      <div className="p-5 space-y-2">
        {[1, 2, 3].map((i) => (
          <div key={i} className="h-16 bg-gray-100 dark:bg-gray-800 rounded-xl" />
        ))}
      </div>

      <div className="px-5 pb-5">
        <div className="h-12 bg-gray-100 dark:bg-gray-800 rounded-xl" />
      </div>
    </div>
  );
}

// æ³¨å†Œå¡ç‰‡
registerCard("workshop_intro", WorkshopIntroCard);

export default WorkshopIntroCard;
