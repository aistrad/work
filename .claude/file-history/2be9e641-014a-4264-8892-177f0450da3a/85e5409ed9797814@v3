"use client";

/**
 * AssessmentFormCard - å¿ƒç†è¯„ä¼°è¡¨å•å¡ç‰‡
 *
 * è®¾è®¡ç†å¿µï¼š
 * - Glass morphism + æŸ”å’Œæ¸å˜ï¼Œå‡å°‘è¯„ä¼°ç„¦è™‘æ„Ÿ
 * - æ¸…æ™°çš„è¿›åº¦æŒ‡ç¤ºï¼Œè®©ç”¨æˆ·æœ‰æŒæ§æ„Ÿ
 * - æ¸©æš–çš„è§†è§‰è¯­è¨€ï¼Œä¸“ä¸šè€Œä¸å†·æ¼ 
 * - æµç•…çš„åŠ¨ç”»è¿‡æ¸¡ï¼Œæå‡ä½“éªŒ
 */

import { useState } from "react";
import { motion, AnimatePresence } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";
import { cn } from "@/lib/utils";
import { ChevronLeft, ChevronRight, Send, CheckCircle2 } from "lucide-react";
import {
  cardVariants,
  containerVariants,
  itemVariants,
  psychThemes,
} from "../styles";

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Types
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

interface AssessmentItem {
  id: number;
  text: string;
  critical?: boolean;
  subscale?: string;
}

interface AssessmentFormData {
  assessmentType: string;
  name: string;
  description: string;
  recallPeriod: string;
  items: AssessmentItem[];
  responseScale: Record<string, string>;
}

interface AssessmentFormCardProps {
  data: AssessmentFormData;
  onSubmit?: (answer: string) => void;
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// è¯„ä¼°ç±»å‹å›¾æ ‡æ˜ å°„
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

const assessmentIcons: Record<string, string> = {
  phq2: "ğŸ©º",
  gad2: "ğŸ«€",
  phq9: "ğŸ“‹",
  gad7: "ğŸ“Š",
  dass21: "ğŸ“ˆ",
};

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Main Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function AssessmentFormCard({ data, onSubmit }: AssessmentFormCardProps) {
  const [responses, setResponses] = useState<Record<number, number>>({});
  const [currentPage, setCurrentPage] = useState(0);

  const itemsPerPage = 5;
  const totalPages = Math.ceil(data.items.length / itemsPerPage);
  const currentItems = data.items.slice(
    currentPage * itemsPerPage,
    (currentPage + 1) * itemsPerPage
  );

  const theme = psychThemes.default;
  const icon = assessmentIcons[data.assessmentType] || "ğŸ“";
  const completedCount = Object.keys(responses).length;
  const progressPercentage = (completedCount / data.items.length) * 100;

  const handleResponse = (itemId: number, value: number) => {
    setResponses((prev) => ({ ...prev, [itemId]: value }));
  };

  const isPageComplete = () => {
    return currentItems.every((item) => responses[item.id] !== undefined);
  };

  const isAllComplete = () => {
    return data.items.every((item) => responses[item.id] !== undefined);
  };

  const handleNext = () => {
    if (currentPage < totalPages - 1) {
      setCurrentPage((prev) => prev + 1);
    }
  };

  const handlePrev = () => {
    if (currentPage > 0) {
      setCurrentPage((prev) => prev - 1);
    }
  };

  const handleSubmit = () => {
    if (!isAllComplete() || !onSubmit) return;

    const orderedResponses = data.items.map((item) => responses[item.id]);
    onSubmit(
      JSON.stringify({
        action: "calculate_assessment",
        assessment_type: data.assessmentType,
        responses: orderedResponses,
      })
    );
  };

  const scaleOptions = Object.entries(data.responseScale).map(
    ([value, label]) => ({
      value: parseInt(value),
      label,
    })
  );

  return (
    <motion.div
      variants={cardVariants}
      initial="hidden"
      animate="visible"
      className={cn(
        "relative overflow-hidden rounded-2xl max-w-2xl mx-auto",
        "bg-gradient-to-br",
        theme.gradient,
        theme.gradientDark,
        theme.border,
        "shadow-[0_4px_24px_-4px_rgba(0,0,0,0.08)]"
      )}
    >
      {/* è£…é¥°æ€§èƒŒæ™¯å…ƒç´  */}
      <div className="absolute top-0 right-0 w-40 h-40 bg-gradient-to-bl from-violet-200/30 to-transparent rounded-full blur-3xl -translate-y-1/2 translate-x-1/4" />
      <div className="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-indigo-200/20 to-transparent rounded-full blur-2xl translate-y-1/2 -translate-x-1/4" />

      {/* å¤´éƒ¨ */}
      <div
        className={cn(
          "relative p-5 text-white",
          "bg-gradient-to-r",
          theme.header
        )}
      >
        {/* å¤´éƒ¨è£…é¥° */}
        <div className="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(255,255,255,0.15),transparent_50%)]" />

        <div className="relative flex items-start gap-4">
          {/* å›¾æ ‡ */}
          <div className="flex-shrink-0 w-12 h-12 rounded-xl bg-white/20 backdrop-blur-sm flex items-center justify-center text-2xl">
            {icon}
          </div>

          <div className="flex-1 min-w-0">
            <h3 className="text-lg font-semibold mb-1">{data.name}</h3>
            <p className="text-sm text-white/80 line-clamp-2">
              {data.description}
            </p>
            <div className="flex items-center gap-2 mt-2">
              <span className="px-2 py-0.5 bg-white/20 backdrop-blur-sm rounded-full text-xs">
                {data.recallPeriod}
              </span>
              <span className="text-xs text-white/70">
                å…± {data.items.length} é¢˜
              </span>
            </div>
          </div>
        </div>
      </div>

      {/* è¿›åº¦æ¡åŒºåŸŸ */}
      <div className="relative px-5 py-3 bg-white/50 dark:bg-gray-900/50 backdrop-blur-sm border-b border-white/50 dark:border-gray-800/50">
        <div className="flex items-center justify-between text-sm mb-2">
          <div className="flex items-center gap-2">
            <CheckCircle2 className="w-4 h-4 text-violet-500" />
            <span className="text-gray-700 dark:text-gray-300">
              å·²å®Œæˆ {completedCount} / {data.items.length} é¢˜
            </span>
          </div>
          <span className="text-gray-500 dark:text-gray-400 text-xs">
            ç¬¬ {currentPage + 1} / {totalPages} é¡µ
          </span>
        </div>

        {/* è¿›åº¦æ¡ */}
        <div className="h-2 bg-gray-200/70 dark:bg-gray-700/50 rounded-full overflow-hidden">
          <motion.div
            initial={{ width: 0 }}
            animate={{ width: `${progressPercentage}%` }}
            transition={{ duration: 0.4, ease: "easeOut" }}
            className={cn(
              "h-full rounded-full",
              "bg-gradient-to-r",
              theme.header
            )}
          />
        </div>
      </div>

      {/* é¢˜ç›®åŒºåŸŸ */}
      <motion.div
        variants={containerVariants}
        initial="hidden"
        animate="visible"
        key={currentPage}
        className="relative p-5 space-y-4"
      >
        <AnimatePresence mode="wait">
          {currentItems.map((item, index) => (
            <motion.div
              key={item.id}
              variants={itemVariants}
              className={cn(
                "p-4 rounded-xl",
                "bg-white/60 dark:bg-gray-800/40 backdrop-blur-sm",
                "border",
                item.critical
                  ? "border-red-200/70 dark:border-red-800/50 bg-red-50/40 dark:bg-red-900/10"
                  : "border-white/50 dark:border-gray-700/50"
              )}
            >
              <div className="flex items-start gap-3 mb-3">
                <span
                  className={cn(
                    "flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center text-xs font-medium",
                    responses[item.id] !== undefined
                      ? "bg-violet-500 text-white"
                      : "bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-400"
                  )}
                >
                  {currentPage * itemsPerPage + index + 1}
                </span>
                <p className="text-sm font-medium text-gray-800 dark:text-gray-200 leading-relaxed">
                  {item.text}
                  {item.critical && (
                    <span className="ml-1 text-red-500">*</span>
                  )}
                </p>
              </div>

              {/* é€‰é¡¹æŒ‰é’® */}
              <div className="flex flex-wrap gap-2 pl-9">
                {scaleOptions.map((option) => (
                  <motion.button
                    key={option.value}
                    whileHover={{ scale: 1.02 }}
                    whileTap={{ scale: 0.98 }}
                    onClick={() => handleResponse(item.id, option.value)}
                    className={cn(
                      "px-3 py-2 text-sm rounded-lg transition-all duration-200",
                      "border",
                      responses[item.id] === option.value
                        ? cn(
                            "bg-gradient-to-r text-white border-transparent shadow-md",
                            theme.header
                          )
                        : "bg-white/70 dark:bg-gray-800/70 text-gray-700 dark:text-gray-300 border-gray-200 dark:border-gray-600 hover:border-violet-300 dark:hover:border-violet-600 hover:bg-violet-50 dark:hover:bg-violet-900/20"
                    )}
                  >
                    {option.label}
                  </motion.button>
                ))}
              </div>
            </motion.div>
          ))}
        </AnimatePresence>
      </motion.div>

      {/* åº•éƒ¨å¯¼èˆª */}
      <div className="relative p-4 bg-white/50 dark:bg-gray-900/50 backdrop-blur-sm border-t border-white/50 dark:border-gray-800/50 flex items-center justify-between">
        <motion.button
          whileHover={{ scale: 1.02 }}
          whileTap={{ scale: 0.98 }}
          onClick={handlePrev}
          disabled={currentPage === 0}
          className={cn(
            "flex items-center gap-1.5 px-4 py-2 rounded-lg text-sm font-medium transition-all",
            currentPage === 0
              ? "text-gray-400 cursor-not-allowed"
              : "text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800"
          )}
        >
          <ChevronLeft className="w-4 h-4" />
          ä¸Šä¸€é¡µ
        </motion.button>

        {currentPage === totalPages - 1 ? (
          <motion.button
            whileHover={{ scale: 1.02 }}
            whileTap={{ scale: 0.98 }}
            onClick={handleSubmit}
            disabled={!isAllComplete()}
            className={cn(
              "flex items-center gap-2 px-5 py-2.5 rounded-xl text-sm font-medium text-white transition-all",
              isAllComplete()
                ? cn("bg-gradient-to-r shadow-lg", theme.header)
                : "bg-gray-300 dark:bg-gray-700 cursor-not-allowed"
            )}
          >
            <Send className="w-4 h-4" />
            æäº¤è¯„ä¼°
          </motion.button>
        ) : (
          <motion.button
            whileHover={{ scale: 1.02 }}
            whileTap={{ scale: 0.98 }}
            onClick={handleNext}
            disabled={!isPageComplete()}
            className={cn(
              "flex items-center gap-1.5 px-4 py-2 rounded-lg text-sm font-medium transition-all",
              isPageComplete()
                ? "bg-violet-500 text-white hover:bg-violet-600"
                : "bg-gray-200 dark:bg-gray-700 text-gray-400 cursor-not-allowed"
            )}
          >
            ä¸‹ä¸€é¡µ
            <ChevronRight className="w-4 h-4" />
          </motion.button>
        )}
      </div>
    </motion.div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Skeleton
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export function AssessmentFormCardSkeleton() {
  return (
    <div
      className={cn(
        "relative overflow-hidden rounded-2xl max-w-2xl mx-auto animate-pulse",
        "bg-gradient-to-br from-violet-50 via-purple-50/80 to-indigo-50/60",
        "dark:from-violet-950/30 dark:via-purple-950/20 dark:to-indigo-950/20"
      )}
    >
      {/* Header skeleton */}
      <div className="p-5 bg-gradient-to-r from-violet-500/50 to-indigo-600/50">
        <div className="flex items-start gap-4">
          <div className="w-12 h-12 rounded-xl bg-white/30" />
          <div className="flex-1 space-y-2">
            <div className="h-5 bg-white/30 rounded w-3/4" />
            <div className="h-4 bg-white/20 rounded w-full" />
          </div>
        </div>
      </div>

      {/* Progress skeleton */}
      <div className="px-5 py-3 bg-white/30">
        <div className="h-4 bg-gray-200 rounded w-1/3 mb-2" />
        <div className="h-2 bg-gray-200 rounded-full" />
      </div>

      {/* Items skeleton */}
      <div className="p-5 space-y-4">
        {[1, 2, 3].map((i) => (
          <div key={i} className="p-4 rounded-xl bg-white/40">
            <div className="h-4 bg-gray-200 rounded w-full mb-3" />
            <div className="flex gap-2 pl-9">
              {[1, 2, 3, 4].map((j) => (
                <div key={j} className="h-9 w-16 bg-gray-200 rounded-lg" />
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  );
}

// æ³¨å†Œå¡ç‰‡
registerCard("assessment_form", AssessmentFormCard);

export default AssessmentFormCard;
