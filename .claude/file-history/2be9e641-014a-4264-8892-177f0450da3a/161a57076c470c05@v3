// Sub Components
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function ScoreGauge({
  score,
  maxScore,
  severity,
}: {
  score: number;
  maxScore: number;
  severity: string;
}) {
  const percentage = (score / maxScore) * 100;
  const config = getSeverityConfig(severity);

  // æ ¹æ®åˆ†æ•°é€‰æ‹©é¢œè‰²
  const getGaugeColor = () => {
    if (percentage <= 25) return "from-emerald-400 to-green-500";
    if (percentage <= 50) return "from-yellow-400 to-amber-500";
    if (percentage <= 75) return "from-orange-400 to-orange-500";
    return "from-red-400 to-red-500";
  };

  return (
    <div className="flex flex-col items-center">
      {/* åœ†å½¢åˆ†æ•°æ˜¾ç¤º */}
      <div className="relative w-28 h-28">
        {/* èƒŒæ™¯åœ†ç¯ */}
        <svg className="w-full h-full -rotate-90" viewBox="0 0 100 100">
          <circle
            cx="50"
            cy="50"
            r="42"
            fill="none"
            stroke="currentColor"
            strokeWidth="8"
            className="text-gray-200 dark:text-gray-700"
          />
          <motion.circle
            cx="50"
            cy="50"
            r="42"
            fill="none"
            strokeWidth="8"
            strokeLinecap="round"
            className="text-violet-500"
            style={{
              stroke: "url(#scoreGradient)",
            }}
            initial={{ strokeDasharray: "0 264" }}
            animate={{
              strokeDasharray: `${(percentage / 100) * 264} 264`,
            }}
            transition={{ duration: 1, ease: "easeOut", delay: 0.3 }}
          />
          <defs>
            <linearGradient id="scoreGradient" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" className="text-violet-400" stopColor="currentColor" />
              <stop offset="100%" className="text-indigo-600" stopColor="currentColor" />
            </linearGradient>
          </defs>
        </svg>

        {/* ä¸­å¿ƒåˆ†æ•° */}
        <div className="absolute inset-0 flex flex-col items-center justify-center">
          <motion.span
            initial={{ opacity: 0, scale: 0.5 }}
            animate={{ opacity: 1, scale: 1 }}
            transition={{ duration: 0.5, delay: 0.5 }}
            className="text-3xl font-bold text-gray-800 dark:text-gray-100"
          >
            {score}
          </motion.span>
          <span className="text-sm text-gray-500 dark:text-gray-400">
            / {maxScore}
          </span>
        </div>
      </div>

      {/* ä¸¥é‡ç¨‹åº¦æ ‡ç­¾ */}
      <motion.div
        initial={{ opacity: 0, y: 10 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.4, delay: 0.7 }}
        className={cn(
          "mt-4 px-4 py-1.5 rounded-full text-sm font-medium",
          config.bg,
          config.text
        )}
      >
        {severity}
      </motion.div>
    </div>
  );
}

function SubscaleBar({
  label,
  score,
  severity,
  maxScore,
}: {
  label: string;
  score: number;
  severity: string;
  maxScore: number;
}) {
  const percentage = (score / maxScore) * 100;
  const config = getSeverityConfig(severity);

  return (
    <motion.div
      variants={itemVariants}
      className="flex items-center gap-3 p-3 rounded-xl bg-white/50 dark:bg-gray-800/30 backdrop-blur-sm"
    >
      <span className="text-sm font-medium text-gray-700 dark:text-gray-300 w-10">
        {label}
      </span>

      <div className="flex-1 h-2.5 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
        <motion.div
          initial={{ width: 0 }}
          animate={{ width: `${percentage}%` }}
          transition={{ duration: 0.6, ease: "easeOut", delay: 0.3 }}
          className={cn("h-full rounded-full", config.bar)}
        />
      </div>

      <span className="text-sm font-medium text-gray-800 dark:text-gray-200 w-8 text-right">
        {score}
      </span>

      <span
        className={cn(
          "text-xs px-2 py-0.5 rounded-full font-medium",
          config.bg,
          config.text
        )}
      >
        {severity}
      </span>
    </motion.div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Main Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function AssessmentResultCard({ data, onSubmit }: AssessmentResultCardProps) {
  const theme = psychThemes.default;
  const assessmentName = assessmentNames[data.assessment_type] || data.assessment_type;
  const icon = assessmentIcons[data.assessment_type] || "ğŸ“Š";

  return (
    <motion.div
      variants={cardVariants}
      initial="hidden"
      animate="visible"
      className={cn(
        "relative overflow-hidden rounded-2xl max-w-lg mx-auto",
        "bg-gradient-to-br",
        theme.gradient,
        theme.gradientDark,
        theme.border,
        "shadow-[0_4px_24px_-4px_rgba(0,0,0,0.08)]"
      )}
    >
      {/* è£…é¥°æ€§èƒŒæ™¯å…ƒç´  */}
      <div className="absolute top-0 right-0 w-40 h-40 bg-gradient-to-bl from-violet-200/30 to-transparent rounded-full blur-3xl -translate-y-1/2 translate-x-1/4" />
      <div className="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-indigo-200/20 to-transparent rounded-full blur-2xl translate-y-1/2 -translate-x-1/4" />

      {/* å¤´éƒ¨ */}
      <div
        className={cn(
          "relative p-5 text-white",
          "bg-gradient-to-r",
          theme.header
        )}
      >
        <div className="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(255,255,255,0.15),transparent_50%)]" />

        <div className="relative flex items-center gap-4">
          <div className="flex-shrink-0 w-12 h-12 rounded-xl bg-white/20 backdrop-blur-sm flex items-center justify-center text-2xl">
            {icon}
          </div>
          <div>
            <h3 className="text-lg font-semibold">{assessmentName}</h3>
            <p className="text-sm text-white/80">è¯„ä¼°ç»“æœæŠ¥å‘Š</p>
          </div>
        </div>
      </div>

      {/* åˆ†æ•°å±•ç¤º */}
      <div className="relative p-6 flex justify-center">
        <ScoreGauge
          score={data.total_score}
          maxScore={data.max_score}
          severity={data.severity_level}
        />
      </div>

      {/* DASS-21 åˆ†é‡è¡¨ */}
      {data.subscales && (
        <motion.div
          variants={containerVariants}
          initial="hidden"
          animate="visible"
          className="px-5 pb-4"
        >
          <h4 className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3 flex items-center gap-2">
            <TrendingUp className="w-3.5 h-3.5" />
            åˆ†é‡è¡¨å¾—åˆ†
          </h4>
          <div className="space-y-2">
            {data.subscales.depression && (
              <SubscaleBar
                label="æŠ‘éƒ"
                score={data.subscales.depression.score}
                severity={data.subscales.depression.severity}
                maxScore={42}
              />
            )}
            {data.subscales.anxiety && (
              <SubscaleBar
                label="ç„¦è™‘"
                score={data.subscales.anxiety.score}
                severity={data.subscales.anxiety.severity}
                maxScore={42}
              />
            )}
            {data.subscales.stress && (
              <SubscaleBar
                label="å‹åŠ›"
                score={data.subscales.stress.score}
                severity={data.subscales.stress.severity}
                maxScore={42}
              />
            )}
          </div>
        </motion.div>
      )}

      {/* è§£è¯» */}
      <motion.div
        variants={itemVariants}
        initial="hidden"
        animate="visible"
        className="px-5 pb-4"
      >
        <div className="p-4 rounded-xl bg-white/60 dark:bg-gray-800/40 backdrop-blur-sm border border-white/50 dark:border-gray-700/50">
          <p className="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">
            {data.interpretation}
          </p>
        </div>
      </motion.div>

      {/* å»ºè®® */}
      {data.recommendations && data.recommendations.length > 0 && (
        <motion.div
          variants={containerVariants}
          initial="hidden"
          animate="visible"
          className="px-5 pb-5"
        >
          <h4 className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3 flex items-center gap-2">
            <Lightbulb className="w-3.5 h-3.5" />
            å»ºè®®
          </h4>
          <div className="space-y-2">
            {data.recommendations.map((rec, idx) => (
              <motion.div
                key={idx}
                variants={itemVariants}
                className="flex items-start gap-3 p-3 rounded-xl bg-violet-50/50 dark:bg-violet-900/20 border border-violet-100/50 dark:border-violet-800/30"
              >
                <span className="flex-shrink-0 w-5 h-5 rounded-full bg-violet-500 text-white text-xs flex items-center justify-center font-medium">
                  {idx + 1}
                </span>
                <p className="text-sm text-gray-700 dark:text-gray-300">
                  {rec}
                </p>
              </motion.div>
            ))}
          </div>
        </motion.div>
      )}

      {/* å®‰å…¨æé†’ */}
      {data.safety_flag && (
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.5, delay: 0.8 }}
          className="mx-5 mb-5 p-4 rounded-xl bg-gradient-to-r from-red-50 to-orange-50 dark:from-red-950/30 dark:to-orange-950/20 border border-red-200/70 dark:border-red-800/50"
        >
          <div className="flex items-start gap-3">
            <div className="flex-shrink-0 w-10 h-10 rounded-full bg-red-100 dark:bg-red-900/50 flex items-center justify-center">
              <AlertTriangle className="w-5 h-5 text-red-600 dark:text-red-400" />
            </div>
            <div className="flex-1">
              <p className="text-sm font-semibold text-red-800 dark:text-red-200 mb-1">
                é‡è¦æé†’
              </p>
              <p className="text-sm text-red-700 dark:text-red-300 mb-3">
                å¦‚æœä½ æœ‰ä¼¤å®³è‡ªå·±çš„æƒ³æ³•ï¼Œè¯·ç«‹å³è”ç³»ä¸“ä¸šå¸®åŠ©ã€‚ä½ ä¸æ˜¯ä¸€ä¸ªäººã€‚
              </p>
              <a
                href="tel:400-161-9995"
                className="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-red-500 text-white text-sm font-medium hover:bg-red-600 transition-colors"
              >
                <Phone className="w-4 h-4" />
                å…¨å›½å¿ƒç†æ´åŠ©çƒ­çº¿ï¼š400-161-9995
              </a>
            </div>
          </div>
        </motion.div>
      )}
    </motion.div>
  );
}

