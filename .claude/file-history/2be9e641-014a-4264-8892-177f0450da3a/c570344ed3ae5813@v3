"use client";

/**
 * CrisisAlertCard - 危机警报卡片
 *
 * 设计理念：
 * - 紧急但不恐慌的视觉呈现
 * - 清晰突出的求助资源
 * - 可点击的热线号码
 * - 温暖的支持性文案
 */

import { motion } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";
import { cn } from "@/lib/utils";
import {
  AlertTriangle,
  Phone,
  Heart,
  ShieldCheck,
  ExternalLink,
} from "lucide-react";
import { cardVariants, containerVariants, itemVariants } from "../styles";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

interface Hotline {
  name: string;
  number: string;
  hours: string;
}

interface CrisisAlertData {
  riskLevel: "high" | "medium";
  message: string;
  hotlines: Hotline[];
  immediateSteps: string[];
}

interface CrisisAlertCardProps {
  data: CrisisAlertData;
  onSubmit?: (answer: string) => void;
}

// ═══════════════════════════════════════════════════════════════════════════
// Main Component
// ═══════════════════════════════════════════════════════════════════════════

function CrisisAlertCard({ data, onSubmit }: CrisisAlertCardProps) {
  const isHighRisk = data.riskLevel === "high";

  const theme = isHighRisk
    ? {
        gradient: "from-red-500 to-rose-600",
        bg: "from-red-50 via-rose-50/80 to-orange-50/60",
        bgDark: "dark:from-red-950/30 dark:via-rose-950/20 dark:to-orange-950/20",
        border: "border-red-200/70 dark:border-red-800/50",
        accent: "bg-red-500",
        accentLight: "bg-red-100 dark:bg-red-900/50",
        text: "text-red-800 dark:text-red-200",
        textSecondary: "text-red-700 dark:text-red-300",
        icon: AlertTriangle,
      }
    : {
        gradient: "from-amber-500 to-orange-500",
        bg: "from-amber-50 via-orange-50/80 to-yellow-50/60",
        bgDark: "dark:from-amber-950/30 dark:via-orange-950/20 dark:to-yellow-950/20",
        border: "border-amber-200/70 dark:border-amber-800/50",
        accent: "bg-amber-500",
        accentLight: "bg-amber-100 dark:bg-amber-900/50",
        text: "text-amber-800 dark:text-amber-200",
        textSecondary: "text-amber-700 dark:text-amber-300",
        icon: Heart,
      };

  const IconComponent = theme.icon;

  return (
    <motion.div
      variants={cardVariants}
      initial="hidden"
      animate="visible"
      className={cn(
        "relative overflow-hidden rounded-2xl max-w-lg mx-auto",
        "bg-gradient-to-br",
        theme.bg,
        theme.bgDark,
        "border-2",
        theme.border,
        "shadow-[0_4px_24px_-4px_rgba(0,0,0,0.12)]"
      )}
    >
      {/* 装饰性背景元素 */}
      <div
        className={cn(
          "absolute top-0 right-0 w-40 h-40 rounded-full blur-3xl -translate-y-1/2 translate-x-1/4",
          isHighRisk
            ? "bg-gradient-to-bl from-red-200/40 to-transparent"
            : "bg-gradient-to-bl from-amber-200/40 to-transparent"
        )}
      />

      {/* 头部 */}
      <div
        className={cn(
          "relative p-5 text-white",
          "bg-gradient-to-r",
          theme.gradient
        )}
      >
        <div className="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(255,255,255,0.15),transparent_50%)]" />

        <motion.div
          initial={{ scale: 0.9, opacity: 0 }}
          animate={{ scale: 1, opacity: 1 }}
          transition={{ delay: 0.2 }}
          className="relative flex items-center gap-4"
        >
          <div className="flex-shrink-0 w-14 h-14 rounded-xl bg-white/20 backdrop-blur-sm flex items-center justify-center">
            <IconComponent className="w-7 h-7" />
          </div>
          <div>
            <h3 className="text-lg font-semibold">
              {isHighRisk ? "紧急安全提醒" : "安全关怀"}
            </h3>
            <p className="text-sm text-white/80">
              {isHighRisk ? "请立即寻求帮助" : "我们关心你的安全"}
            </p>
          </div>
        </motion.div>
      </div>

      {/* 消息 */}
      <motion.div
        initial={{ opacity: 0, y: 10 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ delay: 0.3 }}
        className={cn(
          "p-4 mx-5 mt-5 rounded-xl",
          "bg-white/60 dark:bg-gray-800/40 backdrop-blur-sm",
          "border",
          theme.border
        )}
      >
        <p className={cn("text-sm leading-relaxed", theme.text)}>
          {data.message}
        </p>
      </motion.div>

      {/* 危机热线 */}
      <motion.div
        variants={containerVariants}
        initial="hidden"
        animate="visible"
        className="p-5"
      >
        <h4 className="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3 flex items-center gap-2">
          <Phone className="w-4 h-4" />
          立即联系专业帮助
        </h4>
        <div className="space-y-2">
          {data.hotlines.map((hotline, idx) => (
            <motion.a
              key={idx}
              variants={itemVariants}
              href={`tel:${hotline.number}`}
              className={cn(
                "flex items-center justify-between p-4 rounded-xl",
                "bg-white/70 dark:bg-gray-800/50 backdrop-blur-sm",
                "border",
                theme.border,
                "hover:bg-white dark:hover:bg-gray-800",
                "transition-all duration-200 group"
              )}
            >
              <div>
                <p className={cn("font-medium", theme.text)}>{hotline.name}</p>
                <p className="text-xs text-gray-500 dark:text-gray-400 mt-0.5">
                  {hotline.hours}
                </p>
              </div>
              <div className="flex items-center gap-2">
                <span
                  className={cn(
                    "text-lg font-bold",
                    isHighRisk
                      ? "text-red-600 dark:text-red-400"
                      : "text-amber-600 dark:text-amber-400"
                  )}
                >
                  {hotline.number}
                </span>
                <motion.div
                  whileHover={{ scale: 1.1 }}
                  className={cn(
                    "w-10 h-10 rounded-full flex items-center justify-center",
                    "text-white",
                    theme.accent,
                    "shadow-lg group-hover:shadow-xl transition-shadow"
                  )}
                >
                  <Phone className="w-5 h-5" />
                </motion.div>
              </div>
            </motion.a>
          ))}
        </div>
      </motion.div>

      {/* 即时行动步骤 */}
      <motion.div
        variants={containerVariants}
        initial="hidden"
        animate="visible"
        className="px-5 pb-5"
      >
        <h4 className="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3 flex items-center gap-2">
          <ShieldCheck className="w-4 h-4" />
          你现在可以做的
        </h4>
        <div className="space-y-2">
          {data.immediateSteps.map((step, idx) => (
            <motion.div
              key={idx}
              variants={itemVariants}
              className="flex items-start gap-3 p-3 rounded-xl bg-white/50 dark:bg-gray-800/30 backdrop-blur-sm"
            >
              <span
                className={cn(
                  "flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center",
                  "text-white text-sm font-medium",
                  theme.accent
                )}
              >
                {idx + 1}
              </span>
              <p className="text-sm text-gray-700 dark:text-gray-300 pt-0.5 leading-relaxed">
                {step}
              </p>
            </motion.div>
          ))}
        </div>
      </motion.div>

      {/* 底部确认 */}
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        transition={{ delay: 0.6 }}
        className="p-5 bg-white/50 dark:bg-gray-900/50 backdrop-blur-sm border-t border-white/50 dark:border-gray-800/50"
      >
        <div className="flex items-center justify-center gap-2 text-center mb-3">
          <Heart className="w-4 h-4 text-rose-500" />
          <p className="text-sm text-gray-600 dark:text-gray-400">
            你不是一个人。专业帮助随时可用。
          </p>
        </div>
        {onSubmit && (
          <motion.button
            whileHover={{ scale: 1.01 }}
            whileTap={{ scale: 0.99 }}
            onClick={() => onSubmit("我看到了这些资源")}
            className="w-full py-2.5 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800"
          >
            我已了解这些资源
          </motion.button>
        )}
      </motion.div>
    </motion.div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Skeleton
// ═══════════════════════════════════════════════════════════════════════════

export function CrisisAlertCardSkeleton() {
  return (
    <div
      className={cn(
        "relative overflow-hidden rounded-2xl max-w-lg mx-auto animate-pulse",
        "bg-gradient-to-br from-red-50 via-rose-50/80 to-orange-50/60",
        "dark:from-red-950/30 dark:via-rose-950/20 dark:to-orange-950/20",
        "border-2 border-red-200/70 dark:border-red-800/50"
      )}
    >
      <div className="p-5 bg-gradient-to-r from-red-500/50 to-rose-600/50">
        <div className="flex items-center gap-4">
          <div className="w-14 h-14 rounded-xl bg-white/30" />
          <div className="space-y-2">
            <div className="h-5 bg-white/30 rounded w-32" />
            <div className="h-4 bg-white/20 rounded w-24" />
          </div>
        </div>
      </div>

      <div className="p-5 space-y-4">
        <div className="h-16 bg-white/40 rounded-xl" />
        <div className="space-y-2">
          <div className="h-20 bg-white/40 rounded-xl" />
          <div className="h-20 bg-white/40 rounded-xl" />
        </div>
      </div>
    </div>
  );
}

// 注册卡片
registerCard("crisis_alert", CrisisAlertCard);

export default CrisisAlertCard;
