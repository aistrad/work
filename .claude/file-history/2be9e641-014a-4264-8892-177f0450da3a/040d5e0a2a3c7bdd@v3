"use client";

/**
 * ExerciseCard - å¿ƒç†ç»ƒä¹ å¡ç‰‡
 *
 * è®¾è®¡ç†å¿µï¼š
 * - æ²‰æµ¸å¼çš„ç»ƒä¹ ä½“éªŒï¼Œå‡å°‘å¹²æ‰°
 * - æ¸…æ™°çš„æ­¥éª¤æŒ‡å¼•ï¼Œç»™ç”¨æˆ·æŒæ§æ„Ÿ
 * - æµç•…çš„çŠ¶æ€è¿‡æ¸¡åŠ¨ç”»
 * - æ¸©æš–çš„è§†è§‰åé¦ˆï¼Œé¼“åŠ±å®Œæˆ
 */

import { useState } from "react";
import { motion, AnimatePresence } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";
import { cn } from "@/lib/utils";
import {
  Play,
  ChevronLeft,
  ChevronRight,
  Check,
  Send,
  Clock,
  Layers,
} from "lucide-react";
import { cardVariants, exerciseThemes } from "../styles";

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Types
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

interface ExerciseCardData {
  exerciseType: string;
  title: string;
  duration?: string;
  description?: string;
  instructions: string[];
}

interface ExerciseCardProps {
  data: ExerciseCardData;
  onSubmit?: (answer: string) => void;
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Main Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function ExerciseCard({ data, onSubmit }: ExerciseCardProps) {
  const [currentStep, setCurrentStep] = useState(0);
  const [isStarted, setIsStarted] = useState(false);
  const [isCompleted, setIsCompleted] = useState(false);
  const [reflection, setReflection] = useState("");

  const exerciseConfig = exerciseThemes[data.exerciseType] || {
    gradient: "from-purple-500 to-indigo-600",
    icon: "âœ¨",
  };

  const handleStart = () => {
    setIsStarted(true);
  };

  const handleNext = () => {
    if (currentStep < data.instructions.length - 1) {
      setCurrentStep((prev) => prev + 1);
    } else {
      setIsCompleted(true);
    }
  };

  const handlePrev = () => {
    if (currentStep > 0) {
      setCurrentStep((prev) => prev - 1);
    }
  };

  const handleComplete = () => {
    if (onSubmit) {
      onSubmit(
        reflection
          ? `æˆ‘å®Œæˆäº†"${data.title}"ç»ƒä¹ ã€‚æˆ‘çš„æ„Ÿå—æ˜¯ï¼š${reflection}`
          : `æˆ‘å®Œæˆäº†"${data.title}"ç»ƒä¹ ã€‚`
      );
    }
  };

  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  // æœªå¼€å§‹çŠ¶æ€
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  if (!isStarted) {
    return (
      <motion.div
        variants={cardVariants}
        initial="hidden"
        animate="visible"
        className="relative overflow-hidden rounded-2xl max-w-md mx-auto shadow-[0_4px_24px_-4px_rgba(0,0,0,0.08)]"
      >
        {/* æ¸å˜å¤´éƒ¨ */}
        <div
          className={cn(
            "relative p-8 text-white text-center",
            "bg-gradient-to-br",
            exerciseConfig.gradient
          )}
        >
          {/* è£…é¥°èƒŒæ™¯ */}
          <div className="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(255,255,255,0.2),transparent_50%)]" />
          <div className="absolute bottom-0 left-0 w-32 h-32 bg-white/10 rounded-full blur-2xl translate-y-1/2 -translate-x-1/4" />

          <motion.div
            initial={{ scale: 0.8, opacity: 0 }}
            animate={{ scale: 1, opacity: 1 }}
            transition={{ delay: 0.2, duration: 0.4 }}
            className="relative"
          >
            <div className="text-5xl mb-4">{exerciseConfig.icon}</div>
            <h3 className="text-xl font-semibold mb-2">{data.title}</h3>
            {data.duration && (
              <div className="flex items-center justify-center gap-2 text-white/80 text-sm">
                <Clock className="w-4 h-4" />
                <span>é¢„è®¡æ—¶é•¿ï¼š{data.duration}</span>
              </div>
            )}
          </motion.div>
        </div>

        {/* å†…å®¹åŒº */}
        <div className="bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-950 p-5">
          {data.description && (
            <motion.p
              initial={{ opacity: 0, y: 10 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.3 }}
              className="text-sm text-gray-600 dark:text-gray-400 text-center mb-4"
            >
              {data.description}
            </motion.p>
          )}

          <motion.div
            initial={{ opacity: 0, y: 10 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.4 }}
            className="flex items-center justify-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-5"
          >
            <Layers className="w-4 h-4" />
            <span>å…± {data.instructions.length} ä¸ªæ­¥éª¤</span>
          </motion.div>

          <motion.button
            initial={{ opacity: 0, y: 10 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.5 }}
            whileHover={{ scale: 1.02 }}
            whileTap={{ scale: 0.98 }}
            onClick={handleStart}
            className={cn(
              "w-full flex items-center justify-center gap-2 py-3.5 rounded-xl",
              "text-white font-medium",
              "bg-gradient-to-r shadow-lg hover:shadow-xl transition-all",
              exerciseConfig.gradient
            )}
          >
            <Play className="w-5 h-5" />
            å¼€å§‹ç»ƒä¹ 
          </motion.button>
        </div>
      </motion.div>
    );
  }

  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  // å®ŒæˆçŠ¶æ€
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  if (isCompleted) {
    return (
      <motion.div
        variants={cardVariants}
        initial="hidden"
        animate="visible"
        className="relative overflow-hidden rounded-2xl max-w-md mx-auto shadow-[0_4px_24px_-4px_rgba(0,0,0,0.08)]"
      >
        {/* æˆåŠŸå¤´éƒ¨ */}
        <div className="relative p-8 text-white text-center bg-gradient-to-br from-emerald-500 to-teal-600">
          <div className="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(255,255,255,0.2),transparent_50%)]" />

          <motion.div
            initial={{ scale: 0 }}
            animate={{ scale: 1 }}
            transition={{ type: "spring", stiffness: 200, damping: 15 }}
            className="relative"
          >
            <div className="w-16 h-16 mx-auto mb-4 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center">
              <Check className="w-8 h-8" />
            </div>
            <h3 className="text-xl font-semibold mb-1">ç»ƒä¹ å®Œæˆï¼</h3>
            <p className="text-white/80 text-sm">{data.title}</p>
          </motion.div>
        </div>

        {/* åæ€åŒº */}
        <div className="bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-950 p-5">
          <h4 className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3 flex items-center gap-2">
            <span className="text-lg">ğŸ’­</span>
            è®°å½•ä½ çš„æ„Ÿå—ï¼ˆå¯é€‰ï¼‰
          </h4>
          <textarea
            value={reflection}
            onChange={(e) => setReflection(e.target.value)}
            placeholder="åšå®Œè¿™ä¸ªç»ƒä¹ åï¼Œä½ æœ‰ä»€ä¹ˆæ„Ÿå—æˆ–å‘ç°ï¼Ÿ"
            className={cn(
              "w-full p-4 text-sm rounded-xl resize-none",
              "bg-white dark:bg-gray-800 backdrop-blur-sm",
              "border border-gray-200 dark:border-gray-700",
              "text-gray-800 dark:text-gray-200",
              "placeholder:text-gray-400 dark:placeholder:text-gray-500",
              "focus:ring-2 focus:ring-emerald-500/30 focus:border-emerald-400",
              "transition-all duration-200"
            )}
            rows={3}
          />
          <motion.button
            whileHover={{ scale: 1.02 }}
            whileTap={{ scale: 0.98 }}
            onClick={handleComplete}
            className="w-full mt-4 flex items-center justify-center gap-2 py-3.5 rounded-xl text-white font-medium bg-gradient-to-r from-emerald-500 to-teal-600 shadow-lg hover:shadow-xl transition-all"
          >
            <Send className="w-5 h-5" />
            å®Œæˆ
          </motion.button>
        </div>
      </motion.div>
    );
  }

  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  // è¿›è¡Œä¸­çŠ¶æ€
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  const progress = ((currentStep + 1) / data.instructions.length) * 100;

  return (
    <motion.div
      variants={cardVariants}
      initial="hidden"
      animate="visible"
      className="relative overflow-hidden rounded-2xl max-w-md mx-auto shadow-[0_4px_24px_-4px_rgba(0,0,0,0.08)]"
    >
      {/* å¤´éƒ¨ */}
      <div
        className={cn(
          "relative p-4 text-white",
          "bg-gradient-to-r",
          exerciseConfig.gradient
        )}
      >
        <div className="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(255,255,255,0.15),transparent_50%)]" />

        <div className="relative">
          <div className="flex items-center justify-between mb-3">
            <div className="flex items-center gap-3">
              <span className="text-2xl">{exerciseConfig.icon}</span>
              <h3 className="font-semibold">{data.title}</h3>
            </div>
            <span className="text-sm text-white/80 bg-white/20 px-2.5 py-1 rounded-full">
              {currentStep + 1} / {data.instructions.length}
            </span>
          </div>

          {/* è¿›åº¦æ¡ */}
          <div className="h-1.5 bg-white/20 rounded-full overflow-hidden">
            <motion.div
              initial={{ width: 0 }}
              animate={{ width: `${progress}%` }}
              transition={{ duration: 0.4, ease: "easeOut" }}
              className="h-full bg-white rounded-full"
            />
          </div>
        </div>
      </div>

      {/* å½“å‰æ­¥éª¤ */}
      <div className="bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-950 p-6">
        <AnimatePresence mode="wait">
          <motion.div
            key={currentStep}
            initial={{ opacity: 0, x: 20 }}
            animate={{ opacity: 1, x: 0 }}
            exit={{ opacity: 0, x: -20 }}
            transition={{ duration: 0.3 }}
            className="min-h-[140px] flex items-center justify-center"
          >
            <p className="text-lg text-gray-800 dark:text-gray-200 text-center leading-relaxed">
              {data.instructions[currentStep]}
            </p>
          </motion.div>
        </AnimatePresence>

        {/* æ­¥éª¤æŒ‡ç¤ºå™¨ */}
        <div className="flex justify-center gap-1.5 mt-4 mb-6">
          {data.instructions.map((_, idx) => (
            <motion.div
              key={idx}
              initial={{ scale: 0.8 }}
              animate={{
                scale: idx === currentStep ? 1.2 : 1,
                backgroundColor:
                  idx === currentStep
                    ? "rgb(139, 92, 246)"
                    : idx < currentStep
                    ? "rgb(167, 139, 250)"
                    : "rgb(229, 231, 235)",
              }}
              className={cn(
                "w-2 h-2 rounded-full transition-all",
                idx === currentStep && "dark:bg-violet-500",
                idx < currentStep && "dark:bg-violet-400",
                idx > currentStep && "dark:bg-gray-700"
              )}
            />
          ))}
        </div>
      </div>

      {/* å¯¼èˆª */}
      <div className="px-5 pb-5 bg-gradient-to-b from-gray-50 to-white dark:from-gray-950 dark:to-gray-900 flex items-center justify-between">
        <motion.button
          whileHover={{ scale: 1.02 }}
          whileTap={{ scale: 0.98 }}
          onClick={handlePrev}
          disabled={currentStep === 0}
          className={cn(
            "flex items-center gap-1.5 px-4 py-2 rounded-lg text-sm font-medium transition-all",
            currentStep === 0
              ? "text-gray-400 cursor-not-allowed"
              : "text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800"
          )}
        >
          <ChevronLeft className="w-4 h-4" />
          ä¸Šä¸€æ­¥
        </motion.button>

        <motion.button
          whileHover={{ scale: 1.02 }}
          whileTap={{ scale: 0.98 }}
          onClick={handleNext}
          className={cn(
            "flex items-center gap-1.5 px-5 py-2.5 rounded-xl text-white font-medium",
            "bg-gradient-to-r shadow-lg hover:shadow-xl transition-all",
            exerciseConfig.gradient
          )}
        >
          {currentStep === data.instructions.length - 1 ? (
            <>
              <Check className="w-4 h-4" />
              å®Œæˆ
            </>
          ) : (
            <>
              ä¸‹ä¸€æ­¥
              <ChevronRight className="w-4 h-4" />
            </>
          )}
        </motion.button>
      </div>
    </motion.div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Skeleton
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export function ExerciseCardSkeleton() {
  return (
    <div className="relative overflow-hidden rounded-2xl max-w-md mx-auto animate-pulse">
      <div className="p-8 bg-gradient-to-br from-purple-500/50 to-indigo-600/50">
        <div className="flex flex-col items-center">
          <div className="w-12 h-12 rounded-full bg-white/30 mb-4" />
          <div className="h-6 bg-white/30 rounded w-32 mb-2" />
          <div className="h-4 bg-white/20 rounded w-24" />
        </div>
      </div>

      <div className="bg-white dark:bg-gray-900 p-5">
        <div className="h-4 bg-gray-200 dark:bg-gray-800 rounded w-full mb-4" />
        <div className="h-12 bg-gray-200 dark:bg-gray-800 rounded-xl" />
      </div>
    </div>
  );
}

// æ³¨å†Œå¡ç‰‡
registerCard("exercise_card", ExerciseCard);

export default ExerciseCard;
