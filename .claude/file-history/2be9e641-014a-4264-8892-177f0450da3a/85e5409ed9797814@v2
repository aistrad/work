"use client";

import { useState } from "react";
import { registerCard } from "@/skills/CardRegistry";
import { Card } from "@/components/ui/Card";
import { Button } from "@/components/ui/Button";

interface AssessmentItem {
  id: number;
  text: string;
  critical?: boolean;
  subscale?: string;
}

interface AssessmentFormData {
  assessmentType: string;
  name: string;
  description: string;
  recallPeriod: string;
  items: AssessmentItem[];
  responseScale: Record<string, string>;
}

interface AssessmentFormCardProps {
  data: AssessmentFormData;
  onSubmit?: (answer: string) => void;
}

function AssessmentFormCard({ data, onSubmit }: AssessmentFormCardProps) {
  const [responses, setResponses] = useState<Record<number, number>>({});
  const [currentPage, setCurrentPage] = useState(0);

  const itemsPerPage = 5;
  const totalPages = Math.ceil(data.items.length / itemsPerPage);
  const currentItems = data.items.slice(
    currentPage * itemsPerPage,
    (currentPage + 1) * itemsPerPage
  );

  const handleResponse = (itemId: number, value: number) => {
    setResponses((prev) => ({ ...prev, [itemId]: value }));
  };

  const isPageComplete = () => {
    return currentItems.every((item) => responses[item.id] !== undefined);
  };

  const isAllComplete = () => {
    return data.items.every((item) => responses[item.id] !== undefined);
  };

  const handleNext = () => {
    if (currentPage < totalPages - 1) {
      setCurrentPage((prev) => prev + 1);
    }
  };

  const handlePrev = () => {
    if (currentPage > 0) {
      setCurrentPage((prev) => prev - 1);
    }
  };

  const handleSubmit = () => {
    if (!isAllComplete() || !onSubmit) return;

    // 按题目顺序组织回答
    const orderedResponses = data.items.map((item) => responses[item.id]);

    // 提交给 AI 处理
    onSubmit(
      JSON.stringify({
        action: "calculate_assessment",
        assessment_type: data.assessmentType,
        responses: orderedResponses,
      })
    );
  };

  const scaleOptions = Object.entries(data.responseScale).map(([value, label]) => ({
    value: parseInt(value),
    label,
  }));

  return (
    <Card className="max-w-2xl mx-auto bg-white dark:bg-gray-900 overflow-hidden">
      {/* 头部 */}
      <div className="p-4 bg-gradient-to-r from-purple-500 to-indigo-600 text-white">
        <h3 className="text-lg font-semibold">{data.name}</h3>
        <p className="text-sm opacity-90 mt-1">{data.description}</p>
        <p className="text-xs opacity-75 mt-2">回忆时段：{data.recallPeriod}</p>
      </div>

      {/* 进度条 */}
      <div className="px-4 py-2 bg-gray-50 dark:bg-gray-800">
        <div className="flex items-center justify-between text-sm text-gray-600 dark:text-gray-400">
          <span>
            已完成 {Object.keys(responses).length} / {data.items.length} 题
          </span>
          <span>
            第 {currentPage + 1} / {totalPages} 页
          </span>
        </div>
        <div className="mt-2 h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
          <div
            className="h-full bg-gradient-to-r from-purple-500 to-indigo-600 transition-all duration-300"
            style={{
              width: `${(Object.keys(responses).length / data.items.length) * 100}%`,
            }}
          />
        </div>
      </div>

      {/* 题目区域 */}
      <div className="p-4 space-y-6">
        {currentItems.map((item) => (
          <div
            key={item.id}
            className={`p-4 rounded-lg transition-colors ${
              item.critical
                ? "bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800"
                : "bg-gray-50 dark:bg-gray-800"
            }`}
          >
            <p className="text-sm font-medium text-gray-800 dark:text-gray-200 mb-3">
              {item.id}. {item.text}
              {item.critical && (
                <span className="ml-2 text-xs text-red-500">*</span>
              )}
            </p>

            <div className="flex flex-wrap gap-2">
              {scaleOptions.map((option) => (
                <button
                  key={option.value}
                  onClick={() => handleResponse(item.id, option.value)}
                  className={`px-3 py-2 text-sm rounded-lg transition-all ${
                    responses[item.id] === option.value
                      ? "bg-purple-600 text-white shadow-md"
                      : "bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-600 hover:border-purple-400"
                  }`}
                >
                  {option.label}
                </button>
              ))}
            </div>
          </div>
        ))}
      </div>

      {/* 底部导航 */}
      <div className="p-4 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between">
        <Button
          variant="ghost"
          onClick={handlePrev}
          disabled={currentPage === 0}
        >
          上一页
        </Button>

        {currentPage === totalPages - 1 ? (
          <Button
            onClick={handleSubmit}
            disabled={!isAllComplete()}
            className="bg-gradient-to-r from-purple-600 to-indigo-600 text-white"
          >
            提交评估
          </Button>
        ) : (
          <Button
            onClick={handleNext}
            disabled={!isPageComplete()}
            className="bg-purple-600 text-white"
          >
            下一页
          </Button>
        )}
      </div>
    </Card>
  );
}

// 注册卡片
registerCard("assessment_form", AssessmentFormCard);

export default AssessmentFormCard;
