/**
 * {{CARD_NAME}} Card Component
 * 文件位置: apps/web/src/skills/{{SKILL_ID}}/cards/{{CARD_NAME}}Card.tsx
 *
 * {{CARD_DESCRIPTION}}
 */

"use client";

import React from "react";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

interface {{CARD_NAME}}Data {
  title: string;
  content: string;
  // 添加更多字段...
}

interface {{CARD_NAME}}CardProps {
  data: {{CARD_NAME}}Data;
  onAction?: (action: string, payload?: any) => void;
}

// ═══════════════════════════════════════════════════════════════════════════
// Component
// ═══════════════════════════════════════════════════════════════════════════

export default function {{CARD_NAME}}Card({ data, onAction }: {{CARD_NAME}}CardProps) {
  // ═══════════════════════════════════════════════════════════════════════════
  // Handlers
  // ═══════════════════════════════════════════════════════════════════════════

  const handleAction = (action: string) => {
    if (onAction) {
      onAction(action);
    }
  };

  // ═══════════════════════════════════════════════════════════════════════════
  // Render
  // ═══════════════════════════════════════════════════════════════════════════

  return (
    <div className="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      {/* Header */}
      <div className="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-{{PRIMARY_COLOR}}-50 to-white">
        <h3 className="text-lg font-semibold text-gray-900">
          {data.title}
        </h3>
      </div>

      {/* Content */}
      <div className="p-6">
        <p className="text-gray-700 leading-relaxed">
          {data.content}
        </p>
      </div>

      {/* Actions */}
      {onAction && (
        <div className="px-6 py-4 bg-gray-50 border-t border-gray-100 flex justify-end gap-3">
          <button
            onClick={() => handleAction("cancel")}
            className="px-4 py-2 text-gray-600 hover:text-gray-800 transition-colors"
          >
            取消
          </button>
          <button
            onClick={() => handleAction("confirm")}
            className="px-4 py-2 bg-{{PRIMARY_COLOR}}-600 text-white rounded-lg hover:bg-{{PRIMARY_COLOR}}-700 transition-colors"
          >
            确认
          </button>
        </div>
      )}
    </div>
  );
}
