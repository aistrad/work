"use client";

import { motion } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";

interface Lever {
  id: string;
  title: string;
  rock_id?: string;
  status?: "pending" | "completed" | "skipped";
  time_block?: string;
  energy_required?: number;
}

interface DailyLeversData {
  date?: string;
  levers: Lever[];
  energy_level?: number;
  intention?: string;
  stats?: {
    total: number;
    completed: number;
    completion_rate: number;
  };
  generated_at?: string;
}

interface DailyLeversCardProps {
  data: DailyLeversData;
}

function DailyLeversCard({ data }: DailyLeversCardProps) {
  const { levers, energy_level, intention, stats, date } = data;

  if (!levers || levers.length === 0) return null;

  const getStatusIcon = (status?: string) => {
    switch (status) {
      case "completed": return "âœ…";
      case "skipped": return "â­ï¸";
      default: return "â¬œ";
    }
  };

  const getTimeBlockIcon = (timeBlock?: string) => {
    switch (timeBlock?.toLowerCase()) {
      case "æ—©æ™¨":
      case "morning": return "ğŸŒ…";
      case "ä¸‹åˆ":
      case "afternoon": return "â˜€ï¸";
      case "æ™šä¸Š":
      case "evening": return "ğŸŒ™";
      default: return "â°";
    }
  };

  const getEnergyColor = (level?: number) => {
    if (!level) return "text-gray-400";
    if (level >= 7) return "text-green-500";
    if (level >= 4) return "text-yellow-500";
    return "text-red-500";
  };

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.5 }}
      className="daily-levers-card bg-gradient-to-br from-cyan-50 to-blue-50 dark:from-cyan-950/30 dark:to-blue-950/30 rounded-2xl border border-cyan-200 dark:border-cyan-800 p-5 my-2 overflow-hidden shadow-[var(--shadow-card)]"
    >
      {/* Header */}
      <div className="flex items-center justify-between mb-4">
        <div className="flex items-center gap-2">
          <span className="text-2xl">âš¡</span>
          <h3 className="text-lg font-semibold text-orange-900 dark:text-orange-100">
            æ¯æ—¥æ æ†
          </h3>
          {date && (
            <span className="text-xs text-muted-foreground">
              {date}
            </span>
          )}
        </div>
        {stats && (
          <div className="flex items-center gap-2">
            <span className="text-sm text-muted-foreground">
              {stats.completed}/{stats.total}
            </span>
            {stats.completion_rate === 100 && (
              <span className="text-lg">ğŸ‰</span>
            )}
          </div>
        )}
      </div>

      {/* Energy & Intention */}
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        transition={{ delay: 0.2 }}
        className="flex flex-wrap gap-2 mb-4"
      >
        {energy_level !== undefined && (
          <div className="flex items-center gap-1 px-3 py-1 bg-white/50 dark:bg-black/20 rounded-full">
            <span>ğŸ”‹</span>
            <span className={`text-sm font-medium ${getEnergyColor(energy_level)}`}>
              {energy_level}/10
            </span>
          </div>
        )}
        {intention && (
          <div className="flex-1 px-3 py-1 bg-orange-100/50 dark:bg-orange-900/30 rounded-lg text-sm italic">
            {`"${intention}"`}
          </div>
        )}
      </motion.div>

      {/* Levers List */}
      <div className="space-y-2">
        {levers.map((lever, index) => (
          <motion.div
            key={lever.id}
            initial={{ opacity: 0, x: -20 }}
            animate={{ opacity: 1, x: 0 }}
            transition={{ delay: 0.3 + index * 0.1 }}
            className={`flex items-center gap-3 p-3 rounded-lg border ${
              lever.status === "completed"
                ? "bg-green-50 dark:bg-green-900/20 border-green-200 dark:border-green-800"
                : lever.status === "skipped"
                ? "bg-gray-50 dark:bg-gray-900/20 border-gray-200 dark:border-gray-800 opacity-60"
                : "bg-white/50 dark:bg-black/20 border-orange-200 dark:border-orange-800"
            }`}
          >
            <span className="text-xl">{getStatusIcon(lever.status)}</span>
            <div className="flex-1">
              <div className={`font-medium ${lever.status === "completed" ? "line-through opacity-70" : ""}`}>
                {lever.title}
              </div>
            </div>
            <div className="flex items-center gap-2 text-sm text-muted-foreground">
              {lever.time_block && (
                <span className="flex items-center gap-1">
                  {getTimeBlockIcon(lever.time_block)}
                  <span className="text-xs">{lever.time_block}</span>
                </span>
              )}
              {lever.energy_required && (
                <span className="text-xs px-1.5 py-0.5 bg-gray-100 dark:bg-gray-800 rounded">
                  âš¡{lever.energy_required}
                </span>
              )}
            </div>
          </motion.div>
        ))}
      </div>

      {/* Progress Bar */}
      {stats && (
        <motion.div
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          transition={{ delay: 0.6 }}
          className="mt-4"
        >
          <div className="w-full h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
            <motion.div
              className={`h-full rounded-full ${
                stats.completion_rate === 100 ? "bg-green-500" : "bg-orange-500"
              }`}
              initial={{ width: 0 }}
              animate={{ width: `${stats.completion_rate}%` }}
              transition={{ delay: 0.7, duration: 0.5 }}
            />
          </div>
        </motion.div>
      )}

      {/* Motivation */}
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        transition={{ delay: 0.8 }}
        className="mt-3 text-xs text-center text-muted-foreground"
      >
        {stats?.completion_rate === 100
          ? "ğŸ‰ ä»Šæ—¥æ æ†å…¨éƒ¨å®Œæˆï¼"
          : "ğŸ’ª æ¯ä¸€ä¸ªå°è¡ŒåŠ¨éƒ½åœ¨æ¨åŠ¨å¤§æ”¹å˜"}
      </motion.div>
    </motion.div>
  );
}

registerCard("daily_levers", DailyLeversCard);

export default DailyLeversCard;
