  one_year_goal?: string;
  one_month_project?: string;
  daily_actions?: string[];
}

interface ActionPlanData {
  context?: string;
  hierarchy?: Hierarchy;
  first_step?: string;
  generated_at?: string;
}

interface ActionPlanCardProps {
  data: ActionPlanData;
}

