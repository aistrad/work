"use client";

import { motion } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";

interface Vision {
  statement?: string;
  three_year_picture?: string;
  identity_belief?: string;
  one_year_milestone?: string;
}

interface AntiVision {
  statement?: string;
  five_year_picture?: string;
}

interface VisionMapData {
  map_type: "vision" | "anti_vision" | "both";
  vision?: Vision | null;
  anti_vision?: AntiVision | null;
  generated_at?: string;
}

interface VisionMapCardProps {
  data: VisionMapData;
}

function VisionMapCard({ data }: VisionMapCardProps) {
  const { map_type, vision, anti_vision } = data;

  const showVision = map_type === "vision" || map_type === "both";
  const showAntiVision = map_type === "anti_vision" || map_type === "both";

  if (!vision && !anti_vision) return null;

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.5 }}
      className="vision-map-card rounded-2xl overflow-hidden my-2"
    >
      {/* Vision Section */}
      {showVision && vision && (
        <motion.div
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          transition={{ delay: 0.2 }}
          className="bg-gradient-to-br from-cyan-50 to-blue-50 dark:from-cyan-950/30 dark:to-blue-950/30 border border-cyan-200 dark:border-cyan-800 p-5 rounded-2xl mb-2 shadow-[var(--shadow-card)]"
        >
          <div className="flex items-center gap-2 mb-4">
            <span className="text-2xl">ğŸŒŸ</span>
            <h3 className="text-lg font-semibold text-cyan-900 dark:text-cyan-100">
              æ„¿æ™¯åœ°å›¾
            </h3>
          </div>

          {/* Vision Statement */}
          {vision.statement && (
            <motion.div
              initial={{ opacity: 0, x: -20 }}
              animate={{ opacity: 1, x: 0 }}
              transition={{ delay: 0.3 }}
              className="bg-white/60 dark:bg-black/30 rounded-lg p-4 mb-3 text-center"
            >
              <div className="text-lg font-medium text-cyan-800 dark:text-cyan-200 italic">
                {`"${vision.statement}"`}
              </div>
            </motion.div>
          )}

          {/* Three Year Picture */}
          {vision.three_year_picture && (
            <motion.div
              initial={{ opacity: 0, x: -20 }}
              animate={{ opacity: 1, x: 0 }}
              transition={{ delay: 0.4 }}
              className="bg-white/40 dark:bg-black/20 rounded-lg p-3 mb-3"
            >
              <div className="text-xs text-muted-foreground mb-1">ğŸ“… ä¸‰å¹´åçš„ç”»é¢</div>
              <div className="text-sm">{vision.three_year_picture}</div>
            </motion.div>
          )}

          {/* Identity Belief */}
          {vision.identity_belief && (
            <motion.div
              initial={{ opacity: 0, x: -20 }}
              animate={{ opacity: 1, x: 0 }}
              transition={{ delay: 0.5 }}
              className="bg-cyan-100/50 dark:bg-cyan-900/30 rounded-lg p-3 mb-3"
            >
              <div className="text-xs text-muted-foreground mb-1">ğŸª èº«ä»½ä¿¡å¿µ</div>
              <div className="text-sm font-medium">{vision.identity_belief}</div>
            </motion.div>
          )}

          {/* One Year Milestone */}
          {vision.one_year_milestone && (
            <motion.div
              initial={{ opacity: 0, x: -20 }}
              animate={{ opacity: 1, x: 0 }}
              transition={{ delay: 0.6 }}
              className="bg-white/40 dark:bg-black/20 rounded-lg p-3"
            >
              <div className="text-xs text-muted-foreground mb-1">ğŸ¯ ä¸€å¹´é‡Œç¨‹ç¢‘</div>
              <div className="text-sm">{vision.one_year_milestone}</div>
            </motion.div>
          )}
        </motion.div>
      )}

      {/* Anti-Vision Section */}
      {showAntiVision && anti_vision && (
        <motion.div
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          transition={{ delay: showVision ? 0.7 : 0.2 }}
          className="bg-gradient-to-br from-red-50 to-orange-50 dark:from-red-950/30 dark:to-orange-950/30 border border-red-200 dark:border-red-800 p-5 rounded-2xl shadow-[var(--shadow-card)]"
        >
          <div className="flex items-center gap-2 mb-4">
            <span className="text-2xl">âš ï¸</span>
            <h3 className="text-lg font-semibold text-red-900 dark:text-red-100">
              åæ„¿æ™¯åœ°å›¾
            </h3>
          </div>

          {/* Anti-Vision Statement */}
          {anti_vision.statement && (
            <motion.div
              initial={{ opacity: 0, x: -20 }}
              animate={{ opacity: 1, x: 0 }}
              transition={{ delay: showVision ? 0.8 : 0.3 }}
              className="bg-white/60 dark:bg-black/30 rounded-lg p-4 mb-3 text-center border-l-4 border-red-400"
            >
              <div className="text-lg font-medium text-red-800 dark:text-red-200 italic">
                {`"${anti_vision.statement}"`}
              </div>
            </motion.div>
          )}

          {/* Five Year Picture */}
          {anti_vision.five_year_picture && (
            <motion.div
              initial={{ opacity: 0, x: -20 }}
              animate={{ opacity: 1, x: 0 }}
              transition={{ delay: showVision ? 0.9 : 0.4 }}
              className="bg-red-100/50 dark:bg-red-900/30 rounded-lg p-3"
            >
              <div className="text-xs text-muted-foreground mb-1">â° å¦‚æœä¸æ”¹å˜ï¼Œäº”å¹´å...</div>
              <div className="text-sm">{anti_vision.five_year_picture}</div>
            </motion.div>
          )}
        </motion.div>
      )}

      {/* Contrast Arrow (for "both" type) */}
      {map_type === "both" && (
        <motion.div
          initial={{ opacity: 0, scale: 0 }}
          animate={{ opacity: 1, scale: 1 }}
          transition={{ delay: 1 }}
          className="flex justify-center -my-3 relative z-10"
        >
          <div className="bg-white dark:bg-gray-800 rounded-full p-2 shadow-lg">
            <span className="text-xl">â†•ï¸</span>
          </div>
        </motion.div>
      )}
    </motion.div>
  );
}

registerCard("vision_map", VisionMapCard);

export default VisionMapCard;
