"use client";

import React, { useMemo, useCallback, useState } from "react";
import { motion, AnimatePresence } from "framer-motion";
import { CardRegistry } from "@/skills/CardRegistry";

// ============================================================
// Types
// ============================================================

interface ArchetypeData {
  name: string;
  description: string;
  strength: number; // 0-100
  keywords: string[];
}

interface PsychologicalPortraitData {
  dominantArchetype: ArchetypeData;
  secondaryArchetypes: ArchetypeData[];
  psychologicalProfile: {
    consciousness: string;
    unconscious: string;
    integration: string;
  };
  lifeThemes: string[];
  growthAreas: string[];
}

interface JungastroPsychologicalPortraitCardProps {
  data: PsychologicalPortraitData;
  title?: string;
  onArchetypeClick?: (archetype: ArchetypeData) => void;
}

// ============================================================
// Utility Functions (hoisted outside component)
// ============================================================

const getStrengthColor = (strength: number): string => {
  if (strength >= 80) return "text-purple-400";
  if (strength >= 60) return "text-indigo-400";
  if (strength >= 40) return "text-blue-400";
  return "text-slate-400";
};

const getStrengthBgColor = (strength: number): string => {
  if (strength >= 80) return "bg-purple-500/20";
  if (strength >= 60) return "bg-indigo-500/20";
  if (strength >= 40) return "bg-blue-500/20";
  return "bg-slate-500/20";
};

// ============================================================
// Static JSX (hoisted outside component for performance)
// ============================================================

const EmptyState = (
  <div className="flex items-center justify-center h-48 text-slate-400">
    <p>æš‚æ— å¿ƒç†ç”»åƒæ•°æ®</p>
  </div>
);

// LoadingState removed - not used in this component
// Loading states are handled by parent components

// ============================================================
// Sub-components (memoized)
// ============================================================

interface ArchetypeItemProps {
  archetype: ArchetypeData;
  isPrimary?: boolean;
  onClick?: () => void;
}

const ArchetypeItem = React.memo(function ArchetypeItem({
  archetype,
  isPrimary = false,
  onClick,
}: ArchetypeItemProps) {
  // Defensive null check
  if (!archetype) {
    return null;
  }

  return (
    <motion.div
      className={`p-4 rounded-xl cursor-pointer transition-all ${
        isPrimary
          ? "bg-gradient-to-br from-purple-900/40 to-indigo-900/40 border border-purple-500/30"
          : "bg-slate-800/50 hover:bg-slate-800/70 border border-slate-700/50"
      }`}
      onClick={onClick}
      whileHover={{ scale: 1.02 }}
      whileTap={{ scale: 0.98 }}
    >
      <div className="flex items-center justify-between mb-2">
        <h4
          className={`font-semibold ${isPrimary ? "text-purple-300" : "text-slate-200"}`}
        >
          {archetype.name}
        </h4>
        <span className={`text-sm ${getStrengthColor(archetype.strength)}`}>
          {archetype.strength}%
        </span>
      </div>

      {/* Strength Bar */}
      <div className="h-1.5 bg-slate-700 rounded-full overflow-hidden mb-3">
        <motion.div
          className={`h-full rounded-full ${
            isPrimary
              ? "bg-gradient-to-r from-purple-500 to-indigo-500"
              : "bg-gradient-to-r from-blue-500 to-cyan-500"
          }`}
          initial={{ width: 0 }}
          animate={{ width: `${archetype.strength}%` }}
          transition={{ duration: 0.8, ease: "easeOut" }}
        />
      </div>

      <p className="text-sm text-slate-400 mb-2 line-clamp-2">
        {archetype.description}
      </p>

      {/* Keywords */}
      <div className="flex flex-wrap gap-1">
        {archetype.keywords.slice(0, 4).map((keyword, idx) => (
          <span
            key={idx}
            className={`text-xs px-2 py-0.5 rounded-full ${getStrengthBgColor(archetype.strength)} ${getStrengthColor(archetype.strength)}`}
          >
            {keyword}
          </span>
        ))}
      </div>
    </motion.div>
  );
});

interface ProfileSectionProps {
  title: string;
  content: string;
  icon: string;
}

const ProfileSection = React.memo(function ProfileSection({
  title,
  content,
  icon,
}: ProfileSectionProps) {
  return (
    <div className="p-3 bg-slate-800/30 rounded-lg">
      <div className="flex items-center gap-2 mb-2">
        <span className="text-lg">{icon}</span>
        <h5 className="text-sm font-medium text-slate-300">{title}</h5>
      </div>
      <p className="text-sm text-slate-400 leading-relaxed">{content}</p>
    </div>
  );
});

// ============================================================
// Main Component
// ============================================================

function JungastroPsychologicalPortraitCard({
  data,
  title = "å¿ƒç†ç”»åƒ",
  onArchetypeClick,
}: JungastroPsychologicalPortraitCardProps) {
  const [expandedSection, setExpandedSection] = useState<string | null>(null);

  // Memoized data processing
  const allArchetypes = useMemo(() => {
    if (!data?.dominantArchetype) return [];
    return [data.dominantArchetype, ...(data.secondaryArchetypes || [])];
  }, [data?.dominantArchetype, data?.secondaryArchetypes]);

  // Stable callback
  const handleArchetypeClick = useCallback(
    (archetype: ArchetypeData) => {
      onArchetypeClick?.(archetype);
    },
    [onArchetypeClick]
  );

  const toggleSection = useCallback((section: string) => {
    setExpandedSection((prev) => (prev === section ? null : section));
  }, []);

  // Early returns
  if (!data) return EmptyState;

  return (
    <div className="bg-gradient-to-br from-purple-50 to-indigo-50 dark:from-purple-950/30 dark:to-indigo-950/30 rounded-2xl p-5 border border-purple-200 dark:border-purple-800 shadow-[var(--shadow-card)]">
      {/* Header */}
      <div className="flex items-center gap-3 mb-5">
        <div className="w-10 h-10 rounded-xl bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
          <span className="text-xl">ğŸ­</span>
        </div>
        <div>
          <h3 className="text-lg font-semibold text-purple-900 dark:text-purple-100">{title}</h3>
          <p className="text-xs text-[var(--text-tertiary)]">è£æ ¼å¿ƒç†åŸå‹åˆ†æ</p>
        </div>
      </div>

      {/* Dominant Archetype */}
      {data.dominantArchetype ? (
        <div className="mb-4">
          <h4 className="text-sm text-slate-400 mb-2">ä¸»å¯¼åŸå‹</h4>
          <ArchetypeItem
            archetype={data.dominantArchetype}
            isPrimary
            onClick={() => handleArchetypeClick(data.dominantArchetype)}
          />
        </div>
      ) : null}

      {/* Secondary Archetypes */}
      {data.secondaryArchetypes?.length > 0 ? (
        <div className="mb-4">
          <h4 className="text-sm text-slate-400 mb-2">æ¬¡è¦åŸå‹</h4>
          <div className="grid grid-cols-1 sm:grid-cols-2 gap-3">
            {data.secondaryArchetypes.map((archetype, idx) => (
              <ArchetypeItem
                key={idx}
                archetype={archetype}
                onClick={() => handleArchetypeClick(archetype)}
              />
            ))}
          </div>
        </div>
      ) : null}

      {/* Psychological Profile */}
      {data.psychologicalProfile ? (
        <div className="mb-4">
          <button
            className="w-full flex items-center justify-between text-sm text-slate-400 mb-2 hover:text-slate-300 transition-colors"
            onClick={() => toggleSection("profile")}
          >
            <span>å¿ƒç†ç»“æ„</span>
            <span
              className={`transform transition-transform ${expandedSection === "profile" ? "rotate-180" : ""}`}
            >
              â–¼
            </span>
          </button>
          <AnimatePresence>
            {expandedSection === "profile" ? (
              <motion.div
                initial={{ height: 0, opacity: 0 }}
                animate={{ height: "auto", opacity: 1 }}
                exit={{ height: 0, opacity: 0 }}
                className="space-y-2 overflow-hidden"
              >
                <ProfileSection
                  title="æ„è¯†å±‚é¢"
                  content={data.psychologicalProfile.consciousness}
                  icon="â˜€ï¸"
                />
                <ProfileSection
                  title="æ— æ„è¯†å±‚é¢"
                  content={data.psychologicalProfile.unconscious}
                  icon="ğŸŒ™"
                />
                <ProfileSection
                  title="æ•´åˆæ–¹å‘"
                  content={data.psychologicalProfile.integration}
                  icon="âš–ï¸"
                />
              </motion.div>
            ) : null}
          </AnimatePresence>
        </div>
      ) : null}

      {/* Life Themes */}
      {data.lifeThemes?.length > 0 ? (
        <div className="mb-4">
          <h4 className="text-sm text-slate-400 mb-2">äººç”Ÿä¸»é¢˜</h4>
          <div className="flex flex-wrap gap-2">
            {data.lifeThemes.map((theme, idx) => (
              <span
                key={idx}
                className="px-3 py-1.5 bg-indigo-500/20 text-indigo-300 text-sm rounded-lg"
              >
                {theme}
              </span>
            ))}
          </div>
        </div>
      ) : null}

      {/* Growth Areas */}
      {data.growthAreas?.length > 0 ? (
        <div>
          <h4 className="text-sm text-slate-400 mb-2">æˆé•¿é¢†åŸŸ</h4>
          <div className="space-y-2">
            {data.growthAreas.map((area, idx) => (
              <div
                key={idx}
                className="flex items-start gap-2 text-sm text-slate-300"
              >
                <span className="text-purple-400 mt-0.5">â†’</span>
                <span>{area}</span>
              </div>
            ))}
          </div>
        </div>
      ) : null}
    </div>
  );
}

// ============================================================
// Registry
// ============================================================

CardRegistry.register("jungastro_portrait", JungastroPsychologicalPortraitCard);

export default JungastroPsychologicalPortraitCard;
