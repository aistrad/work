"use client";

import { motion } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";

interface Rock {
  id: string;
  title: string;
  goal_id?: string;  // å…³è”çš„æ ¸å¿ƒç›®æ ‡ ID (ä¸ DATA-STRUCTURE.md å¯¹é½)
  role_id?: string;  // å…¼å®¹æ—§æ•°æ®
  status?: "pending" | "in_progress" | "completed";
  progress?: number;
  due_date?: string;
  daily_actions?: string[];  // åˆ†è§£åˆ°æ¯æ—¥çš„è¡ŒåŠ¨
}

interface WeeklyRocksData {
  week_start?: string;
  rocks: Rock[];
  theme?: string;
  energy_budget?: number;
  stats?: {
    total: number;
    completed: number;
    in_progress: number;
    completion_rate: number;
  };
  generated_at?: string;
}

interface WeeklyRocksCardProps {
  data: WeeklyRocksData;
}

function WeeklyRocksCard({ data }: WeeklyRocksCardProps) {
  const { rocks, theme, energy_budget, stats } = data;

  if (!rocks || rocks.length === 0) return null;

  const getStatusIcon = (status?: string) => {
    switch (status) {
      case "completed": return "âœ…";
      case "in_progress": return "ğŸ”„";
      default: return "â¬œ";
    }
  };

  const getStatusColor = (status?: string) => {
    switch (status) {
      case "completed": return "bg-green-100 dark:bg-green-900/30 border-green-300 dark:border-green-700";
      case "in_progress": return "bg-yellow-100 dark:bg-yellow-900/30 border-yellow-300 dark:border-yellow-700";
      default: return "bg-white/50 dark:bg-black/20 border-gray-200 dark:border-gray-700";
    }
  };

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.5 }}
      className="weekly-rocks-card bg-gradient-to-br from-cyan-50 to-blue-50 dark:from-cyan-950/30 dark:to-blue-950/30 rounded-2xl border border-cyan-200 dark:border-cyan-800 p-5 my-2 overflow-hidden shadow-[var(--shadow-card)]"
    >
      {/* Header */}
      <div className="flex items-center justify-between mb-4">
        <div className="flex items-center gap-2">
          <span className="text-2xl">ğŸª¨</span>
          <h3 className="text-lg font-semibold text-blue-900 dark:text-blue-100">
            å‘¨å¤§çŸ³å¤´
          </h3>
        </div>
        {stats && (
          <div className="flex items-center gap-2">
            <span className="text-sm text-muted-foreground">
              {stats.completed}/{stats.total}
            </span>
            <div className="w-16 h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
              <motion.div
                className="h-full bg-blue-500 rounded-full"
                initial={{ width: 0 }}
                animate={{ width: `${stats.completion_rate}%` }}
                transition={{ delay: 0.3, duration: 0.5 }}
              />
            </div>
          </div>
        )}
      </div>

      {/* Theme & Energy */}
      {(theme || energy_budget) && (
        <motion.div
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          transition={{ delay: 0.2 }}
          className="flex flex-wrap gap-2 mb-4"
        >
          {theme && (
            <span className="px-3 py-1 bg-blue-100 dark:bg-blue-900/50 rounded-full text-sm">
              ğŸ¯ {theme}
            </span>
          )}
          {energy_budget && (
            <span className="px-3 py-1 bg-yellow-100 dark:bg-yellow-900/50 rounded-full text-sm">
              âš¡ èƒ½é‡é¢„ç®—: {energy_budget}/10
            </span>
          )}
        </motion.div>
      )}

      {/* Rocks List */}
      <div className="space-y-3">
        {rocks.map((rock, index) => (
          <motion.div
            key={rock.id}
            initial={{ opacity: 0, x: -20 }}
            animate={{ opacity: 1, x: 0 }}
            transition={{ delay: 0.3 + index * 0.15 }}
            className={`rounded-lg border p-3 ${getStatusColor(rock.status)}`}
          >
            <div className="flex items-start gap-3">
              <span className="text-xl mt-0.5">{getStatusIcon(rock.status)}</span>
              <div className="flex-1">
                <div className="font-medium">{rock.title}</div>
                {rock.progress !== undefined && rock.progress > 0 && rock.status !== "completed" && (
                  <div className="mt-2">
                    <div className="flex items-center justify-between text-xs text-muted-foreground mb-1">
                      <span>è¿›åº¦</span>
                      <span>{rock.progress}%</span>
                    </div>
                    <div className="w-full h-1.5 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                      <motion.div
                        className="h-full bg-blue-500 rounded-full"
                        initial={{ width: 0 }}
                        animate={{ width: `${rock.progress}%` }}
                        transition={{ delay: 0.5 + index * 0.1, duration: 0.5 }}
                      />
                    </div>
                  </div>
                )}
              </div>
              {rock.due_date && (
                <span className="text-xs text-muted-foreground">
                  {rock.due_date}
                </span>
              )}
            </div>
          </motion.div>
        ))}
      </div>

      {/* Hint */}
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        transition={{ delay: 0.8 }}
        className="mt-4 text-xs text-center text-muted-foreground"
      >
        ğŸ’¡ å¤§çŸ³å¤´å…ˆæ”¾ï¼Œæ²™å­è‡ªç„¶ä¼šå¡«æ»¡ç¼éš™
      </motion.div>
    </motion.div>
  );
}

registerCard("weekly_rocks", WeeklyRocksCard);

export default WeeklyRocksCard;
