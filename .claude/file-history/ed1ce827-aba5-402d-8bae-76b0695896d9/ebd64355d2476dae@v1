import React from 'react';

type InsightType = 'career' | 'relationship' | 'fortune' | 'health' | 'general';

interface InsightCardProps {
  insightType: InsightType;
  title: string;
  content: string;
  highlights?: string[];
  actionItems?: string[];
}

const TYPE_CONFIG: Record<InsightType, {
  icon: string;
  color: string;
  darkColor: string;
  bgColor: string;
  darkBgColor: string;
  borderColor: string;
}> = {
  career: {
    icon: 'ğŸ’¼',
    color: 'text-blue-600',
    darkColor: 'dark:text-blue-400',
    bgColor: 'bg-gradient-to-br from-blue-50 to-cyan-50',
    darkBgColor: 'dark:from-blue-950/30 dark:to-cyan-950/30',
    borderColor: 'border-blue-200 dark:border-blue-800',
  },
  relationship: {
    icon: 'ğŸ’•',
    color: 'text-pink-600',
    darkColor: 'dark:text-pink-400',
    bgColor: 'bg-gradient-to-br from-pink-50 to-purple-50',
    darkBgColor: 'dark:from-pink-950/30 dark:to-purple-950/30',
    borderColor: 'border-pink-200 dark:border-pink-800',
  },
  fortune: {
    icon: 'ğŸŒŸ',
    color: 'text-amber-600',
    darkColor: 'dark:text-amber-400',
    bgColor: 'bg-gradient-to-br from-amber-50 to-orange-50',
    darkBgColor: 'dark:from-amber-950/30 dark:to-orange-950/30',
    borderColor: 'border-amber-200 dark:border-amber-800',
  },
  health: {
    icon: 'ğŸŒ¿',
    color: 'text-green-600',
    darkColor: 'dark:text-green-400',
    bgColor: 'bg-gradient-to-br from-green-50 to-emerald-50',
    darkBgColor: 'dark:from-green-950/30 dark:to-emerald-950/30',
    borderColor: 'border-green-200 dark:border-green-800',
  },
  general: {
    icon: 'âœ¨',
    color: 'text-purple-600',
    darkColor: 'dark:text-purple-400',
    bgColor: 'bg-gradient-to-br from-purple-50 to-indigo-50',
    darkBgColor: 'dark:from-purple-950/30 dark:to-indigo-950/30',
    borderColor: 'border-purple-200 dark:border-purple-800',
  },
};

const InsightCard: React.FC<InsightCardProps> = ({
  insightType,
  title,
  content,
  highlights,
  actionItems,
}) => {
  const config = TYPE_CONFIG[insightType] || TYPE_CONFIG.general;

  return (
    <div className={`rounded-2xl overflow-hidden shadow-[var(--shadow-card)] scale-in border ${config.bgColor} ${config.darkBgColor} ${config.borderColor}`}>
      {/* Header */}
      <div className="px-6 py-4 border-b border-white/50 dark:border-white/10">
        <div className="flex items-center gap-3">
          <span className="text-2xl">{config.icon}</span>
          <h3 className={`text-lg font-semibold ${config.color} ${config.darkColor}`}>{title}</h3>
        </div>
      </div>

      {/* Content */}
      <div className="px-6 py-4 bg-white/50 dark:bg-black/20 fade-in-up">
        <p className="text-[var(--text-primary)] leading-relaxed">{content}</p>

        {/* Highlights */}
        {highlights && highlights.length > 0 && (
          <div className="mt-4">
            <h4 className="text-sm font-medium text-[var(--text-tertiary)] mb-2">å…³é”®ç‚¹</h4>
            <ul className="space-y-1">
              {highlights.map((item, index) => (
                <li key={index} className="flex items-start gap-2 text-sm text-[var(--text-secondary)]">
                  <span className={`${config.color} ${config.darkColor}`}>â€¢</span>
                  {item}
                </li>
              ))}
            </ul>
          </div>
        )}

        {/* Action Items */}
        {actionItems && actionItems.length > 0 && (
          <div className="mt-4 pt-4 border-t border-[var(--border-default)]">
            <h4 className="text-sm font-medium text-[var(--text-tertiary)] mb-2">å»ºè®®è¡ŒåŠ¨</h4>
            <ul className="space-y-1">
              {actionItems.map((item, index) => (
                <li key={index} className="flex items-start gap-2 text-sm text-[var(--text-secondary)]">
                  <span className="text-green-500 dark:text-green-400">âœ“</span>
                  {item}
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
    </div>
  );
};

export default InsightCard;
