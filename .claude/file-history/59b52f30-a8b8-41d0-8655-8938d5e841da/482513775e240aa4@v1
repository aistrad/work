  //     'date-fns',
  //     'echarts',
  //     'zod',
  //     'react-hook-form',
  //   ],
  // },
  compiler: {
    removeConsole: process.env.NODE_ENV === 'production',
  },
  async rewrites() {
    // 服务端代理：/api/v1/* -> 后端 API
    // 使用 VIBELIFE_API_INTERNAL 作为服务端后端地址
    const apiInternal = process.env.VIBELIFE_API_INTERNAL || "http://127.0.0.1:8000";
    return [
      {
        source: "/api/v1/:path*",
        destination: `${apiInternal}/api/v1/:path*`,
      },
      {
        source: "/health",
        destination: `${apiInternal}/health`,
      },
    ];
  },
};

