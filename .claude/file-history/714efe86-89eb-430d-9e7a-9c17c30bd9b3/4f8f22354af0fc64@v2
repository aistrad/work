"use client"

import { useState, useCallback } from "react"
import { motion } from "framer-motion"
import { Chrome, Apple, Mail, ArrowRight, Check } from "lucide-react"
import { cn } from "@/lib/utils"

interface GatewaySectionProps {
  onRegister: (method: "google" | "apple" | "email", email?: string) => void
  isLoading?: boolean
  className?: string
}

export function GatewaySection({
  onRegister,
  isLoading = false,
  className,
}: GatewaySectionProps) {
  const [showEmailForm, setShowEmailForm] = useState(false)
  const [email, setEmail] = useState("")
  const [emailFocused, setEmailFocused] = useState(false)

  const handleEmailSubmit = useCallback(
    (e: React.FormEvent) => {
      e.preventDefault()
      if (email.trim()) {
        onRegister("email", email.trim())
      }
    },
    [email, onRegister]
  )

  return (
    <section
      className={cn(
        "relative min-h-screen w-full",
        "flex items-center justify-center",
        "px-4 sm:px-6 lg:px-8 py-16",
        "bg-landing-bg",
        className
      )}
    >
      {/* Background pattern */}
      <div className="absolute inset-0 noise-overlay" />

      {/* Content */}
      <div className="relative z-10 w-full max-w-lg mx-auto">
        <motion.div
          className={cn(
            "p-8 sm:p-10",
            "rounded-3xl",
            "bg-card",
            "shadow-floating",
            "border border-border"
          )}
          initial={{ opacity: 0, y: 40 }}
          whileInView={{ opacity: 1, y: 0 }}
          viewport={{ once: true, margin: "-100px" }}
          transition={{ duration: 0.6, ease: [0.16, 1, 0.3, 1] }}
        >
          {/* Header */}
          <div className="text-center mb-8">
            <motion.div
              className="inline-flex items-center justify-center w-14 h-14 rounded-full bg-accent/10 mb-4"
              initial={{ scale: 0 }}
              whileInView={{ scale: 1 }}
              viewport={{ once: true }}
              transition={{ delay: 0.2, type: "spring", stiffness: 200 }}
            >
              <span className="text-2xl">ðŸ”®</span>
            </motion.div>
            <h2 className="serif-heading text-2xl sm:text-3xl text-foreground mb-2">
              Begin Your Journey
            </h2>
            <p className="text-foreground-muted text-sm sm:text-base">
              Claim your digital mirror and unlock deeper insights
            </p>
          </div>

          {/* Benefits */}
          <div className="space-y-3 mb-8">
            {[
              "Complete BaZi destiny analysis",
              "Personalized growth coaching",
              "Daily mindfulness check-ins",
            ].map((benefit, i) => (
              <motion.div
                key={benefit}
                className="flex items-center gap-3 text-sm text-foreground-muted"
                initial={{ opacity: 0, x: -20 }}
                whileInView={{ opacity: 1, x: 0 }}
                viewport={{ once: true }}
                transition={{ delay: 0.3 + i * 0.1 }}
              >
                <div className="flex-shrink-0 w-5 h-5 rounded-full bg-success/10 flex items-center justify-center">
                  <Check className="w-3 h-3 text-success" />
                </div>
                <span>{benefit}</span>
              </motion.div>
            ))}
          </div>

          {/* OAuth buttons */}
          <div className="space-y-3 mb-6">
            <motion.button
              onClick={() => onRegister("google")}
              disabled={isLoading}
              className={cn(
                "w-full flex items-center justify-center gap-3",
                "h-12 px-4 rounded-xl",
                "bg-background-subtle hover:bg-background-muted",
                "border border-border hover:border-border-hover",
                "text-foreground text-sm font-medium",
                "transition-all duration-200",
                "disabled:opacity-50 disabled:cursor-not-allowed"
              )}
              whileHover={{ scale: 1.01 }}
              whileTap={{ scale: 0.99 }}
            >
              <svg className="w-5 h-5" viewBox="0 0 24 24">
                <path
                  fill="currentColor"
                  d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                />
                <path
                  fill="currentColor"
                  d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                />
                <path
                  fill="currentColor"
                  d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                />
                <path
                  fill="currentColor"
                  d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                />
              </svg>
              Continue with Google
            </motion.button>

            <motion.button
              onClick={() => onRegister("apple")}
              disabled={isLoading}
              className={cn(
                "w-full flex items-center justify-center gap-3",
                "h-12 px-4 rounded-xl",
                "bg-foreground text-primary-foreground",
                "text-sm font-medium",
                "transition-all duration-200",
                "disabled:opacity-50 disabled:cursor-not-allowed"
              )}
              whileHover={{ scale: 1.01 }}
              whileTap={{ scale: 0.99 }}
            >
              <Apple className="w-5 h-5" />
              Continue with Apple
            </motion.button>
          </div>

          {/* Divider */}
          <div className="relative my-6">
            <div className="absolute inset-0 flex items-center">
              <div className="w-full border-t border-border" />
            </div>
            <div className="relative flex justify-center text-xs uppercase">
              <span className="px-3 bg-card text-foreground-subtle">or</span>
            </div>
          </div>

          {/* Email form */}
          {!showEmailForm ? (
            <motion.button
              onClick={() => setShowEmailForm(true)}
              className={cn(
                "w-full flex items-center justify-center gap-2",
                "h-12 px-4 rounded-xl",
                "border border-border hover:border-border-hover",
                "text-foreground-muted hover:text-foreground",
                "text-sm",
                "transition-all duration-200"
              )}
              whileHover={{ scale: 1.01 }}
              whileTap={{ scale: 0.99 }}
            >
              <Mail className="w-4 h-4" />
              Continue with Email
            </motion.button>
          ) : (
            <motion.form
              onSubmit={handleEmailSubmit}
              initial={{ opacity: 0, height: 0 }}
              animate={{ opacity: 1, height: "auto" }}
              className="space-y-3"
            >
              <div className="relative">
                <input
                  type="email"
                  value={email}
                  onChange={(e) => setEmail(e.target.value)}
                  onFocus={() => setEmailFocused(true)}
                  onBlur={() => setEmailFocused(false)}
                  placeholder="Enter your email"
                  disabled={isLoading}
                  className={cn(
                    "w-full h-12 px-4 rounded-xl",
                    "bg-background-subtle",
                    "border border-border",
                    "text-foreground text-sm",
                    "placeholder:text-foreground-subtle",
                    "transition-all duration-200",
                    "focus:outline-none focus:border-border-hover focus:ring-2 focus:ring-accent/10",
                    "disabled:opacity-50"
                  )}
                />
              </div>
              <motion.button
                type="submit"
                disabled={!email.trim() || isLoading}
                className={cn(
                  "w-full flex items-center justify-center gap-2",
                  "h-12 px-4 rounded-xl",
                  "bg-primary text-primary-foreground",
                  "text-sm font-medium",
                  "transition-all duration-200",
                  "disabled:opacity-50 disabled:cursor-not-allowed"
                )}
                whileHover={{ scale: email.trim() ? 1.01 : 1 }}
                whileTap={{ scale: email.trim() ? 0.99 : 1 }}
              >
                {isLoading ? (
                  <motion.div
                    className="w-5 h-5 border-2 border-primary-foreground/30 border-t-primary-foreground rounded-full"
                    animate={{ rotate: 360 }}
                    transition={{ duration: 1, repeat: Infinity, ease: "linear" }}
                  />
                ) : (
                  <>
                    Create Account
                    <ArrowRight className="w-4 h-4" />
                  </>
                )}
              </motion.button>
            </motion.form>
          )}

          {/* Terms */}
          <p className="text-center text-xs text-foreground-subtle mt-6">
            By continuing, you agree to our{" "}
            <a href="/terms" className="underline hover:text-foreground">
              Terms of Service
            </a>{" "}
            and{" "}
            <a href="/privacy" className="underline hover:text-foreground">
              Privacy Policy
            </a>
          </p>
        </motion.div>
      </div>
    </section>
  )
}
