"use client"

import { useState, useRef, useCallback, useEffect, KeyboardEvent } from "react"
import { motion, AnimatePresence } from "framer-motion"
import { Plus, Send, Mic, Image as ImageIcon, FileText, X } from "lucide-react"
import { cn } from "@/lib/utils"
import { CommandPalette, COMMANDS, type CommandOption } from "./command-palette"

interface OmnibarProps {
  onSend: (message: string) => void
  onCommand?: (command: string) => void
  isStreaming?: boolean
  className?: string
}

export function Omnibar({ onSend, onCommand, isStreaming, className }: OmnibarProps) {
  const [value, setValue] = useState("")
  const [activeCommand, setActiveCommand] = useState<string | null>(null)
  const [showPalette, setShowPalette] = useState(false)
  const [paletteFilter, setPaletteFilter] = useState("")
  const [selectedIndex, setSelectedIndex] = useState(0)
  const [showAttachMenu, setShowAttachMenu] = useState(false)
  const textareaRef = useRef<HTMLTextAreaElement>(null)
  const containerRef = useRef<HTMLDivElement>(null)

  // Auto-resize textarea
  const adjustHeight = useCallback(() => {
    const textarea = textareaRef.current
    if (!textarea) return

    const maxHeight = 160
    textarea.style.height = "auto"
    const newHeight = Math.min(textarea.scrollHeight, maxHeight)
    textarea.style.height = `${Math.max(40, newHeight)}px`
    textarea.style.overflowY = textarea.scrollHeight > maxHeight ? "auto" : "hidden"
  }, [])

  useEffect(() => {
    adjustHeight()
  }, [value, adjustHeight])

  // Handle input change
  const handleChange = useCallback((e: React.ChangeEvent<HTMLTextAreaElement>) => {
    const newValue = e.target.value

    // Detect "/" trigger at start
    if (newValue === "/" || (newValue.startsWith("/") && !newValue.includes(" "))) {
      setShowPalette(true)
      setPaletteFilter(newValue.slice(1))
      setSelectedIndex(0)
    } else if (newValue.startsWith("/") && newValue.includes(" ")) {
      // Command with arguments
      const parts = newValue.split(" ")
      const cmd = parts[0].slice(1)
      const matchedCmd = COMMANDS.find((c) => c.command === cmd)
      if (matchedCmd) {
        setActiveCommand(cmd)
        setValue(parts.slice(1).join(" "))
        setShowPalette(false)
        return
      }
    } else {
      setShowPalette(false)
    }

    setValue(newValue)
  }, [])

  // Handle command selection from palette
  const handleCommandSelect = useCallback((cmd: CommandOption) => {
    setActiveCommand(cmd.command)
    setValue("")
    setShowPalette(false)
    setPaletteFilter("")
    textareaRef.current?.focus()
  }, [])

  // Clear active command
  const clearCommand = useCallback(() => {
    setActiveCommand(null)
    setValue("")
    textareaRef.current?.focus()
  }, [])

  // Handle send
  const handleSend = useCallback(() => {
    if (isStreaming) return

    const trimmedValue = value.trim()
    if (!trimmedValue && !activeCommand) return

    if (activeCommand) {
      // Send as command
      const fullCommand = `/${activeCommand} ${trimmedValue}`.trim()
      if (onCommand) {
        onCommand(fullCommand)
      } else {
        onSend(fullCommand)
      }
      setActiveCommand(null)
    } else if (trimmedValue.startsWith("/")) {
      // Direct command without palette selection
      if (onCommand) {
        onCommand(trimmedValue)
      } else {
        onSend(trimmedValue)
      }
    } else {
      onSend(trimmedValue)
    }

    setValue("")
    setShowPalette(false)
  }, [value, activeCommand, isStreaming, onSend, onCommand])

  // Get filtered commands for navigation
  const getFilteredCommands = useCallback(() => {
    if (!paletteFilter) return COMMANDS
    const lowerFilter = paletteFilter.toLowerCase()
    return COMMANDS.filter(
      (cmd) =>
        cmd.command.toLowerCase().includes(lowerFilter) ||
        cmd.labelCn.includes(paletteFilter)
    )
  }, [paletteFilter])

  // Handle keyboard navigation
  const handleKeyDown = useCallback((e: KeyboardEvent<HTMLTextAreaElement>) => {
    if (showPalette) {
      const filteredCommands = getFilteredCommands()

      switch (e.key) {
        case "ArrowDown":
          e.preventDefault()
          setSelectedIndex((prev) =>
            prev < filteredCommands.length - 1 ? prev + 1 : 0
          )
          break
        case "ArrowUp":
          e.preventDefault()
          setSelectedIndex((prev) =>
            prev > 0 ? prev - 1 : filteredCommands.length - 1
          )
          break
        case "Enter":
          e.preventDefault()
          if (filteredCommands[selectedIndex]) {
            handleCommandSelect(filteredCommands[selectedIndex])
          }
          break
        case "Escape":
          e.preventDefault()
          setShowPalette(false)
          setValue("")
          break
        case "Tab":
          e.preventDefault()
          if (filteredCommands[selectedIndex]) {
            handleCommandSelect(filteredCommands[selectedIndex])
          }
          break
      }
    } else {
      if (e.key === "Enter" && !e.shiftKey) {
        e.preventDefault()
        handleSend()
      }
      if (e.key === "Escape" && activeCommand) {
        e.preventDefault()
        clearCommand()
      }
    }
  }, [showPalette, getFilteredCommands, selectedIndex, handleCommandSelect, handleSend, activeCommand, clearCommand])

  // Close menus on click outside
  useEffect(() => {
    const handleClickOutside = (e: MouseEvent) => {
      if (containerRef.current && !containerRef.current.contains(e.target as Node)) {
        setShowPalette(false)
        setShowAttachMenu(false)
      }
    }

    document.addEventListener("mousedown", handleClickOutside)
    return () => document.removeEventListener("mousedown", handleClickOutside)
  }, [])

  const placeholder = activeCommand
    ? `输入 ${activeCommand} 参数...`
    : "输入消息，或输入 / 使用命令..."

  return (
    <div ref={containerRef} className={cn("relative px-4 pb-4", className)}>
      {/* Command Palette */}
      <AnimatePresence>
        {showPalette && (
          <motion.div
            className="absolute bottom-full left-4 right-4 mb-2 z-10"
            initial={{ opacity: 0, y: 8 }}
            animate={{ opacity: 1, y: 0 }}
            exit={{ opacity: 0, y: 8 }}
            transition={{ duration: 0.15, ease: [0.16, 1, 0.3, 1] }}
          >
            <CommandPalette
              filter={paletteFilter}
              selectedIndex={selectedIndex}
              onSelect={handleCommandSelect}
              onClose={() => setShowPalette(false)}
            />
          </motion.div>
        )}
      </AnimatePresence>

      {/* Attachment Menu */}
      <AnimatePresence>
        {showAttachMenu && (
          <motion.div
            className="absolute bottom-full left-4 mb-2 z-10"
            initial={{ opacity: 0, y: 8, scale: 0.95 }}
            animate={{ opacity: 1, y: 0, scale: 1 }}
            exit={{ opacity: 0, y: 8, scale: 0.95 }}
            transition={{ duration: 0.15, ease: [0.16, 1, 0.3, 1] }}
          >
            <div className="py-1 rounded-xl bg-card border border-border shadow-floating">
              <button className="w-full flex items-center gap-3 px-4 py-2.5 hover:bg-background-subtle transition-colors">
                <ImageIcon className="w-4 h-4 text-foreground-muted" />
                <span className="text-sm">上传图片</span>
              </button>
              <button className="w-full flex items-center gap-3 px-4 py-2.5 hover:bg-background-subtle transition-colors">
                <Mic className="w-4 h-4 text-foreground-muted" />
                <span className="text-sm">语音输入</span>
              </button>
              <button className="w-full flex items-center gap-3 px-4 py-2.5 hover:bg-background-subtle transition-colors">
                <FileText className="w-4 h-4 text-foreground-muted" />
                <span className="text-sm">文件分析</span>
              </button>
            </div>
          </motion.div>
        )}
      </AnimatePresence>

      {/* Main Omnibar - Floating Capsule Style */}
      <div className="input-capsule">
        <div className="flex items-end gap-2 p-2">
          {/* Attachment button */}
          <button
            type="button"
            onClick={() => {
              setShowAttachMenu(!showAttachMenu)
              setShowPalette(false)
            }}
            className={cn(
              "flex-shrink-0 w-10 h-10 rounded-full",
              "flex items-center justify-center",
              "text-foreground-muted hover:text-foreground",
              "hover:bg-background-subtle",
              "transition-colors duration-150",
              "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/50"
            )}
            aria-label="附件"
          >
            <Plus className="w-5 h-5" />
          </button>

          {/* Active command badge */}
          <AnimatePresence>
            {activeCommand && (
              <motion.div
                initial={{ opacity: 0, scale: 0.8, width: 0 }}
                animate={{ opacity: 1, scale: 1, width: "auto" }}
                exit={{ opacity: 0, scale: 0.8, width: 0 }}
                className="flex-shrink-0 flex items-center gap-1.5 px-2.5 py-1.5 rounded-lg bg-accent/10 overflow-hidden"
              >
                <span className="text-sm font-medium text-accent whitespace-nowrap">
                  /{activeCommand}
                </span>
                <button
                  onClick={clearCommand}
                  className="p-0.5 rounded hover:bg-accent/10 text-accent/70 hover:text-accent"
                >
                  <X className="w-3.5 h-3.5" />
                </button>
              </motion.div>
            )}
          </AnimatePresence>

          {/* Input area */}
          <div className="flex-1 min-w-0">
            <textarea
              ref={textareaRef}
              value={value}
              onChange={handleChange}
              onKeyDown={handleKeyDown}
              onFocus={() => setShowAttachMenu(false)}
              placeholder={placeholder}
              rows={1}
              disabled={isStreaming}
              className={cn(
                "w-full resize-none bg-transparent",
                "text-foreground placeholder:text-foreground-subtle",
                "focus:outline-none",
                "py-2 px-1",
                "text-base leading-6",
                "min-h-[40px] max-h-[160px]",
                "scrollbar-thin",
                "disabled:opacity-60"
              )}
            />
          </div>

          {/* Send button */}
          <motion.button
            type="button"
            onClick={handleSend}
            disabled={(!value.trim() && !activeCommand) || isStreaming}
            className={cn(
              "flex-shrink-0 w-10 h-10 rounded-full",
              "flex items-center justify-center",
              "transition-all duration-150",
              "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/50",
              (value.trim() || activeCommand) && !isStreaming
                ? "bg-primary text-primary-foreground hover:opacity-90"
                : "bg-background-subtle text-foreground-subtle cursor-not-allowed"
            )}
            whileHover={(value.trim() || activeCommand) && !isStreaming ? { scale: 1.05 } : {}}
            whileTap={(value.trim() || activeCommand) && !isStreaming ? { scale: 0.95 } : {}}
            aria-label="发送"
          >
            {isStreaming ? (
              <motion.div
                className="w-5 h-5 border-2 border-current/30 border-t-current rounded-full"
                animate={{ rotate: 360 }}
                transition={{ duration: 1, repeat: Infinity, ease: "linear" }}
              />
            ) : (
              <Send className="w-5 h-5" />
            )}
          </motion.button>
        </div>
      </div>
    </div>
  )
}
