import { NextRequest, NextResponse } from 'next/server'

interface InsightRequest {
  value: string
  type: 'bazi' | 'emotion'
}

interface InsightResponse {
  type: 'bazi' | 'emotion'
  insight: string
  insight_cn?: string
  element?: 'wood' | 'fire' | 'earth' | 'metal' | 'water'
}

// Simple element detection based on birth year
function detectElement(birthdate: string): 'wood' | 'fire' | 'earth' | 'metal' | 'water' {
  const year = parseInt(birthdate.slice(0, 4))
  const elements = ['wood', 'fire', 'earth', 'metal', 'water'] as const
  return elements[year % 5]
}

const ELEMENT_INSIGHTS: Record<string, { en: string; cn: string }> = {
  wood: {
    en: "A strong Wood energy detected. You seek growth and expansion, but may feel restricted. Your nature is creative and pioneering.",
    cn: "检测到强木能量。你渴望生长与扩展，但可能感到受限。你的本性具有创造力和开拓精神。",
  },
  fire: {
    en: "Fire energy radiates from your chart. You are passionate and charismatic, with a natural ability to inspire others.",
    cn: "火能量从你的命盘中散发。你充满热情和魅力，天生具有激励他人的能力。",
  },
  earth: {
    en: "Earth energy grounds your essence. You are stable and nurturing, providing support and structure to those around you.",
    cn: "土能量稳固你的本质。你稳定而富有滋养性，为周围的人提供支持和结构。",
  },
  metal: {
    en: "Metal energy sharpens your spirit. You possess clarity and precision, with a strong sense of justice and refinement.",
    cn: "金能量锐化你的精神。你具有清晰和精准，有强烈的正义感和优雅。",
  },
  water: {
    en: "Water energy flows through your being. You are intuitive and adaptable, with deep wisdom and emotional intelligence.",
    cn: "水能量流淌于你的存在。你直觉敏锐且适应力强，拥有深邃的智慧和情商。",
  },
}

export async function POST(request: NextRequest) {
  try {
    const body: InsightRequest = await request.json()
    const { value, type } = body

    if (!value || !type) {
      return NextResponse.json(
        { error: 'Missing required fields: value and type' },
        { status: 400 }
      )
    }

    let response: InsightResponse

    if (type === 'bazi') {
      // Validate date format (simple check)
      if (!/^\d{4}-\d{2}-\d{2}/.test(value)) {
        return NextResponse.json(
          { error: 'Invalid date format. Expected YYYY-MM-DD' },
          { status: 400 }
        )
      }

      const element = detectElement(value)
      const insights = ELEMENT_INSIGHTS[element]

      response = {
        type: 'bazi',
        insight: insights.en,
        insight_cn: insights.cn,
        element,
      }
    } else {
      // Emotion type
      response = {
        type: 'emotion',
        insight:
          "Your energy suggests a state of reflection and transition. This is a moment for introspection and gentle self-compassion.",
        insight_cn:
          "你的能量暗示着一种反思和过渡的状态。这是一个内省和温柔自我关怀的时刻。",
      }
    }

    return NextResponse.json(response, { status: 200 })
  } catch (error) {
    console.error('[API] /api/landing/insight error:', error)
    return NextResponse.json(
      { error: 'Internal server error' },
      { status: 500 }
    )
  }
}
