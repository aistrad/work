"use client"

import { useState, useCallback } from "react"
import { motion, AnimatePresence } from "framer-motion"
import { SoulOrb } from "./soul-orb"
import { InputCapsule } from "./input-capsule"
import { InstantInsightCard } from "./instant-insight-card"
import { cn } from "@/lib/utils"

interface InsightData {
  type: "bazi" | "emotion"
  insight: string
  insight_cn?: string
  element?: "wood" | "fire" | "earth" | "metal" | "water"
}

interface HeroSectionProps {
  onScrollToGateway: () => void
  className?: string
}

// Mock insight generator (in production, this would call the API)
const generateMockInsight = (
  value: string,
  type: "bazi" | "emotion"
): InsightData => {
  if (type === "bazi") {
    // Simple element detection based on year
    const year = parseInt(value.slice(0, 4))
    const elements = ["wood", "fire", "earth", "metal", "water"] as const
    const element = elements[year % 5]

    const insights: Record<string, { en: string; cn: string }> = {
      wood: {
        en: "A strong Wood energy detected. You seek growth and expansion, but may feel restricted. Your nature is creative and pioneering.",
        cn: "检测到强木能量。你渴望生长与扩展，但可能感到受限。你的本性具有创造力和开拓精神。",
      },
      fire: {
        en: "Fire energy radiates from your chart. You are passionate and charismatic, with a natural ability to inspire others.",
        cn: "火能量从你的命盘中散发。你充满热情和魅力，天生具有激励他人的能力。",
      },
      earth: {
        en: "Earth energy grounds your essence. You are stable and nurturing, providing support and structure to those around you.",
        cn: "土能量稳固你的本质。你稳定而富有滋养性，为周围的人提供支持和结构。",
      },
      metal: {
        en: "Metal energy sharpens your spirit. You possess clarity and precision, with a strong sense of justice and refinement.",
        cn: "金能量锐化你的精神。你具有清晰和精准，有强烈的正义感和优雅。",
      },
      water: {
        en: "Water energy flows through your being. You are intuitive and adaptable, with deep wisdom and emotional intelligence.",
        cn: "水能量流淌于你的存在。你直觉敏锐且适应力强，拥有深邃的智慧和情商。",
      },
    }

    return {
      type: "bazi",
      insight: insights[element].en,
      insight_cn: insights[element].cn,
      element,
    }
  }

  // Emotion type
  return {
    type: "emotion",
    insight:
      "Your energy suggests a state of reflection and transition. This is a moment for introspection and gentle self-compassion.",
    insight_cn:
      "你的能量暗示着一种反思和过渡的状态。这是一个内省和温柔自我关怀的时刻。",
  }
}

export function HeroSection({ onScrollToGateway, className }: HeroSectionProps) {
  const [insightData, setInsightData] = useState<InsightData | null>(null)
  const [isLoading, setIsLoading] = useState(false)
  const [hasInteracted, setHasInteracted] = useState(false)
  const [birthdate, setBirthdate] = useState<string>("")

  const handleSubmit = useCallback(
    async (value: string, type: "bazi" | "emotion") => {
      setIsLoading(true)
      setHasInteracted(true)

      // Save birthdate if type is bazi
      if (type === "bazi") {
        setBirthdate(value)
      }

      try {
        // Call real API (use relative path to respect basePath)
        const response = await fetch('/new/api/landing/insight', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ value, type }),
        })

        if (!response.ok) {
          throw new Error(`API error: ${response.status}`)
        }

        const insight = await response.json()
        setInsightData(insight)
      } catch (error) {
        console.error('Failed to fetch insight:', error)
        // Fallback to mock data
        const insight = generateMockInsight(value, type)
        setInsightData(insight)
      } finally {
        setIsLoading(false)
      }
    },
    []
  )

  return (
    <section
      className={cn(
        "relative min-h-screen w-full",
        "flex flex-col items-center justify-center",
        "px-4 sm:px-6 lg:px-8 py-16",
        "bg-landing-bg",
        "overflow-hidden",
        className
      )}
    >
      {/* Background noise texture */}
      <div className="absolute inset-0 noise-overlay" />

      {/* Ambient gradient */}
      <div
        className="absolute inset-0 opacity-30"
        style={{
          background:
            "radial-gradient(ellipse at 50% 0%, hsl(var(--orb-from) / 0.3) 0%, transparent 60%)",
        }}
      />

      {/* Content container */}
      <div className="relative z-10 w-full max-w-3xl mx-auto flex flex-col items-center">
        {/* Soul Orb */}
        <motion.div
          className="mb-8 sm:mb-12"
          initial={{ opacity: 0, scale: 0.8 }}
          animate={{ opacity: 1, scale: 1 }}
          transition={{ duration: 0.8, ease: [0.16, 1, 0.3, 1] }}
        >
          <SoulOrb
            element={insightData?.element}
            isInsightMode={!!insightData}
            size={insightData ? "md" : "lg"}
          />
        </motion.div>

        {/* Hero text */}
        <AnimatePresence mode="wait">
          {!insightData && (
            <motion.div
              key="hero-text"
              className="text-center mb-8 sm:mb-12"
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              exit={{ opacity: 0, y: -20 }}
              transition={{ duration: 0.5, ease: [0.16, 1, 0.3, 1] }}
            >
              <h1 className="hero-title text-foreground mb-4">
                Decode Your Destiny.
                <br />
                <span className="text-foreground-muted">Architect Your Soul.</span>
              </h1>
              <p className="hero-subtitle max-w-md mx-auto">
                An AI companion powered by Metaphysics & Psychology
              </p>
            </motion.div>
          )}
        </AnimatePresence>

        {/* Input or Insight */}
        <AnimatePresence mode="wait">
          {!insightData ? (
            <motion.div
              key="input"
              className="w-full"
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              exit={{ opacity: 0, y: -20 }}
              transition={{ duration: 0.4 }}
            >
              <InputCapsule onSubmit={handleSubmit} isLoading={isLoading} />
            </motion.div>
          ) : (
            <motion.div
              key="insight"
              className="w-full"
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              exit={{ opacity: 0, y: -20 }}
              transition={{ duration: 0.4 }}
            >
              <InstantInsightCard
                data={insightData}
                birthdate={birthdate}
                onUnlock={onScrollToGateway}
              />
            </motion.div>
          )}
        </AnimatePresence>

        {/* Scroll indicator - hidden after user interaction */}
        {!hasInteracted && (
          <motion.div
            className="absolute bottom-8 left-1/2 -translate-x-1/2 pointer-events-auto"
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            transition={{ delay: 1.5 }}
          >
            <motion.div
              className="flex flex-col items-center gap-2 text-foreground-subtle cursor-pointer"
              onClick={onScrollToGateway}
              whileHover={{ scale: 1.05 }}
            >
              <span className="text-xs uppercase tracking-wider">Explore</span>
              <motion.div
                animate={{ y: [0, 6, 0] }}
                transition={{ duration: 1.5, repeat: Infinity, ease: "easeInOut" }}
              >
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 20 20"
                  fill="none"
                  className="text-foreground-subtle"
                >
                  <path
                    d="M10 4V16M10 16L4 10M10 16L16 10"
                    stroke="currentColor"
                    strokeWidth="1.5"
                    strokeLinecap="round"
                    strokeLinejoin="round"
                  />
                </svg>
              </motion.div>
            </motion.div>
          </motion.div>
        )}
      </div>
    </section>
  )
}
