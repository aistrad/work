```tsx
// components/landing/architecture-section.tsx
'use client';

import { useRef } from 'react';
import { motion, useScroll, useTransform } from 'framer-motion';
import { cn } from '@/lib/utils';

const LAYERS = [
  {
    id: 'l0',
    title: 'Layer 0 Â· Firmware',
    description: 'Ancient Wisdom grounded in data.',
    visual: 'â˜¯ï¸',
    color: 'from-amber-200/20 to-orange-200/20',
  },
  {
    id: 'l1',
    title: 'Layer 1 Â· Schema',
    description: 'Psychological frameworks to measure happiness.',
    visual: 'ğŸ“Š',
    color: 'from-blue-200/20 to-cyan-200/20',
  },
  {
    id: 'l2',
    title: 'Layer 2 Â· Agents',
    description: 'Expert agents guiding your every step.',
    visual: 'âœ¨',
    color: 'from-purple-200/20 to-pink-200/20',
  },
  {
    id: 'l3',
    title: 'Layer 3 Â· Synthesis',
    description: 'A voice that truly understands you.',
    visual: 'ğŸ’¬',
    color: 'from-green-200/20 to-emerald-200/20',
  },
];

export function ArchitectureSection() {
  const containerRef = useRef<HTMLDivElement>(null);
  const { scrollYProgress } = useScroll({
    target: containerRef,
    offset: ['start end', 'end start'],
  });

  return (
    <section
      ref={containerRef}
      className="relative py-32 bg-[#F9F9F7]"
    >
      <div className="max-w-4xl mx-auto px-6">
        {/* Section Header */}
        <motion.div
          className="text-center mb-20"
          initial={{ opacity: 0, y: 20 }}
          whileInView={{ opacity: 1, y: 0 }}
          viewport={{ once: true }}
        >
          <h2 className="font-serif text-4xl md:text-5xl text-foreground mb-4">
            The Architecture of Self
          </h2>
          <p className="text-foreground-muted text-lg">
            Four layers working in harmony to decode your destiny.
          </p>
        </motion.div>

        {/* Layer Cards */}
        <div className="space-y-8">
          {LAYERS.map((layer, index) => (
            <motion.div
              key={layer.id}
              initial={{ opacity: 0, x: index % 2 === 0 ? -40 : 40 }}
              whileInView={{ opacity: 1, x: 0 }}
              viewport={{ once: true, margin: '-100px' }}
              transition={{ duration: 0.6, delay: index * 0.1 }}
              className={cn(
                "relative p-8 rounded-3xl",
                "bg-gradient-to-br",
                layer.color,
                "border border-white/50",
                "backdrop-blur-sm"
              )}
            >
              <div className="flex items-start gap-6">
                <span className="text-5xl">{layer.visual}</span>
                <div>
                  <h3 className="font-serif text-2xl text-foreground mb-2">
                    {layer.title}
                  </h3>
                  <p className="text-foreground-muted text-lg">
                    {layer.description}
                  </p>
                </div>
              </div>
            </motion.div>
          ))}
        </div>
      </div>
    </section>
  );
}
