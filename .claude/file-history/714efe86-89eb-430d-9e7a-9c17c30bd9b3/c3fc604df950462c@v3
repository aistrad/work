```tsx
// components/landing/gateway-section.tsx
'use client';

import { useState } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { cn } from '@/lib/utils';
import { InstantInsightCard } from './instant-insight-card';
import { BootingSequence } from './booting-sequence';

interface GatewaySectionProps {
  insight?: {
    type: 'bazi' | 'emotion';
    text: string;
  };
}

export function GatewaySection({ insight }: GatewaySectionProps) {
  const [isBooting, setIsBooting] = useState(false);
  const [email, setEmail] = useState('');

  const handleRegister = async () => {
    setIsBooting(true);
    // Simulate API call + boot sequence
    await new Promise((resolve) => setTimeout(resolve, 3000));
    // Redirect to app
    window.location.href = '/new';
  };

  return (
    <section className="relative min-h-screen py-20 bg-[#F9F9F7]">
      <AnimatePresence>
        {isBooting ? (
          <BootingSequence />
        ) : (
          <motion.div
            className="max-w-5xl mx-auto px-6"
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
          >
            {/* Section Header */}
            <div className="text-center mb-16">
              <h2 className="font-serif text-4xl md:text-5xl text-foreground mb-4">
                Claim Your Soul OS
              </h2>
              <p className="text-foreground-muted text-lg">
                Your personalized AI companion awaits.
              </p>
            </div>

            {/* Split Layout */}
            <div className="grid md:grid-cols-2 gap-12 items-center">
              {/* Left: Insight Recap */}
              <div className="flex justify-center">
                {insight ? (
                  <InstantInsightCard
                    type={insight.type}
                    insight={insight.text}
                    isVisible={true}
                  />
                ) : (
                  <div className={cn(
                    "p-8 rounded-2xl",
                    "bg-gradient-to-br from-purple-100/50 to-blue-100/50",
                    "border border-white/50"
                  )}>
                    <span className="text-6xl block mb-4">ğŸ”®</span>
                    <p className="font-serif text-xl text-foreground">
                      Your destiny insights<br />are waiting to be unlocked.
                    </p>
                  </div>
                )}
              </div>

              {/* Right: Registration Form */}
              <div className={cn(
                "p-8 rounded-2xl",
                "bg-white/60 backdrop-blur-xl",
                "border border-white/40",
                "shadow-lg"
              )}>
                <h3 className="font-serif text-2xl text-foreground mb-6">
                  Begin Your Journey
                </h3>

                {/* OAuth Buttons */}
                <div className="space-y-3 mb-6">
                  <button className={cn(
                    "w-full py-3 px-4 rounded-full",
                    "bg-white border border-border",
                    "flex items-center justify-center gap-3",
                    "hover:bg-background-subtle transition-colors"
                  )}>
                    <GoogleIcon />
                    <span>Continue with Google</span>
                  </button>
                  <button className={cn(
                    "w-full py-3 px-4 rounded-full",
                    "bg-black text-white",
                    "flex items-center justify-center gap-3",
                    "hover:opacity-90 transition-opacity"
                  )}>
                    <AppleIcon />
                    <span>Continue with Apple</span>
                  </button>
                </div>

                {/* Divider */}
                <div className="flex items-center gap-4 my-6">
                  <div className="flex-1 h-px bg-border" />
                  <span className="text-sm text-foreground-muted">or</span>
                  <div className="flex-1 h-px bg-border" />
                </div>

                {/* Email Form */}
                <div className="space-y-4">
                  <input
                    type="email"
                    value={email}
                    onChange={(e) => setEmail(e.target.value)}
                    placeholder="Enter your email"
                    className={cn(
                      "w-full py-3 px-4 rounded-full",
                      "bg-background border border-border",
                      "focus:border-foreground focus:outline-none",
                      "transition-colors"
                    )}
                  />
                  <button
                    onClick={handleRegister}
                    disabled={!email}
                    className={cn(
                      "w-full py-3 px-4 rounded-full",
                      "bg-foreground text-background",
                      "font-medium",
                      "disabled:opacity-40",
                      "hover:opacity-90 transition-opacity"
                    )}
                  >
                    Create Account
                  </button>
                </div>

                {/* Terms */}
                <p className="mt-4 text-xs text-foreground-muted text-center">
                  By continuing, you agree to our{' '}
                  <a href="#" className="underline">Terms</a> and{' '}
                  <a href="#" className="underline">Privacy Policy</a>.
                </p>
              </div>
            </div>
          </motion.div>
        )}
      </AnimatePresence>
    </section>
  );
}

