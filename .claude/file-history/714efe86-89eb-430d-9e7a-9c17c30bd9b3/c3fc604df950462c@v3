```tsx
// components/landing/instant-insight-card.tsx
'use client';

import { motion } from 'framer-motion';
import { cn } from '@/lib/utils';

interface InstantInsightCardProps {
  type: 'bazi' | 'emotion';
  insight: string;
  details?: string;
  isVisible: boolean;
}

export function InstantInsightCard({
  type,
  insight,
  details,
  isVisible,
}: InstantInsightCardProps) {
  if (!isVisible) return null;

  return (
    <motion.div
      initial={{ opacity: 0, y: 20, scale: 0.95 }}
      animate={{ opacity: 1, y: 0, scale: 1 }}
      exit={{ opacity: 0, y: 10, scale: 0.98 }}
      transition={{ duration: 0.5, ease: [0.16, 1, 0.3, 1] }}
      className={cn(
        "mt-6 p-6 max-w-md mx-auto rounded-2xl",
        "bg-white/60 backdrop-blur-xl",
        "border border-white/40",
        "shadow-[0_20px_60px_-15px_rgba(0,0,0,0.1)]",
        "shadow-[inset_0_0_0_1px_rgba(255,255,255,0.8)]"
      )}
    >
      {/* Insight Icon */}
      <div className="flex items-center gap-3 mb-4">
        <span className="text-2xl">
          {type === 'bazi' ? 'ğŸŒ¿' : 'ğŸ’š'}
        </span>
        <span className="text-sm text-foreground-muted uppercase tracking-wider">
          {type === 'bazi' ? 'Destiny Insight' : 'Emotional Insight'}
        </span>
      </div>

      {/* Main Insight */}
      <p className="font-serif text-xl text-foreground leading-relaxed">
        {insight}
      </p>

      {/* Details */}
      {details && (
        <p className="mt-3 text-sm text-foreground-muted">
          {details}
        </p>
      )}

      {/* CTA */}
      <motion.button
        className={cn(
          "mt-6 w-full py-3 px-6 rounded-full",
          "bg-foreground text-background",
          "font-medium text-sm",
          "hover:opacity-90 transition-opacity"
        )}
        whileHover={{ scale: 1.02 }}
        whileTap={{ scale: 0.98 }}
      >
        Unlock Full Analysis â†’
      </motion.button>
    </motion.div>
  );
}
```

