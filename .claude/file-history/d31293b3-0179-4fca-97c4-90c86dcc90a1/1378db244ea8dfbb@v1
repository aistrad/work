/**
 * FourDimensionView - 四维原型展示组件
 *
 * v7.0 新增: 展示 Core/Inner/Outer/Shadow 四个维度
 * 每个维度可展开查看 12 原型雷达图
 */

'use client'

import { useState } from 'react'
import { ChevronDown } from 'lucide-react'
import { cn } from '@/lib/utils'
import {
  type ArchetypeType,
  type ArchetypeScores,
  type DimensionId,
  ARCHETYPE_META,
  DIMENSION_META,
  getArchetypeColor,
} from '@/types/vibe-id'
import { DimensionRadar } from './DimensionRadar'

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

interface DimensionData {
  primary: ArchetypeType
  scores?: ArchetypeScores
  confidence?: string
}

interface FourDimensionViewProps {
  /** 四维数据 */
  dimensions: {
    core: DimensionData
    inner: DimensionData
    outer: DimensionData
    shadow: DimensionData
  }
  /** 阴影张力描述 */
  shadowTension?: string
  /** 初始展开的维度 */
  defaultExpanded?: DimensionId | null
  /** 是否允许展开 */
  expandable?: boolean
  /** 自定义类名 */
  className?: string
}

// ═══════════════════════════════════════════════════════════════════════════
// Helper Components
// ═══════════════════════════════════════════════════════════════════════════

function DimensionCard({
  dimensionId,
  data,
  isExpanded,
  onToggle,
  expandable,
  extra,
}: {
  dimensionId: DimensionId
  data: DimensionData
  isExpanded: boolean
  onToggle: () => void
  expandable: boolean
  extra?: React.ReactNode
}) {
  const dimMeta = DIMENSION_META[dimensionId]
  const archMeta = ARCHETYPE_META[data.primary]
  const color = getArchetypeColor(data.primary)

  const isShadow = dimensionId === 'shadow'

  return (
    <div
      className={cn(
        'rounded-2xl border overflow-hidden transition-all duration-300',
        isShadow
          ? 'bg-slate-50/50 dark:bg-slate-900/20 border-slate-200/50 dark:border-slate-700/30'
          : 'bg-white dark:bg-ink-900 border-vellum-200/50 dark:border-ink-700/30'
      )}
    >
      {/* Header */}
      <button
        onClick={onToggle}
        disabled={!expandable}
        className={cn(
          'w-full p-4 flex items-center gap-3 text-left transition-colors',
          expandable && 'hover:bg-vellum-50 dark:hover:bg-ink-800/50'
        )}
      >
        {/* Dimension Icon */}
        <div className="text-xl">{dimMeta.icon}</div>

        {/* Content */}
        <div className="flex-1 min-w-0">
          <div className="flex items-center gap-2">
            <span className="text-xs text-ink-500 font-medium">
              {dimMeta.label} / {dimMeta.nameEn}
            </span>
          </div>
          <div className="flex items-center gap-2 mt-1">
            <span className="text-lg">{archMeta.emoji}</span>
            <span className="text-base font-medium text-ink-800 dark:text-ink-200">
              {archMeta.name}
            </span>
            <span className="text-sm text-ink-500">
              {archMeta.nickname}
            </span>
          </div>
        </div>

        {/* Expand Arrow */}
        {expandable && data.scores && (
          <ChevronDown
            className={cn(
              'w-5 h-5 text-ink-400 transition-transform duration-200',
              isExpanded && 'rotate-180'
            )}
          />
        )}
      </button>

      {/* Extra Content (e.g., shadow tension) */}
      {extra && !isExpanded && (
        <div className="px-4 pb-3 -mt-1">
          {extra}
        </div>
      )}

      {/* Expanded Radar */}
      {isExpanded && data.scores && (
        <div className="px-4 pb-4 animate-fade-in">
          <div className="pt-2 border-t border-vellum-200/50 dark:border-ink-700/30">
            <DimensionRadar
              dimension={dimensionId}
              scores={data.scores}
              primaryArchetype={data.primary}
              size={220}
              showLabels
              showScores
              showTitle={false}
            />
          </div>

          {/* Extra Content inside expanded */}
          {extra && (
            <div className="mt-3 pt-3 border-t border-vellum-200/50 dark:border-ink-700/30">
              {extra}
            </div>
          )}
        </div>
      )}
    </div>
  )
}

// ═══════════════════════════════════════════════════════════════════════════
// Main Component
// ═══════════════════════════════════════════════════════════════════════════

export function FourDimensionView({
  dimensions,
  shadowTension,
  defaultExpanded = null,
  expandable = true,
  className,
}: FourDimensionViewProps) {
  const [expanded, setExpanded] = useState<DimensionId | null>(defaultExpanded)

  const handleToggle = (dimId: DimensionId) => {
    if (!expandable) return
    setExpanded((prev) => (prev === dimId ? null : dimId))
  }

  const dimensionOrder: DimensionId[] = ['core', 'inner', 'outer', 'shadow']

  return (
    <div className={cn('space-y-3', className)}>
      {dimensionOrder.map((dimId) => (
        <DimensionCard
          key={dimId}
          dimensionId={dimId}
          data={dimensions[dimId]}
          isExpanded={expanded === dimId}
          onToggle={() => handleToggle(dimId)}
          expandable={expandable && !!dimensions[dimId].scores}
          extra={
            dimId === 'shadow' && shadowTension ? (
              <div className="flex items-center gap-2 text-sm">
                <span className="text-orange-500">⚡</span>
                <span className="text-ink-500">核心张力：</span>
                <span className="text-ink-700 dark:text-ink-300 font-medium">
                  {shadowTension}
                </span>
              </div>
            ) : undefined
          }
        />
      ))}
    </div>
  )
}

// ═══════════════════════════════════════════════════════════════════════════
// Compact Variant (Grid Layout)
// ═══════════════════════════════════════════════════════════════════════════

interface FourDimensionCompactProps {
  dimensions: {
    core: DimensionData
    inner: DimensionData
    outer: DimensionData
    shadow: DimensionData
  }
  shadowTension?: string
  className?: string
}

export function FourDimensionCompact({
  dimensions,
  shadowTension,
  className,
}: FourDimensionCompactProps) {
  const dimensionOrder: DimensionId[] = ['core', 'inner', 'outer', 'shadow']

  return (
    <div className={cn('grid grid-cols-2 gap-2', className)}>
      {dimensionOrder.map((dimId) => {
        const dimMeta = DIMENSION_META[dimId]
        const data = dimensions[dimId]
        const archMeta = ARCHETYPE_META[data.primary]
        const isShadow = dimId === 'shadow'

        return (
          <div
            key={dimId}
            className={cn(
              'p-3 rounded-xl border',
              isShadow
                ? 'col-span-2 bg-slate-50/50 dark:bg-slate-900/20 border-slate-200/50'
                : 'bg-white dark:bg-ink-900 border-vellum-200/50'
            )}
          >
            <div className="flex items-center gap-1.5 mb-1">
              <span className="text-sm">{dimMeta.icon}</span>
              <span className="text-xs text-ink-500">{dimMeta.label}</span>
            </div>
            <div className="flex items-center gap-1.5">
              <span>{archMeta.emoji}</span>
              <span className="text-sm font-medium text-ink-800 dark:text-ink-200">
                {archMeta.name}
              </span>
            </div>
            {isShadow && shadowTension && (
              <div className="mt-2 pt-2 border-t border-slate-200/50 dark:border-slate-700/30">
                <div className="flex items-center gap-1.5 text-xs">
                  <span className="text-orange-500">⚡</span>
                  <span className="text-ink-600 dark:text-ink-400">{shadowTension}</span>
                </div>
              </div>
            )}
          </div>
        )
      })}
    </div>
  )
}

export default FourDimensionView
