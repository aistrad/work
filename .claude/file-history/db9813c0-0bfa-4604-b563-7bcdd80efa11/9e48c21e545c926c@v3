export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
# >>> codex alias (Codex CLI) >>>
alias codex='codex -m gpt-5 -c model_reasoning_effort="high" --search --dangerously-bypass-approvals-and-sandbox'
# <<< codex alias <<<
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.dotnet:$PATH"
export PATH="$HOME/.dotnet:$PATH"
export DOTNET_ROOT="$HOME/.dotnet"
export PATH="$DOTNET_ROOT:$DOTNET_ROOT/tools:$PATH"
export DOTNET_MULTILEVEL_LOOKUP=0

# >>> claude alias >>>
# Load Claude Alias environment variables
[ -f "$HOME/.claude/env" ] && source "$HOME/.claude/env"

# Claude aliases
# claude: 使用 htdong@gmail.com 官方账号（付费）
alias claude='env -u ANTHROPIC_API_KEY -u ANTHROPIC_AUTH_TOKEN -u ANTHROPIC_BASE_URL /home/aiscend/.local/bin/claude --dangerously-skip-permissions'

# glm: 使用 Z.AI GLM 4.7 (通过 Claude CLI 调用)
alias glm='ANTHROPIC_BASE_URL=https://api.z.ai/api/anthropic ANTHROPIC_DEFAULT_OPUS_MODEL=glm-4.7 ANTHROPIC_DEFAULT_SONNET_MODEL=glm-4.7 ANTHROPIC_DEFAULT_HAIKU_MODEL=glm-4.7 ANTHROPIC_AUTH_TOKEN=$ZAI_GLM_KEY /home/aiscend/.local/bin/claude --dangerously-skip-permissions'

# cc: 使用 API Key 登录（Neurax API）
# 使用独立的状态目录避免与 claude alias 的账户登录冲突
alias cc='XDG_STATE_HOME=$CC_STATE_HOME ANTHROPIC_API_KEY=$CC_API_KEY ANTHROPIC_BASE_URL=$CC_BASE_URL ANTHROPIC_DEFAULT_OPUS_MODEL=$CC_OPUS_MODEL ANTHROPIC_DEFAULT_SONNET_MODEL=$CC_SONNET_MODEL ANTHROPIC_DEFAULT_HAIKU_MODEL=$CC_HAIKU_MODEL /home/aiscend/.local/bin/claude --model opus --dangerously-skip-permissions'

export PATH="$HOME/.local/bin:$PATH"
export NO_PROXY=.slopus.com,api.cluster-fluster.com,happy-api.slopus.com,localhost,127.0.0.1,.local
export HAPPY_SERVER_URL=https://api.cluster-fluster.com
