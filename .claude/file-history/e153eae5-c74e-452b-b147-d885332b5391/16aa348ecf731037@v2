"""
Bazi (八字) Calculator Service
Based on: vibelife spec v3.0

Provides Chinese Four Pillars of Destiny calculations:
- Four Pillars (年月日时柱)
- Day Master (日主)
- Ten Gods (十神)
- Five Elements distribution (五行分布)
- Pattern/Structure (格局)
"""

from .bazi_calculator import BaziCalculator, BaziChart, calculate_bazi

# Singleton instance
_calculator_instance = None


def get_bazi_calculator() -> BaziCalculator:
    """Get or create singleton BaziCalculator instance"""
    global _calculator_instance
    if _calculator_instance is None:
        _calculator_instance = BaziCalculator()
    return _calculator_instance


__all__ = ["BaziCalculator", "BaziChart", "calculate_bazi", "get_bazi_calculator"]
