/**
 * ChatMessage Component Tests
 */

import { describe, it, expect, vi, beforeEach } from "vitest";
import { render, screen, fireEvent } from "@testing-library/react";
import userEvent from "@testing-library/user-event";
import { ChatMessage, SystemMessage, TypingIndicator } from "@/components/chat/ChatMessage";

// Mock framer-motion
vi.mock("framer-motion", () => ({
  motion: {
    article: ({ children, ...props }: any) => <article {...props}>{children}</article>,
    div: ({ children, ...props }: any) => <div {...props}>{children}</div>,
  },
}));

// Mock the core components
vi.mock("@/components/core", () => ({
  SimpleVibeGlyph: ({ size, skill }: { size: number; skill: string }) => (
    <div data-testid="vibe-glyph" data-size={size} data-skill={skill} />
  ),
}));

// Mock skill registry
vi.mock("@/skills/registry", () => ({
  skillRegistry: {
    getTool: vi.fn().mockReturnValue(undefined),
  },
}));

describe("ChatMessage", () => {
  describe("User Messages", () => {
    it("should render user message content", () => {
      render(<ChatMessage role="user" content="Hello, I need help" />);
      expect(screen.getByText("Hello, I need help")).toBeInTheDocument();
    });

    it("should have correct ARIA label for user message", () => {
      render(<ChatMessage role="user" content="Hello" />);
      expect(screen.getByRole("note")).toHaveAttribute("aria-label", "您发送的消息");
    });

    it("should not show avatar for user messages by default", () => {
      render(<ChatMessage role="user" content="Hello" />);
      expect(screen.queryByTestId("vibe-glyph")).not.toBeInTheDocument();
    });
  });

  describe("Assistant Messages", () => {
    it("should render assistant message content", () => {
      render(<ChatMessage role="assistant" content="I can help you with that" />);
      expect(screen.getByText("I can help you with that")).toBeInTheDocument();
    });

    it("should have correct ARIA label for assistant message", () => {
      render(<ChatMessage role="assistant" content="Hello" />);
      expect(screen.getByRole("article")).toHaveAttribute("aria-label", "AI 助手的回复");
    });

    it("should show avatar for assistant messages by default", () => {
      render(<ChatMessage role="assistant" content="Hello" skill="bazi" />);
      expect(screen.getByTestId("vibe-glyph")).toBeInTheDocument();
      expect(screen.getByTestId("vibe-glyph")).toHaveAttribute("data-skill", "bazi");
    });

    it("should hide avatar when showAvatar is false", () => {
      render(<ChatMessage role="assistant" content="Hello" showAvatar={false} />);
      expect(screen.queryByTestId("vibe-glyph")).not.toBeInTheDocument();
    });
  });

  describe("Streaming State", () => {
    it("should show streaming indicator when isStreaming is true", () => {
      render(<ChatMessage role="assistant" content="Loading..." isStreaming />);
      // Check for animated dots
      const bubbles = document.querySelectorAll(".animate-pulse");
      expect(bubbles.length).toBeGreaterThan(0);
    });

    it("should not show streaming indicator when content is complete", () => {
      render(<ChatMessage role="assistant" content="Complete message" isStreaming={false} />);
      const messageElement = screen.getByText("Complete message");
      expect(messageElement.closest("div")).not.toHaveClass("animate-pulse");
    });
  });

  describe("Timestamp", () => {
    it("should render timestamp when provided", () => {
      render(<ChatMessage role="assistant" content="Hello" timestamp="10:30 AM" />);
      expect(screen.getByText("10:30 AM")).toBeInTheDocument();
    });

    it("should not render timestamp when not provided", () => {
      const { container } = render(<ChatMessage role="assistant" content="Hello" />);
      expect(container.querySelector(".chat-timestamp")).not.toBeInTheDocument();
    });
  });

  describe("Tool Invocations", () => {
    it("should render loading state for partial-call", () => {
      const toolInvocations = [
        {
          toolCallId: "test-1",
          toolName: "show_bazi_chart",
          args: {},
          state: "partial-call" as const,
        },
      ];

      render(
        <ChatMessage
          role="assistant"
          content=""
          toolInvocations={toolInvocations}
          skill="bazi"
        />
      );

      expect(screen.getByText("展示命盘 处理中...")).toBeInTheDocument();
    });

    it("should render loading state for call without result", () => {
      const toolInvocations = [
        {
          toolCallId: "test-1",
          toolName: "show_zodiac_chart",
          args: {},
          state: "call" as const,
        },
      ];

      render(
        <ChatMessage
          role="assistant"
          content=""
          toolInvocations={toolInvocations}
          skill="zodiac"
        />
      );

      expect(screen.getByText("展示星盘 处理中...")).toBeInTheDocument();
    });

    it("should render result as JSON when no custom renderer", () => {
      const toolInvocations = [
        {
          toolCallId: "test-1",
          toolName: "unknown_tool",
          args: {},
          state: "result" as const,
          result: { data: "test" },
        },
      ];

      render(
        <ChatMessage
          role="assistant"
          content=""
          toolInvocations={toolInvocations}
          skill="bazi"
        />
      );

      expect(screen.getByText(/test/)).toBeInTheDocument();
    });
  });

  describe("Skills", () => {
    it("should render with bazi skill theme", () => {
      render(<ChatMessage role="assistant" content="Hello" skill="bazi" />);
      expect(screen.getByTestId("vibe-glyph")).toHaveAttribute("data-skill", "bazi");
    });

    it("should render with zodiac skill theme", () => {
      render(<ChatMessage role="assistant" content="Hello" skill="zodiac" />);
      expect(screen.getByTestId("vibe-glyph")).toHaveAttribute("data-skill", "zodiac");
    });
  });
});

describe("SystemMessage", () => {
  it("should render system message content", () => {
    render(<SystemMessage content="Session started" />);
    expect(screen.getByText("Session started")).toBeInTheDocument();
  });

  it("should have centered layout", () => {
    render(<SystemMessage content="Test" />);
    const container = screen.getByText("Test").closest("div");
    expect(container).toHaveClass("flex", "justify-center");
  });

  it("should apply custom className", () => {
    render(<SystemMessage content="Test" className="custom-class" />);
    const container = screen.getByText("Test").closest("div");
    expect(container).toHaveClass("custom-class");
  });
});

describe("TypingIndicator", () => {
  it("should render typing indicator", () => {
    render(<TypingIndicator />);
    // Should show the vibe glyph
    expect(screen.getByTestId("vibe-glyph")).toBeInTheDocument();
  });

  it("should render bouncing dots", () => {
    const { container } = render(<TypingIndicator />);
    const dots = container.querySelectorAll(".animate-bounce");
    expect(dots.length).toBe(3);
  });

  it("should apply custom className", () => {
    const { container } = render(<TypingIndicator className="custom-class" />);
    expect(container.firstChild).toHaveClass("custom-class");
  });
});
