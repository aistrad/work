import path from "path";
import { fileURLToPath } from "url";

const configDir = path.dirname(fileURLToPath(import.meta.url));

const config = {
  plugins: {
    "@tailwindcss/postcss": {
      // Ensure Tailwind resolves imports/modules relative to this app.
      base: configDir,
    },
  },
};

export default config;
