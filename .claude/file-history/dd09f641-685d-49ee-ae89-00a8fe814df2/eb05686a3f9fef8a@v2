"use client"

import { cn } from "@/lib/utils"
import { FileText, Loader2, X, ChevronDown, Sparkles } from "lucide-react"
import { useState, useCallback } from "react"
import ReactMarkdown from "react-markdown"

type ReportType = "full" | "summary" | "career" | "relationship" | "health"

interface BaziReportPanelProps {
  isOpen: boolean
  onClose: () => void
}

interface ReportResult {
  report_id: number
  status: string
  output_markdown: string | null
  output_summary: string | null
  key_findings: string[] | null
  prescriptions: { content: string; priority: string }[] | null
  created_at: string | null
  completed_at: string | null
}

const REPORT_TYPES: { value: ReportType; label: string; description: string }[] = [
  { value: "full", label: "完整报告", description: "全面分析八字命局" },
  { value: "summary", label: "精简版", description: "核心要点速览" },
  { value: "career", label: "事业方向", description: "职业发展建议" },
  { value: "relationship", label: "感情婚姻", description: "人际关系分析" },
  { value: "health", label: "健康养生", description: "生活方式建议" },
]

export function BaziReportPanel({ isOpen, onClose }: BaziReportPanelProps) {
  const [reportType, setReportType] = useState<ReportType>("full")
  const [question, setQuestion] = useState("")
  const [isGenerating, setIsGenerating] = useState(false)
  const [result, setResult] = useState<ReportResult | null>(null)
  const [error, setError] = useState<string | null>(null)
  const [showTypeSelector, setShowTypeSelector] = useState(false)

  const selectedType = REPORT_TYPES.find((t) => t.value === reportType)

  const generateReport = useCallback(async () => {
    setIsGenerating(true)
    setError(null)
    setResult(null)

    try {
      const res = await fetch("/api/report/bazi/deep/submit", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": document.cookie.match(/fortune_csrf=([^;]+)/)?.[1] || "",
        },
        credentials: "include",
        body: JSON.stringify({
          report_type: reportType,
          backend: "glm",
          question: question.trim() || undefined,
        }),
      })

      const data = await res.json()

      if (data.ok && data.data) {
        setResult(data.data)
      } else {
        setError(data.error?.message || "Failed to generate report")
      }
    } catch (e) {
      setError("Network error - please try again")
    } finally {
      setIsGenerating(false)
    }
  }, [reportType, question])

  if (!isOpen) return null

  return (
    <div className="fixed inset-0 z-50 flex items-center justify-center">
      {/* Backdrop */}
      <div
        className="absolute inset-0 bg-black/50 backdrop-blur-sm"
        onClick={onClose}
      />

      {/* Panel */}
      <div
        className={cn(
          "relative w-full max-w-2xl max-h-[80vh] mx-4",
          "bg-background rounded-xl shadow-xl overflow-hidden",
          "flex flex-col"
        )}
      >
        {/* Header */}
        <div className="flex items-center justify-between p-4 border-b border-border">
          <div className="flex items-center gap-2">
            <FileText className="w-5 h-5 text-mystic-foreground" />
            <h2 className="font-semibold text-lg">八字深度报告</h2>
          </div>
          <button
            onClick={onClose}
            className="p-1.5 rounded-md text-muted-foreground hover:text-foreground hover:bg-hover"
          >
            <X className="w-5 h-5" />
          </button>
        </div>

        {/* Content */}
        <div className="flex-1 overflow-y-auto p-4 space-y-4">
          {!result ? (
            <>
              {/* Report Type Selector */}
              <div className="space-y-2">
                <label className="text-sm font-medium text-foreground">
                  报告类型
                </label>
                <div className="relative">
                  <button
                    onClick={() => setShowTypeSelector(!showTypeSelector)}
                    className={cn(
                      "w-full flex items-center justify-between p-3",
                      "rounded-lg border border-border",
                      "hover:border-primary/50 transition-colors"
                    )}
                  >
                    <div>
                      <div className="font-medium text-foreground">
                        {selectedType?.label}
                      </div>
                      <div className="text-xs text-muted-foreground">
                        {selectedType?.description}
                      </div>
                    </div>
                    <ChevronDown
                      className={cn(
                        "w-4 h-4 text-muted-foreground transition-transform",
                        showTypeSelector && "rotate-180"
                      )}
                    />
                  </button>

                  {showTypeSelector && (
                    <div className="absolute top-full left-0 right-0 mt-1 bg-popover border border-border rounded-lg shadow-lg z-10">
                      {REPORT_TYPES.map((type) => (
                        <button
                          key={type.value}
                          onClick={() => {
                            setReportType(type.value)
                            setShowTypeSelector(false)
                          }}
                          className={cn(
                            "w-full flex items-start gap-3 p-3 text-left",
                            "hover:bg-hover transition-colors",
                            "first:rounded-t-lg last:rounded-b-lg",
                            type.value === reportType && "bg-hover"
                          )}
                        >
                          <div>
                            <div className="font-medium text-foreground">
                              {type.label}
                            </div>
                            <div className="text-xs text-muted-foreground">
                              {type.description}
                            </div>
                          </div>
                        </button>
                      ))}
                    </div>
                  )}
                </div>
              </div>

              {/* Optional Question */}
              <div className="space-y-2">
                <label className="text-sm font-medium text-foreground">
                  特别关注（可选）
                </label>
                <textarea
                  value={question}
                  onChange={(e) => setQuestion(e.target.value)}
                  placeholder="如有特别想了解的问题，请在此输入..."
                  className={cn(
                    "w-full p-3 rounded-lg border border-border",
                    "bg-background text-foreground placeholder:text-muted-foreground",
                    "focus:outline-none focus:ring-2 focus:ring-primary/50",
                    "resize-none"
                  )}
                  rows={3}
                  maxLength={500}
                />
                <div className="text-xs text-muted-foreground text-right">
                  {question.length}/500
                </div>
              </div>

              {/* Error */}
              {error && (
                <div className="p-3 rounded-lg bg-alert/50 text-alert-foreground text-sm">
                  {error}
                </div>
              )}

              {/* Generate Button */}
              <button
                onClick={generateReport}
                disabled={isGenerating}
                className={cn(
                  "w-full flex items-center justify-center gap-2 py-3 px-4",
                  "rounded-lg bg-primary text-primary-foreground",
                  "font-medium text-sm",
                  "hover:bg-primary/90 transition-colors",
                  "disabled:opacity-50 disabled:cursor-not-allowed"
                )}
              >
                {isGenerating ? (
                  <>
                    <Loader2 className="w-4 h-4 animate-spin" />
                    生成中，请稍候...
                  </>
                ) : (
                  <>
                    <Sparkles className="w-4 h-4" />
                    生成报告
                  </>
                )}
              </button>

              {isGenerating && (
                <p className="text-xs text-center text-muted-foreground">
                  报告生成需要 30-60 秒，请耐心等待
                </p>
              )}
            </>
          ) : (
            <>
              {/* Report Result */}
              <div className="space-y-4">
                {/* Summary */}
                {result.output_summary && (
                  <div className="p-3 rounded-lg bg-mystic">
                    <p className="text-sm font-medium text-foreground">
                      {result.output_summary}
                    </p>
                  </div>
                )}

                {/* Key Findings */}
                {result.key_findings && result.key_findings.length > 0 && (
                  <div className="space-y-2">
                    <h3 className="font-medium text-foreground">核心发现</h3>
                    <ul className="space-y-1">
                      {result.key_findings.map((finding, i) => (
                        <li key={i} className="flex items-start gap-2 text-sm">
                          <span className="text-mystic-foreground">+</span>
                          <span className="text-muted-foreground">{finding}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}

                {/* Markdown Content */}
                {result.output_markdown && (
                  <div className="prose prose-sm dark:prose-invert max-w-none">
                    <ReactMarkdown>{result.output_markdown}</ReactMarkdown>
                  </div>
                )}

                {/* Prescriptions */}
                {result.prescriptions && result.prescriptions.length > 0 && (
                  <div className="space-y-2 p-3 rounded-lg bg-advice">
                    <h3 className="font-medium text-foreground">行动处方</h3>
                    <ul className="space-y-2">
                      {result.prescriptions.map((p, i) => (
                        <li
                          key={i}
                          className={cn(
                            "flex items-start gap-2 text-sm p-2 rounded-md",
                            "bg-background/50"
                          )}
                        >
                          <span
                            className={cn(
                              "flex-shrink-0 w-5 h-5 rounded-full flex items-center justify-center text-xs font-medium",
                              p.priority === "high"
                                ? "bg-alert text-alert-foreground"
                                : "bg-muted text-muted-foreground"
                            )}
                          >
                            {i + 1}
                          </span>
                          <span className="text-foreground">{p.content}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}

                {/* Generate Another */}
                <button
                  onClick={() => setResult(null)}
                  className={cn(
                    "w-full flex items-center justify-center gap-2 py-2 px-4",
                    "rounded-lg border border-border",
                    "text-sm text-muted-foreground hover:text-foreground hover:bg-hover",
                    "transition-colors"
                  )}
                >
                  生成新报告
                </button>
              </div>
            </>
          )}
        </div>
      </div>
    </div>
  )
}
