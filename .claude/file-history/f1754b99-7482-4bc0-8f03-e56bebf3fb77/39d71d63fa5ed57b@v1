'use client';

import React, { useState } from 'react';
import { Sparkles, X } from 'lucide-react';

interface SkillAction {
  type: 'activate_skill';
  skill: string;
}

interface SkillInfo {
  id: string;
  name: string;
  description?: string;
  icon?: string;
  color?: string;
  tagline?: string;
  trial_messages?: number;
  action?: SkillAction;
}

interface SkillRecommendationCardProps {
  data?: {
    skills?: SkillInfo[];
    skill?: SkillInfo;  // å‘åå…¼å®¹å•ä¸ª skill
    reason?: string;
    status?: string;
  };
  onSendMessage?: (message: string) => void;
}

const CONFIDENCE_STYLES = {
  high: 'border-accent/30 bg-gradient-to-br from-accent/5 to-accent/10',
  medium: 'border-amber-500/30 bg-gradient-to-br from-amber-500/5 to-amber-500/10',
  low: 'border-white/20 bg-white/5',
} as const;

function SkillRecommendationCard({ data }: SkillRecommendationCardProps): React.ReactElement | null {
  const router = useRouter();
  const [dismissed, setDismissed] = useState(false);

  const skill = data?.skill;

  // Early return for non-render cases
  if (!data || !skill || data.status === 'skip' || dismissed) {
    return null;
  }

  const { reason, confidence = 'medium' } = data;
  const borderStyle = CONFIDENCE_STYLES[confidence];

  const handleNavigate = () => router.push(`/skills/${skill.id}`);
  const handleDismiss = () => setDismissed(true);

  const iconBgColor = skill.color ? `${skill.color}20` : 'rgba(99, 102, 241, 0.1)';
  const hasTrialMessages = skill.trial_messages && skill.trial_messages > 0;

  return (
    <div className={`rounded-xl overflow-hidden border ${borderStyle} backdrop-blur-sm`}>
      {/* Header */}
      <div className="px-4 py-3 border-b border-white/10 flex items-center justify-between">
        <div className="flex items-center gap-2">
          <Sparkles className="w-4 h-4 text-accent" />
          <span className="text-sm font-medium text-text-primary">ä¸ºä½ æ¨è</span>
        </div>
        <button
          onClick={handleDismiss}
          className="p-1 rounded-lg hover:bg-white/10 transition-colors"
          aria-label="å…³é—­æ¨è"
        >
          <X className="w-4 h-4 text-text-tertiary" />
        </button>
      </div>

      {/* Content */}
      <div className="p-4">
        {/* Skill Info */}
        <div className="flex items-start gap-3 mb-3">
          <div
            className="w-12 h-12 rounded-xl flex items-center justify-center text-2xl shrink-0"
            style={{ backgroundColor: iconBgColor }}
          >
            {skill.icon || 'ğŸ’¡'}
          </div>
          <div className="flex-1 min-w-0">
            <h4 className="font-semibold text-text-primary">{skill.name}</h4>
            <p className="text-sm text-text-secondary mt-0.5 line-clamp-2">
              {skill.tagline || skill.description}
            </p>
          </div>
        </div>

        {/* Reason */}
        {reason && (
          <p className="text-sm text-text-secondary mb-4 pl-1 border-l-2 border-accent/30 ml-1">
            {reason}
          </p>
        )}

        {/* Trial Info */}
        {hasTrialMessages && (
          <div className="text-xs text-text-tertiary mb-3">
            å¯å…è´¹è¯•ç”¨ {skill.trial_messages} æ¬¡
          </div>
        )}

        {/* Actions */}
        <div className="flex gap-2">
          <button
            onClick={handleNavigate}
            className="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-accent hover:bg-accent/90 text-white text-sm font-medium rounded-lg transition-colors"
          >
            <span>äº†è§£æ›´å¤š</span>
            <ArrowRight className="w-4 h-4" />
          </button>
          <button
            onClick={handleDismiss}
            className="px-4 py-2.5 text-text-secondary hover:text-text-primary text-sm transition-colors"
          >
            æš‚ä¸éœ€è¦
          </button>
        </div>
      </div>
    </div>
  );
}

export default SkillRecommendationCard;
