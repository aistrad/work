"use client";

import { motion } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";

interface ProtocolStepData {
  step_number: number;
  step_name: string;
  content: string;
  is_question: boolean;
  options?: Array<{
    key: string;
    label: string;
  }>;
  generated_at?: string;
}

interface ProtocolStepCardProps {
  data: ProtocolStepData;
}

function ProtocolStepCard({ data }: ProtocolStepCardProps) {
  const { step_number, step_name, content, is_question, options } = data;

  return (
    <motion.div
      initial={{ opacity: 0, y: 10 }}
      animate={{ opacity: 1, y: 0 }}
