          {step_number}
        </div>
        <h3 className="text-lg font-semibold text-gray-800">{step_name}</h3>
      </div>

      {/* æ­¥éª¤å†…å®¹ */}
      <div className="text-gray-700 leading-relaxed mb-3 whitespace-pre-wrap">
        {content}
      </div>

      {/* é—®é¢˜é€‰é¡¹ */}
      {is_question && options && options.length > 0 && (
        <div className="mt-4 space-y-2">
          <p className="text-sm font-medium text-gray-600 mb-2">è¯·é€‰æ‹©ï¼š</p>
          {options.map((option) => (
            <button
              key={option.key}
              className="w-full text-left px-4 py-3 rounded-lg border border-purple-200 hover:border-purple-400 hover:bg-purple-50 transition-all text-sm"
            >
              {option.label}
            </button>
          ))}
        </div>
      )}

      {/* æç¤ºæ–‡å­— */}
      {is_question && (
        <p className="mt-3 text-xs text-gray-500 italic">
          ğŸ’¬ è¯·åœ¨ä¸‹æ–¹è¾“å…¥æ¡†å›å¤ä½ çš„é€‰æ‹©æˆ–æƒ³æ³•
        </p>
      )}
    </motion.div>
