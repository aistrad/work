version: "1.0"
skill_id: career

# 展示型工具
display:
  - name: show_career_analysis
    description: |
      展示职业分析。当用户问职业方向、发展建议时调用。
    card_type: career_analysis
    when_to_call: |
      - 用户问"适合做什么工作"
      - 用户问"职业发展"
      - 用户想了解职业方向
    parameters:
      - name: analysis_type
        type: string
        required: false
        description: 分析类型
        enum:
          - direction
          - industry
          - skills
          - transition
