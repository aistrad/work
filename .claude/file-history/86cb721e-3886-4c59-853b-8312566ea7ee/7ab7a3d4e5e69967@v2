version: "1.0"
skill_id: tarot

# 计算型工具
compute:
  - name: draw_tarot_cards
    description: |
      抽塔罗牌。根据用户问题和选择的牌阵抽取塔罗牌。
    card_type: tarot_spread
    when_to_call: |
      - 用户说"帮我抽牌"
      - 用户说"塔罗占卜"
      - 用户想进行塔罗牌阵
    parameters:
      - name: spread_type
        type: string
        required: false
        description: 牌阵类型
        enum:
          - single
          - three
          - celtic_cross
        default: single
      - name: question
        type: string
        required: false
        description: 用户的问题

# 展示型工具
display:
  - name: show_tarot_spread
    description: |
      展示塔罗牌阵。抽牌后调用展示结果。
    card_type: tarot_spread
    when_to_call: |
      - 抽牌完成后展示结果
    parameters: []
