"use client";

import { useState } from "react";
import { motion } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Types
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

interface EmotionCheckData {
  detected_emotion?: "anxiety" | "anger" | "sadness" | "stress" | "overwhelm";
  suggestion?: string;
  recommended_practice?: {
    type: string;
    name: string;
    duration_minutes: number;
    description: string;
  };
  emotion_scale?: {
    current: number; // 1-5
    optimal: number; // 1-5
  };
  coping_strategies?: string[];
  check_in_prompt?: string;
}

interface EmotionCheckCardProps {
  data: EmotionCheckData;
  cardProps?: Record<string, unknown>;
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Constants
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

const EMOTION_CONFIG: Record<
  string,
  { emoji: string; label: string; color: string; bgColor: string }
> = {
  anxiety: {
    emoji: "ğŸ˜°",
    label: "ç„¦è™‘ä¸å®‰",
    color: "text-yellow-700 dark:text-yellow-300",
    bgColor: "from-yellow-50 to-amber-50 dark:from-yellow-950/30 dark:to-amber-950/30 border-yellow-200 dark:border-yellow-800",
  },
  anger: {
    emoji: "ğŸ˜¤",
    label: "æ„¤æ€’ç”Ÿæ°”",
    color: "text-red-700 dark:text-red-300",
    bgColor: "from-red-50 to-orange-50 dark:from-red-950/30 dark:to-orange-950/30 border-red-200 dark:border-red-800",
  },
  sadness: {
    emoji: "ğŸ˜¢",
    label: "æ‚²ä¼¤éš¾è¿‡",
    color: "text-blue-700 dark:text-blue-300",
    bgColor: "from-blue-50 to-cyan-50 dark:from-blue-950/30 dark:to-cyan-950/30 border-blue-200 dark:border-blue-800",
  },
  stress: {
    emoji: "ğŸ˜“",
    label: "å‹åŠ›å±±å¤§",
    color: "text-orange-700 dark:text-orange-300",
    bgColor: "from-orange-50 to-yellow-50 dark:from-orange-950/30 dark:to-yellow-950/30 border-orange-200 dark:border-orange-800",
  },
  overwhelm: {
    emoji: "ğŸ¤¯",
    label: "ä¸å ªé‡è´Ÿ",
    color: "text-purple-700 dark:text-purple-300",
    bgColor: "from-purple-50 to-pink-50 dark:from-purple-950/30 dark:to-pink-950/30 border-purple-200 dark:border-purple-800",
  },
};

const MOOD_EMOJIS = ["ğŸ˜¢", "ğŸ˜”", "ğŸ˜", "ğŸ™‚", "ğŸ˜Š"];

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function EmotionCheckCard({ data }: EmotionCheckCardProps) {
  const [selectedMood, setSelectedMood] = useState<number | null>(null);

  // V7: é”™è¯¯çŠ¶æ€æ£€æŸ¥
  if ((data as any)?.status === "error" || (data as any)?.need_info) {
    return null;
  }

  const detectedEmotion = data.detected_emotion;
  const emotionConfig = detectedEmotion
    ? EMOTION_CONFIG[detectedEmotion]
    : undefined;

  const bgColor = emotionConfig?.bgColor || EMOTION_CONFIG.stress.bgColor;

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.5 }}
      className={`emotion-check-card bg-gradient-to-br ${bgColor} rounded-xl border p-4 my-2`}
    >
      {/* Header */}
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        transition={{ delay: 0.2 }}
        className="text-center mb-4"
      >
        <div className="text-4xl mb-2">
          {emotionConfig?.emoji || "ğŸ’­"}
        </div>
        <h3 className="text-lg font-semibold text-accent-900 dark:text-accent-100 mb-1">
          {emotionConfig ? emotionConfig.label : "æƒ…ç»ªæ£€æµ‹"}
        </h3>
        <p className="text-sm text-accent-700 dark:text-accent-300">
          {data.check_in_prompt || "è®©æˆ‘ä»¬ä¸€èµ·å…³æ³¨ä½ çš„æƒ…ç»ªçŠ¶æ€"}
        </p>
      </motion.div>

      {/* Current Emotion Scale */}
      {data.emotion_scale && (
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.3 }}
          className="bg-white/60 dark:bg-black/30 rounded-lg p-4 mb-4"
        >
          <div className="text-sm font-medium text-accent-900 dark:text-accent-100 mb-3 text-center">
            å½“å‰æƒ…ç»ªæ°´å¹³
          </div>
          <div className="flex justify-center gap-2 mb-3">
            {MOOD_EMOJIS.map((emoji, index) => {
              const level = index + 1;
              const isCurrent = level === data.emotion_scale!.current;
              const isOptimal = level === data.emotion_scale!.optimal;
              return (
                <motion.div
                  key={index}
                  initial={{ scale: 0 }}
                  animate={{ scale: 1 }}
                  transition={{ delay: 0.4 + index * 0.1 }}
                  className={`text-3xl cursor-pointer transition-all ${
                    isCurrent
                      ? "scale-125 filter drop-shadow-lg"
                      : "opacity-50 hover:opacity-75"
                  }`}
                  onClick={() => setSelectedMood(level)}
                >
                  {emoji}
                  {isOptimal && (
                    <div className="text-xs text-center text-green-600 dark:text-green-400">
                      âœ“
                    </div>
                  )}
                </motion.div>
              );
            })}
          </div>
          <div className="flex justify-between text-xs text-muted-foreground px-1">
            <span>å¾ˆå·®</span>
            <span>ä¸€èˆ¬</span>
            <span>å¾ˆå¥½</span>
          </div>
        </motion.div>
      )}

      {/* Suggestion */}
      {data.suggestion && (
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.7 }}
          className="bg-blue-50/60 dark:bg-blue-950/20 rounded-lg p-3 mb-4"
        >
          <div className="text-sm font-medium text-blue-700 dark:text-blue-300 mb-1 flex items-center gap-1">
            <span>ğŸ’¡</span>
            <span>å»ºè®®</span>
          </div>
          <p className="text-sm text-accent-700 dark:text-accent-300 leading-relaxed">
            {data.suggestion}
          </p>
        </motion.div>
      )}

      {/* Recommended Practice */}
      {data.recommended_practice && (
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.9 }}
          className="bg-gradient-to-r from-green-50/60 to-emerald-50/60 dark:from-green-950/20 dark:to-emerald-950/20 rounded-lg p-4 mb-4"
        >
          <div className="flex items-start justify-between mb-2">
            <div>
              <div className="text-sm font-medium text-green-700 dark:text-green-300 mb-1">
                æ¨èç»ƒä¹ 
              </div>
              <h4 className="text-base font-semibold text-accent-900 dark:text-accent-100">
                {data.recommended_practice.name}
              </h4>
            </div>
            <div className="px-2 py-1 bg-green-100 dark:bg-green-900/50 rounded text-xs font-medium text-green-700 dark:text-green-300">
              {data.recommended_practice.duration_minutes} åˆ†é’Ÿ
            </div>
          </div>
          <p className="text-sm text-accent-700 dark:text-accent-300 leading-relaxed mb-3">
            {data.recommended_practice.description}
          </p>
          <button className="w-full px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg text-sm font-medium transition-colors flex items-center justify-center gap-2">
            <span>ğŸ§˜</span>
            <span>å¼€å§‹ç»ƒä¹ </span>
          </button>
        </motion.div>
      )}

      {/* Coping Strategies */}
      {data.coping_strategies && data.coping_strategies.length > 0 && (
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 1.1 }}
          className={`${
            emotionConfig?.bgColor.includes("yellow") ? "bg-yellow-100/60 dark:bg-yellow-900/30" : "bg-purple-100/60 dark:bg-purple-900/30"
          } rounded-lg p-3`}
        >
          <div className={`text-sm font-medium mb-2 flex items-center gap-1 ${
            emotionConfig?.color || "text-purple-700 dark:text-purple-300"
          }`}>
            <span>ğŸ› ï¸</span>
            <span>åº”å¯¹ç­–ç•¥</span>
          </div>
          <ul className="space-y-1.5">
            {data.coping_strategies.map((strategy, idx) => (
              <motion.li
                key={idx}
                initial={{ opacity: 0, x: -10 }}
                animate={{ opacity: 1, x: 0 }}
                transition={{ delay: 1.2 + idx * 0.1 }}
                className="text-sm text-accent-700 dark:text-accent-300 flex items-start gap-2"
              >
                <span className={emotionConfig?.color || "text-purple-600 dark:text-purple-400"}>
                  â€¢
                </span>
                <span>{strategy}</span>
              </motion.li>
            ))}
          </ul>
        </motion.div>
      )}

      {/* Gentle Reminder */}
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        transition={{ delay: 1.5 }}
        className="mt-4 text-center text-xs text-muted-foreground italic"
      >
        è®°ä½ï¼šæ‰€æœ‰æƒ…ç»ªéƒ½æ˜¯æ­£å¸¸çš„ï¼Œå…è®¸è‡ªå·±å»æ„Ÿå—å®ƒä»¬ã€‚
      </motion.div>
    </motion.div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Register to CardRegistry
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

registerCard("emotion_check", EmotionCheckCard);

export default EmotionCheckCard;
