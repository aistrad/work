"use client";

import { motion } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Types
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

interface PracticeStat {
  practice_type: string;
  practice_name: string;
  count: number;
  total_minutes: number;
}

interface MindfulnessStatsData {
  period?: "today" | "week" | "month" | "all";
  total_sessions?: number;
  total_minutes?: number;
  current_streak?: number;
  longest_streak?: number;
  completion_rate?: number; // 0-100
  practice_breakdown?: PracticeStat[];
  mood_improvement?: {
    before_avg: number;
    after_avg: number;
    improvement: number;
  };
  milestones?: Array<{
    title: string;
    achieved: boolean;
    date?: string;
  }>;
  weekly_trend?: number[]; // æœ€è¿‘7å¤©çš„ç»ƒä¹ åˆ†é’Ÿæ•°
}

interface MindfulnessStatsCardProps {
  data: MindfulnessStatsData;
  cardProps?: Record<string, unknown>;
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Constants
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

const PERIOD_LABELS: Record<string, string> = {
  today: "ä»Šå¤©",
  week: "æœ¬å‘¨",
  month: "æœ¬æœˆ",
  all: "æ€»è®¡",
};

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function MindfulnessStatsCard({ data }: MindfulnessStatsCardProps) {
  // V7: é”™è¯¯çŠ¶æ€æ£€æŸ¥
  if ((data as any)?.status === "error" || (data as any)?.need_info) {
    return null;
  }

  const period = data.period || "all";
  const practiceBreakdown = data.practice_breakdown || [];

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.5 }}
      className="mindfulness-stats-card bg-gradient-to-br from-emerald-50/80 to-teal-50/80 dark:from-emerald-950/20 dark:to-teal-950/20 rounded-xl border border-emerald-200 dark:border-emerald-800 p-4 my-2"
    >
      {/* Header */}
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        transition={{ delay: 0.2 }}
        className="flex items-center justify-between mb-4"
      >
        <h3 className="text-lg font-semibold text-accent-900 dark:text-accent-100 flex items-center gap-2">
          <span>ğŸ“Š</span>
          <span>ç»ƒä¹ ç»Ÿè®¡</span>
        </h3>
        <span className="text-xs px-2 py-1 bg-emerald-100 dark:bg-emerald-900/50 rounded text-emerald-700 dark:text-emerald-300">
          {PERIOD_LABELS[period]}
        </span>
      </motion.div>

      {/* Key Metrics */}
      <motion.div
        initial={{ opacity: 0, y: 10 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ delay: 0.3 }}
        className="grid grid-cols-2 gap-3 mb-4"
      >
        <div className="bg-white/60 dark:bg-black/30 rounded-lg p-3 text-center">
          <div className="text-2xl font-bold text-emerald-600 dark:text-emerald-400">
            {data.total_sessions || 0}
          </div>
          <div className="text-xs text-muted-foreground mt-1">æ€»ç»ƒä¹ æ¬¡æ•°</div>
        </div>

        <div className="bg-white/60 dark:bg-black/30 rounded-lg p-3 text-center">
          <div className="text-2xl font-bold text-teal-600 dark:text-teal-400">
            {data.total_minutes || 0}
          </div>
          <div className="text-xs text-muted-foreground mt-1">æ€»ç»ƒä¹ åˆ†é’Ÿ</div>
        </div>

        <div className="bg-white/60 dark:bg-black/30 rounded-lg p-3 text-center">
          <div className="text-2xl font-bold text-blue-600 dark:text-blue-400 flex items-center justify-center gap-1">
            <span>ğŸ”¥</span>
            <span>{data.current_streak || 0}</span>
          </div>
          <div className="text-xs text-muted-foreground mt-1">å½“å‰è¿ç»­</div>
        </div>

        <div className="bg-white/60 dark:bg-black/30 rounded-lg p-3 text-center">
          <div className="text-2xl font-bold text-purple-600 dark:text-purple-400">
            {data.longest_streak || 0}
          </div>
          <div className="text-xs text-muted-foreground mt-1">æœ€é•¿è¿ç»­</div>
        </div>
      </motion.div>

      {/* Completion Rate */}
      {data.completion_rate !== undefined && (
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.5 }}
          className="mb-4"
        >
          <div className="flex items-center justify-between mb-2">
            <span className="text-sm font-medium text-accent-900 dark:text-accent-100">
              å®Œæˆç‡
            </span>
            <span className="text-sm font-semibold text-emerald-600 dark:text-emerald-400">
              {data.completion_rate}%
            </span>
          </div>
          <div className="h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
            <motion.div
              initial={{ width: 0 }}
              animate={{ width: `${data.completion_rate}%` }}
              transition={{ delay: 0.6, duration: 0.8 }}
              className="h-full bg-gradient-to-r from-emerald-500 to-teal-500"
            />
          </div>
        </motion.div>
      )}

      {/* Practice Breakdown */}
      {practiceBreakdown.length > 0 && (
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.7 }}
          className="mb-4"
        >
          <div className="text-sm font-medium text-accent-900 dark:text-accent-100 mb-2">
            ç»ƒä¹ ç±»å‹åˆ†å¸ƒ
          </div>
          <div className="space-y-2">
            {practiceBreakdown.map((stat, index) => (
              <div
                key={index}
                className="bg-white/60 dark:bg-black/30 rounded-lg p-2 flex items-center justify-between"
              >
                <div className="flex-1">
                  <div className="text-sm font-medium text-accent-900 dark:text-accent-100">
                    {stat.practice_name}
                  </div>
                  <div className="text-xs text-muted-foreground">
                    {stat.count} æ¬¡ Â· {stat.total_minutes} åˆ†é’Ÿ
                  </div>
                </div>
                <div className="text-lg font-semibold text-emerald-600 dark:text-emerald-400">
                  {Math.round((stat.total_minutes / (data.total_minutes || 1)) * 100)}%
                </div>
              </div>
            ))}
          </div>
        </motion.div>
      )}

      {/* Mood Improvement */}
      {data.mood_improvement && (
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.9 }}
          className="bg-gradient-to-r from-green-50/60 to-emerald-50/60 dark:from-green-950/20 dark:to-emerald-950/20 rounded-lg p-3 mb-4"
        >
          <div className="text-sm font-medium text-green-700 dark:text-green-300 mb-2 flex items-center gap-1">
            <span>ğŸ’š</span>
            <span>æƒ…ç»ªæ”¹å–„</span>
          </div>
          <div className="flex items-center justify-around text-center">
            <div>
              <div className="text-xs text-muted-foreground mb-1">ç»ƒä¹ å‰</div>
              <div className="text-lg font-semibold text-red-600 dark:text-red-400">
                {data.mood_improvement.before_avg.toFixed(1)}
              </div>
            </div>
            <div className="text-2xl">â†’</div>
            <div>
              <div className="text-xs text-muted-foreground mb-1">ç»ƒä¹ å</div>
              <div className="text-lg font-semibold text-green-600 dark:text-green-400">
                {data.mood_improvement.after_avg.toFixed(1)}
              </div>
            </div>
            <div>
              <div className="text-xs text-muted-foreground mb-1">æå‡</div>
              <div className="text-lg font-semibold text-emerald-600 dark:text-emerald-400">
                +{data.mood_improvement.improvement.toFixed(1)}
              </div>
            </div>
          </div>
        </motion.div>
      )}

      {/* Weekly Trend */}
      {data.weekly_trend && data.weekly_trend.length > 0 && (
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 1.0 }}
          className="mb-4"
        >
          <div className="text-sm font-medium text-accent-900 dark:text-accent-100 mb-2">
            æœ€è¿‘7å¤©è¶‹åŠ¿
          </div>
          <div className="flex items-end justify-between gap-1 h-24">
            {data.weekly_trend.map((minutes, index) => {
              const maxMinutes = Math.max(...data.weekly_trend!, 1);
              const height = (minutes / maxMinutes) * 100;
              return (
                <div key={index} className="flex-1 flex flex-col items-center gap-1">
                  <motion.div
                    initial={{ height: 0 }}
                    animate={{ height: `${height}%` }}
                    transition={{ delay: 1.1 + index * 0.1, duration: 0.4 }}
                    className="w-full bg-gradient-to-t from-emerald-500 to-teal-500 rounded-t"
                  />
                  <div className="text-xs text-muted-foreground">
                    {["ä¸€", "äºŒ", "ä¸‰", "å››", "äº”", "å…­", "æ—¥"][index]}
                  </div>
                </div>
              );
            })}
          </div>
        </motion.div>
      )}

      {/* Milestones */}
      {data.milestones && data.milestones.length > 0 && (
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 1.2 }}
          className="bg-yellow-50/60 dark:bg-yellow-950/20 rounded-lg p-3"
        >
          <div className="text-sm font-medium text-yellow-700 dark:text-yellow-300 mb-2 flex items-center gap-1">
            <span>ğŸ†</span>
            <span>æˆå°±</span>
          </div>
          <div className="space-y-1.5">
            {data.milestones.map((milestone, idx) => (
              <div
                key={idx}
                className={`flex items-center gap-2 text-xs ${
                  milestone.achieved
                    ? "text-yellow-700 dark:text-yellow-300"
                    : "text-muted-foreground"
                }`}
              >
                <span>{milestone.achieved ? "âœ…" : "â­•"}</span>
                <span className="flex-1">{milestone.title}</span>
                {milestone.date && (
                  <span className="text-xs text-muted-foreground">
                    {new Date(milestone.date).toLocaleDateString("zh-CN")}
                  </span>
                )}
              </div>
            ))}
          </div>
        </motion.div>
      )}
    </motion.div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Register to CardRegistry
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

registerCard("mindfulness_stats", MindfulnessStatsCard);

export default MindfulnessStatsCard;
