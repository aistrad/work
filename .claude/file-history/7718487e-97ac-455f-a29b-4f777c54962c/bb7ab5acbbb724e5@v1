"use client";

import { useState, useCallback } from "react";
import { motion, AnimatePresence } from "framer-motion";
import { cn } from "@/lib/utils";
import type { AmbientData, StatusData, Quote } from "@/types/dashboard";
import { getGreetingEmoji } from "@/lib/dashboard/greeting";

interface AmbientHeaderProps {
  ambient: AmbientData;
  status: StatusData;
  onCheckIn: () => Promise<void>;
  className?: string;
}

/**
 * AmbientHeader - Dashboard Layer 0
 *
 * åŒ…å«ï¼š
 * - æ—¶é—´é—®å€™ + æ—¥æœŸ/èŠ‚æ°”
 * - æ™ºèƒ½åè¨€
 * - ç­¾åˆ°çŠ¶æ€ + è¿ç»­å¤©æ•° + èƒ½é‡
 */
export function AmbientHeader({
  ambient,
  status,
  onCheckIn,
  className,
}: AmbientHeaderProps) {
  const [isCheckingIn, setIsCheckingIn] = useState(false);
  const [showCelebration, setShowCelebration] = useState(false);

  const handleCheckIn = useCallback(async () => {
    if (status.checkedIn || isCheckingIn) return;

    setIsCheckingIn(true);
    try {
      await onCheckIn();
      setShowCelebration(true);
      setTimeout(() => setShowCelebration(false), 2000);
    } finally {
      setIsCheckingIn(false);
    }
  }, [onCheckIn, status.checkedIn, isCheckingIn]);

  const emoji = getGreetingEmoji();

  return (
    <div
      className={cn(
        "rounded-2xl bg-white/90 backdrop-blur-sm p-6",
        "border border-gray-100 shadow-sm",
        className
      )}
    >
      {/* Header Row: Greeting + Date */}
      <div className="flex items-center justify-between mb-4">
        <h1 className="text-xl font-semibold text-gray-900">
          {emoji} {ambient.greeting}
        </h1>
        <div className="text-sm text-gray-500">
          {ambient.date}
          {ambient.solarTerm && (
            <span className="ml-2 text-amber-600">{ambient.solarTerm}</span>
          )}
        </div>
      </div>

      {/* Quote */}
      <QuoteDisplay quote={ambient.quote} />

      {/* Status Bar */}
      <StatusBar
        status={status}
        onCheckIn={handleCheckIn}
        isCheckingIn={isCheckingIn}
        showCelebration={showCelebration}
      />
    </div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Sub-components
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function QuoteDisplay({ quote }: { quote: Quote }) {
  return (
    <div className="mb-4 py-3 border-y border-gray-100">
      <p className="text-gray-600 italic">
        &ldquo;{quote.text}&rdquo;
        {quote.author && (
          <span className="text-gray-400 not-italic ml-2">â€” {quote.author}</span>
        )}
      </p>
    </div>
  );
}

interface StatusBarProps {
  status: StatusData;
  onCheckIn: () => void;
  isCheckingIn: boolean;
  showCelebration: boolean;
}

function StatusBar({
  status,
  onCheckIn,
  isCheckingIn,
  showCelebration,
}: StatusBarProps) {
  const { streak, checkedIn, energy } = status;

  // æ ¹æ®è¿ç»­å¤©æ•°æ˜¾ç¤ºç«ç„°æ•°é‡
  const getFlameCount = (days: number) => {
    if (days >= 30) return 5;
    if (days >= 14) return 4;
    if (days >= 7) return 3;
    if (days >= 3) return 2;
    return 1;
  };

  const flames = "ğŸ”¥".repeat(getFlameCount(streak));

  return (
    <div className="flex items-center justify-between">
      <div className="flex items-center gap-6">
        {/* Streak */}
        <div className="flex items-center gap-1.5">
          <AnimatePresence mode="wait">
            {showCelebration ? (
              <motion.span
                key="celebration"
                initial={{ scale: 1 }}
                animate={{ scale: [1, 1.3, 1] }}
                exit={{ scale: 1 }}
                className="text-lg"
              >
                {flames}
              </motion.span>
            ) : (
              <span className="text-lg">{flames}</span>
            )}
          </AnimatePresence>
          <span className="text-sm font-medium text-gray-700">
            {streak}å¤©è¿ç»­
          </span>
        </div>

        {/* Energy */}
        {energy !== undefined && (
          <div className="flex items-center gap-1.5">
            <span className="text-lg">ğŸ’ª</span>
            <span className="text-sm font-medium text-gray-700">
              èƒ½é‡ {energy}%
            </span>
          </div>
        )}

        {/* Checked In Status */}
        <div className="flex items-center gap-1.5">
          <span className={checkedIn ? "text-green-600" : "text-gray-400"}>
            {checkedIn ? "âœ“" : "â–¡"}
          </span>
          <span
            className={cn(
              "text-sm font-medium",
              checkedIn ? "text-green-600" : "text-gray-500"
            )}
          >
            {checkedIn ? "å·²ç­¾åˆ°" : "æœªç­¾åˆ°"}
          </span>
        </div>
      </div>

      {/* Check-in Button */}
      {!checkedIn && (
        <motion.button
          onClick={onCheckIn}
          disabled={isCheckingIn}
          whileHover={{ scale: 1.02 }}
          whileTap={{ scale: 0.98 }}
          className={cn(
            "px-4 py-2 rounded-lg text-sm font-medium",
            "bg-gradient-to-r from-amber-500 to-orange-500",
            "text-white shadow-sm",
            "hover:shadow-md transition-shadow",
            "disabled:opacity-50 disabled:cursor-not-allowed"
          )}
        >
          {isCheckingIn ? (
            <span className="flex items-center gap-2">
              <motion.span
                animate={{ rotate: 360 }}
                transition={{ repeat: Infinity, duration: 1, ease: "linear" }}
              >
                â—
              </motion.span>
              ç­¾åˆ°ä¸­...
            </span>
          ) : (
            "å¼€å§‹ä»Šå¤©"
          )}
        </motion.button>
      )}

      {/* Celebration Animation */}
      <AnimatePresence>
        {showCelebration && (
          <motion.div
            initial={{ opacity: 0, scale: 0.8 }}
            animate={{ opacity: 1, scale: 1 }}
            exit={{ opacity: 0, scale: 0.8 }}
            className="fixed inset-0 flex items-center justify-center pointer-events-none z-50"
          >
            <div className="bg-white/95 backdrop-blur-sm rounded-2xl p-8 shadow-lg text-center">
              <motion.div
                animate={{ scale: [1, 1.2, 1] }}
                transition={{ duration: 0.5 }}
                className="text-4xl mb-2"
              >
                ğŸ”¥ {streak + 1}å¤©
              </motion.div>
              <p className="text-gray-600">å¤ªæ£’äº†ï¼æ–°çš„ä¸€å¤©å¼€å§‹äº†ï¼</p>
            </div>
          </motion.div>
        )}
      </AnimatePresence>
    </div>
  );
}

export default AmbientHeader;
