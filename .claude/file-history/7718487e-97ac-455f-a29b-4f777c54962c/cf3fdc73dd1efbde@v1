"use client";

import { useState } from "react";
import { motion } from "framer-motion";
import { cn } from "@/lib/utils";

interface DiscoverCardProps {
  skillId: string;
  icon: string;
  title: string;
  tagline: string;
  description: string;
  onSubscribe: (skillId: string) => Promise<void>;
  className?: string;
}

/**
 * DiscoverCard - 未订阅 Skill 的推荐卡片
 *
 * 比 SkillCard 更紧凑，突出"可添加"的视觉效果
 */
export function DiscoverCard({
  skillId,
  icon,
  title,
  tagline,
  description,
  onSubscribe,
  className,
}: DiscoverCardProps) {
  const [isSubscribing, setIsSubscribing] = useState(false);

  const handleSubscribe = async (e: React.MouseEvent) => {
    e.stopPropagation();
    if (isSubscribing) return;

    setIsSubscribing(true);
    try {
      await onSubscribe(skillId);
    } finally {
      setIsSubscribing(false);
    }
  };

  return (
    <motion.div
      whileHover={{ scale: 1.02, borderColor: "rgba(251, 191, 36, 0.5)" }}
      className={cn(
        "w-[180px] min-h-[150px] md:w-[180px]",
        "rounded-xl p-3",
        "bg-gray-50/50 border border-dashed border-gray-300",
        "cursor-pointer transition-colors",
        className
      )}
    >
      {/* Header */}
      <div className="flex items-center gap-2 mb-2">
        <span className="text-xl">{icon}</span>
        <h3 className="font-medium text-gray-900 text-sm">{title}</h3>
      </div>

      <div className="border-t border-gray-200 pt-2 mb-3">
        {/* Tagline */}
        <p className="text-sm font-medium text-gray-700 mb-1">{tagline}</p>
        {/* Description */}
        <p className="text-xs text-gray-500 line-clamp-2">{description}</p>
      </div>

      {/* Subscribe Button */}
      <motion.button
        onClick={handleSubscribe}
        disabled={isSubscribing}
        whileTap={{ scale: 0.95 }}
        className={cn(
          "w-full py-1.5 px-2 rounded-lg text-sm font-medium",
          "border border-amber-200 bg-amber-50 text-amber-700",
          "hover:bg-amber-100 transition-colors",
          "disabled:opacity-50 disabled:cursor-not-allowed",
          "flex items-center justify-center gap-1"
        )}
      >
        {isSubscribing ? (
          <>
            <motion.span
              animate={{ rotate: 360 }}
              transition={{ repeat: Infinity, duration: 1, ease: "linear" }}
            >
              ●
            </motion.span>
            订阅中...
          </>
        ) : (
          <>
            <span>+</span>
            订阅
          </>
        )}
      </motion.button>
    </motion.div>
  );
}

export default DiscoverCard;
