"""
Mentis OS v3.0 API Server

独立的 Mentis 后端服务，不依赖 fortune_ai。
"""
from __future__ import annotations

import os
import sys
from contextlib import asynccontextmanager

from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

# 添加项目根目录到 Python 路径
sys.path.insert(0, os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from stores import mentis_db
from api import stream_routes, realtime_routes, evolve_routes


@asynccontextmanager
async def lifespan(app: FastAPI):
    """应用生命周期管理"""
    # Startup
    mentis_db.init_pool(minconn=2, maxconn=20)
    yield
    # Shutdown
    mentis_db.close_pool()


app = FastAPI(
    title="Mentis OS v3.0",
    description="Stream-Centric Agentic Personal OS",
    version="3.0.0",
    lifespan=lifespan,
)

# CORS 配置
app.add_middleware(
    CORSMiddleware,
    allow_origins=[
        "http://localhost:3000",
        "http://127.0.0.1:3000",
        os.getenv("MENTIS_FRONTEND_URL", ""),
    ],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

# 注册路由
app.include_router(stream_routes.router, prefix="/api")
app.include_router(realtime_routes.router, prefix="/api")
app.include_router(evolve_routes.router, prefix="/api")


@app.get("/health")
async def health():
    """健康检查"""
    return {"status": "ok", "service": "mentis-api", "version": "3.0.0"}


@app.get("/api/v3/ping")
async def ping():
    """API ping"""
    return {"pong": True}


if __name__ == "__main__":
    import uvicorn

    port = int(os.getenv("MENTIS_API_PORT", "8100"))
    uvicorn.run(
        "api.main:app",
        host="0.0.0.0",
        port=port,
        reload=os.getenv("MENTIS_DEV", "0") == "1",
    )
