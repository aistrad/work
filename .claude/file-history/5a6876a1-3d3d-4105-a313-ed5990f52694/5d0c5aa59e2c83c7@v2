"use client"

import { useState, useCallback, useEffect } from "react"
import { cn } from "@/lib/utils"
import { useAppStore } from "@/stores/app-store"
import { Resizer } from "./resizer"

interface DualCoreLayoutProps {
  zoneA: React.ReactNode  // Chat 区
  zoneB: React.ReactNode  // Dashboard 区
}

// 黄金分割比例常量
const DEFAULT_RATIO = 0.618  // 黄金分割比例

// 聊天区宽度限制（扩大范围，支持任意调整）
const MIN_ZONE_A_WIDTH = 320      // 最小宽度
const MAX_ZONE_A_WIDTH = 1200     // 最大宽度，支持更大的调整范围
const MIN_ZONE_B_WIDTH = 280      // Dashboard 最小宽度
const RESIZER_MAX_WIDTH = 12      // 与 Resizer 最大宽度对齐（w-3 ≈ 12px）

const STORAGE_KEY = "dual-core-layout:zone-a-width"

const clampZoneAWidth = (width: number, containerWidth: number) => {
  const maxByContainer = Math.max(
    MIN_ZONE_A_WIDTH,
    containerWidth - MIN_ZONE_B_WIDTH - RESIZER_MAX_WIDTH
  )
  const maxWidth = Math.min(MAX_ZONE_A_WIDTH, maxByContainer)
  return Math.max(MIN_ZONE_A_WIDTH, Math.min(maxWidth, Math.round(width)))
}

// 计算默认宽度（在 useEffect 中动态计算）
const getDefaultWidth = (containerWidth: number) => {
  // 聊天区占黄金分割比例
  return clampZoneAWidth(containerWidth * DEFAULT_RATIO, containerWidth)
}

export function DualCoreLayout({ zoneA, zoneB }: DualCoreLayoutProps) {
  const { isSidebarOpen, setSidebarOpen, isMobile, setIsMobile } = useAppStore()
  // 注意：不要在初始 render 里读 window/localStorage（会导致 SSR hydration mismatch）
  const [zoneAWidth, setZoneAWidth] = useState<number | null>(null)

  // 初始化：检测移动端（仅在 mount 时运行）
  useEffect(() => {
    const containerWidth = window.innerWidth
    const mobile = containerWidth < 1024
    setIsMobile(mobile)
    // 移动端默认显示 Chat（isSidebarOpen = false）
    if (mobile) {
      setSidebarOpen(false)
    }

    // Desktop: initialize zoneA width from storage (or golden ratio) after mount
    if (!mobile) {
      const storedWidth = window.localStorage.getItem(STORAGE_KEY)
      const parsedWidth = storedWidth ? Number(storedWidth) : NaN
      const next = Number.isFinite(parsedWidth)
        ? clampZoneAWidth(parsedWidth, containerWidth)
        : getDefaultWidth(containerWidth)
      const raf = window.requestAnimationFrame(() => setZoneAWidth(next))
      return () => window.cancelAnimationFrame(raf)
    }
  }, [setIsMobile, setSidebarOpen])

  // 监听窗口变化：更新移动端状态并确保宽度在合理范围
  useEffect(() => {
    const handleResize = () => {
      const containerWidth = window.innerWidth
      const mobile = containerWidth < 1024
      setIsMobile(mobile)
      if (mobile) {
        setSidebarOpen(false)
      }
      setZoneAWidth((prev) => (prev == null ? prev : clampZoneAWidth(prev, containerWidth)))
    }

    window.addEventListener("resize", handleResize)
    return () => window.removeEventListener("resize", handleResize)
  }, [setIsMobile, setSidebarOpen])

  // 持久化宽度（桌面端用户调整后保留）
  useEffect(() => {
    if (zoneAWidth == null) return
    window.localStorage.setItem(STORAGE_KEY, String(zoneAWidth))
  }, [zoneAWidth])

  // 处理 Resizer 拖拽
  const handleResize = useCallback((delta: number) => {
    setZoneAWidth((prev) => {
      const containerWidth = window.innerWidth
      const current = prev ?? getDefaultWidth(containerWidth)
      const newWidth = current + delta
      return clampZoneAWidth(newWidth, containerWidth)
    })
  }, [])

  // 双击 Resizer：恢复默认比例
  const handleReset = useCallback(() => {
    const containerWidth = window.innerWidth
    setZoneAWidth(getDefaultWidth(containerWidth))
  }, [])

  // 移动端布局
  if (isMobile) {
    return (
      <div className="h-screen w-full flex flex-col bg-background">
        {/* 主内容区 - 根据当前 tab 显示 */}
        <main className="flex-1 overflow-hidden">
          {isSidebarOpen ? zoneB : zoneA}
        </main>

        {/* 底部双 Tab 导航 */}
        <MobileTabBar />
      </div>
    )
  }

  // 桌面端布局
  // 沉浸模式：Dashboard 关闭时，Chat 区填满整个屏幕
  const isImmersive = !isSidebarOpen

  return (
    <div className="h-screen w-full flex bg-sidebar overflow-hidden">
      {/* Zone A: Chat 区 */}
      <main
        className={cn(
          "flex flex-col min-w-0 bg-background relative z-10 transition-all duration-300 ease-out",
          isImmersive ? "flex-1" : "flex-shrink-0 shadow-float"
        )}
        style={{ width: isImmersive ? "100%" : (zoneAWidth ?? "clamp(320px, 61.8vw, 1200px)") }}
      >
        {zoneA}
      </main>

      {/* Resizer - 仅在非沉浸模式显示 */}
      {!isImmersive && <Resizer onResize={handleResize} onReset={handleReset} />}

      {/* Zone B: Dashboard 区 - 自适应填充剩余宽度 */}
      <aside
        className={cn(
          "flex flex-col min-w-0 transition-all duration-300 ease-out",
          "bg-sidebar",
          isSidebarOpen
            ? "flex-1 opacity-100"
            : "w-0 opacity-0 overflow-hidden pointer-events-none"
        )}
      >
        {zoneB}
      </aside>
    </div>
  )
}

// 移动端底部导航 tabs 配置 - 包含所有入口
const MOBILE_TABS = [
  { id: "chat", label: "对话", icon: ChatIcon },
  { id: "overview", label: "概览", icon: OverviewIcon },
  { id: "status", label: "状态", icon: StatusIcon },
  { id: "trends", label: "趋势", icon: TrendsIcon },
  { id: "quests", label: "任务", icon: QuestsIcon },
  { id: "relations", label: "关系", icon: RelationsIcon },
  { id: "explore", label: "探索", icon: ExploreIcon },
  { id: "settings", label: "设置", icon: SettingsIcon },
] as const

type MobileTabId = typeof MOBILE_TABS[number]["id"]

// 移动端底部 Tab 导航 - 支持横向滚动 + 徽章 + 可访问性
function MobileTabBar() {
  const { isSidebarOpen, setSidebarOpen, activeTab, setActiveTab, pendingTaskCount } = useAppStore()

  // 计算当前激活的 tab
  const currentTab: MobileTabId = !isSidebarOpen ? "chat" : activeTab as MobileTabId

  const handleTabClick = (tabId: MobileTabId) => {
    if (tabId === "chat") {
      setSidebarOpen(false)
    } else {
      setSidebarOpen(true)
      setActiveTab(tabId as "overview" | "status" | "trends" | "quests" | "relations" | "explore" | "settings")
    }
  }

  // 获取各 Tab 的徽章数
  const getBadge = (tabId: MobileTabId): number | null => {
    if (tabId === "quests") {
      return pendingTaskCount > 0 ? pendingTaskCount : null
    }
    return null
  }

  return (
    <nav
      className={cn(
        "flex items-center",
        "h-16 border-t border-border",
        "bg-background",
        "overflow-x-auto scrollbar-none",
        "safe-area-pb" // iOS safe area
      )}
      role="tablist"
      aria-label="导航菜单"
    >
      {MOBILE_TABS.map((tab) => {
        const isActive = currentTab === tab.id
        const Icon = tab.icon
        const badge = getBadge(tab.id)

        return (
          <button
            key={tab.id}
            role="tab"
            aria-selected={isActive}
            aria-label={`${tab.label}${badge ? `, ${badge}项待处理` : ''}`}
            onClick={() => handleTabClick(tab.id)}
            className={cn(
              "relative flex flex-col items-center justify-center gap-0.5",
              "min-w-[60px] px-2 h-full flex-shrink-0",
              "text-muted-foreground transition-all duration-200",
              "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-interactive-focus-ring focus-visible:ring-inset",
              isActive && "text-foreground"
            )}
          >
            {/* 选中指示器 */}
            {isActive && (
              <div
                className="absolute top-1 w-8 h-1 rounded-full bg-foreground"
                aria-hidden="true"
              />
            )}

            {/* Icon with Badge */}
            <div className="relative">
              <Icon className={cn("w-5 h-5", isActive && "scale-110")} aria-hidden="true" />
              {/* 待办徽章 */}
              {badge !== null && (
                <span
                  className={cn(
                    "absolute -top-1 -right-2 min-w-[16px] h-4 px-1",
                    "flex items-center justify-center",
                    "text-[10px] font-bold text-white",
                    "bg-commitment-active rounded-full",
                    "animate-pulse"
                  )}
                  aria-hidden="true"
                >
                  {badge > 99 ? "99+" : badge}
                </span>
              )}
            </div>

            <span className="text-[10px] font-medium whitespace-nowrap">{tab.label}</span>
          </button>
        )
      })}
    </nav>
  )
}

// Icons
