"use client"

import { cn } from "@/lib/utils"
import type {
  Block,
  TaskBlock,
  ToggleBlock,
  DiffBlock,
  ActionButtonsBlock,
  MarkdownTextBlock,
  ActionButton,
  CommitmentBlock,
  PrescriptionBlock,
  EvidenceBlock,
  CommitmentAction
} from "@/types"
import {
  ChevronDown,
  ChevronRight,
  Check,
  Clock,
  AlertCircle,
  Play,
  Calendar,
  ExternalLink,
  X,
  Heart,
  Lightbulb,
  Circle,
  CheckCircle2,
  ArrowRight,
  Sparkles,
  FileText,
  Quote
} from "lucide-react"
import { useState } from "react"

interface BlockRendererProps {
  block: Block
  onAction?: (action: ActionButton["action"]) => void
}

function getCookie(name: string): string {
  if (typeof document === "undefined") return ""
  const match = document.cookie.match(
    new RegExp(`(?:^|; )${name.replace(/[-.]/g, "\\$&")}=([^;]*)`)
  )
  return match ? decodeURIComponent(match[1]) : ""
}

function csrfHeaders(): Record<string, string> {
  const csrf = getCookie("fortune_csrf")
  return csrf ? { "X-CSRF-Token": csrf } : {}
}

export function BlockRenderer({ block, onAction }: BlockRendererProps) {
  switch (block.type) {
    case "callout":
      return <CalloutBlock block={block} />
    case "toggle":
      return <ToggleBlockComponent block={block as ToggleBlock} />
    case "task":
      return <TaskBlockComponent block={block as TaskBlock} />
    case "diff":
      return <DiffBlockComponent block={block as DiffBlock} />
    case "action_buttons":
      return <ActionButtonsBlockComponent block={block as ActionButtonsBlock} onAction={onAction} />
    case "markdown_text":
      return <MarkdownTextBlockComponent block={block as MarkdownTextBlock} />
    case "commitment":
      return <CommitmentBlockComponent block={block as CommitmentBlock} />
    case "prescription":
      return <PrescriptionBlockComponent block={block as PrescriptionBlock} />
    case "evidence":
      return <EvidenceBlockComponent block={block as EvidenceBlock} />
    default:
      return <TextBlock block={block} />
  }
}

// Callout Block - 一句话结论
function CalloutBlock({ block }: { block: Block }) {
  return (
    <div
      className={cn(
        "flex items-start gap-3 p-4 rounded-lg",
        "bg-advice border-l-4 border-advice-foreground"
      )}
    >
      <div className="flex-shrink-0 w-6 h-6 rounded-full bg-advice-foreground/10 flex items-center justify-center">
        <Lightbulb className="w-4 h-4 text-advice-foreground" />
      </div>
      <p className="text-foreground font-medium">{block.content}</p>
    </div>
  )
}

// Toggle Block - 原因与证据 (默认折叠)
function ToggleBlockComponent({ block }: { block: ToggleBlock }) {
  const [isOpen, setIsOpen] = useState(block.isOpen ?? false)

  return (
    <div className="border border-border rounded-lg overflow-hidden">
      <button
        onClick={() => setIsOpen(!isOpen)}
        className={cn(
          "w-full flex items-center gap-2 px-4 py-3",
          "text-left hover:bg-hover transition-colors"
        )}
      >
        {isOpen ? (
          <ChevronDown className="w-4 h-4 text-muted-foreground" />
        ) : (
          <ChevronRight className="w-4 h-4 text-muted-foreground" />
        )}
        <span className="font-medium text-foreground">{block.content}</span>
      </button>

      {isOpen && block.children && (
        <div className="px-4 pb-4 pl-10 space-y-2">
          {block.children.map((child) => (
            <BlockRenderer key={child.id} block={child} />
          ))}
        </div>
      )}
    </div>
  )
}

// Task Block - 下一步行动
function TaskBlockComponent({ block }: { block: TaskBlock }) {
  const [status, setStatus] = useState(block.status ?? "pending")

  const handleComplete = () => {
    setStatus("completed")
    // TODO: 触发状态更新和 Pulse 动效
  }

  return (
    <div
      className={cn(
        "flex items-center gap-3 p-3 rounded-lg",
        "bg-sidebar border border-border",
        "transition-all duration-300",
        status === "completed" && "opacity-60"
      )}
    >
      {/* 完成按钮 */}
      <button
        onClick={handleComplete}
        disabled={status === "completed"}
        className={cn(
          "flex-shrink-0 w-5 h-5 rounded border-2",
          "transition-colors",
          status === "completed"
            ? "bg-status border-status-foreground"
            : "border-muted-foreground hover:border-foreground"
        )}
      >
        {status === "completed" && (
          <Check className="w-full h-full text-status-foreground p-0.5" />
        )}
      </button>

      {/* 任务内容 */}
      <span
        className={cn(
          "flex-1 text-foreground",
          status === "completed" && "line-through"
        )}
      >
        {block.content}
      </span>

      {/* 时长标签 */}
      <span
        className={cn(
          "flex items-center gap-1 px-2 py-1 rounded-full text-xs",
          "bg-hover text-muted-foreground"
        )}
      >
        <Clock className="w-3 h-3" />
        {block.duration}分钟
      </span>
    </div>
  )
}

// Diff Block - 回写更新
function DiffBlockComponent({ block }: { block: DiffBlock }) {
  const [status, setStatus] = useState(block.status)

  if (status === "applied" || status === "rejected") {
    return null // 已处理的不显示
  }

  return (
    <div
      className={cn(
        "p-4 rounded-lg",
        "bg-alert/50 border border-alert-foreground/20"
      )}
    >
      <div className="flex items-center gap-2 mb-3">
        <AlertCircle className="w-4 h-4 text-alert-foreground" />
        <span className="font-medium text-foreground">将更新</span>
      </div>

      {/* 变更列表 */}
      <div className="space-y-2 mb-4">
        {block.changes.map((change, i) => (
          <div key={i} className="flex items-center gap-2 text-sm">
            <span className="text-muted-foreground">{change.field}:</span>
            <span className="text-foreground">
              {typeof change.oldValue === "number" && typeof change.newValue === "number"
                ? `${change.newValue > change.oldValue ? "+" : ""}${change.newValue - change.oldValue}`
                : `${change.oldValue} → ${change.newValue}`}
            </span>
            <span className="text-muted-foreground">({change.reason})</span>
          </div>
        ))}
      </div>

      {/* 操作按钮 */}
      <div className="flex items-center gap-2">
        <button
          onClick={() => setStatus("applied")}
          className={cn(
            "flex items-center gap-1 px-3 py-1.5 rounded-lg text-sm font-medium",
            "bg-status text-status-foreground hover:opacity-90 transition-opacity"
          )}
        >
          <Check className="w-4 h-4" />
          应用更新
        </button>
        <button
          onClick={() => setStatus("rejected")}
          className={cn(
            "px-3 py-1.5 rounded-lg text-sm",
            "text-muted-foreground hover:text-foreground hover:bg-hover transition-colors"
          )}
        >
          ✎ 纠正
        </button>
        <button
          onClick={() => setStatus("paused")}
          className={cn(
            "px-3 py-1.5 rounded-lg text-sm",
            "text-muted-foreground hover:text-foreground hover:bg-hover transition-colors"
          )}
        >
          ⏸ 暂不更新
        </button>
      </div>
    </div>
  )
}

// Action Buttons Block - A2UI 操作按钮组
function ActionButtonsBlockComponent({
  block,
  onAction,
}: {
  block: ActionButtonsBlock
  onAction?: (action: ActionButton["action"]) => void
}) {
  const handleClick = async (action: ActionButton["action"]) => {
    if (onAction) {
      onAction(action)
    } else {
      // 默认处理逻辑
      switch (action.type) {
        case "start_task":
          if (action.task_id) {
            try {
              const res = await fetch("/api/dashboard/task/accept", {
                method: "POST",
                headers: { "Content-Type": "application/json", ...csrfHeaders() },
                credentials: "include",
                body: JSON.stringify({
                  task_id: action.task_id,
                  commitment_type: "start_task",
                }),
              })
              if (res.ok) {
                window.location.reload()
              }
            } catch (e) {
              console.error("Failed to start task:", e)
            }
          }
          break
        case "schedule_task":
          if (action.task_id) {
            try {
              const res = await fetch("/api/dashboard/task/accept", {
                method: "POST",
                headers: { "Content-Type": "application/json", ...csrfHeaders() },
                credentials: "include",
                body: JSON.stringify({
                  task_id: action.task_id,
                  commitment_type: "schedule_task",
                }),
              })
              if (res.ok) {
                window.location.reload()
              }
            } catch (e) {
              console.error("Failed to schedule task:", e)
            }
          }
          break
        case "open_panel":
          // 映射 panel 名称到 Tab ID
          const panelMap: Record<string, string> = {
            bento: "overview",
            quests: "quests",
            tasks: "quests",
            status: "status",
            trends: "trends",
            overview: "overview",
            relations: "relations",
            explore: "explore",
          }
          const tabId = panelMap[action.panel || ""] || action.panel
          // 触发 Tab 切换（通过 URL 或 state）
          if (typeof window !== "undefined") {
            window.dispatchEvent(
              new CustomEvent("switchTab", { detail: { tab: tabId } })
            )
          }
          break
        case "opt_out":
          // 记录用户选择暂不执行
          console.log("User opted out")
          break
        case "checkin":
          // 打开 checkin modal
          if (typeof window !== "undefined") {
            window.dispatchEvent(new CustomEvent("openCheckin"))
          }
          break
      }
    }
  }

  const getButtonIcon = (actionType: ActionButton["action"]["type"]) => {
    switch (actionType) {
      case "start_task":
        return <Play className="w-4 h-4" />
      case "schedule_task":
        return <Calendar className="w-4 h-4" />
      case "open_panel":
        return <ExternalLink className="w-4 h-4" />
      case "opt_out":
        return <X className="w-4 h-4" />
      case "checkin":
        return <Heart className="w-4 h-4" />
      default:
        return null
    }
  }

  const getButtonStyle = (actionType: ActionButton["action"]["type"], index: number) => {
    // 第一个按钮是主要按钮
    if (index === 0) {
      return "bg-primary text-primary-foreground hover:bg-primary/90"
    }
    // 其他按钮是次要按钮
    return "bg-secondary text-secondary-foreground hover:bg-secondary/80"
  }

  return (
    <div className="flex flex-wrap gap-2 mt-3">
      {block.buttons.map((button, index) => (
        <button
          key={index}
          onClick={() => handleClick(button.action)}
          className={cn(
            "flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium",
            "transition-colors duration-200",
            getButtonStyle(button.action.type, index)
          )}
        >
          {getButtonIcon(button.action.type)}
          {button.label}
        </button>
      ))}
    </div>
  )
}

// Markdown Text Block - A2UI 文本内容
function MarkdownTextBlockComponent({ block }: { block: MarkdownTextBlock }) {
  // 简单的 Markdown 解析
  const renderMarkdown = (content: string) => {
    // 处理标题
    const lines = content.split("\n")
    return lines.map((line, i) => {
      if (line.startsWith("### ")) {
        return (
          <h3 key={i} className="text-lg font-semibold mt-4 mb-2 text-foreground">
            {line.replace("### ", "")}
          </h3>
        )
      }
      if (line.startsWith("## ")) {
        return (
          <h2 key={i} className="text-xl font-bold mt-4 mb-2 text-foreground">
            {line.replace("## ", "")}
          </h2>
        )
      }
      if (line.startsWith("# ")) {
        return (
          <h1 key={i} className="text-2xl font-bold mt-4 mb-2 text-foreground">
            {line.replace("# ", "")}
          </h1>
        )
      }
      if (line.startsWith("- ")) {
        return (
          <li key={i} className="ml-4 text-foreground">
            {renderInlineMarkdown(line.replace("- ", ""))}
          </li>
        )
      }
      if (line.startsWith("> ")) {
        return (
          <blockquote key={i} className="border-l-4 border-primary pl-4 my-2 text-muted-foreground italic">
            {renderInlineMarkdown(line.replace("> ", ""))}
          </blockquote>
        )
      }
      if (line.trim() === "") {
        return <br key={i} />
      }
      return (
        <p key={i} className="text-foreground leading-relaxed">
          {renderInlineMarkdown(line)}
        </p>
      )
    })
  }

  // 处理行内 Markdown（粗体、斜体）
  const renderInlineMarkdown = (text: string) => {
    // 处理 **bold**
    const parts = text.split(/(\*\*[^*]+\*\*)/g)
    return parts.map((part, i) => {
      if (part.startsWith("**") && part.endsWith("**")) {
        return (
          <strong key={i} className="font-semibold">
            {part.slice(2, -2)}
          </strong>
        )
      }
      return part
    })
  }

  return (
    <div className="prose prose-neutral dark:prose-invert max-w-none">
      {block.title && (
        <h4 className="text-sm font-medium text-muted-foreground mb-2">{block.title}</h4>
      )}
      {renderMarkdown(block.content)}
    </div>
  )
}

// 普通文本 Block
function TextBlock({ block }: { block: Block }) {
  return <p className="text-foreground leading-relaxed">{block.content}</p>
}

// Commitment Block - A2UI 承诺行动卡片
function CommitmentBlockComponent({ block }: { block: CommitmentBlock }) {
  const [status, setStatus] = useState(block.status)
  const [isLoading, setIsLoading] = useState(false)

  // 状态机配色 - 使用语义化 Token
  const statusStyles = {
    suggested: "border-l-commitment-suggested bg-commitment-suggested/5",
    active: "border-l-commitment-active bg-commitment-active/5",
    done: "border-l-commitment-done bg-commitment-done/5",
    skipped: "border-l-commitment-skipped bg-commitment-skipped/5 opacity-60"
  }

  const statusLabels = {
    suggested: "待决定",
    active: "进行中",
    done: "已完成",
    skipped: "已跳过"
  }

  const handleAction = async (action: CommitmentAction) => {
    setIsLoading(true)
    try {
      const res = await fetch("/api/dashboard/task/commit", {
        method: "POST",
        headers: { "Content-Type": "application/json", ...csrfHeaders() },
        credentials: "include",
        body: JSON.stringify({
          task_id: block.taskId,
          action: action
        })
      })

      if (res.ok) {
        // 更新本地状态
        if (action === "start") setStatus("active")
        if (action === "complete") setStatus("done")
        if (action === "skip") setStatus("skipped")

        // 触发 Zone B 刷新
        window.dispatchEvent(new CustomEvent("refreshDashboard"))
      }
    } catch (e) {
      console.error("Commitment action failed:", e)
    } finally {
      setIsLoading(false)
    }
  }

  return (
    <div
      className={cn(
        "p-4 rounded-lg border-l-4 border border-border",
        "transition-all duration-300",
        statusStyles[status]
      )}
      role="article"
      aria-label={`任务: ${block.taskTitle}, 状态: ${statusLabels[status]}`}
    >
      {/* Header */}
      <div className="flex items-start justify-between mb-3">
        <div className="flex items-center gap-2">
          {status === "done" ? (
            <CheckCircle2 className="w-5 h-5 text-commitment-done" aria-hidden="true" />
          ) : status === "active" ? (
            <Circle className="w-5 h-5 text-commitment-active" aria-hidden="true" />
          ) : (
            <Sparkles className="w-5 h-5 text-commitment-suggested" aria-hidden="true" />
          )}
          <h4 className="font-medium text-foreground">{block.taskTitle}</h4>
        </div>
        {block.estimatedDuration && (
          <span className="flex items-center gap-1 px-2 py-1 rounded-full text-xs bg-surface-muted text-text-secondary">
            <Clock className="w-3 h-3" aria-hidden="true" />
            {block.estimatedDuration}
          </span>
        )}
      </div>

      {/* Content/Evidence */}
      {block.content && (
        <p className="text-sm text-muted-foreground mb-3 leading-relaxed">
          {block.content}
        </p>
      )}

      {/* Evidence List */}
      {block.evidence && block.evidence.length > 0 && (
        <div className="mb-4 p-3 rounded bg-surface-muted/50">
          <p className="text-xs font-medium text-text-secondary mb-2">基于以下证据:</p>
          <ul className="space-y-1">
            {block.evidence.map((e, i) => (
              <li key={i} className="text-xs text-muted-foreground flex items-start gap-2">
                <Quote className="w-3 h-3 mt-0.5 flex-shrink-0" aria-hidden="true" />
                {e}
              </li>
            ))}
          </ul>
        </div>
      )}

      {/* Action Buttons */}
      {(status === "suggested" || status === "active") && (
        <div className="flex flex-wrap gap-2">
          {status === "suggested" && (
            <>
              <button
                type="button"
                onClick={() => handleAction("start")}
                disabled={isLoading}
                aria-label={`立即开始 ${block.taskTitle}`}
                className={cn(
                  "flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium",
                  "bg-primary text-primary-foreground hover:bg-primary/90",
                  "transition-colors duration-200",
                  "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-interactive-focus-ring",
                  "disabled:opacity-50 disabled:cursor-not-allowed"
                )}
              >
                <Play className="w-4 h-4" aria-hidden="true" />
                立即开始
              </button>
              <button
                type="button"
                onClick={() => handleAction("schedule")}
                disabled={isLoading}
                aria-label={`稍后安排 ${block.taskTitle}`}
                className={cn(
                  "flex items-center gap-2 px-4 py-2 rounded-lg text-sm",
                  "bg-surface-muted text-foreground hover:bg-hover",
                  "transition-colors duration-200",
                  "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-interactive-focus-ring"
                )}
              >
                <Calendar className="w-4 h-4" aria-hidden="true" />
                稍后安排
              </button>
              <button
                type="button"
                onClick={() => handleAction("skip")}
                disabled={isLoading}
                aria-label={`跳过 ${block.taskTitle}`}
                className={cn(
                  "px-4 py-2 rounded-lg text-sm",
                  "text-muted-foreground hover:text-foreground hover:bg-hover",
                  "transition-colors duration-200",
                  "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-interactive-focus-ring"
                )}
              >
                暂不需要
              </button>
            </>
          )}
          {status === "active" && (
            <button
              type="button"
              onClick={() => handleAction("complete")}
              disabled={isLoading}
              aria-label={`完成 ${block.taskTitle}`}
              className={cn(
                "flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium",
                "bg-commitment-done text-white hover:opacity-90",
                "transition-colors duration-200",
                "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-interactive-focus-ring"
              )}
            >
              <Check className="w-4 h-4" aria-hidden="true" />
              标记完成
            </button>
          )}
        </div>
      )}

      {/* Status Badge for completed/skipped */}
      {(status === "done" || status === "skipped") && (
        <div className="flex items-center gap-2 text-sm text-muted-foreground">
          {status === "done" ? (
            <>
              <Check className="w-4 h-4 text-commitment-done" aria-hidden="true" />
              <span>已完成</span>
            </>
          ) : (
            <>
              <X className="w-4 h-4" aria-hidden="true" />
              <span>已跳过</span>
            </>
          )}
        </div>
      )}
    </div>
  )
}

// Prescription Block - 处方/建议卡片
function PrescriptionBlockComponent({ block }: { block: PrescriptionBlock }) {
  const priorityStyles = {
    high: "border-l-destructive",
    medium: "border-l-alert-foreground",
    low: "border-l-muted"
  }

  return (
    <div
      className="p-4 rounded-lg border border-border bg-surface-elevated"
      role="article"
      aria-label={`建议: ${block.title}`}
    >
      {/* Header */}
      <div className="flex items-center gap-2 mb-4">
        <div className="w-8 h-8 rounded-full bg-mystic flex items-center justify-center">
          <FileText className="w-4 h-4 text-mystic-foreground" aria-hidden="true" />
        </div>
        <div>
          <h4 className="font-medium text-foreground">{block.title}</h4>
          {block.source && (
            <p className="text-xs text-muted-foreground">来源: {block.source}</p>
          )}
        </div>
      </div>

      {/* Content */}
      {block.content && (
        <p className="text-sm text-muted-foreground mb-4 leading-relaxed">
          {block.content}
        </p>
      )}

      {/* Items List */}
      <div className="space-y-2 mb-4">
        {block.items.map((item) => (
          <div
            key={item.id}
            className={cn(
              "p-3 rounded-lg bg-surface-muted/50 border-l-4",
              priorityStyles[item.priority || "medium"]
            )}
          >
            <div className="flex items-start justify-between">
              <div className="flex-1">
                <h5 className="font-medium text-foreground text-sm">{item.title}</h5>
                {item.description && (
                  <p className="text-xs text-muted-foreground mt-1">{item.description}</p>
                )}
              </div>
              {item.duration && (
                <span className="text-xs text-muted-foreground flex items-center gap-1">
                  <Clock className="w-3 h-3" aria-hidden="true" />
                  {item.duration}
                </span>
              )}
            </div>
          </div>
        ))}
      </div>

      {/* Next Step Suggestion */}
      {block.nextStepSuggestion && (
        <div className="p-3 rounded-lg bg-advice/50 border border-advice-foreground/20">
          <div className="flex items-start gap-2">
            <ArrowRight className="w-4 h-4 text-advice-foreground mt-0.5" aria-hidden="true" />
            <p className="text-sm text-foreground">
              <span className="font-medium">下一步建议:</span> {block.nextStepSuggestion}
            </p>
          </div>
        </div>
      )}
    </div>
  )
}

// Evidence Block - 证据引用块
function EvidenceBlockComponent({ block }: { block: EvidenceBlock }) {
  return (
    <div
      className="p-4 rounded-lg border border-border bg-surface-subtle"
      role="complementary"
      aria-label="证据引用"
    >
      <div className="flex items-center gap-2 mb-3">
        <Quote className="w-4 h-4 text-muted-foreground" aria-hidden="true" />
        <span className="text-sm font-medium text-muted-foreground">参考依据</span>
      </div>

      <div className="space-y-3">
        {block.references.map((ref) => (
          <div key={ref.id} className="p-3 rounded bg-surface-elevated border border-border">
            <p className="text-sm text-foreground leading-relaxed">{ref.text}</p>
            <div className="flex items-center justify-between mt-2">
              <span className="text-xs text-muted-foreground">{ref.source}</span>
              {ref.confidence !== undefined && (
                <span
                  className={cn(
                    "text-xs px-2 py-0.5 rounded-full",
                    ref.confidence >= 0.8
                      ? "bg-status/20 text-status-foreground"
                      : ref.confidence >= 0.5
                        ? "bg-alert/20 text-alert-foreground"
                        : "bg-muted/20 text-muted-foreground"
                  )}
                >
                  可信度 {Math.round(ref.confidence * 100)}%
                </span>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  )
}
