"use client";

/**
 * Bazi Route Layout
 * 八字命理专属布局 - 强制设置 skill="bazi"
 */

import { ReactNode, useEffect, Suspense } from "react";
import { useSkill } from "@/providers";
import { ErrorBoundary, ErrorFallback } from "@/components/error";
import { VibeGlyph, LuminousPaper } from "@/components/core";

// Loading fallback for Suspense
function BaziLoading() {
  return (
    <LuminousPaper skill="bazi" variant="default" className="min-h-screen">
      <div className="flex items-center justify-center min-h-screen">
        <VibeGlyph size="md" skill="bazi" showAura={true} animate={true} />
      </div>
    </LuminousPaper>
  );
}

// Error fallback for ErrorBoundary
function BaziErrorFallback() {
  return (
    <LuminousPaper skill="bazi" variant="default" className="min-h-screen">
      <ErrorFallback
        error={new Error("八字命理功能暂时不可用")}
        resetError={() => window.location.reload()}
      />
    </LuminousPaper>
  );
}

export default function BaziLayout({ children }: { children: ReactNode }) {
  const { setSkill } = useSkill();

  // 确保进入 bazi 路由时设置正确的 skill
  useEffect(() => {
    setSkill("bazi");
    document.cookie = `vibelife-skill=bazi; path=/; max-age=${60 * 60 * 24 * 365}`;
  }, [setSkill]);

  return (
    <ErrorBoundary fallback={<BaziErrorFallback />}>
      <Suspense fallback={<BaziLoading />}>
        {children}
      </Suspense>
    </ErrorBoundary>
  );
}
