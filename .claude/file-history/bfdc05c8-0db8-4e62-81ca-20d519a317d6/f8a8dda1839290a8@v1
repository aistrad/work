"use client";

/**
 * Skeleton Components - Loading placeholders
 * Provides visual feedback during content loading
 */

import { cn } from "@/lib/utils";

// ═══════════════════════════════════════════════════════════════════════════
// Base Skeleton
// ═══════════════════════════════════════════════════════════════════════════

interface SkeletonProps {
  className?: string;
}

export function Skeleton({ className }: SkeletonProps) {
  return (
    <div
      className={cn(
        "animate-pulse rounded-md bg-muted/50",
        className
      )}
    />
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Chat Page Skeleton
// ═══════════════════════════════════════════════════════════════════════════

export function ChatPageSkeleton() {
  return (
    <div className="flex flex-col h-full">
      {/* Greeting card skeleton */}
      <div className="max-w-xl mx-auto px-4 py-6 w-full">
        <div className="rounded-xl border border-border/50 overflow-hidden">
          {/* Header */}
          <div className="px-4 py-3 bg-muted/30 border-b border-border/30">
            <div className="flex items-center gap-2">
              <Skeleton className="w-4 h-4 rounded" />
              <Skeleton className="w-16 h-4" />
              <Skeleton className="w-20 h-5 rounded-full" />
            </div>
          </div>
          {/* Body */}
          <div className="p-4 space-y-3">
            <div className="flex items-start gap-3">
              <Skeleton className="w-8 h-8 rounded-lg" />
              <div className="flex-1 space-y-2">
                <Skeleton className="w-32 h-4" />
                <Skeleton className="w-48 h-3" />
              </div>
            </div>
            <div className="flex items-start gap-3">
              <Skeleton className="w-8 h-8 rounded-lg" />
              <div className="flex-1 space-y-2">
                <Skeleton className="w-24 h-3" />
                <Skeleton className="w-40 h-4" />
              </div>
            </div>
          </div>
        </div>

        {/* Glyph placeholder */}
        <div className="flex justify-center my-6">
          <Skeleton className="w-12 h-12 rounded-full" />
        </div>

        {/* Title and subtitle */}
        <div className="text-center mb-4">
          <Skeleton className="w-40 h-6 mx-auto mb-2" />
          <Skeleton className="w-56 h-4 mx-auto" />
        </div>

        {/* Quick prompts skeleton */}
        <div className="grid grid-cols-1 sm:grid-cols-2 gap-2">
          {[1, 2, 3, 4].map((i) => (
            <div key={i} className="p-3 rounded-xl border border-border/50">
              <div className="flex items-start gap-2.5">
                <Skeleton className="w-6 h-6 rounded" />
                <div className="flex-1 space-y-1.5">
                  <Skeleton className="w-16 h-2.5" />
                  <Skeleton className="w-full h-4" />
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Message Skeleton
// ═══════════════════════════════════════════════════════════════════════════

export function MessageSkeleton({ isUser = false }: { isUser?: boolean }) {
  return (
    <div className={cn("flex gap-3 mb-4", isUser && "flex-row-reverse")}>
      <Skeleton className="w-8 h-8 rounded-full flex-shrink-0" />
      <div className={cn("flex-1 max-w-[80%]", isUser && "text-right")}>
        <Skeleton className={cn("h-20 rounded-2xl", isUser ? "w-40 ml-auto" : "w-64")} />
      </div>
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Card Skeleton
// ═══════════════════════════════════════════════════════════════════════════

export function CardSkeleton() {
  return (
    <div className="p-6 rounded-2xl border border-border/50">
      <div className="flex items-start justify-between mb-4">
        <Skeleton className="w-12 h-12 rounded-xl" />
        <Skeleton className="w-5 h-5" />
      </div>
      <Skeleton className="w-24 h-6 mb-2" />
      <Skeleton className="w-32 h-4 mb-2" />
      <Skeleton className="w-full h-3" />
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Home Page Skeleton
// ═══════════════════════════════════════════════════════════════════════════

export function HomePageSkeleton() {
  return (
    <div className="min-h-screen p-6">
      {/* Header */}
      <div className="flex items-center gap-2 mb-12">
        <Skeleton className="w-8 h-8 rounded" />
        <Skeleton className="w-20 h-5" />
      </div>

      {/* Title */}
      <div className="text-center mb-12">
        <Skeleton className="w-72 h-10 mx-auto mb-4" />
        <Skeleton className="w-48 h-5 mx-auto" />
      </div>

      {/* Cards Grid */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
        {[1, 2, 3, 4, 5].map((i) => (
          <CardSkeleton key={i} />
        ))}
      </div>
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Thinking Indicator (AI Typing)
// ═══════════════════════════════════════════════════════════════════════════

export function ThinkingIndicator({ className }: { className?: string }) {
  return (
    <div className={cn("flex items-center gap-1 px-4 py-3", className)}>
      <span className="w-2 h-2 rounded-full bg-skill-primary/60 animate-bounce [animation-delay:-0.3s]" />
      <span className="w-2 h-2 rounded-full bg-skill-primary/60 animate-bounce [animation-delay:-0.15s]" />
      <span className="w-2 h-2 rounded-full bg-skill-primary/60 animate-bounce" />
    </div>
  );
}

export default Skeleton;
