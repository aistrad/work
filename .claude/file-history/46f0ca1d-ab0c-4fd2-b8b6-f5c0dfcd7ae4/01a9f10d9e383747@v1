import { motion } from "framer-motion";
import { cn } from "@/lib/utils";

interface Lever {
  id: string;
  text: string;
  completed: boolean;
}

interface TodayPriorityCardProps {
  levers: Lever[];
  fortuneHint?: string;
  onStartFocus?: (leverId: string) => void;
  className?: string;
}

export function TodayPriorityCard({
  levers,
  fortuneHint,
  onStartFocus,
  className,
}: TodayPriorityCardProps) {
  // æ‰¾åˆ°ç¬¬ä¸€ä¸ªæœªå®Œæˆçš„æ æ†ä½œä¸ºä¸»è¦ä»»åŠ¡
  const primaryLever = levers.find((l) => !l.completed);
  const otherLevers = levers.filter(
    (l) => !l.completed && l.id !== primaryLever?.id
  );

  if (!primaryLever) {
    return (
      <div
        className={cn(
          "rounded-2xl bg-gradient-to-br from-emerald-50 to-green-50",
          "dark:from-emerald-950/30 dark:to-green-950/20",
          "p-4 border border-emerald-100/50 dark:border-emerald-800/30",
          className
        )}
      >
        <div className="flex items-center gap-2 text-emerald-700 dark:text-emerald-300">
          <span className="text-lg">âœ¨</span>
          <span className="text-sm font-medium">ä»Šæ—¥ä»»åŠ¡å·²å®Œæˆ</span>
        </div>
        <p className="mt-2 text-xs text-emerald-600 dark:text-emerald-400">
          å¤ªæ£’äº†ï¼äº«å—ä½ çš„æˆå°±æ„Ÿå§
        </p>
      </div>
    );
  }

  return (
    <div
      className={cn(
        "rounded-2xl bg-gradient-to-br from-sky-50 to-blue-50",
        "dark:from-sky-950/30 dark:to-blue-950/20",
        "p-4 border border-sky-100/50 dark:border-sky-800/30",
        className
      )}
    >
      {/* æ ‡é¢˜ */}
      <div className="flex items-center gap-2 mb-3">
        <span className="text-lg">ğŸ¯</span>
        <span className="text-sm font-medium text-sky-900 dark:text-sky-100">
          ä»Šå¤©æœ€é‡è¦
        </span>
      </div>

      {/* ä¸»è¦ä»»åŠ¡ */}
      <div className="bg-white/60 dark:bg-white/5 rounded-xl p-3 border border-sky-100 dark:border-sky-800/50 mb-3">
        <div className="flex items-start gap-2">
          <span className="text-sky-500 text-sm mt-0.5">â­</span>
          <div className="flex-1 min-w-0">
            <p className="text-sm font-medium text-sky-900 dark:text-sky-100 line-clamp-2">
              {primaryLever.text}
            </p>
            {fortuneHint && (
              <p className="mt-1.5 text-xs text-sky-600 dark:text-sky-400 flex items-center gap-1">
                <span className="text-amber-500">ğŸ’¡</span>
                {fortuneHint}
              </p>
            )}
          </div>
        </div>

        {/* å¼€å§‹ä¸“æ³¨æŒ‰é’® */}
        {onStartFocus && (
          <motion.button
            whileHover={{ scale: 1.02 }}
            whileTap={{ scale: 0.98 }}
            onClick={() => onStartFocus(primaryLever.id)}
            className="mt-3 w-full py-2 px-4 rounded-lg bg-sky-500 hover:bg-sky-600 text-white text-xs font-medium transition-colors flex items-center justify-center gap-1.5"
          >
            <span>ğŸš€</span>
            <span>å¼€å§‹ä¸“æ³¨</span>
          </motion.button>
        )}
      </div>

      {/* å…¶ä»–å¾…åŠ */}
      {otherLevers.length > 0 && (
        <div className="space-y-1.5">
          {otherLevers.slice(0, 2).map((lever) => (
            <div
              key={lever.id}
              className="flex items-center gap-2 px-2 py-1.5 rounded-lg bg-white/40 dark:bg-white/5"
            >
              <span className="text-sky-400 text-xs">â†’</span>
              <span className="flex-1 text-xs text-sky-800 dark:text-sky-200 truncate">
                {lever.text}
              </span>
            </div>
          ))}
        </div>
      )}
    </div>
  );
