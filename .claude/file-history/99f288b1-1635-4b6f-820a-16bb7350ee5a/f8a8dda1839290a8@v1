"use client";

/**
 * Skeleton Components - v7.1 Linear 风格设计系统
 * Shimmer 加载效果
 * Vercel rule: rerender-memo
 */

import { memo } from "react";
import { cn } from "@/lib/utils";

// ═══════════════════════════════════════════════════════════════════════════
// Base Skeleton - Shimmer 效果
// ═══════════════════════════════════════════════════════════════════════════

interface SkeletonProps {
  className?: string;
}

export const Skeleton = memo(function Skeleton({ className }: SkeletonProps) {
  return (
    <div className={cn("skeleton", className)} />
  );
});

// ═══════════════════════════════════════════════════════════════════════════
// Text Skeleton - 文本占位
// ═══════════════════════════════════════════════════════════════════════════

interface TextSkeletonProps {
  lines?: number;
  className?: string;
}

export const TextSkeleton = memo(function TextSkeleton({ lines = 3, className }: TextSkeletonProps) {
  return (
    <div className={cn("space-y-2", className)}>
      {Array.from({ length: lines }).map((_, i) => (
        <Skeleton
          key={i}
          className={cn(
            "h-4 rounded",
            i === lines - 1 ? "w-2/3" : "w-full"
          )}
        />
      ))}
    </div>
  );
});

// ═══════════════════════════════════════════════════════════════════════════
// Card Skeleton - 卡片占位
// ═══════════════════════════════════════════════════════════════════════════

interface CardSkeletonProps {
  lines?: number;
  showHeader?: boolean;
  className?: string;
}

export const CardSkeleton = memo(function CardSkeleton({ lines = 3, showHeader = true, className }: CardSkeletonProps) {
  return (
    <div className={cn("p-4 rounded-xl bg-bg-card shadow-card", className)}>
      {showHeader && (
        <div className="flex items-center gap-3 mb-4">
          <Skeleton className="w-10 h-10 rounded-lg" />
          <div className="flex-1 space-y-2">
            <Skeleton className="h-4 w-24 rounded" />
            <Skeleton className="h-3 w-32 rounded" />
          </div>
        </div>
      )}
      <TextSkeleton lines={lines} />
    </div>
  );
});

// ═══════════════════════════════════════════════════════════════════════════
// List Skeleton - 列表占位
// ═══════════════════════════════════════════════════════════════════════════

interface ListSkeletonProps {
  count?: number;
  className?: string;
}

export const ListSkeleton = memo(function ListSkeleton({ count = 3, className }: ListSkeletonProps) {
  return (
    <div className={cn("space-y-3", className)}>
      {Array.from({ length: count }).map((_, i) => (
        <div key={i} className="flex items-center gap-3 p-3 rounded-xl bg-bg-card shadow-card">
          <Skeleton className="w-8 h-8 rounded-lg flex-shrink-0" />
          <div className="flex-1 space-y-2">
            <Skeleton className="h-4 w-1/3 rounded" />
            <Skeleton className="h-3 w-2/3 rounded" />
          </div>
        </div>
      ))}
    </div>
  );
});

// ═══════════════════════════════════════════════════════════════════════════
// Chat Page Skeleton
// ═══════════════════════════════════════════════════════════════════════════

export const ChatPageSkeleton = memo(function ChatPageSkeleton() {
  return (
    <div className="flex flex-col h-full">
      {/* Greeting card skeleton */}
      <div className="w-full md:max-w-xl mx-auto px-4 py-6">
        <div className="rounded-xl overflow-hidden bg-bg-card shadow-card">
          {/* Header */}
          <div className="px-4 py-3 bg-bg-secondary">
            <div className="flex items-center gap-2">
              <Skeleton className="w-4 h-4 rounded" />
              <Skeleton className="w-16 h-4 rounded" />
              <Skeleton className="w-20 h-5 rounded-full" />
            </div>
          </div>
          {/* Body */}
          <div className="p-4 space-y-3">
            <div className="flex items-start gap-3">
              <Skeleton className="w-8 h-8 rounded-lg" />
              <div className="flex-1 space-y-2">
                <Skeleton className="w-32 h-4 rounded" />
                <Skeleton className="w-48 h-3 rounded" />
              </div>
            </div>
            <div className="flex items-start gap-3">
              <Skeleton className="w-8 h-8 rounded-lg" />
              <div className="flex-1 space-y-2">
                <Skeleton className="w-24 h-3 rounded" />
                <Skeleton className="w-40 h-4 rounded" />
              </div>
            </div>
          </div>
        </div>

        {/* Glyph placeholder */}
        <div className="flex justify-center my-6">
          <Skeleton className="w-12 h-12 rounded-full" />
        </div>

        {/* Title and subtitle */}
        <div className="text-center mb-4">
          <Skeleton className="w-40 h-6 mx-auto mb-2 rounded" />
          <Skeleton className="w-56 h-4 mx-auto rounded" />
        </div>

        {/* Quick prompts skeleton */}
        <div className="grid grid-cols-1 sm:grid-cols-2 gap-2">
          {[1, 2, 3, 4].map((i) => (
            <div key={i} className="p-3 rounded-xl bg-bg-card shadow-card">
              <div className="flex items-start gap-2.5">
                <Skeleton className="w-6 h-6 rounded" />
                <div className="flex-1 space-y-1.5">
                  <Skeleton className="w-16 h-2.5 rounded" />
                  <Skeleton className="w-full h-4 rounded" />
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  );
});

// ═══════════════════════════════════════════════════════════════════════════
// Message Skeleton
// ═══════════════════════════════════════════════════════════════════════════

export const MessageSkeleton = memo(function MessageSkeleton({ isUser = false }: { isUser?: boolean }) {
  return (
    <div className={cn("flex gap-3 mb-4", isUser && "flex-row-reverse")}>
      <Skeleton className="w-8 h-8 rounded-full flex-shrink-0" />
      <div className={cn("flex-1 max-w-[80%]", isUser && "text-right")}>
        <Skeleton className={cn("h-16 rounded-xl", isUser ? "w-40 ml-auto" : "w-64")} />
      </div>
    </div>
  );
});

// ═══════════════════════════════════════════════════════════════════════════
// Home Page Skeleton
// ═══════════════════════════════════════════════════════════════════════════

export const HomePageSkeleton = memo(function HomePageSkeleton() {
  return (
    <div className="min-h-screen p-6">
      {/* Header */}
      <div className="flex items-center gap-2 mb-12">
        <Skeleton className="w-8 h-8 rounded" />
        <Skeleton className="w-20 h-5 rounded" />
      </div>

      {/* Title */}
      <div className="text-center mb-12">
        <Skeleton className="w-72 h-10 mx-auto mb-4 rounded" />
        <Skeleton className="w-48 h-5 mx-auto rounded" />
      </div>

      {/* Cards Grid */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
        {[1, 2, 3, 4, 5].map((i) => (
          <CardSkeleton key={i} />
        ))}
      </div>
    </div>
  );
});

// ═══════════════════════════════════════════════════════════════════════════
// Page Skeleton - 通用页面骨架
// ═══════════════════════════════════════════════════════════════════════════

interface PageSkeletonProps {
  showHeader?: boolean;
  showSidebar?: boolean;
  className?: string;
}

export const PageSkeleton = memo(function PageSkeleton({ showHeader = true, showSidebar = false, className }: PageSkeletonProps) {
  return (
    <div className={cn("min-h-screen bg-bg-primary", className)}>
      {showHeader && (
        <div className="h-14 bg-bg-card shadow-card px-4 flex items-center gap-4">
          <Skeleton className="w-8 h-8 rounded" />
          <Skeleton className="w-32 h-5 rounded" />
          <div className="flex-1" />
          <Skeleton className="w-8 h-8 rounded-full" />
        </div>
      )}
      <div className="flex">
        {showSidebar && (
          <div className="w-60 bg-bg-card shadow-card p-4 space-y-2">
            {[1, 2, 3, 4, 5].map((i) => (
              <Skeleton key={i} className="h-10 rounded-lg" />
            ))}
          </div>
        )}
        <div className="flex-1 p-6">
          <Skeleton className="w-48 h-8 mb-6 rounded" />
          <div className="grid gap-4 md:grid-cols-2">
            <CardSkeleton lines={4} />
            <CardSkeleton lines={3} />
          </div>
          <div className="mt-6">
            <ListSkeleton count={3} />
          </div>
        </div>
      </div>
    </div>
  );
});

// ═══════════════════════════════════════════════════════════════════════════
// Thinking Indicator - AI 思考中
// ═══════════════════════════════════════════════════════════════════════════

export const ThinkingIndicator = memo(function ThinkingIndicator({ className }: { className?: string }) {
  return (
    <div className={cn("flex items-center gap-1 px-4 py-3", className)}>
      <span className="streaming-dots">
        <span />
        <span />
        <span />
      </span>
    </div>
  );
});

export default Skeleton;
