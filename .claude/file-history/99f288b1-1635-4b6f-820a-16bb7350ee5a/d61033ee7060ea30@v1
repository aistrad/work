function Counter() {
  const [count, setCount] = useState(0);

  // æ¯æ¬¡æ¸²æŸ“éƒ½æ˜¯æ–°å‡½æ•°
  const increment = () => setCount(count + 1);

  return <Button onClick={increment}>+1</Button>;
}

// âœ… æ­£ç¡®: ä½¿ç”¨å‡½æ•°å¼æ›´æ–°
function Counter() {
  const [count, setCount] = useState(0);

  // ç¨³å®šå¼•ç”¨ï¼Œä¸ä¾èµ– count
  const increment = useCallback(() => {
    setCount(prev => prev + 1);
  }, []);

  return <Button onClick={increment}>+1</Button>;
}
