// åœ¨ç”¨æˆ·ç™»å½•åé¢„åŠ è½½ VibeID æ•°æ® (bundle-preload)
function useVibeIDPrefetch() {
  const { user } = useAuth();

  useEffect(() => {
    if (user?.id) {
      // é¢„çƒ­ SWR ç¼“å­˜
      preload(`/api/vibe-id/${user.id}`, fetcher);
