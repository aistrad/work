  type: 'tool_call';
  data: {
    tool_name: string;      // ä¾‹å¦‚ "show_bazi_chart"
    tool_id: string;        // å”¯ä¸€è°ƒç”¨ID
    arguments: Record<string, unknown>;
  };
}

interface ToolResultEvent {
  type: 'tool_result';
  data: {
    tool_name: string;
    tool_id: string;
    result: Record<string, unknown>;  // ç”¨äºå¡ç‰‡æ¸²æŸ“çš„ç»“æ„åŒ–æ•°æ®
    skill_id?: string;                // æ‰€å±æŠ€èƒ½
