# Google Drive 上传配置
# vibelife-xhs 内容自动上传设置

# 上传规则
upload:
  # 是否启用（需同时设置环境变量 GDRIVE_ENABLED=1）
  enabled: true

  # 扫描目录（相对于 skill 目录）
  content_dir: "content"

  # 文件命名格式
  # 可用变量：{date}, {timeslot}, {skill}, {version}
  filename_format: "{date}-{timeslot}-{skill}-{version}.md"

  # 上传哪些状态的内容
  upload_status:
    - draft  # 已生成草稿
    - published  # 已发布

  # 版本策略
  version_policy: all  # all: 上传所有版本, latest: 只上传最新版本

  # Google Drive 文件夹结构
  folder_structure:
    # 按月份分文件夹
    by_month: true
    # 月份格式
    month_format: "%Y-%m"
    # 示例：VibeLife-XHS/2026-01/2026-01-27-afternoon-zodiac-v1.md

# 上传后行为
post_upload:
  # 更新 calendar.yaml 的 uploaded_at 字段
  update_calendar: true
  # 添加文件 ID 到 calendar
  track_file_id: true

# 排除规则
exclude:
  # 排除的文件模式
  patterns:
    - "*.tmp"
    - "*.bak"
    - ".DS_Store"
  # 排除的 skill
  skills: []
