import type { NextConfig } from "next";

const API_PROXY_TARGET =
  process.env.NEXT_PUBLIC_API_PROXY_TARGET ||
  process.env.API_PROXY_TARGET ||
  "http://127.0.0.1:8230";

const nextConfig: NextConfig = {
  basePath: "/new",
  output: "standalone",
  devIndicators: false,
  turbopack: {
    // Force Turbopack workspace root to the current app directory.
    root: process.cwd(),
  },
  async rewrites() {
    return [
      // Proxy legacy chat stream to FastAPI
      {
        source: "/api/chat/stream",
        destination: `${API_PROXY_TARGET}/api/chat/stream`,
        basePath: false,
      },
      // Proxy other API requests (explicit paths instead of regex capture)
      {
        source: "/api/chat/send",
        destination: `${API_PROXY_TARGET}/api/chat/send`,
        basePath: false,
      },
      {
        source: "/api/chat/ask",
        destination: `${API_PROXY_TARGET}/api/chat/ask`,
        basePath: false,
      },
      {
        source: "/api/auth/:path*",
        destination: `${API_PROXY_TARGET}/api/auth/:path*`,
        basePath: false,
      },
      {
        source: "/api/user/:path*",
        destination: `${API_PROXY_TARGET}/api/user/:path*`,
        basePath: false,
      },
      {
        source: "/api/dashboard/:path*",
        destination: `${API_PROXY_TARGET}/api/dashboard/:path*`,
        basePath: false,
      },
      {
        source: "/api/bazi/:path*",
        destination: `${API_PROXY_TARGET}/api/bazi/:path*`,
        basePath: false,
      },
      {
        source: "/api/yunshi/:path*",
        destination: `${API_PROXY_TARGET}/api/yunshi/:path*`,
        basePath: false,
      },
    ];
  },
};

export default nextConfig;
