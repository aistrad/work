"use client";

/**
 * BaziSummaryCard - 八字命盘摘要卡片（v2.0 重设计）
 *
 * 设计要点：
 * - 日主用传统印章风格展示
 * - 五行分布用横向条形图
 * - 今日运势用柔和背景色突出
 * - 点击任意区域跳转对话
 *
 * React Best Practices Applied:
 * - 6.3: Hoist static JSX (color mappings)
 * - 6.7: Explicit conditional rendering (ternary instead of &&)
 */

import { cn } from "@/lib/utils";
import { ChevronRight, Sparkles } from "lucide-react";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

export interface BaziData {
  dayMaster?: {
    element: string;
    character: string;
    description: string;
  };
  fiveElements?: Record<string, number>;
  dailyFortune?: string;
  // Legacy support
  pattern?: string;
  fortuneLevel?: 1 | 2 | 3 | 4 | 5;
  todayFortune?: string;
}

export interface BaziSummaryCardProps {
  data?: BaziData | null;
  onExplore?: () => void;
  className?: string;
}

// ═══════════════════════════════════════════════════════════════════════════
// Static Constants
// ═══════════════════════════════════════════════════════════════════════════

const ELEMENT_COLORS: Record<string, { bg: string; bar: string; text: string }> = {
  木: { bg: "bg-green-500", bar: "bg-green-500", text: "text-green-700" },
  火: { bg: "bg-red-500", bar: "bg-red-500", text: "text-red-700" },
  土: { bg: "bg-yellow-500", bar: "bg-yellow-500", text: "text-yellow-700" },
  金: { bg: "bg-slate-300", bar: "bg-slate-400", text: "text-slate-700" },
  水: { bg: "bg-blue-500", bar: "bg-blue-500", text: "text-blue-700" },
};

const ELEMENT_ORDER = ["木", "火", "土", "金", "水"] as const;

// ═══════════════════════════════════════════════════════════════════════════
// Sub-components
// ═══════════════════════════════════════════════════════════════════════════

function DayMasterSeal({
  element,
  character,
  description,
}: {
  element: string;
  character: string;
  description: string;
}) {
  const color = ELEMENT_COLORS[element] || ELEMENT_COLORS["木"];

  return (
    <div className="p-4 rounded-lg bg-gradient-to-br from-amber-50/80 to-orange-50/60 border border-amber-200/30">
      <div className="flex items-center gap-4">
        {/* Traditional Seal Style */}
        <div
          className={cn(
            "w-14 h-14 rounded-lg flex items-center justify-center",
            "bg-gradient-to-br from-red-700 to-red-800",
            "shadow-md",
            "ring-2 ring-red-900/20"
          )}
        >
          <span className="text-2xl font-serif text-amber-100 font-bold">
            {character}
          </span>
        </div>

        {/* Description */}
        <div className="flex-1">
          <div className="flex items-center gap-2 mb-1">
            <span className="text-xs text-muted-foreground">日主</span>
            <span className={cn("text-sm font-medium", color.text)}>
              {character}{element}
            </span>
          </div>
          <p className="text-sm text-ink-600 leading-relaxed">
            {description}
          </p>
        </div>
      </div>
    </div>
  );
}

function FiveElementsChart({ elements }: { elements: Record<string, number> }) {
  const maxValue = Math.max(...Object.values(elements), 1);

  return (
    <div className="space-y-2">
      <h4 className="text-xs text-muted-foreground mb-2">五行分布</h4>
      {ELEMENT_ORDER.map((element) => {
        const value = elements[element] || 0;
        const percentage = (value / maxValue) * 100;
        const color = ELEMENT_COLORS[element];

        return (
          <div key={element} className="flex items-center gap-2">
            <span className="w-4 text-xs text-ink-600">{element}</span>
            <div className="flex-1 h-2.5 bg-vellum-100 rounded-full overflow-hidden">
              <div
                className={cn(
                  "h-full rounded-full transition-all duration-500 ease-out",
                  color.bar
                )}
                style={{ width: `${percentage}%` }}
              />
            </div>
            <span className="w-8 text-xs text-muted-foreground text-right">
              {value}%
            </span>
          </div>
        );
      })}
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Main Component
// ═══════════════════════════════════════════════════════════════════════════

export function BaziSummaryCard({
  data,
  onExplore,
  className,
}: BaziSummaryCardProps) {
  // Empty state
  if (!data) {
    return (
      <div
        onClick={onExplore}
        className={cn(
          "p-5 rounded-xl cursor-pointer",
          "bg-gradient-to-br from-amber-50/50 to-orange-50/50",
          "border border-amber-200/30 shadow-card",
          "hover:shadow-card-hover hover:border-amber-200/50",
          "transition-all duration-200",
          className
        )}
      >
        <div className="flex items-center gap-2 mb-3">
          <span className="text-2xl">☰</span>
          <span className="font-serif text-base font-semibold text-foreground">
            八字命理
          </span>
        </div>
        <p className="text-sm text-muted-foreground mb-4">
          还未生成八字命盘，和 VibeLife 聊聊吧
        </p>
        <div className="flex items-center justify-center gap-2 px-4 py-2.5 bg-amber-500/10 hover:bg-amber-500/20 text-amber-700 rounded-lg text-sm font-medium transition-colors">
          <span>开始测算</span>
          <ChevronRight className="w-4 h-4" />
        </div>
      </div>
    );
  }

  // Convert legacy data format
  const dayMaster = data.dayMaster || (data.pattern ? {
    element: "木",
    character: "甲",
    description: data.pattern,
  } : undefined);

  const fiveElements = data.fiveElements || {
    木: 20,
    火: 20,
    土: 20,
    金: 20,
    水: 20,
  };

  const dailyFortune = data.dailyFortune || data.todayFortune;

  return (
    <div
      onClick={onExplore}
      className={cn(
        "p-5 rounded-xl cursor-pointer",
        "bg-gradient-to-br from-amber-50/50 to-orange-50/50",
        "border border-amber-200/30 shadow-card",
        "hover:shadow-card-hover hover:border-amber-200/50",
        "transition-all duration-200 hover:scale-[1.01]",
        className
      )}
    >
      {/* Header */}
      <div className="flex items-center justify-between mb-4">
        <div className="flex items-center gap-2">
          <span className="text-xl">☰</span>
          <span className="font-serif text-base font-semibold text-foreground">
            八字命理
          </span>
        </div>
        <div className="flex items-center gap-1 text-amber-600">
          <span className="text-xs">深入</span>
          <ChevronRight className="w-4 h-4" />
        </div>
      </div>

      {/* Day Master Seal */}
      {dayMaster ? (
        <DayMasterSeal
          element={dayMaster.element}
          character={dayMaster.character}
          description={dayMaster.description}
        />
      ) : null}

      {/* Five Elements Chart */}
      <div className="mt-4">
        <FiveElementsChart elements={fiveElements} />
      </div>

      {/* Daily Fortune */}
      {dailyFortune ? (
        <div className="mt-4 p-3 rounded-lg bg-gradient-to-r from-amber-100/50 to-orange-100/50 border border-amber-200/30">
          <div className="flex items-center gap-2 mb-1.5">
            <Sparkles className="w-4 h-4 text-amber-600" />
            <span className="text-xs font-medium text-amber-700">今日运势</span>
          </div>
          <p className="text-sm text-ink-700 leading-relaxed">
            {dailyFortune}
          </p>
        </div>
      ) : null}
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Skeleton
// ═══════════════════════════════════════════════════════════════════════════

export function BaziSummaryCardSkeleton({ className }: { className?: string }) {
  return (
    <div
      className={cn(
        "p-5 rounded-xl",
        "bg-gradient-to-br from-amber-50/50 to-orange-50/50",
        "border border-amber-200/30 shadow-card animate-pulse",
        className
      )}
    >
      {/* Header */}
      <div className="flex items-center gap-2 mb-4">
        <div className="w-6 h-6 rounded bg-amber-200" />
        <div className="h-5 bg-amber-200 rounded w-20" />
      </div>

      {/* Day Master */}
      <div className="p-4 rounded-lg bg-amber-100/50 mb-4">
        <div className="flex items-center gap-4">
          <div className="w-14 h-14 rounded-lg bg-amber-200" />
          <div className="flex-1 space-y-2">
            <div className="h-4 bg-amber-200 rounded w-24" />
            <div className="h-4 bg-amber-200 rounded w-full" />
          </div>
        </div>
      </div>

      {/* Five Elements */}
      <div className="space-y-2">
        {[1, 2, 3, 4, 5].map((i) => (
          <div key={i} className="flex items-center gap-2">
            <div className="w-4 h-4 bg-amber-200 rounded" />
            <div className="flex-1 h-2.5 bg-amber-100 rounded-full" />
            <div className="w-8 h-4 bg-amber-200 rounded" />
          </div>
        ))}
      </div>

      {/* Fortune */}
      <div className="mt-4 p-3 rounded-lg bg-amber-100/50">
        <div className="h-4 bg-amber-200 rounded w-20 mb-2" />
        <div className="h-4 bg-amber-200 rounded w-full" />
      </div>
    </div>
  );
}

export default BaziSummaryCard;
