"use client";

/**
 * BehaviorInsightCard - 行为洞察卡片（Level B 用户）
 *
 * 用于有对话历史但无命理数据的用户
 * 基于对话内容展示：
 * - 近期关注话题
 * - 情绪轨迹
 * - 引导到更深层探索
 */

import { cn } from "@/lib/utils";
import { ChevronRight, TrendingUp, Heart } from "lucide-react";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

export interface BehaviorInsightData {
  topics: Record<string, number>;
  emotion: {
    current: string;
    trend: number[];
  };
}

export interface BehaviorInsightCardProps {
  data: BehaviorInsightData;
  onExploreBazi?: () => void;
  onExploreZodiac?: () => void;
  className?: string;
}

// ═══════════════════════════════════════════════════════════════════════════
// Sub-components
// ═══════════════════════════════════════════════════════════════════════════

function TopicsChart({ topics }: { topics: Record<string, number> }) {
  const sortedTopics = Object.entries(topics)
    .sort(([, a], [, b]) => b - a)
    .slice(0, 5);

  const maxValue = Math.max(...Object.values(topics), 1);

  return (
    <div className="space-y-2.5">
      {sortedTopics.map(([name, value]) => {
        const percentage = (value / maxValue) * 100;

        return (
          <div key={name} className="flex items-center gap-3">
            <span className="w-16 text-xs text-ink-600 truncate">{name}</span>
            <div className="flex-1 h-2.5 bg-vellum-100 rounded-full overflow-hidden">
              <div
                className="h-full rounded-full bg-gradient-to-r from-indigo-400 to-purple-500 transition-all duration-500 ease-out"
                style={{ width: `${percentage}%` }}
              />
            </div>
            <span className="w-10 text-xs text-muted-foreground text-right">
              {value}%
            </span>
          </div>
        );
      })}
    </div>
  );
}

function EmotionTrendChart({ trend, current }: { trend: number[]; current: string }) {
  const maxValue = Math.max(...trend, 100);
  const minValue = Math.min(...trend, 0);
  const range = maxValue - minValue || 1;

  const points = trend.map((value, index) => {
    const x = (index / (trend.length - 1)) * 100;
    const y = 100 - ((value - minValue) / range) * 80 - 10;
    return `${x},${y}`;
  }).join(" ");

  return (
    <div className="p-4 rounded-lg bg-gradient-to-br from-rose-50/50 to-pink-50/50 border border-rose-200/30">
      <div className="flex items-center gap-2 mb-3">
        <Heart className="w-4 h-4 text-rose-500" />
        <span className="text-xs font-medium text-rose-700">情绪轨迹</span>
      </div>

      {/* Current emotion state */}
      <p className="text-sm text-ink-700 mb-3">{current}</p>

      {/* Mini chart */}
      <div className="h-12 relative">
        <svg
          viewBox="0 0 100 100"
          className="w-full h-full"
          preserveAspectRatio="none"
        >
          {/* Gradient definition */}
          <defs>
            <linearGradient id="emotionGradient" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" stopColor="rgb(251, 113, 133)" stopOpacity="0.3" />
              <stop offset="100%" stopColor="rgb(236, 72, 153)" stopOpacity="0.3" />
            </linearGradient>
          </defs>

          {/* Area under the line */}
          <polygon
            points={`0,100 ${points} 100,100`}
            fill="url(#emotionGradient)"
          />

          {/* Line */}
          <polyline
            points={points}
            fill="none"
            stroke="rgb(236, 72, 153)"
            strokeWidth="2"
            strokeLinecap="round"
            strokeLinejoin="round"
          />

          {/* Points */}
          {trend.map((value, index) => {
            const x = (index / (trend.length - 1)) * 100;
            const y = 100 - ((value - minValue) / range) * 80 - 10;
            return (
              <circle
                key={index}
                cx={x}
                cy={y}
                r="2"
                fill="rgb(236, 72, 153)"
              />
            );
          })}
        </svg>

        {/* Days label */}
        <div className="absolute bottom-0 left-0 right-0 flex justify-between text-[10px] text-muted-foreground">
          <span>7天前</span>
          <span>今天</span>
        </div>
      </div>
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Main Component
// ═══════════════════════════════════════════════════════════════════════════

export function BehaviorInsightCard({
  data,
  onExploreBazi,
  onExploreZodiac,
  className,
}: BehaviorInsightCardProps) {
  return (
    <div
      className={cn(
        "p-5 rounded-xl",
        "bg-gradient-to-br from-vellum-50/30 to-white",
        "border border-vellum-200/30 shadow-card",
        className
      )}
    >
      {/* Header */}
      <div className="flex items-center gap-2 mb-4">
        <span className="text-xl">✦</span>
        <span className="font-serif text-base font-semibold text-foreground">
          你的行为画像
        </span>
      </div>

      <p className="text-sm text-muted-foreground mb-4">
        基于最近的对话，我观察到：
      </p>

      {/* Topics Section */}
      <div className="mb-5">
        <div className="p-4 rounded-lg bg-gradient-to-br from-indigo-50/50 to-purple-50/50 border border-indigo-200/30">
          <div className="flex items-center gap-2 mb-3">
            <TrendingUp className="w-4 h-4 text-indigo-500" />
            <span className="text-xs font-medium text-indigo-700">近期关注</span>
          </div>
          <TopicsChart topics={data.topics} />
        </div>
      </div>

      {/* Emotion Section */}
      <div className="mb-5">
        <EmotionTrendChart
          trend={data.emotion.trend}
          current={data.emotion.current}
        />
      </div>

      {/* Divider */}
      <div className="h-px bg-vellum-200/50 my-5" />

      {/* CTA Section */}
      <div className="text-center">
        <p className="text-sm text-muted-foreground mb-4">
          想更深入了解自己吗？
        </p>
        <div className="flex gap-3 justify-center">
          <button
            onClick={onExploreBazi}
            className={cn(
              "flex items-center gap-2 px-4 py-2.5 rounded-lg",
              "bg-amber-500/10 hover:bg-amber-500/20",
              "text-amber-700 text-sm font-medium",
              "transition-colors duration-200"
            )}
          >
            <span>☰</span>
            <span>排八字命盘</span>
          </button>
          <button
            onClick={onExploreZodiac}
            className={cn(
              "flex items-center gap-2 px-4 py-2.5 rounded-lg",
              "bg-purple-500/10 hover:bg-purple-500/20",
              "text-purple-700 text-sm font-medium",
              "transition-colors duration-200"
            )}
          >
            <span>☉</span>
            <span>分析星盘</span>
          </button>
        </div>
      </div>
    </div>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// Skeleton
// ═══════════════════════════════════════════════════════════════════════════

export function BehaviorInsightCardSkeleton({ className }: { className?: string }) {
  return (
    <div
      className={cn(
        "p-5 rounded-xl",
        "bg-gradient-to-br from-vellum-50/30 to-white",
        "border border-vellum-200/30 shadow-card animate-pulse",
        className
      )}
    >
      {/* Header */}
      <div className="flex items-center gap-2 mb-4">
        <div className="w-6 h-6 rounded bg-vellum-200" />
        <div className="h-5 bg-vellum-200 rounded w-28" />
      </div>

      <div className="h-4 bg-vellum-100 rounded w-48 mb-4" />

      {/* Topics */}
      <div className="p-4 rounded-lg bg-vellum-100/50 mb-5">
        <div className="h-4 bg-vellum-200 rounded w-20 mb-3" />
        <div className="space-y-2.5">
          {[1, 2, 3].map((i) => (
            <div key={i} className="flex items-center gap-3">
              <div className="w-16 h-4 bg-vellum-200 rounded" />
              <div className="flex-1 h-2.5 bg-vellum-100 rounded-full" />
              <div className="w-10 h-4 bg-vellum-200 rounded" />
            </div>
          ))}
        </div>
      </div>

      {/* Emotion */}
      <div className="p-4 rounded-lg bg-vellum-100/50 mb-5">
        <div className="h-4 bg-vellum-200 rounded w-20 mb-3" />
        <div className="h-12 bg-vellum-200 rounded" />
      </div>

      {/* CTA */}
      <div className="h-px bg-vellum-200 my-5" />
      <div className="flex gap-3 justify-center">
        <div className="h-10 bg-vellum-200 rounded-lg w-28" />
        <div className="h-10 bg-vellum-200 rounded-lg w-28" />
      </div>
    </div>
  );
}

export default BehaviorInsightCard;
