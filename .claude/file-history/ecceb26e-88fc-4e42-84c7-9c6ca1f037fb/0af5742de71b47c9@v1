/**
 * Synastry Panel - Relationship compatibility analysis
 */

"use client";

import { useState } from "react";
import type { PanelProps } from "../../types";

export default function SynastryPanel({ skill, isActive }: PanelProps) {
  const [partnerDate, setPartnerDate] = useState("");
  const [result, setResult] = useState<any>(null);
  const [loading, setLoading] = useState(false);

  async function handleAnalyze() {
    if (!partnerDate) return;

    try {
      setLoading(true);
      const response = await fetch("/api/v1/skills/zodiac/synastry", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          partnerInfo: { birthDate: partnerDate },
        }),
      });

      if (response.ok) {
        const data = await response.json();
        setResult(data);
      }
    } catch (error) {
      console.error("Failed to analyze synastry:", error);
    } finally {
      setLoading(false);
    }
  }

  return (
    <div className="h-full flex flex-col">
      <div className="p-4 border-b">
        <h3 className="font-semibold">合盘分析</h3>
        <p className="text-sm text-muted-foreground">分析你们的星座兼容性</p>
      </div>

      <div className="flex-1 overflow-auto p-4">
        {/* Input Form */}
        <div className="mb-6">
          <label className="block text-sm font-medium mb-2">
            对方的出生日期
          </label>
          <input
            type="date"
            value={partnerDate}
            onChange={(e) => setPartnerDate(e.target.value)}
            className="w-full px-3 py-2 rounded-lg border bg-background"
          />
          <button
            onClick={handleAnalyze}
            disabled={!partnerDate || loading}
            className="w-full mt-3 px-4 py-2 bg-primary text-primary-foreground rounded-lg disabled:opacity-50"
          >
            {loading ? "分析中…" : "开始分析"}
          </button>
        </div>

        {/* Result */}
        {result && (
          <div className="space-y-4">
            <div className="text-center p-4 bg-muted rounded-lg">
              <div className="text-sm text-muted-foreground mb-1">综合匹配度</div>
              <div className="text-4xl font-bold text-primary">
                {result.overallScore}%
              </div>
            </div>

            <div>
              <div className="text-sm font-medium mb-2">各方面评分</div>
              <div className="space-y-2">
                {result.categories?.map((cat: any, i: number) => (
                  <div key={i} className="flex items-center gap-3">
                    <span className="text-sm w-16">{cat.name}</span>
                    <div className="flex-1 h-2 bg-muted rounded-full overflow-hidden">
                      <div
                        className="h-full bg-primary rounded-full"
                        style={{ width: `${cat.score}%` }}
                      />
                    </div>
                    <span className="text-sm font-medium w-10">{cat.score}%</span>
                  </div>
                ))}
              </div>
            </div>

            <div className="p-3 bg-muted rounded-lg">
              <div className="text-sm font-medium mb-1">建议</div>
              <p className="text-sm text-muted-foreground">{result.advice}</p>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}
