### 2.6 CTA æŒ‰é’®ç»„ä»¶ (æ–‡æ¡ˆä¼˜åŒ–ç‰ˆ)

```tsx
// components/landing/CTAButton.tsx
'use client'
import { motion } from 'framer-motion'
import Link from 'next/link'

interface CTAButtonProps {
  href: string
  children: React.ReactNode
  variant?: 'primary' | 'secondary'
  size?: 'default' | 'large'
}

export function CTAButton({ href, children, variant = 'primary', size = 'default' }: CTAButtonProps) {
  const base = 'inline-flex items-center justify-center rounded-xl font-medium transition-all duration-200'
  const variants = {
    primary: 'bg-[var(--accent-primary)] text-[var(--vellum-50)] hover:bg-[var(--accent-hover)]',
    secondary: 'bg-[var(--bg-secondary)] text-[var(--ink-800)] border border-[var(--vellum-300)] hover:bg-[var(--bg-hover)]',
  }
  const sizes = { default: 'px-6 py-3 text-body', large: 'px-8 py-4 text-large' }

  return (
    <motion.div whileHover={{ y: -2 }} whileTap={{ scale: 0.98 }}>
      <Link href={href} className={`${base} ${variants[variant]} ${sizes[size]}`} style={{ boxShadow: 'var(--shadow-card)' }}>
        {children}
      </Link>
    </motion.div>
  )
}

// CTA æ–‡æ¡ˆå¸¸é‡ (ä¼˜åŒ–ç‰ˆ)
export const CTA_COPY = {
  hero: {
    button: '90ç§’ï¼Œå¼€å¯ä½ çš„è‡ªæˆ‘æ¢ç´¢ â†’',
    hint: 'åªéœ€å‡ºç”Ÿæ—¥æœŸï¼Œå¼€å§‹è®¤è¯†è‡ªå·±çš„æ—…ç¨‹'
  },
  final: {
    button: 'å¼€å¯æˆ‘çš„VibeIDä¹‹æ—… â†’',
    hint: 'åªéœ€å‡ºç”Ÿæ—¥æœŸ Â· 90ç§’å®Œæˆ Â· æ°¸ä¹…å…è´¹çš„åŸºç¡€ç‰ˆ'
  }
}
