```javascript
// tailwind.config.js
module.exports = {
  theme: {
    extend: {
      colors: {
        bg: { primary: 'var(--bg-primary)', secondary: 'var(--bg-secondary)', tertiary: 'var(--bg-tertiary)', elevated: 'var(--bg-elevated)', hover: 'var(--bg-hover)' },
        ink: { 50: 'var(--ink-50)', 100: 'var(--ink-100)', 200: 'var(--ink-200)', 300: 'var(--ink-300)', 400: 'var(--ink-400)', 500: 'var(--ink-500)', 600: 'var(--ink-600)', 700: 'var(--ink-700)', 800: 'var(--ink-800)', 900: 'var(--ink-900)' },
        vellum: { 50: 'var(--vellum-50)', 100: 'var(--vellum-100)', 200: 'var(--vellum-200)', 300: 'var(--vellum-300)', 400: 'var(--vellum-400)', 500: 'var(--vellum-500)', 600: 'var(--vellum-600)', 700: 'var(--vellum-700)', 800: 'var(--vellum-800)', 900: 'var(--vellum-900)' },
        gold: { 50: 'var(--gold-50)', 100: 'var(--gold-100)', 200: 'var(--gold-200)', 300: 'var(--gold-300)', 400: 'var(--gold-400)', 500: 'var(--gold-500)', 600: 'var(--gold-600)', 700: 'var(--gold-700)', 800: 'var(--gold-800)', 900: 'var(--gold-900)' },
        mystic: { 50: 'var(--mystic-50)', 100: 'var(--mystic-100)', 200: 'var(--mystic-200)', 300: 'var(--mystic-300)', 400: 'var(--mystic-400)', 500: 'var(--mystic-500)', 600: 'var(--mystic-600)', 700: 'var(--mystic-700)', 800: 'var(--mystic-800)', 900: 'var(--mystic-900)' },
        element: { wood: 'var(--element-wood)', fire: 'var(--element-fire)', earth: 'var(--element-earth)', metal: 'var(--element-metal)', water: 'var(--element-water)' },
        accent: { primary: 'var(--accent-primary)', secondary: 'var(--accent-secondary)', hover: 'var(--accent-hover)', active: 'var(--accent-active)' },
      },
      fontFamily: {
        sans: ['Inter', 'Noto Sans SC', 'system-ui', 'sans-serif'],
        serif: ['Merriweather', 'Noto Serif SC', 'Georgia', 'serif'],
      },
      boxShadow: {
        xs: 'var(--shadow-xs)', sm: 'var(--shadow-sm)', md: 'var(--shadow-md)', lg: 'var(--shadow-lg)', xl: 'var(--shadow-xl)',
        card: 'var(--shadow-card)', 'card-hover': 'var(--shadow-card-hover)', focus: 'var(--shadow-focus)', glow: 'var(--shadow-glow)',
      },
      animation: { breathe: 'breathe 4s ease-in-out infinite', 'spin-slow': 'spin 30s linear infinite' },
      keyframes: { breathe: { '0%, 100%': { transform: 'scale(1)' }, '50%': { transform: 'scale(1.02)' } } },
    },
  },
}
