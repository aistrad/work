"use client";

/**
 * JourneyPanel - Journey Tab 的右侧 Panel 内容
 * 显示: 时间线 + 历史洞察回顾
 */

import { cn } from "@/lib/utils";
import { type SkillType } from "@/components/core";
import {
  Clock,
  Sparkles,
  Calendar,
  ChevronRight,
  BookOpen,
} from "lucide-react";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

interface TimelineItem {
  id: string;
  date: string;
  title: string;
  summary: string;
  type: "insight" | "conversation" | "milestone";
}

interface JourneyPanelProps {
  skill: SkillType;
  timeline?: TimelineItem[];
  totalConversations?: number;
  totalInsights?: number;
  memberSince?: string;
  onTimelineItemClick?: (item: TimelineItem) => void;
  className?: string;
}

// ═══════════════════════════════════════════════════════════════════════════
// Sub-components
// ═══════════════════════════════════════════════════════════════════════════

function StatsCard({
  totalConversations,
  totalInsights,
  memberSince,
}: {
  totalConversations?: number;
  totalInsights?: number;
  memberSince?: string;
}) {
  return (
    <div className="glass-card rounded-xl p-4">
      <div className="grid grid-cols-3 gap-4 text-center">
        <div>
          <div className="text-2xl font-serif font-bold text-foreground">
            {totalConversations ?? 0}
          </div>
          <div className="text-xs text-muted-foreground">对话次数</div>
        </div>
        <div>
          <div className="text-2xl font-serif font-bold text-foreground">
            {totalInsights ?? 0}
          </div>
          <div className="text-xs text-muted-foreground">洞察收藏</div>
        </div>
        <div>
          <div className="text-lg font-serif font-bold text-foreground">
            {memberSince ?? "今天"}
          </div>
          <div className="text-xs text-muted-foreground">加入时间</div>
        </div>
      </div>
    </div>
  );
}

function TimelineItemCard({
  item,
  onClick,
}: {
  item: TimelineItem;
  onClick?: () => void;
}) {
  const getIcon = () => {
    switch (item.type) {
      case "insight":
        return <Sparkles className="w-4 h-4 text-amber-500" />;
      case "milestone":
        return <Calendar className="w-4 h-4 text-emerald-500" />;
      default:
        return <BookOpen className="w-4 h-4 text-blue-500" />;
    }
  };

  const getTypeLabel = () => {
    switch (item.type) {
      case "insight":
        return "洞察";
      case "milestone":
        return "里程碑";
      default:
        return "对话";
    }
  };

  return (
    <button
      onClick={onClick}
      className="w-full flex items-start gap-3 p-3 rounded-lg bg-card hover:bg-muted/50 transition-colors text-left group"
    >
      <div className="flex-shrink-0 mt-0.5">
        {getIcon()}
      </div>
      <div className="flex-1 min-w-0">
        <div className="flex items-center gap-2 mb-1">
          <span className="text-xs text-muted-foreground">{item.date}</span>
          <span className="text-xs px-1.5 py-0.5 rounded bg-muted text-muted-foreground">
            {getTypeLabel()}
          </span>
        </div>
        <div className="font-medium text-foreground text-sm truncate">
          {item.title}
        </div>
        <p className="text-xs text-muted-foreground line-clamp-2 mt-0.5">
          {item.summary}
        </p>
      </div>
      <ChevronRight className="w-4 h-4 text-muted-foreground flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity" />
    </button>
  );
}

// ═══════════════════════════════════════════════════════════════════════════
// JourneyPanel Component
// ═══════════════════════════════════════════════════════════════════════════

export function JourneyPanel({
  skill,
  timeline = [],
  totalConversations,
  totalInsights,
  memberSince,
  onTimelineItemClick,
  className,
}: JourneyPanelProps) {
  return (
    <div className={cn("h-full overflow-y-auto p-5 space-y-6", className)}>
      {/* Stats Section */}
      <section>
        <h2 className="font-serif text-lg font-semibold text-foreground mb-3">
          你的旅程
        </h2>
        <StatsCard
          totalConversations={totalConversations}
          totalInsights={totalInsights}
          memberSince={memberSince}
        />
      </section>

      {/* Timeline Section */}
      <section>
        <h2 className="font-serif text-lg font-semibold text-foreground mb-3 flex items-center gap-2">
          <Clock className="w-4 h-4" />
          时间线
        </h2>

        {timeline.length > 0 ? (
          <div className="space-y-2">
            {timeline.map((item) => (
              <TimelineItemCard
                key={item.id}
                item={item}
                onClick={() => onTimelineItemClick?.(item)}
              />
            ))}
          </div>
        ) : (
          <div className="glass-card rounded-xl p-6 text-center">
            <Clock className="w-8 h-8 text-muted-foreground mx-auto mb-2" />
            <p className="text-sm text-muted-foreground">
              开始对话后，你的旅程将在这里记录
            </p>
          </div>
        )}
      </section>
    </div>
  );
}
