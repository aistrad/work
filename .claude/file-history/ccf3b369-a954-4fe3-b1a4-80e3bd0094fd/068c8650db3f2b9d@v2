'use client'

/**
 * InterviewModal - AI Interview component for VibeLife
 * Based on: vibelife spec v3.0, section 4.2
 *
 * "生成报告前，必须完成访谈。"
 *
 * Core Questions (2-3):
 * 1. 当前困境/关注点
 * 2. 生活状态 (工作、感情等)
 * 3. 期望与目标
 */

import React, { useState, useCallback, useEffect } from 'react'
import { motion, AnimatePresence } from 'framer-motion'

// Types
interface InterviewQuestion {
  id: string
  question_text: string
  question_type: 'core' | 'followup' | 'optional'
  answer?: string
}

interface InterviewSession {
  id: string
  state: 'in_progress' | 'completed' | 'skipped'
  questions: InterviewQuestion[]
  current_question_idx: number
}

interface InterviewModalProps {
  isOpen: boolean
  onClose: () => void
  onComplete: (result: InterviewResult) => void
  skill?: 'bazi' | 'zodiac'
}

interface InterviewResult {
  success: boolean
  extracted_profile: Record<string, unknown>
  summary: string
  questions_answered: number
  total_questions: number
}

// Default questions (matching backend)
const DEFAULT_QUESTIONS: InterviewQuestion[] = [
  {
    id: 'q1_concerns',
    question_text: '你现在最想解决的问题是什么？或者，最困扰你的是什么？',
    question_type: 'core',
  },
  {
    id: 'q2_life_status',
    question_text: '简单说说你现在的状态？工作、感情、还是其他方面？',
    question_type: 'core',
  },
  {
    id: 'q3_expectations',
    question_text: '你希望从这次分析中获得什么？',
    question_type: 'core',
  },
]

// Intro message
const INTRO_MESSAGE = `在生成你的专属报告之前...

我想更了解你一点。这样我才能给你真正有用的分析，而不是泛泛而谈。

准备好了吗？只需要回答 2-3 个问题。`

// Skip warning
const SKIP_WARNING = '跳过访谈后，报告可能不够精准，只能基于基础信息进行分析。'

export default function InterviewModal({
  isOpen,
  onClose,
  onComplete,
  skill = 'bazi',
}: InterviewModalProps) {
  const [session, setSession] = useState<InterviewSession | null>(null)
  const [currentAnswer, setCurrentAnswer] = useState('')
  const [isSubmitting, setIsSubmitting] = useState(false)
  const [showIntro, setShowIntro] = useState(true)
  const [showSkipConfirm, setShowSkipConfirm] = useState(false)
  const [error, setError] = useState<string | null>(null)

  // Initialize session when modal opens
  useEffect(() => {
    if (isOpen && !session) {
      initializeSession()
    }
    // eslint-disable-next-line react-hooks/exhaustive-deps
  }, [isOpen])

  // Reset when modal closes
  useEffect(() => {
    if (!isOpen) {
      setSession(null)
      setCurrentAnswer('')
      setShowIntro(true)
      setShowSkipConfirm(false)
      setError(null)
    }
  }, [isOpen])

  // Initialize interview session
  const initializeSession = async () => {
    try {
      // Try to start session via API
      const response = await fetch('/api/v1/interview/start', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ skill }),
      })

      if (response.ok) {
        const data = await response.json()
        setSession(data.session)
      } else {
        // Fallback to local session
        setSession({
          id: crypto.randomUUID(),
          state: 'in_progress',
          questions: DEFAULT_QUESTIONS,
          current_question_idx: 0,
        })
      }
    } catch {
      // Fallback to local session
      setSession({
        id: crypto.randomUUID(),
        state: 'in_progress',
        questions: DEFAULT_QUESTIONS,
        current_question_idx: 0,
      })
    }
  }

  // Get current question
  const currentQuestion = session?.questions[session.current_question_idx]

  // Get progress
  const progress = session
    ? {
        current: session.current_question_idx + 1,
        total: session.questions.length,
        percent: ((session.current_question_idx + 1) / session.questions.length) * 100,
      }
    : { current: 0, total: 0, percent: 0 }

  // Submit answer
  const submitAnswer = useCallback(async () => {
    if (!session || !currentQuestion || !currentAnswer.trim()) return

    setIsSubmitting(true)
    setError(null)

    try {
      // Try to submit via API
      const response = await fetch('/api/v1/interview/answer', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          session_id: session.id,
          answer: currentAnswer,
        }),
      })

      if (response.ok) {
        const data = await response.json()

        if (data.is_complete) {
          // Interview complete
          onComplete({
            success: true,
            extracted_profile: data.result?.extracted_profile || {},
            summary: data.result?.summary || '访谈完成',
            questions_answered: data.result?.questions_answered || session.questions.length,
            total_questions: session.questions.length,
          })
          onClose()
        } else {
          // Move to next question
          setSession(prev => prev ? {
            ...prev,
            questions: prev.questions.map((q, i) =>
              i === prev.current_question_idx
                ? { ...q, answer: currentAnswer }
                : q
            ),
            current_question_idx: prev.current_question_idx + 1,
          } : null)
          setCurrentAnswer('')
        }
      } else {
        // Fallback: handle locally
        handleLocalSubmit()
      }
    } catch {
      // Fallback: handle locally
      handleLocalSubmit()
    } finally {
      setIsSubmitting(false)
    }
    // eslint-disable-next-line react-hooks/exhaustive-deps
  }, [session, currentQuestion, currentAnswer, onComplete, onClose])

  // Handle submit locally (fallback)
  const handleLocalSubmit = () => {
    if (!session) return

    const nextIdx = session.current_question_idx + 1

    // Update current question with answer
    const updatedQuestions = session.questions.map((q, i) =>
      i === session.current_question_idx
        ? { ...q, answer: currentAnswer }
        : q
    )

    if (nextIdx >= session.questions.length) {
      // Complete
      const answeredCount = updatedQuestions.filter(q => q.answer).length
      onComplete({
        success: answeredCount > 0,
        extracted_profile: {},
        summary: `已回答 ${answeredCount} 个问题`,
        questions_answered: answeredCount,
        total_questions: session.questions.length,
      })
      onClose()
    } else {
      // Next question
      setSession({
        ...session,
        questions: updatedQuestions,
        current_question_idx: nextIdx,
      })
      setCurrentAnswer('')
    }
  }

  // Skip interview
  const skipInterview = useCallback(() => {
    onComplete({
      success: false,
      extracted_profile: {},
      summary: '用户跳过了访谈',
      questions_answered: 0,
      total_questions: session?.questions.length || 3,
    })
    onClose()
  }, [session, onComplete, onClose])

  // Handle key press
  const handleKeyPress = (e: React.KeyboardEvent) => {
    if (e.key === 'Enter' && !e.shiftKey && currentAnswer.trim()) {
      e.preventDefault()
      submitAnswer()
    }
  }

  // Start interview (dismiss intro)
  const startInterview = () => {
    setShowIntro(false)
  }

  if (!isOpen) return null

  return (
    <AnimatePresence>
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        exit={{ opacity: 0 }}
        className="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50 backdrop-blur-sm"
        onClick={onClose}
      >
        <motion.div
          initial={{ opacity: 0, scale: 0.95, y: 20 }}
          animate={{ opacity: 1, scale: 1, y: 0 }}
          exit={{ opacity: 0, scale: 0.95, y: 20 }}
          className="w-full max-w-md bg-[#FBF7F1] rounded-2xl shadow-xl overflow-hidden"
          onClick={e => e.stopPropagation()}
        >
          {/* Header */}
          <div className="px-6 py-4 border-b border-[#1C1A17]/10">
            <div className="flex items-center justify-between">
              <h2 className="text-lg font-semibold text-[#1C1A17]">
                了解你
              </h2>
              <button
                onClick={onClose}
                className="p-1 text-[#1C1A17]/50 hover:text-[#1C1A17] transition-colors"
              >
                <svg className="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>

            {/* Progress bar */}
            {!showIntro && session && (
              <div className="mt-3">
                <div className="flex justify-between text-xs text-[#1C1A17]/60 mb-1">
                  <span>问题 {progress.current} / {progress.total}</span>
                  <span>{Math.round(progress.percent)}%</span>
                </div>
                <div className="h-1.5 bg-[#1C1A17]/10 rounded-full overflow-hidden">
                  <motion.div
                    className="h-full bg-[#B88A44]"
                    initial={{ width: 0 }}
                    animate={{ width: `${progress.percent}%` }}
                    transition={{ duration: 0.3 }}
                  />
                </div>
              </div>
            )}
          </div>

          {/* Content */}
          <div className="px-6 py-6">
            <AnimatePresence mode="wait">
              {showIntro ? (
                // Intro screen
                <motion.div
                  key="intro"
                  initial={{ opacity: 0 }}
                  animate={{ opacity: 1 }}
                  exit={{ opacity: 0 }}
                  className="text-center"
                >
                  <div className="w-16 h-16 mx-auto mb-4 text-[#B88A44]">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1.5}
                        d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <p className="text-[#1C1A17] whitespace-pre-line leading-relaxed">
                    {INTRO_MESSAGE}
                  </p>
                </motion.div>
              ) : showSkipConfirm ? (
                // Skip confirmation
                <motion.div
                  key="skip"
                  initial={{ opacity: 0 }}
                  animate={{ opacity: 1 }}
                  exit={{ opacity: 0 }}
                  className="text-center"
                >
                  <div className="w-16 h-16 mx-auto mb-4 text-amber-500">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1.5}
                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                  <p className="text-[#1C1A17] mb-4">
                    {SKIP_WARNING}
                  </p>
                  <p className="text-[#1C1A17]/70 text-sm">
                    确定要跳过吗？
                  </p>
                </motion.div>
              ) : currentQuestion ? (
                // Question screen
                <motion.div
                  key={currentQuestion.id}
                  initial={{ opacity: 0, x: 20 }}
                  animate={{ opacity: 1, x: 0 }}
                  exit={{ opacity: 0, x: -20 }}
                  className="space-y-4"
                >
                  <p className="text-lg text-[#1C1A17] font-medium">
                    {currentQuestion.question_text}
                  </p>

                  <textarea
                    value={currentAnswer}
                    onChange={e => setCurrentAnswer(e.target.value)}
                    onKeyPress={handleKeyPress}
                    placeholder="说说你的想法..."
                    className="w-full h-32 px-4 py-3 bg-white border border-[#1C1A17]/10 rounded-xl resize-none focus:outline-none focus:ring-2 focus:ring-[#B88A44]/50 focus:border-[#B88A44]"
                    disabled={isSubmitting}
                    autoFocus
                  />

                  {error && (
                    <p className="text-sm text-red-600">{error}</p>
                  )}
                </motion.div>
              ) : (
                // Complete (shouldn't normally show)
                <motion.div
                  key="complete"
                  initial={{ opacity: 0 }}
                  animate={{ opacity: 1 }}
                  className="text-center"
                >
                  <p className="text-[#1C1A17]">访谈完成</p>
                </motion.div>
              )}
            </AnimatePresence>
          </div>

          {/* Footer */}
          <div className="px-6 py-4 border-t border-[#1C1A17]/10 flex justify-between">
            {showIntro ? (
              <>
                <button
                  onClick={() => setShowSkipConfirm(true)}
                  className="px-4 py-2 text-sm text-[#1C1A17]/60 hover:text-[#1C1A17] transition-colors"
                >
                  跳过
                </button>
                <button
                  onClick={startInterview}
                  className="px-6 py-2 bg-[#1C1A17] text-[#FBF7F1] rounded-lg text-sm font-medium hover:bg-[#1C1A17]/90 transition-colors"
                >
                  开始
                </button>
              </>
            ) : showSkipConfirm ? (
              <>
                <button
                  onClick={() => setShowSkipConfirm(false)}
                  className="px-4 py-2 text-sm text-[#1C1A17]/60 hover:text-[#1C1A17] transition-colors"
                >
                  返回
                </button>
                <button
                  onClick={skipInterview}
                  className="px-6 py-2 bg-amber-500 text-white rounded-lg text-sm font-medium hover:bg-amber-600 transition-colors"
                >
                  确定跳过
                </button>
              </>
            ) : (
              <>
                <button
                  onClick={() => setShowSkipConfirm(true)}
                  className="px-4 py-2 text-sm text-[#1C1A17]/60 hover:text-[#1C1A17] transition-colors"
                  disabled={isSubmitting}
                >
                  跳过
                </button>
                <button
                  onClick={submitAnswer}
                  disabled={!currentAnswer.trim() || isSubmitting}
                  className="px-6 py-2 bg-[#1C1A17] text-[#FBF7F1] rounded-lg text-sm font-medium disabled:opacity-50 disabled:cursor-not-allowed hover:bg-[#1C1A17]/90 transition-colors flex items-center gap-2"
                >
                  {isSubmitting ? (
                    <>
                      <svg className="animate-spin w-4 h-4" fill="none" viewBox="0 0 24 24">
                        <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4" />
                        <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" />
                      </svg>
                      <span>处理中</span>
                    </>
                  ) : session && session.current_question_idx >= session.questions.length - 1 ? (
                    '完成'
                  ) : (
                    '下一个'
                  )}
                </button>
              </>
            )}
          </div>
        </motion.div>
      </motion.div>
    </AnimatePresence>
  )
}
