"use client"

import { useRef, useEffect } from "react"
import { cn } from "@/lib/utils"
import type { Message } from "@/types"
import { MessageItem } from "./message-item"

// å¿«æ·å…¥å£ç»„ä»¶
function QuickAction({ icon, label, description }: { icon: string; label: string; description: string }) {
  return (
    <button
      className={cn(
        "flex items-center gap-2 p-3 rounded-lg",
        "bg-muted/50 hover:bg-muted transition-colors",
        "text-left group"
      )}
    >
      <span className="text-base">{icon}</span>
      <div className="min-w-0">
        <div className="text-sm font-medium text-foreground truncate">{label}</div>
        <div className="text-xs text-muted-foreground truncate">{description}</div>
      </div>
    </button>
  )
}

interface MessageListProps {
  messages: Message[]
  isStreaming?: boolean
  className?: string
}

export function MessageList({ messages, isStreaming, className }: MessageListProps) {
  const bottomRef = useRef<HTMLDivElement>(null)

  // è‡ªåŠ¨æ»šåŠ¨åˆ°åº•éƒ¨
  useEffect(() => {
    bottomRef.current?.scrollIntoView({ behavior: "smooth" })
  }, [messages])

  if (messages.length === 0) {
    return (
      <div className={cn("flex-1 flex flex-col items-center justify-center p-6", className)}>
        <div className="text-center max-w-sm space-y-4">
          {/* æ¬¢è¿æ ‡é¢˜ */}
          <div className="space-y-1">
            <h2 className="text-lg font-semibold text-foreground">å¼€å§‹å¯¹è¯</h2>
            <p className="text-muted-foreground text-sm">
              ä¸ AI æ™ºèƒ½ä½“äº¤æµï¼Œæ¢ç´¢ä½ çš„ç²¾ç¥æ•°å­—å­ªç”Ÿ
            </p>
          </div>

          {/* å¿«æ·å…¥å£ */}
          <div className="grid grid-cols-2 gap-2 pt-2">
            <QuickAction icon="âœ¨" label="æŸ¥è¯¢çŠ¶æ€" description="äº†è§£ä»Šæ—¥çŠ¶æ€" />
            <QuickAction icon="ğŸ”®" label="å¡”ç½—å åœ" description="æ¢ç´¢å†…å¿ƒä¸–ç•Œ" />
            <QuickAction icon="ğŸ“š" label="æ¨èè¯¾ç¨‹" description="æ¯æ—¥æˆé•¿" />
            <QuickAction icon="ğŸ’­" label="è‡ªç”±èŠå¤©" description="éšå¿ƒäº¤æµ" />
          </div>

          {/* å‘½ä»¤æç¤º */}
          <p className="text-muted-foreground/70 text-xs pt-2">
            è¾“å…¥ <code className="px-1 py-0.5 bg-muted rounded text-[10px]">/</code> æŸ¥çœ‹æ›´å¤šå‘½ä»¤
          </p>
        </div>
