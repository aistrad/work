"use client";

import { useState } from "react";
import { registerCard } from "@/skills/CardRegistry";
import { Card } from "@/components/ui/Card";

interface Distortion {
  type: string;
  description: string;
  example_in_thought?: string;
}

interface DistortionCardData {
  original_thought: string;
  context?: string;
  distortions: Distortion[];
  challenge_questions: string[];
  reframed_thought?: string;
}

interface DistortionCardProps {
  data: DistortionCardData;
  onSubmit?: (answer: string) => void;
}

function DistortionCard({ data, onSubmit }: DistortionCardProps) {
  const [showQuestions, setShowQuestions] = useState(false);
  const [userReframe, setUserReframe] = useState("");

  const getDistortionColor = (type: string) => {
    const colors: Record<string, string> = {
      "全或无思维": "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300",
      "灾难化": "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300",
      "读心术": "bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300",
      "贴标签": "bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-300",
      "应该思维": "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300",
      "情绪推理": "bg-pink-100 text-pink-800 dark:bg-pink-900/30 dark:text-pink-300",
      "个人化": "bg-teal-100 text-teal-800 dark:bg-teal-900/30 dark:text-teal-300",
    };
    return colors[type] || "bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-300";
  };

  const handleSubmitReframe = () => {
    if (onSubmit && userReframe.trim()) {
      onSubmit(`我重新思考后的想法是：${userReframe}`);
    }
  };

  return (
    <Card className="max-w-lg mx-auto bg-white dark:bg-gray-900 overflow-hidden">
      {/* 头部 */}
      <div className="p-4 bg-gradient-to-r from-indigo-500 to-purple-600 text-white">
        <h3 className="text-lg font-semibold">认知分析</h3>
        <p className="text-sm opacity-90 mt-1">让我们一起看看这个想法</p>
      </div>

      {/* 原始想法 */}
      <div className="p-4 border-b border-gray-100 dark:border-gray-800">
        <h4 className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-2">
          原始想法
        </h4>
        <div className="p-3 bg-gray-50 dark:bg-gray-800 rounded-lg">
          <p className="text-gray-800 dark:text-gray-200 italic">
            "{data.original_thought}"
          </p>
        </div>
        {data.context && (
          <p className="text-xs text-gray-500 dark:text-gray-400 mt-2">
            情境：{data.context}
          </p>
        )}
      </div>

      {/* 识别的认知扭曲 */}
      <div className="p-4 border-b border-gray-100 dark:border-gray-800">
        <h4 className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-3">
          可能的认知模式
        </h4>
        <div className="space-y-3">
          {data.distortions.map((distortion, idx) => (
            <div key={idx} className="flex items-start gap-3">
              <span
                className={`px-2 py-1 text-xs font-medium rounded-full whitespace-nowrap ${getDistortionColor(
                  distortion.type
                )}`}
              >
                {distortion.type}
              </span>
              <p className="text-sm text-gray-600 dark:text-gray-400 flex-1">
                {distortion.description}
              </p>
            </div>
          ))}
        </div>
      </div>

      {/* 挑战问题 */}
      <div className="p-4 border-b border-gray-100 dark:border-gray-800">
        <button
          onClick={() => setShowQuestions(!showQuestions)}
          className="flex items-center justify-between w-full text-left"
        >
          <h4 className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">
            思考这些问题
          </h4>
          <span className="text-purple-600 text-sm">
            {showQuestions ? "收起" : "展开"}
          </span>
        </button>

        {showQuestions && (
          <div className="mt-3 space-y-2">
            {data.challenge_questions.map((question, idx) => (
              <div
                key={idx}
                className="flex items-start gap-2 p-2 bg-purple-50 dark:bg-purple-900/20 rounded"
              >
                <span className="text-purple-600 font-medium">{idx + 1}.</span>
                <p className="text-sm text-gray-700 dark:text-gray-300">
                  {question}
                </p>
              </div>
            ))}
          </div>
        )}
      </div>

      {/* 重构想法（如果有） */}
      {data.reframed_thought && (
        <div className="p-4 border-b border-gray-100 dark:border-gray-800 bg-green-50 dark:bg-green-900/20">
          <h4 className="text-xs font-medium text-green-700 dark:text-green-400 uppercase mb-2">
            更平衡的想法
          </h4>
          <p className="text-sm text-green-800 dark:text-green-300">
            {data.reframed_thought}
          </p>
        </div>
      )}

      {/* 用户输入重构 */}
      <div className="p-4">
        <h4 className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-2">
          你的重新思考
        </h4>
        <textarea
          value={userReframe}
          onChange={(e) => setUserReframe(e.target.value)}
          placeholder="思考完上面的问题后，有没有更平衡的方式看待这件事？"
          className="w-full p-3 text-sm border border-gray-200 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 resize-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
          rows={3}
        />
        {userReframe.trim() && (
          <button
            onClick={handleSubmitReframe}
            className="mt-2 px-4 py-2 text-sm bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors"
          >
            分享我的想法
          </button>
        )}
      </div>
    </Card>
  );
}

// 注册卡片
registerCard("distortion_card", DistortionCard);

export default DistortionCard;
