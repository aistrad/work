"use client";

import { registerCard } from "@/skills/CardRegistry";
import { Card } from "@/components/ui/Card";

interface Subscale {
  score: number;
  severity: string;
}

interface AssessmentResultData {
  assessment_type: string;
  total_score: number;
  max_score: number;
  severity_level: string;
  interpretation: string;
  recommendations: string[];
  subscales?: {
    depression?: Subscale;
    anxiety?: Subscale;
    stress?: Subscale;
  };
  safety_flag?: string;
  safety_score?: number;
}

interface AssessmentResultCardProps {
  data: AssessmentResultData;
  onSubmit?: (answer: string) => void;
}

function AssessmentResultCard({ data, onSubmit }: AssessmentResultCardProps) {
  const getSeverityColor = (level: string) => {
    if (level.includes("极轻微") || level.includes("正常") || level.includes("无")) {
      return "text-green-600 bg-green-100 dark:bg-green-900/30";
    }
    if (level.includes("轻度") || level.includes("阴性")) {
      return "text-yellow-600 bg-yellow-100 dark:bg-yellow-900/30";
    }
    if (level.includes("中度") || level.includes("阳性")) {
      return "text-orange-600 bg-orange-100 dark:bg-orange-900/30";
    }
    if (level.includes("重度") || level.includes("极重度")) {
      return "text-red-600 bg-red-100 dark:bg-red-900/30";
    }
    return "text-gray-600 bg-gray-100 dark:bg-gray-800";
  };

  const getProgressColor = (score: number, maxScore: number) => {
    const percentage = (score / maxScore) * 100;
    if (percentage <= 20) return "bg-green-500";
    if (percentage <= 40) return "bg-yellow-500";
    if (percentage <= 60) return "bg-orange-500";
    return "bg-red-500";
  };

  const getAssessmentName = (type: string) => {
    const names: Record<string, string> = {
      phq2: "PHQ-2 快速抑郁筛查",
      gad2: "GAD-2 快速焦虑筛查",
      phq9: "PHQ-9 患者健康问卷",
      gad7: "GAD-7 广泛性焦虑障碍量表",
      dass21: "DASS-21 抑郁焦虑压力量表",
    };
    return names[type] || type;
  };

  return (
    <Card className="max-w-lg mx-auto bg-white dark:bg-gray-900 overflow-hidden">
      {/* 头部 */}
      <div className="p-4 bg-gradient-to-r from-purple-500 to-indigo-600 text-white">
        <h3 className="text-lg font-semibold">
          {getAssessmentName(data.assessment_type)}
        </h3>
        <p className="text-sm opacity-90 mt-1">评估结果</p>
      </div>

      {/* 分数展示 */}
      <div className="p-6 text-center">
        <div className="text-5xl font-bold text-gray-800 dark:text-gray-100">
          {data.total_score}
          <span className="text-2xl text-gray-400 font-normal">
            /{data.max_score}
          </span>
        </div>

        {/* 进度条 */}
        <div className="mt-4 h-3 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
          <div
            className={`h-full transition-all duration-500 ${getProgressColor(
              data.total_score,
              data.max_score
            )}`}
            style={{
              width: `${(data.total_score / data.max_score) * 100}%`,
            }}
          />
        </div>

        {/* 严重程度标签 */}
        <div className="mt-4">
          <span
            className={`inline-block px-4 py-2 rounded-full text-sm font-medium ${getSeverityColor(
              data.severity_level
            )}`}
          >
            {data.severity_level}
          </span>
        </div>
      </div>

      {/* DASS-21 分量表 */}
      {data.subscales && (
        <div className="px-6 pb-4">
          <h4 className="text-sm font-medium text-gray-600 dark:text-gray-400 mb-3">
            分量表得分
          </h4>
          <div className="space-y-3">
            {data.subscales.depression && (
              <SubscaleBar
                label="抑郁"
                score={data.subscales.depression.score}
                severity={data.subscales.depression.severity}
                maxScore={42}
              />
            )}
            {data.subscales.anxiety && (
              <SubscaleBar
                label="焦虑"
                score={data.subscales.anxiety.score}
                severity={data.subscales.anxiety.severity}
                maxScore={42}
              />
            )}
            {data.subscales.stress && (
              <SubscaleBar
                label="压力"
                score={data.subscales.stress.score}
                severity={data.subscales.stress.severity}
                maxScore={42}
              />
            )}
          </div>
        </div>
      )}

      {/* 解读 */}
      <div className="px-6 pb-4">
        <div className="p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
          <p className="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">
            {data.interpretation}
          </p>
        </div>
      </div>

      {/* 建议 */}
      {data.recommendations && data.recommendations.length > 0 && (
        <div className="px-6 pb-6">
          <h4 className="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">
            建议
          </h4>
          <ul className="space-y-2">
            {data.recommendations.map((rec, idx) => (
              <li
                key={idx}
                className="flex items-start gap-2 text-sm text-gray-700 dark:text-gray-300"
              >
                <span className="text-purple-500 mt-0.5">•</span>
                {rec}
              </li>
            ))}
          </ul>
        </div>
      )}

      {/* 安全提醒 */}
      {data.safety_flag && (
        <div className="mx-6 mb-6 p-4 bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg">
          <p className="text-sm text-red-800 dark:text-red-200 font-medium">
            重要提醒
          </p>
          <p className="text-sm text-red-700 dark:text-red-300 mt-1">
            如果你有伤害自己的想法，请立即联系专业帮助。
          </p>
          <p className="text-sm text-red-600 dark:text-red-400 mt-2 font-medium">
            全国心理援助热线：400-161-9995
          </p>
        </div>
      )}
    </Card>
  );
}

function SubscaleBar({
  label,
  score,
  severity,
  maxScore,
}: {
  label: string;
  score: number;
  severity: string;
  maxScore: number;
}) {
  const getSeverityBadgeColor = (severity: string) => {
    if (severity === "正常") return "bg-green-100 text-green-700";
    if (severity === "轻度") return "bg-yellow-100 text-yellow-700";
    if (severity === "中度") return "bg-orange-100 text-orange-700";
    return "bg-red-100 text-red-700";
  };

  return (
    <div className="flex items-center gap-3">
      <span className="text-sm text-gray-600 dark:text-gray-400 w-12">
        {label}
      </span>
      <div className="flex-1 h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
        <div
          className="h-full bg-purple-500 transition-all duration-500"
          style={{ width: `${(score / maxScore) * 100}%` }}
        />
      </div>
      <span className="text-sm text-gray-800 dark:text-gray-200 w-8 text-right">
        {score}
      </span>
      <span
        className={`text-xs px-2 py-0.5 rounded ${getSeverityBadgeColor(
          severity
        )}`}
      >
        {severity}
      </span>
    </div>
  );
}

// 注册卡片
registerCard("assessment_result", AssessmentResultCard);

export default AssessmentResultCard;
