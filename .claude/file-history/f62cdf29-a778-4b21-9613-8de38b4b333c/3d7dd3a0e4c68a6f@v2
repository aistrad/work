default: scripts/default.sh

steps:
  - name: sync
    script: scripts/sync.sh
    description: 扫描知识文档并同步到数据库（不处理）
    args:
      - "--skill <skill_id>: 只同步指定 skill (bazi/zodiac/mbti)"
      - "--force: 强制重新处理所有文档"
      - "--stats: 仅显示统计信息"

  - name: ingest
    script: scripts/ingest.sh
    description: 处理 pending 文档（向量化入库）

  - name: stats
    script: scripts/stats.sh
    description: 显示知识库统计信息
