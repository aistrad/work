#### Booting Sequence (å¯åŠ¨ä»ªå¼)

```tsx
// components/landing/booting-sequence.tsx
'use client';

import { useState, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { cn } from '@/lib/utils';

const BOOT_STEPS = [
  { text: 'Loading L0 Data...', subtext: 'å…«å­—è®¡ç®—ä¸­' },
  { text: 'Calibrating L1 Schema...', subtext: 'å¿ƒç†æ¨¡å‹æ ¡å‡†ä¸­' },
  { text: 'Waking up Agents...', subtext: 'å”¤é†’ä¸“å®¶æ™ºèƒ½ä½“' },
  { text: 'System Ready', subtext: 'ç³»ç»Ÿå°±ç»ª' },
];

export function BootingSequence() {
  const [step, setStep] = useState(0);

  useEffect(() => {
    if (step < BOOT_STEPS.length - 1) {
      const timer = setTimeout(() => setStep((s) => s + 1), 800);
      return () => clearTimeout(timer);
    }
  }, [step]);

  return (
    <motion.div
      className="fixed inset-0 z-50 flex items-center justify-center bg-[#F9F9F7]"
      initial={{ opacity: 0 }}
      animate={{ opacity: 1 }}
      exit={{ opacity: 0 }}
    >
      <div className="text-center">
        {/* Animated Orb */}
        <motion.div
          className={cn(
            "w-24 h-24 mx-auto mb-8 rounded-full",
            "bg-gradient-to-br from-purple-400 to-blue-400",
            "shadow-[0_0_60px_rgba(139,92,246,0.5)]"
          )}
          animate={{
            scale: [1, 1.1, 1],
            opacity: [0.8, 1, 0.8],
          }}
          transition={{
            duration: 1.5,
            repeat: Infinity,
            ease: 'easeInOut',
          }}
        />

        {/* Boot Steps */}
        <div className="space-y-2">
          <AnimatePresence mode="wait">
            <motion.div
              key={step}
              initial={{ opacity: 0, y: 10 }}
              animate={{ opacity: 1, y: 0 }}
              exit={{ opacity: 0, y: -10 }}
              transition={{ duration: 0.3 }}
            >
              <p className="font-mono text-foreground">
                {BOOT_STEPS[step].text}
              </p>
              <p className="text-sm text-foreground-muted">
                {BOOT_STEPS[step].subtext}
              </p>
            </motion.div>
          </AnimatePresence>
        </div>

        {/* Progress Dots */}
        <div className="flex justify-center gap-2 mt-8">
          {BOOT_STEPS.map((_, i) => (
            <div
              key={i}
              className={cn(
                "w-2 h-2 rounded-full transition-colors duration-300",
                i <= step ? "bg-foreground" : "bg-border"
              )}
            />
          ))}
        </div>
      </div>
    </motion.div>
  );
}
```

