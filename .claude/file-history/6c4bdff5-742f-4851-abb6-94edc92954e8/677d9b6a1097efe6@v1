// components/landing/architecture-section.tsx
'use client';

import { useRef } from 'react';
import { motion, useScroll, useTransform } from 'framer-motion';
import { cn } from '@/lib/utils';

const LAYERS = [
  {
    id: 'l0',
    title: 'Layer 0 Â· Firmware',
    description: 'Ancient Wisdom grounded in data.',
    visual: 'â˜¯ï¸',
    color: 'from-amber-200/20 to-orange-200/20',
  },
  {
    id: 'l1',
    title: 'Layer 1 Â· Schema',
    description: 'Psychological frameworks to measure happiness.',
    visual: 'ğŸ“Š',
    color: 'from-blue-200/20 to-cyan-200/20',
  },
  {
    id: 'l2',
    title: 'Layer 2 Â· Agents',
    description: 'Expert agents guiding your every step.',
    visual: 'âœ¨',
    color: 'from-purple-200/20 to-pink-200/20',
  },
  {
    id: 'l3',
    title: 'Layer 3 Â· Synthesis',
    description: 'A voice that truly understands you.',
    visual: 'ğŸ’¬',
    color: 'from-green-200/20 to-emerald-200/20',
  },
];

export function ArchitectureSection() {
  const containerRef = useRef<HTMLDivElement>(null);
  const { scrollYProgress } = useScroll({
    target: containerRef,
