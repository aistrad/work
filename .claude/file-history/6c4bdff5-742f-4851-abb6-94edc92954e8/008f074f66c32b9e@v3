"use client"

import { useCallback, useEffect } from "react"
import { cn } from "@/lib/utils"
import { useAppStore } from "@/stores/app-store"
import { MessageList } from "./message-list"
import { Omnibar } from "./omnibar"
import { PanelRight, PanelRightClose } from "lucide-react"
import { HeaderOrb } from "@/components/brand/orb-indicator"

export function ChatZone() {
  const {
    messages,
    isStreaming,
    sendMessage,
    isSidebarOpen,
    setSidebarOpen,
    isMobile,
    fetchPreferences,
  } = useAppStore()

  // Load preferences on mount
  useEffect(() => {
    fetchPreferences()
  }, [fetchPreferences])

  // 发送消息 - 使用 store 的 sendMessage (已对接后端 API)
  const handleSend = useCallback(
    async (content: string) => {
      await sendMessage(content)
    },
    [sendMessage]
  )

  // 处理命令
  const handleCommand = useCallback(
    (fullCommand: string) => {
      console.log("Command:", fullCommand)

      // 解析命令：格式可能是 "/cmd" 或 "/cmd 参数"
      // fullCommand 已经包含 "/" 前缀
      const trimmed = fullCommand.trim()

      // 提取命令名和参数
      const parts = trimmed.split(/\s+/)
      const cmdWithSlash = parts[0] || ''  // e.g., "/checkin"
      const cmdName = cmdWithSlash.startsWith('/') ? cmdWithSlash.slice(1) : cmdWithSlash
      const cmdArgs = parts.slice(1).join(' ')

      // 处理特殊命令（本地处理，不发送到后端）
      switch (cmdName) {
        case 'checkin':
          // TODO: 触发情绪打卡 modal
          console.log('Trigger checkin modal')
          break
        case 'status':
          // TODO: 查看状态
          console.log('Show status')
          break
        case 'tasks':
          // TODO: 查看任务
          console.log('Show tasks')
          break
        default:
          // 将完整命令发送到后端（命令已包含 /）
          // Next.js Agent Runtime 会根据命令选择对应的 skills
          sendMessage(trimmed)
      }
    },
    [sendMessage]
  )

  // 沉浸模式：Dashboard 关闭时
  const isImmersive = !isSidebarOpen && !isMobile

  return (
    <div className="flex flex-col h-full">
      {/* Header */}
      <header
        className={cn(
          "flex items-center justify-between",
          "h-14 px-4 border-b border-border",
          "bg-background",
          // 沉浸模式下内容居中
          isImmersive && "max-w-4xl mx-auto w-full"
        )}
      >
        <div className="flex items-center gap-3">
          {/* 品牌视觉锚点 - Mini Orb */}
          <HeaderOrb status="balanced" />
          <h1 className="font-serif font-semibold text-foreground">Fortune AI</h1>
        </div>

        {/* 桌面端: 侧边栏切换按钮 */}
        {!isMobile && (
          <button
            onClick={() => setSidebarOpen(!isSidebarOpen)}
            className={cn(
              "h-11 w-11 inline-flex items-center justify-center rounded-lg",
              "text-muted-foreground hover:text-foreground hover:bg-hover",
              "transition-colors",
              "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-foreground/20",
              "focus-visible:ring-offset-2 focus-visible:ring-offset-background"
            )}
            title={isSidebarOpen ? "进入沉浸模式" : "显示 Dashboard"}
            aria-label={isSidebarOpen ? "进入沉浸模式" : "显示 Dashboard"}
          >
            {isSidebarOpen ? (
              <PanelRightClose className="w-5 h-5" />
            ) : (
              <PanelRight className="w-5 h-5" />
            )}
          </button>
        )}
      </header>

      {/* 内容区域 - 沉浸模式下居中并限制最大宽度 */}
      <div className={cn(
        "flex-1 flex flex-col min-h-0",
        isImmersive && "max-w-4xl mx-auto w-full"
      )}>
        {/* Message List */}
        <MessageList
          messages={messages}
          isStreaming={isStreaming}
          onPromptClick={(prompt) => {
            // 将 prompt card 点击作为命令发送
            handleCommand(prompt)
          }}
        />

        {/* Omnibar */}
        <Omnibar
          onSend={handleSend}
          onCommand={handleCommand}
          isStreaming={isStreaming}
        />
      </div>
    </div>
  )
}
