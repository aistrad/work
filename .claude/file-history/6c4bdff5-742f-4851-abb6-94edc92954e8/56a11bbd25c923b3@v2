// Validation point component - Compact
function ValidationPointItem({
  text,
  confidence,
  variant = "default",
}: {
  text: string
  confidence: number
  variant?: "default" | "featured"
}) {
  const isFeatured = variant === "featured"
  return (
    <div
      className={cn(
        "flex items-start gap-2 rounded border",
        isFeatured
          ? "p-3 bg-background border-foreground/20 shadow-hover"
          : "p-2 bg-sidebar border-border"
      )}
    >
      <div
        className={cn(
          "flex-shrink-0 rounded-full flex items-center justify-center mt-0.5",
          isFeatured ? "w-5 h-5 bg-status/20" : "w-4 h-4 bg-foreground/10"
        )}
      >
        <svg className="w-2.5 h-2.5 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <div className="flex-1 min-w-0">
        <p className={cn(isFeatured ? "text-sm" : "text-xs", "text-foreground leading-relaxed")}>
          {text}
        </p>
        <div className="mt-1 flex items-center gap-2">
          <div className={cn("flex-1 bg-border rounded-full overflow-hidden", isFeatured ? "h-1.5" : "h-1")}>
            <div
              className="h-full bg-foreground/60 rounded-full transition-all"
              style={{ width: `${confidence * 100}%` }}
            />
          </div>
          <span className="text-[10px] text-muted-foreground whitespace-nowrap">
            {Math.round(confidence * 100)}%
          </span>
        </div>
      </div>
    </div>
  )
}

