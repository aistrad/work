"use client"

import { useState, Suspense } from "react"
import { useRouter, useSearchParams } from "next/navigation"
import Link from "next/link"
import { cn } from "@/lib/utils"
import { BadgeCheck, Moon, Sparkles, Star, type LucideIcon } from "lucide-react"

const API_BASE = process.env.NEXT_PUBLIC_API_BASE || ''

// Fortune mode types
type FortuneMode = 'bazi' | 'ziwei' | 'astro'

type Gender = '男' | '女'

interface LocationOption {
  name: string
  longitude: number
  latitude: number
}

const CITY_OPTIONS: LocationOption[] = [
  { name: '北京', longitude: 116.4074, latitude: 39.9042 },
  { name: '上海', longitude: 121.4737, latitude: 31.2304 },
  { name: '广州', longitude: 113.2644, latitude: 23.1291 },
  { name: '深圳', longitude: 114.0579, latitude: 22.5431 },
  { name: '成都', longitude: 104.0665, latitude: 30.5728 },
  { name: '杭州', longitude: 120.1551, latitude: 30.2741 },
  { name: '武汉', longitude: 114.3054, latitude: 30.5931 },
  { name: '西安', longitude: 108.9398, latitude: 34.3416 },
]

interface ProfileDraft {
  birthDate: string
  birthTime: string
  gender: Gender
  location: LocationOption
}

const DEFAULT_PROFILE_DRAFT: ProfileDraft = {
  birthDate: '1980-02-11',
  birthTime: '14:30',
  gender: '男',
  location: CITY_OPTIONS[0],
}

const MODE_CONFIG: Record<FortuneMode, { label: string; icon: LucideIcon; desc: string }> = {
  bazi: { label: '八字', icon: Sparkles, desc: '四柱命理' },
  ziwei: { label: '紫微', icon: Star, desc: '紫微斗数' },
  astro: { label: '星座', icon: Moon, desc: '西方占星' },
}

const FORTUNE_MODES: FortuneMode[] = ['bazi', 'ziwei', 'astro']

// API response types
interface BaziPreviewData {
  pillars: {
    year?: string  // "庚申" (gan+zhi combined as 2-char string)
    month?: string
    day?: string
    hour?: string
  }
  day_master: { gan: string; element: string }
  wuxing_count: Record<string, number>
  strength: string
  favorable_elements: string[]
  digest: string
}

interface ValidationPoint {
  text: string
  confidence: number
}

// Main page component
export default function LoginPage() {
  const [profileDraft, setProfileDraft] = useState<ProfileDraft>(DEFAULT_PROFILE_DRAFT)

  return (
    <div className="min-h-screen flex bg-background">
      {/* Left Side - Auth Forms */}
      <div className="w-full lg:w-[420px] xl:w-[480px] flex flex-col justify-center p-6 lg:p-10">
        <Suspense fallback={<AuthFormSkeleton />}>
          <AuthSection profileDraft={profileDraft} setProfileDraft={setProfileDraft} />
        </Suspense>
      </div>

      {/* Right Side - Fortune Preview (hidden on mobile) */}
      <div className="hidden lg:flex flex-1 bg-sidebar border-l border-border overflow-hidden">
        <FortunePreviewSection profileDraft={profileDraft} setProfileDraft={setProfileDraft} />
      </div>
    </div>
  )
}

// Auth section with login/register forms
function AuthSection({
  profileDraft,
  setProfileDraft,
}: {
  profileDraft: ProfileDraft
  setProfileDraft: React.Dispatch<React.SetStateAction<ProfileDraft>>
}) {
  const router = useRouter()
  const searchParams = useSearchParams()
  const redirectTo = searchParams.get('redirect') || '/'

  const [mode, setMode] = useState<'login' | 'register'>('login')
  const [email, setEmail] = useState("")
  const [password, setPassword] = useState("")
  const [name, setName] = useState("")
  const [error, setError] = useState("")
  const [loading, setLoading] = useState(false)

  const updateProfileDraft = (patch: Partial<ProfileDraft>) => {
    setProfileDraft((prev) => ({ ...prev, ...patch }))
  }

  const handleLogin = async (e: React.FormEvent) => {
    e.preventDefault()
    setError("")
    setLoading(true)

    try {
      const res = await fetch(`${API_BASE}/api/auth/login`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({ email, password }),
      })
      const json = await res.json()
      if (!res.ok || !json.ok) {
        setError(json.error?.message || "登录失败")
        return
      }
      router.push(redirectTo)
    } catch {
      setError("网络错误，请重试")
    } finally {
      setLoading(false)
    }
  }

  const handleRegister = async (e: React.FormEvent) => {
    e.preventDefault()
    setError("")
    setLoading(true)

    const birthdayLocal = `${profileDraft.birthDate} ${profileDraft.birthTime}:00`
    const tzOffsetHours = -new Date().getTimezoneOffset() / 60

    try {
      const res = await fetch(`${API_BASE}/api/auth/register`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({
          email,
          password,
          name: name || email.split('@')[0],
          gender: profileDraft.gender,
          birthday_local: birthdayLocal,
          tz_offset_hours: tzOffsetHours,
          location: profileDraft.location,
        }),
      })
      const json = await res.json()
      if (!res.ok || !json.ok) {
        setError(json.error?.message || "注册失败")
        return
      }
      router.push(redirectTo)
    } catch {
      setError("网络错误，请重试")
    } finally {
      setLoading(false)
    }
  }

  return (
    <div className="max-w-sm mx-auto w-full space-y-6">
      {/* Logo */}
      <div>
        <h1 className="text-3xl font-serif font-bold text-foreground">Mentis</h1>
        <p className="mt-2 text-muted-foreground">精神数字孪生 · 人生导航系统</p>
      </div>

      {/* Mode Toggle */}
      <div className="flex gap-1 p-1 bg-sidebar rounded-lg">
        <button
          type="button"
          onClick={() => setMode('login')}
          className={cn(
            "flex-1 h-11 px-4 rounded-md text-sm font-medium transition-colors",
            "inline-flex items-center justify-center",
            "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-foreground/20",
            "focus-visible:ring-offset-2 focus-visible:ring-offset-background",
            mode === 'login'
              ? "bg-background text-foreground shadow-sm"
              : "text-muted-foreground hover:text-foreground"
          )}
        >
          登录
        </button>
        <button
          type="button"
          onClick={() => setMode('register')}
          className={cn(
            "flex-1 h-11 px-4 rounded-md text-sm font-medium transition-colors",
            "inline-flex items-center justify-center",
            "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-foreground/20",
            "focus-visible:ring-offset-2 focus-visible:ring-offset-background",
            mode === 'register'
              ? "bg-background text-foreground shadow-sm"
              : "text-muted-foreground hover:text-foreground"
          )}
        >
          注册
        </button>
      </div>

      {/* Error Message */}
      {error && (
        <div className="p-3 rounded-lg bg-destructive/10 text-destructive text-sm">
          {error}
        </div>
      )}

      {/* Forms */}
      {mode === 'login' ? (
        <form onSubmit={handleLogin} className="space-y-4">
          <div className="space-y-1">
            <label className="text-sm font-medium text-foreground">邮箱</label>
            <input
              type="email"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              required
              placeholder="your@email.com"
              className={cn(
                "w-full px-4 py-3 rounded-lg",
                "bg-sidebar border border-border",
                "text-foreground placeholder:text-muted-foreground",
                "focus:outline-none focus:ring-2 focus:ring-foreground/20"
              )}
            />
          </div>
          <div className="space-y-1">
            <label className="text-sm font-medium text-foreground">密码</label>
            <input
              type="password"
              value={password}
              onChange={(e) => setPassword(e.target.value)}
              required
              minLength={8}
              placeholder="••••••••"
              className={cn(
                "w-full px-4 py-3 rounded-lg",
                "bg-sidebar border border-border",
                "text-foreground placeholder:text-muted-foreground",
                "focus:outline-none focus:ring-2 focus:ring-foreground/20"
              )}
            />
          </div>
          <button
            type="submit"
            disabled={loading}
            className={cn(
              "w-full py-3 px-4 rounded-lg",
              "bg-foreground text-background",
              "font-medium",
              "hover:opacity-90 transition-opacity",
              "disabled:opacity-50 disabled:cursor-not-allowed"
            )}
          >
            {loading ? "登录中..." : "登录"}
          </button>
        </form>
      ) : (
        <form onSubmit={handleRegister} className="space-y-4">
          <div className="space-y-1">
            <label className="text-sm font-medium text-foreground">昵称</label>
            <input
              type="text"
              value={name}
              onChange={(e) => setName(e.target.value)}
              placeholder="您的昵称（可选）"
              className={cn(
                "w-full px-4 py-3 rounded-lg",
                "bg-sidebar border border-border",
                "text-foreground placeholder:text-muted-foreground",
                "focus:outline-none focus:ring-2 focus:ring-foreground/20"
              )}
            />
          </div>
          <div className="space-y-1">
            <label className="text-sm font-medium text-foreground">邮箱</label>
            <input
              type="email"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              required
              placeholder="your@email.com"
              className={cn(
                "w-full px-4 py-3 rounded-lg",
                "bg-sidebar border border-border",
                "text-foreground placeholder:text-muted-foreground",
                "focus:outline-none focus:ring-2 focus:ring-foreground/20"
              )}
            />
          </div>
          <div className="space-y-1">
            <label className="text-sm font-medium text-foreground">密码</label>
            <input
              type="password"
              value={password}
              onChange={(e) => setPassword(e.target.value)}
              required
              minLength={8}
              placeholder="至少8位"
              className={cn(
                "w-full px-4 py-3 rounded-lg",
                "bg-sidebar border border-border",
                "text-foreground placeholder:text-muted-foreground",
                "focus:outline-none focus:ring-2 focus:ring-foreground/20"
              )}
            />
          </div>

          <div className="p-3 rounded-lg bg-background border border-border space-y-3">
            <div className="flex items-baseline justify-between gap-3">
              <p className="text-sm font-medium text-foreground">出生信息</p>
              <p className="text-xs text-muted-foreground">用于生成命盘与心理画像</p>
            </div>
            <div className="grid grid-cols-2 gap-3">
              <div className="space-y-1">
                <label className="text-sm font-medium text-foreground">日期</label>
                <input
                  type="date"
                  value={profileDraft.birthDate}
                  onChange={(e) => updateProfileDraft({ birthDate: e.target.value })}
                  required
                  className={cn(
                    "w-full px-4 py-3 rounded-lg",
                    "bg-sidebar border border-border",
                    "text-foreground",
                    "focus:outline-none focus:ring-2 focus:ring-foreground/20"
                  )}
                />
              </div>
              <div className="space-y-1">
                <label className="text-sm font-medium text-foreground">时间</label>
                <input
                  type="time"
                  value={profileDraft.birthTime}
                  onChange={(e) => updateProfileDraft({ birthTime: e.target.value })}
                  required
                  className={cn(
                    "w-full px-4 py-3 rounded-lg",
                    "bg-sidebar border border-border",
                    "text-foreground",
                    "focus:outline-none focus:ring-2 focus:ring-foreground/20"
                  )}
                />
              </div>
            </div>
            <div className="grid grid-cols-2 gap-3">
              <div className="space-y-1">
                <label className="text-sm font-medium text-foreground">性别</label>
                <select
                  value={profileDraft.gender}
                  onChange={(e) => updateProfileDraft({ gender: e.target.value as Gender })}
                  className={cn(
                    "w-full px-4 py-3 rounded-lg",
                    "bg-sidebar border border-border",
                    "text-foreground",
                    "focus:outline-none focus:ring-2 focus:ring-foreground/20"
                  )}
                >
                  <option value="男">男</option>
                  <option value="女">女</option>
                </select>
              </div>
              <div className="space-y-1">
                <label className="text-sm font-medium text-foreground">地点</label>
                <select
                  value={profileDraft.location.name}
                  onChange={(e) => {
                    const city = CITY_OPTIONS.find((c) => c.name === e.target.value)
                    if (city) updateProfileDraft({ location: city })
                  }}
                  className={cn(
                    "w-full px-4 py-3 rounded-lg",
                    "bg-sidebar border border-border",
                    "text-foreground",
                    "focus:outline-none focus:ring-2 focus:ring-foreground/20"
                  )}
                >
                  {CITY_OPTIONS.map((c) => (
                    <option key={c.name} value={c.name}>
                      {c.name}
                    </option>
                  ))}
                </select>
              </div>
            </div>
          </div>

          <button
            type="submit"
            disabled={loading}
            className={cn(
              "w-full py-3 px-4 rounded-lg",
              "bg-foreground text-background",
              "font-medium",
              "hover:opacity-90 transition-opacity",
              "disabled:opacity-50 disabled:cursor-not-allowed"
            )}
          >
            {loading ? "注册中..." : "注册"}
          </button>
          <p className="text-xs text-muted-foreground text-center">
            注册即表示您同意我们的服务条款和隐私政策
          </p>
        </form>
      )}

      {/* Mobile: Show link to preview */}
      <div className="lg:hidden pt-4 border-t border-border">
        <p className="text-sm text-muted-foreground text-center">
          先体验一下？
          <Link href="/register" className="text-foreground hover:underline ml-1">
            免费预览命盘
          </Link>
        </p>
      </div>
    </div>
  )
}

// Fortune preview section (right side)
function FortunePreviewSection({
  profileDraft,
  setProfileDraft,
}: {
  profileDraft: ProfileDraft
  setProfileDraft: React.Dispatch<React.SetStateAction<ProfileDraft>>
}) {
  const [mode, setMode] = useState<FortuneMode>('bazi')
  const [loading, setLoading] = useState(false)
  const [error, setError] = useState('')
  const [previewData, setPreviewData] = useState<BaziPreviewData | null>(null)
  const [validationPoints, setValidationPoints] = useState<ValidationPoint[]>([])

  const updateProfileDraft = (patch: Partial<ProfileDraft>) => {
    setProfileDraft((prev) => ({ ...prev, ...patch }))
  }

  const handleGeneratePreview = async () => {
    setLoading(true)
    setError('')

    const birthdayLocal = `${profileDraft.birthDate} ${profileDraft.birthTime}:00`
    const tzOffsetHours = -new Date().getTimezoneOffset() / 60
    const payload = {
      gender: profileDraft.gender,
      birthday_local: birthdayLocal,
      tz_offset_hours: tzOffsetHours,
      location: profileDraft.location,
    }

    try {
      // Fetch preview and validation points in parallel
      const [previewRes, validationRes] = await Promise.all([
        fetch(`${API_BASE}/api/auth/preview`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload),
        }),
        fetch(`${API_BASE}/api/auth/validation-points`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ ...payload, mode }),
        }),
      ])

      const previewJson = await previewRes.json()
      const validationJson = await validationRes.json()

      if (!previewRes.ok || !previewJson.ok) {
        throw new Error(previewJson.error?.message || '预览生成失败')
      }

      setPreviewData(previewJson.data)

      // Parse validation points
      if (validationRes.ok && validationJson.ok && validationJson.data?.points) {
        const points = validationJson.data.points.map((text: string, i: number) => ({
          text,
          confidence: 0.85 - i * 0.05 + Math.random() * 0.1,
        }))
        setValidationPoints(points)
      }
    } catch (err) {
      setError(err instanceof Error ? err.message : '网络错误')
    } finally {
      setLoading(false)
    }
  }

	  return (
	    <div className="flex-1 flex flex-col p-8 xl:p-12 overflow-y-auto">
	      <div className="max-w-[640px] mx-auto w-full space-y-5 pb-8">
        {/* Header */}
        <div>
          <h2 className="text-xl font-semibold text-foreground">免费体验</h2>
          <p className="text-sm text-muted-foreground mt-1">
            输入生辰，获得专属命盘预览
          </p>
        </div>

	        {/* Mode Tabs - Horizontal, compact */}
	        <div className="flex gap-2">
	          {FORTUNE_MODES.map((m) => {
	            const Icon = MODE_CONFIG[m].icon
	            const isActive = mode === m
	            return (
	              <button
	                key={m}
	                type="button"
	                onClick={() => setMode(m)}
	                className={cn(
	                  "flex-1 h-11 px-3 rounded-lg border transition-all",
	                  "flex items-center justify-center gap-2",
	                  "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-foreground/20",
	                  "focus-visible:ring-offset-2 focus-visible:ring-offset-background",
	                  isActive
	                    ? "border-foreground/30 bg-background shadow-sm"
	                    : "border-border hover:border-foreground/20"
	                )}
	              >
	                <Icon className={cn("w-4 h-4", isActive ? "text-foreground" : "text-muted-foreground")} />
	                <span className="font-medium text-foreground text-sm">{MODE_CONFIG[m].label}</span>
	                <span className="text-xs text-muted-foreground hidden xl:inline">{MODE_CONFIG[m].desc}</span>
	              </button>
	            )
	          })}
	        </div>

	        {/* Birth Input - More compact, horizontal */}
	        <div className="p-4 rounded-lg bg-background border border-border">
	          <h3 className="font-medium text-foreground text-sm mb-3">出生信息</h3>
	          <div className="grid grid-cols-2 xl:grid-cols-4 gap-3">
	            <div className="space-y-1">
	              <label className="text-xs text-muted-foreground">日期</label>
	              <input
	                type="date"
	                value={profileDraft.birthDate}
	                onChange={(e) => updateProfileDraft({ birthDate: e.target.value })}
	                className={cn(
	                  "w-full px-3 py-2 rounded-md text-sm",
	                  "bg-sidebar border border-border",
	                  "text-foreground",
	                  "focus:outline-none focus:ring-1 focus:ring-foreground/20"
	                )}
	              />
	            </div>
	            <div className="space-y-1">
	              <label className="text-xs text-muted-foreground">时间</label>
	              <input
	                type="time"
	                value={profileDraft.birthTime}
	                onChange={(e) => updateProfileDraft({ birthTime: e.target.value })}
	                className={cn(
	                  "w-full px-3 py-2 rounded-md text-sm",
	                  "bg-sidebar border border-border",
	                  "text-foreground",
	                  "focus:outline-none focus:ring-1 focus:ring-foreground/20"
	                )}
	              />
	            </div>
	            <div className="space-y-1">
	              <label className="text-xs text-muted-foreground">性别</label>
	              <select
	                value={profileDraft.gender}
	                onChange={(e) => updateProfileDraft({ gender: e.target.value as Gender })}
	                className={cn(
	                  "w-full px-3 py-2 rounded-md text-sm",
	                  "bg-sidebar border border-border",
	                  "text-foreground",
	                  "focus:outline-none focus:ring-1 focus:ring-foreground/20"
	                )}
	              >
	                <option value="男">男</option>
	                <option value="女">女</option>
	              </select>
	            </div>
	            <div className="space-y-1">
	              <label className="text-xs text-muted-foreground">地点</label>
	              <select
	                value={profileDraft.location.name}
	                onChange={(e) => {
	                  const city = CITY_OPTIONS.find((c) => c.name === e.target.value)
	                  if (city) updateProfileDraft({ location: city })
	                }}
	                className={cn(
	                  "w-full px-3 py-2 rounded-md text-sm",
	                  "bg-sidebar border border-border",
	                  "text-foreground",
	                  "focus:outline-none focus:ring-1 focus:ring-foreground/20"
	                )}
	              >
	                {CITY_OPTIONS.map((c) => (
	                  <option key={c.name} value={c.name}>
	                    {c.name}
	                  </option>
	                ))}
	              </select>
	            </div>
	          </div>
	          <button
	            type="button"
	            onClick={handleGeneratePreview}
	            disabled={loading}
	            className={cn(
	              "w-full mt-3 py-3 px-4 rounded-lg",
	              "bg-foreground/10 text-foreground",
	              "font-medium text-sm",
	              "hover:bg-foreground/20 transition-colors",
	              "disabled:opacity-50 disabled:cursor-not-allowed",
	              "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-foreground/20",
	              "focus-visible:ring-offset-2 focus-visible:ring-offset-background"
	            )}
	          >
	            {loading ? "计算中..." : "生成预览"}
	          </button>
        </div>

        {/* Error */}
        {error && (
          <div className="p-3 rounded-lg bg-destructive/10 text-destructive text-sm">
            {error}
          </div>
        )}

        {/* Preview Content - Two column layout */}
        {previewData && (
          <div className="grid grid-cols-1 xl:grid-cols-2 gap-4">
            {/* Chart Preview */}
            <div className="p-4 rounded-lg bg-background border border-border">
              <h3 className="font-medium text-foreground text-sm mb-3">
                {MODE_CONFIG[mode].label}命盘预览
              </h3>
              {mode === 'bazi' && <BaziPreviewReal data={previewData} />}
              {mode === 'ziwei' && <ZiweiPreview />}
              {mode === 'astro' && <AstroPreview />}
            </div>

	            {/* Validation Points */}
	            <div className="p-4 rounded-lg bg-background border border-border">
	              <h3 className="font-medium text-foreground text-sm mb-3 flex items-center gap-2">
	                <BadgeCheck className="w-4 h-4 text-status-foreground" />
	                <span>「那就是我」验证点</span>
	              </h3>
	              <div className="space-y-2">
	                {validationPoints.length > 0 ? (
	                  validationPoints.map((point, i) => (
	                    <ValidationPointItem
	                      key={i}
	                      text={point.text}
	                      confidence={point.confidence}
	                      variant={i === 0 ? "featured" : "default"}
	                    />
	                  ))
	                ) : (
	                  <>
	                    <ValidationPointItem
	                      text="你是不是经常想太多，决定一件小事都要纠结很久？"
	                      confidence={0.85}
	                      variant="featured"
	                    />
	                    <ValidationPointItem text="你在人际关系中往往是付出更多的那个？" confidence={0.78} />
	                    <ValidationPointItem text="你面对压力时，第一反应是独自消化？" confidence={0.82} />
	                  </>
	                )}
	              </div>
            </div>
          </div>
        )}

        {/* CTA - Only show when preview is visible */}
        {previewData && (
          <div className="p-4 rounded-lg bg-foreground/5 border border-foreground/10 text-center">
            <p className="text-foreground font-medium text-sm">
              注册解锁完整命盘分析和个性化指导
            </p>
            <p className="text-xs text-muted-foreground mt-1">
              深度报告 · 每日运势 · AI 教练
            </p>
          </div>
        )}

        {/* Initial placeholder when no preview */}
	        {!previewData && !loading && (
	          <div className="flex-1 flex items-center justify-center min-h-[200px]">
	            <div className="text-center text-muted-foreground">
	              <Sparkles className="w-10 h-10 text-mystic-foreground mx-auto mb-2" />
	              <p className="text-sm">输入出生信息，点击「生成预览」</p>
	              <p className="text-xs mt-1">即刻获得命盘分析预览</p>
	            </div>
	          </div>
	        )}
      </div>
    </div>
  )
}

// Helper to split pillar string "庚申" into { gan: "庚", zhi: "申" }
function parsePillar(pillar?: string): { gan: string; zhi: string } {
  if (!pillar || pillar.length < 2) return { gan: '?', zhi: '?' }
  return { gan: pillar[0], zhi: pillar[1] }
}

// Translate strength from English to Chinese
function translateStrength(strength?: string): string {
  if (!strength) return '?'
  const map: Record<string, string> = {
    'strong': '身强',
    'weak': '身弱',
    'balanced': '中和',
  }
  return map[strength.toLowerCase()] || strength
}

// Real Bazi preview with API data
function BaziPreviewReal({ data }: { data: BaziPreviewData }) {
  const yearPillar = parsePillar(data.pillars.year)
  const monthPillar = parsePillar(data.pillars.month)
  const dayPillar = parsePillar(data.pillars.day)
  const hourPillar = parsePillar(data.pillars.hour)

  const pillars = [
    { label: '年柱', stem: yearPillar.gan, branch: yearPillar.zhi },
    { label: '月柱', stem: monthPillar.gan, branch: monthPillar.zhi },
    { label: '日柱', stem: dayPillar.gan, branch: dayPillar.zhi },
    { label: '时柱', stem: hourPillar.gan, branch: hourPillar.zhi },
  ]

  const elements = ['金', '木', '水', '火', '土']

  return (
    <div className="space-y-3">
      {/* Four Pillars - Compact */}
      <div className="grid grid-cols-4 gap-1.5">
        {pillars.map((p) => (
          <div
            key={p.label}
            className="p-2 rounded bg-sidebar border border-border text-center"
          >
            <div className="text-[10px] text-muted-foreground mb-0.5">{p.label}</div>
            <div className="text-base font-serif text-foreground leading-tight">{p.stem}</div>
            <div className="text-base font-serif text-foreground leading-tight">{p.branch}</div>
          </div>
        ))}
      </div>

      {/* Five Elements - Compact horizontal */}
      <div className="flex items-center justify-center gap-3 py-2">
        {elements.map((e) => (
          <div key={e} className="text-center">
            <div className="w-7 h-7 rounded-full bg-foreground/10 flex items-center justify-center text-foreground font-medium text-sm">
              {e}
            </div>
            <div className="text-[10px] text-muted-foreground mt-0.5">
              {data.wuxing_count[e] || 0}
            </div>
          </div>
        ))}
      </div>

      {/* Summary - Compact */}
      <div className="p-2.5 rounded bg-sidebar border border-border text-sm space-y-1">
        <div>
          <span className="text-muted-foreground">日主：</span>
          <span className="text-foreground font-medium">
            {data.day_master?.gan || '?'}{data.day_master?.element || ''} · {translateStrength(data.strength)}
          </span>
        </div>
        {data.favorable_elements?.length > 0 && (
          <div>
            <span className="text-muted-foreground">有利五行：</span>
            <span className="text-foreground">{data.favorable_elements.join('、')}</span>
          </div>
        )}
      </div>
    </div>
  )
}

