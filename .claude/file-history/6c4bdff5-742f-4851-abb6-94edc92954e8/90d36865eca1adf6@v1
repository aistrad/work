"use client"

import { cn } from "@/lib/utils"
import { useAppStore } from "@/stores/app-store"
import { RefreshCw, Pin, AlertTriangle, ChevronDown, Play, Check, Clock, Heart, Lightbulb, TrendingUp, BarChart3 } from "lucide-react"
import { useState, useEffect } from "react"
import { CheckinModal } from "@/components/checkin/checkin-modal"

export function OverviewTab() {
  const {
    insight,
    stateScore,
    perma,
    todayTasks,
    riskAlerts,
    pinnedArtifacts,
    isLoading,
    loadingTab,
    fetchOverview,
    acceptTask,
    completeTask,
  } = useAppStore()

  const [showRisk, setShowRisk] = useState(false)
  const [showCheckin, setShowCheckin] = useState(false)

  // Fetch data on mount
  useEffect(() => {
    fetchOverview()
  }, [fetchOverview])

  // Listen for openCheckin event from action buttons
  useEffect(() => {
    const handleOpenCheckin = () => setShowCheckin(true)
    window.addEventListener("openCheckin", handleOpenCheckin)
    return () => window.removeEventListener("openCheckin", handleOpenCheckin)
  }, [])

  const isTabLoading = isLoading && loadingTab === 'overview'

  const handleCheckinSuccess = () => {
    // Refresh data after successful checkin
    fetchOverview()
  }

  return (
    <div className="p-4 space-y-4">
      {/* Bento Grid 布局 */}
      <div className="grid grid-cols-2 gap-4">
        {/* 1. 今日一句话洞察 - 占满宽度 */}
        <InsightCard
          insight={insight}
          stateScore={stateScore.score}
          recoveryAction={stateScore.recoveryAction}
          isLoading={isTabLoading}
          onRefresh={fetchOverview}
          className="col-span-2"
        />

        {/* 2. 今日三任务 */}
        <TodayQuestsCard
          tasks={todayTasks}
          onAccept={acceptTask}
          onComplete={completeTask}
          isLoading={isTabLoading}
          onCheckin={() => setShowCheckin(true)}
          className="col-span-2"
        />

        {/* 3. 五维状态条 (基于 PERMA) */}
        <StatusBarsCard
          perma={perma}
          stateScore={stateScore}
          isLoading={isTabLoading}
          onCheckin={() => setShowCheckin(true)}
        />

        {/* 4. 最近钉住 */}
        <PinnedCard artifacts={pinnedArtifacts} />
      </div>

      {/* 5. 风险提示 (折叠) */}
      {riskAlerts.length > 0 && (
        <RiskCard
          alerts={riskAlerts}
          isOpen={showRisk}
          onToggle={() => setShowRisk(!showRisk)}
        />
      )}

      {/* Check-in Modal */}
      <CheckinModal
        isOpen={showCheckin}
        onClose={() => setShowCheckin(false)}
        onSuccess={handleCheckinSuccess}
      />
    </div>
  )
}

// 一句话洞察卡片
function InsightCard({
  insight,
  stateScore,
  recoveryAction,
  isLoading,
  onRefresh,
  className,
}: {
  insight: string
  stateScore: number
  recoveryAction: string | null
  isLoading: boolean
  onRefresh: () => void
  className?: string
}) {
  return (
    <div
      className={cn(
        "p-4 rounded-lg",
        "bg-advice",
        "relative group",
        className
      )}
    >
      <div className="flex items-start gap-3">
        <div className="flex-shrink-0 w-10 h-10 rounded-lg bg-background/60 border border-advice-foreground/10 flex items-center justify-center">
          <Lightbulb className="w-5 h-5 text-advice-foreground" />
        </div>
        <div className="flex-1">
          {isLoading ? (
            <div className="animate-pulse">
              <div className="h-5 bg-foreground/10 rounded w-3/4 mb-2" />
              <div className="h-4 bg-foreground/10 rounded w-1/2" />
            </div>
          ) : (
            <>
              <p className="text-foreground font-medium">{insight}</p>
              <div className="flex items-center gap-2 mt-1">
                <span className="text-sm text-muted-foreground">
                  状态分数: <strong>{stateScore}</strong>
                </span>
                {recoveryAction && (
                  <span className="text-xs text-advice-foreground">
                    · {recoveryAction}
                  </span>
                )}
              </div>
            </>
          )}
        </div>
      </div>
      {/* 刷新按钮 */}
      <button
        type="button"
        onClick={onRefresh}
        disabled={isLoading}
        className={cn(
          "absolute top-2 right-2",
          "h-11 w-11 inline-flex items-center justify-center rounded-lg",
          "text-muted-foreground hover:text-foreground hover:bg-hover/50",
          "opacity-0 group-hover:opacity-100 transition-opacity",
          isLoading && "animate-spin",
          "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-foreground/20",
          "focus-visible:ring-offset-2 focus-visible:ring-offset-background"
        )}
        aria-label="刷新"
      >
        <RefreshCw className="w-4 h-4" />
      </button>
    </div>
  )
}

// 今日任务卡片
function TodayQuestsCard({
  tasks,
  onAccept,
  onComplete,
  isLoading,
  onCheckin,
  className,
}: {
  tasks: { task_id: string; title: string; status: string; commitment_type?: string; minutes?: number }[]
  onAccept: (taskId: string, type?: 'start_task' | 'schedule_task') => void
  onComplete: (taskId: string) => void
  isLoading: boolean
  onCheckin?: () => void
  className?: string
}) {
  const iconActionBase = cn(
    "h-11 w-11 inline-flex items-center justify-center rounded-lg",
    "transition-colors",
    "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-foreground/20",
    "focus-visible:ring-offset-2 focus-visible:ring-offset-background"
  )

  return (
    <div className={cn("p-4 rounded-lg bg-sidebar", className)}>
      <h3 className="font-medium text-foreground mb-3">今日任务</h3>
      <div className="space-y-2">
        {isLoading ? (
          <>
            {[1, 2, 3].map((i) => (
              <div key={i} className="animate-pulse flex items-center gap-3 p-2">
                <div className="w-4 h-4 rounded bg-foreground/10" />
                <div className="h-4 bg-foreground/10 rounded flex-1" />
              </div>
            ))}
          </>
        ) : tasks.length === 0 ? (
          <div className="py-2">
            <p className="text-sm text-muted-foreground">暂无任务，状态良好！</p>
            {onCheckin && (
              <button
                type="button"
                onClick={onCheckin}
                className={cn(
                  "mt-3 h-11 px-4 rounded-lg inline-flex items-center justify-center gap-2",
                  "border border-border bg-background hover:bg-hover transition-colors",
                  "text-foreground text-sm font-medium",
                  "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-foreground/20",
                  "focus-visible:ring-offset-2 focus-visible:ring-offset-background"
                )}
              >
                <Heart className="w-4 h-4 text-alert-foreground" />
                做一次情绪打卡
              </button>
            )}
          </div>
        ) : (
          tasks.map((task) => (
            <div
              key={task.task_id}
              className={cn(
                "flex items-center gap-3 p-2 rounded-md",
                "hover:bg-hover transition-colors",
                task.status === "done" && "opacity-60"
              )}
            >
              {task.status === "done" ? (
                <div className="h-11 w-11 inline-flex items-center justify-center">
                  <div className="w-5 h-5 rounded bg-status border-2 border-status-foreground flex items-center justify-center">
                    <Check className="w-3 h-3 text-status-foreground" />
                  </div>
                </div>
              ) : task.status === "active" ? (
                <button
                  type="button"
                  onClick={() => onComplete(task.task_id)}
                  className={cn(iconActionBase, "hover:bg-status/20")}
                  title="完成任务"
                  aria-label="完成任务"
                >
                  <span className="w-5 h-5 rounded-full border-2 border-status-foreground" />
                </button>
              ) : (
                <div className="h-11 w-11 inline-flex items-center justify-center">
                  <div className="w-5 h-5 rounded-full border-2 border-muted-foreground" />
                </div>
              )}
              <span
                className={cn(
                  "flex-1 text-sm",
                  task.status === "done" && "line-through"
                )}
              >
                {task.title}
              </span>
              {task.minutes && (
                <span className="flex items-center gap-1 text-xs text-muted-foreground">
                  <Clock className="w-3 h-3" />
                  {task.minutes}分钟
                </span>
              )}
              {task.status === "suggested" && (
                <button
                  type="button"
                  onClick={() => onAccept(task.task_id, 'start_task')}
                  className={cn(iconActionBase, "hover:bg-hover")}
                  title="开始"
                  aria-label="开始任务"
                >
                  <Play className="w-4 h-4 text-muted-foreground" />
                </button>
              )}
            </div>
          ))
        )}
      </div>
    </div>
  )
}

// 五维状态条 (基于 PERMA + State Score)
function StatusBarsCard({
  perma,
  stateScore,
  isLoading,
  onCheckin,
  className,
}: {
  perma: {
    positiveEmotion: { score: number }
    engagement: { score: number }
    relationships: { score: number }
    meaning: { score: number }
    accomplishment: { score: number }
  }
  stateScore: { score: number; breakdown: { emotion: number; action: number; streak: number } }
  isLoading: boolean
  onCheckin?: () => void
  className?: string
}) {
  const dimensions = [
    { key: "P", label: "积极情绪", value: perma.positiveEmotion.score * 10, color: "bg-status-foreground" },
    { key: "E", label: "投入", value: perma.engagement.score * 10, color: "bg-advice-foreground" },
    { key: "R", label: "关系", value: perma.relationships.score * 10, color: "bg-mystic-foreground" },
    { key: "M", label: "意义", value: perma.meaning.score * 10, color: "bg-alert-foreground" },
    { key: "A", label: "成就", value: perma.accomplishment.score * 10, color: "bg-foreground" },
  ]

  return (
    <div className={cn("p-4 rounded-lg bg-sidebar", className)}>
      <div className="flex items-center justify-between mb-3">
        <h3 className="font-medium text-foreground">PERMA 状态</h3>
        <span className="text-xs text-muted-foreground">
          总分: {stateScore.score}
        </span>
      </div>
      <div className="space-y-3">
        {isLoading ? (
          <>
            {[1, 2, 3, 4, 5].map((i) => (
              <div key={i} className="animate-pulse space-y-1">
                <div className="h-3 bg-foreground/10 rounded w-1/4" />
                <div className="h-1.5 bg-foreground/10 rounded" />
              </div>
            ))}
          </>
        ) : (
          dimensions.map((dim) => (
            <div key={dim.key} className="space-y-1">
              <div className="flex items-center justify-between text-xs">
                <span className="text-muted-foreground">{dim.label}</span>
                <span className="text-foreground font-medium">{Math.round(dim.value)}</span>
              </div>
              <div className="h-1.5 bg-hover rounded-full overflow-hidden">
                <div
                  className={cn("h-full rounded-full transition-all duration-500", dim.color)}
                  style={{ width: `${Math.min(100, dim.value)}%` }}
                />
              </div>
            </div>
          ))
        )}
      </div>

      {/* State Score Breakdown */}
      <div className="mt-4 pt-3 border-t border-border">
        <div className="flex items-center justify-between text-xs text-muted-foreground">
          <span>情绪: {stateScore.breakdown.emotion}</span>
          <span>行动: {stateScore.breakdown.action}</span>
          <span>连续: {stateScore.breakdown.streak}</span>
        </div>
      </div>

      {/* Check-in Button */}
      {onCheckin && (
        <button
          onClick={onCheckin}
          className={cn(
            "w-full mt-4 flex items-center justify-center gap-2 py-2 px-4",
            "rounded-lg border border-primary/50",
            "text-primary hover:bg-primary/10 transition-colors",
            "text-sm font-medium"
          )}
        >
          <Heart className="w-4 h-4" />
          情绪打卡
        </button>
      )}
    </div>
  )
}

// 最近钉住卡片
function PinnedCard({
  artifacts,
  className,
}: {
  artifacts: { id: string; title: string; type: string }[]
  className?: string
}) {
  const displayArtifacts = artifacts.length
    ? artifacts.slice(0, 3)
    : [
        { id: "placeholder-1", title: "暂无钉住的内容", type: "placeholder" },
      ]

  return (
    <div className={cn("p-4 rounded-lg bg-sidebar", className)}>
      <div className="flex items-center gap-2 mb-3">
        <Pin className="w-4 h-4 text-muted-foreground" />
        <h3 className="font-medium text-foreground">最近钉住</h3>
      </div>
      <div className="space-y-2">
        {displayArtifacts.map((artifact) => (
          <div
            key={artifact.id}
            className={cn(
              "flex items-center gap-2 p-2 rounded-md",
              artifact.type !== "placeholder" && "hover:bg-hover transition-colors cursor-pointer",
              artifact.type === "placeholder" && "opacity-50"
            )}
          >
            {artifact.type === "analysis" ? (
              <BarChart3 className="w-4 h-4 text-muted-foreground flex-shrink-0" />
            ) : artifact.type === "chart" ? (
              <TrendingUp className="w-4 h-4 text-muted-foreground flex-shrink-0" />
            ) : artifact.type === "suggestion" ? (
              <Lightbulb className="w-4 h-4 text-muted-foreground flex-shrink-0" />
            ) : (
              <Pin className="w-4 h-4 text-muted-foreground flex-shrink-0" />
            )}
            <span className="text-sm text-foreground truncate">{artifact.title}</span>
          </div>
        ))}
      </div>
    </div>
  )
}

// 风险提示 (折叠)
function RiskCard({
  alerts,
  isOpen,
  onToggle,
}: {
  alerts: { type: string; message: string }[]
  isOpen: boolean
  onToggle: () => void
}) {
  return (
    <div className="rounded-lg bg-alert/50 overflow-hidden">
      <button
        onClick={onToggle}
        className={cn(
          "w-full flex items-center justify-between",
          "p-3 text-left",
          "hover:bg-alert/70 transition-colors"
        )}
      >
        <div className="flex items-center gap-2">
          <AlertTriangle className="w-4 h-4 text-alert-foreground" />
          <span className="text-sm font-medium text-foreground">
            风险提示 ({alerts.length})
          </span>
        </div>
        <ChevronDown
          className={cn(
            "w-4 h-4 text-muted-foreground transition-transform",
            isOpen && "rotate-180"
          )}
        />
      </button>
      {isOpen && (
        <div className="px-3 pb-3 space-y-2">
          {alerts.map((alert, i) => (
            <p key={i} className="text-sm text-muted-foreground">
              <span className="font-medium text-alert-foreground">[{alert.type}]</span>{" "}
              {alert.message}
            </p>
          ))}
        </div>
      )}
    </div>
  )
}
