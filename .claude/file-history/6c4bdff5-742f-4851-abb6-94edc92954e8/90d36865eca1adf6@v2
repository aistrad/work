"use client"

import { cn } from "@/lib/utils"
import { useAppStore } from "@/stores/app-store"
import { RefreshCw, AlertTriangle, ChevronDown, Check, Clock, Heart, Lightbulb, Sparkles } from "lucide-react"
import { useState, useEffect } from "react"
import { motion } from "framer-motion"
import { CheckinModal } from "@/components/checkin/checkin-modal"
import { PermaStatusCard } from "../perma-radar"

export function OverviewTab() {
  const {
    insight,
    stateScore,
    perma,
    todayTasks,
    riskAlerts,
    pinnedArtifacts,
    isLoading,
    loadingTab,
    fetchOverview,
    acceptTask,
    completeTask,
  } = useAppStore()

  const [showRisk, setShowRisk] = useState(false)
  const [showCheckin, setShowCheckin] = useState(false)

  // Fetch data on mount
  useEffect(() => {
    fetchOverview()
  }, [fetchOverview])

  // Listen for openCheckin event from action buttons
  useEffect(() => {
    const handleOpenCheckin = () => setShowCheckin(true)
    window.addEventListener("openCheckin", handleOpenCheckin)
    return () => window.removeEventListener("openCheckin", handleOpenCheckin)
  }, [])

  const isTabLoading = isLoading && loadingTab === 'overview'

  const handleCheckinSuccess = () => {
    // Refresh data after successful checkin
    fetchOverview()
  }

  return (
    <div className="p-5 space-y-5">
      {/* 1. Daily Wisdom - 今日洞察 (全宽) */}
      <DailyWisdomCard
        insight={insight}
        isLoading={isTabLoading}
        onRefresh={fetchOverview}
      />

      {/* 2. PERMA 雷达图 */}
      <PermaStatusCard
        perma={perma}
        totalScore={stateScore.score}
        onCheckin={() => setShowCheckin(true)}
      />

      {/* 3. Today's Rituals - 今日任务 */}
      <RitualsCard
        tasks={todayTasks}
        onAccept={acceptTask}
        onComplete={completeTask}
        isLoading={isTabLoading}
        onCheckin={() => setShowCheckin(true)}
      />

      {/* 4. 风险提示 (折叠) */}
      {riskAlerts.length > 0 && (
        <RiskCard
          alerts={riskAlerts}
          isOpen={showRisk}
          onToggle={() => setShowRisk(!showRisk)}
        />
      )}

      {/* Check-in Modal */}
      <CheckinModal
        isOpen={showCheckin}
        onClose={() => setShowCheckin(false)}
        onSuccess={handleCheckinSuccess}
      />
    </div>
  )
}

// ═══════════════════════════════════════════════════════════════════════════
// Daily Wisdom 卡片 - 今日洞察
// 设计规范: 浅黄色背景 + 灯泡图标 + 引言文字
// ═══════════════════════════════════════════════════════════════════════════
function DailyWisdomCard({
  insight,
  isLoading,
  onRefresh,
  className,
}: {
  insight: string
  isLoading: boolean
  onRefresh: () => void
  className?: string
}) {
  return (
    <motion.div
      className={cn(
        "p-5 rounded-xl relative group",
        "bg-gradient-to-br from-amber-50/80 to-orange-50/60",
        "dark:from-amber-900/20 dark:to-orange-900/10",
        "border border-amber-200/50 dark:border-amber-800/30",
        className
      )}
      initial={{ opacity: 0, y: 10 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.4 }}
    >
      <div className="flex items-start gap-4">
        {/* Icon */}
        <div className="flex-shrink-0 w-10 h-10 rounded-full bg-amber-100 dark:bg-amber-800/40 flex items-center justify-center">
          <Lightbulb className="w-5 h-5 text-amber-600 dark:text-amber-400" />
        </div>

        {/* Content */}
        <div className="flex-1 min-w-0">
          <h3 className="text-sm font-medium text-amber-700 dark:text-amber-300 mb-2">
            Daily Wisdom
          </h3>
          {isLoading ? (
            <div className="animate-pulse space-y-2">
              <div className="h-4 bg-amber-200/50 rounded w-full" />
              <div className="h-4 bg-amber-200/50 rounded w-3/4" />
            </div>
          ) : (
            <p className="text-foreground font-serif italic leading-relaxed">
              "{insight}"
            </p>
          )}
        </div>
      </div>

      {/* Refresh Button */}
      <button
        type="button"
        onClick={onRefresh}
        disabled={isLoading}
        className={cn(
          "absolute top-3 right-3",
          "h-8 w-8 inline-flex items-center justify-center rounded-full",
          "text-amber-500 hover:text-amber-700 hover:bg-amber-100/50",
          "dark:hover:bg-amber-800/30",
          "opacity-0 group-hover:opacity-100 transition-opacity",
          "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-amber-500/50"
        )}
        aria-label="刷新洞察"
      >
        <RefreshCw className={cn("w-4 h-4", isLoading && "animate-spin")} />
      </button>
    </motion.div>
  )
}

// ═══════════════════════════════════════════════════════════════════════════
// Rituals 卡片 - 今日任务列表
// 设计规范: 白色卡片 + 复选框列表 + 时间估算
// ═══════════════════════════════════════════════════════════════════════════
function RitualsCard({
  tasks,
  onAccept,
  onComplete,
  isLoading,
  onCheckin,
  className,
}: {
  tasks: { task_id: string; title: string; status: string; commitment_type?: string; minutes?: number }[]
  onAccept: (taskId: string, type?: 'start_task' | 'schedule_task') => void
  onComplete: (taskId: string) => void
  isLoading: boolean
  onCheckin?: () => void
  className?: string
}) {
  return (
    <motion.div
      className={cn(
        "p-5 rounded-xl",
        "bg-card border border-border/50",
        className
      )}
      initial={{ opacity: 0, y: 10 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.4, delay: 0.1 }}
    >
      {/* Header */}
      <div className="flex items-center justify-between mb-4">
        <h3 className="font-serif font-medium text-foreground">Today's Rituals</h3>
        <span className="text-xs text-foreground-muted">
          {tasks.filter(t => t.status === 'done').length}/{tasks.length} 完成
        </span>
      </div>

      {/* Task List */}
      <div className="space-y-2">
        {isLoading ? (
          <>
            {[1, 2, 3].map((i) => (
              <div key={i} className="animate-pulse flex items-center gap-3 py-2">
                <div className="w-5 h-5 rounded bg-foreground/10" />
                <div className="h-4 bg-foreground/10 rounded flex-1" />
              </div>
            ))}
          </>
        ) : tasks.length === 0 ? (
          <div className="py-4 text-center">
            <Sparkles className="w-8 h-8 mx-auto text-foreground-subtle mb-2" />
            <p className="text-sm text-foreground-muted mb-3">今日无待办任务</p>
            {onCheckin && (
              <button
                type="button"
                onClick={onCheckin}
                className={cn(
                  "inline-flex items-center gap-2 px-4 py-2",
                  "rounded-lg border border-border",
                  "bg-background hover:bg-hover transition-colors",
                  "text-sm font-medium text-foreground",
                  "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/50"
                )}
              >
                <Heart className="w-4 h-4 text-rose-500" />
                做一次情绪打卡
              </button>
            )}
          </div>
        ) : (
          tasks.map((task, index) => (
            <motion.div
              key={task.task_id}
              className={cn(
                "flex items-center gap-3 py-2.5 px-3 -mx-3",
                "rounded-lg hover:bg-hover/50 transition-colors",
                task.status === "done" && "opacity-60"
              )}
              initial={{ opacity: 0, x: -10 }}
              animate={{ opacity: 1, x: 0 }}
              transition={{ duration: 0.3, delay: index * 0.05 }}
            >
              {/* Checkbox */}
              {task.status === "done" ? (
                <div className="w-5 h-5 rounded-full bg-success flex items-center justify-center flex-shrink-0">
                  <Check className="w-3 h-3 text-white" />
                </div>
              ) : task.status === "active" ? (
                <button
                  type="button"
                  onClick={() => onComplete(task.task_id)}
                  className={cn(
                    "w-5 h-5 rounded-full border-2 border-success",
                    "hover:bg-success/10 transition-colors flex-shrink-0",
                    "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-success/50"
                  )}
                  title="完成任务"
                  aria-label="完成任务"
                />
              ) : (
                <div className="w-5 h-5 rounded-full border-2 border-foreground-subtle flex-shrink-0" />
              )}

              {/* Title */}
              <span
                className={cn(
                  "flex-1 text-sm",
                  task.status === "done" && "line-through text-foreground-muted"
                )}
              >
                {task.title}
              </span>

              {/* Duration */}
              {task.minutes && (
                <span className="flex items-center gap-1 text-xs text-foreground-subtle">
                  <Clock className="w-3 h-3" />
                  {task.minutes}m
                </span>
              )}

              {/* Start Button */}
              {task.status === "suggested" && (
                <button
                  type="button"
                  onClick={() => onAccept(task.task_id, 'start_task')}
                  className={cn(
                    "h-7 px-3 rounded-md text-xs font-medium",
                    "bg-primary text-primary-foreground",
                    "hover:opacity-90 transition-opacity",
                    "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/50"
                  )}
                  aria-label="开始任务"
                >
                  开始
                </button>
              )}
            </motion.div>
          ))
        )}
      </div>
    </motion.div>
  )
}

// ═══════════════════════════════════════════════════════════════════════════
// 风险提示 (折叠)
// ═══════════════════════════════════════════════════════════════════════════
function RiskCard({
  alerts,
  isOpen,
  onToggle,
}: {
  alerts: { type: string; message: string }[]
  isOpen: boolean
  onToggle: () => void
}) {
  return (
    <div className="rounded-lg bg-alert/50 overflow-hidden">
      <button
        onClick={onToggle}
        className={cn(
          "w-full flex items-center justify-between",
          "p-3 text-left",
          "hover:bg-alert/70 transition-colors"
        )}
      >
        <div className="flex items-center gap-2">
          <AlertTriangle className="w-4 h-4 text-alert-foreground" />
          <span className="text-sm font-medium text-foreground">
            风险提示 ({alerts.length})
          </span>
        </div>
        <ChevronDown
          className={cn(
            "w-4 h-4 text-muted-foreground transition-transform",
            isOpen && "rotate-180"
          )}
        />
      </button>
      {isOpen && (
        <div className="px-3 pb-3 space-y-2">
          {alerts.map((alert, i) => (
            <p key={i} className="text-sm text-muted-foreground">
              <span className="font-medium text-alert-foreground">[{alert.type}]</span>{" "}
              {alert.message}
            </p>
          ))}
        </div>
      )}
    </div>
  )
}
