'use client';

/**
 * CategorySection - 分类区块
 *
 * App Store 风格的横向滚动卡片列表
 * v2: 增强滚动体验
 * - 左右导航箭头（hover 显示）
 * - 滚动进度指示器
 * - Peek 效果暗示可滚动
 * - 显示更多数量提示
 */

import React, { useRef, useState, useCallback, useEffect } from 'react';
import { ChevronLeft, ChevronRight } from 'lucide-react';
import { SkillShowcaseCard } from './SkillShowcaseCard';
import type { SkillMetadata, SkillUserStatus } from '@/types/skill';

interface CategorySectionProps {
  title: string;
  subtitle?: string;
  skills: SkillMetadata[];
  userStatuses?: Record<string, SkillUserStatus>;
  onSkillClick: (skillId: string) => void;
  onSubscribe: (skillId: string) => void;
  onViewAll?: () => void;
}

export function CategorySection({
  title,
  subtitle,
  skills,
  userStatuses = {},
  onSkillClick,
  onSubscribe,
  onViewAll,
}: CategorySectionProps) {
  const scrollRef = useRef<HTMLDivElement>(null);
  const [isDragging, setIsDragging] = useState(false);
  const [hasDragged, setHasDragged] = useState(false);
  const [startX, setStartX] = useState(0);
  const [scrollLeft, setScrollLeft] = useState(0);
  const [isHovered, setIsHovered] = useState(false);
  const [canScrollLeft, setCanScrollLeft] = useState(false);
  const [canScrollRight, setCanScrollRight] = useState(false);
  const [currentIndex, setCurrentIndex] = useState(0);

  const displaySkills = skills.slice(0, 8); // 最多显示8个
  const cardWidth = 268; // 卡片宽度 + gap

  // 检查滚动状态
  const checkScrollState = useCallback(() => {
    if (!scrollRef.current) return;
    const { scrollLeft, scrollWidth, clientWidth } = scrollRef.current;
    setCanScrollLeft(scrollLeft > 10);
    setCanScrollRight(scrollLeft < scrollWidth - clientWidth - 10);

    // 计算当前索引
    const index = Math.round(scrollLeft / cardWidth);
    setCurrentIndex(Math.min(index, displaySkills.length - 1));
  }, [displaySkills.length]);

  useEffect(() => {
    checkScrollState();
    const el = scrollRef.current;
    if (el) {
      el.addEventListener('scroll', checkScrollState);
      return () => el.removeEventListener('scroll', checkScrollState);
    }
  }, [checkScrollState]);

  // 滚动到指定方向
  const scroll = useCallback((direction: 'left' | 'right') => {
    if (!scrollRef.current) return;
    const scrollAmount = cardWidth * 2; // 每次滚动2个卡片
    scrollRef.current.scrollBy({
      left: direction === 'left' ? -scrollAmount : scrollAmount,
      behavior: 'smooth'
    });
  }, []);

  // 鼠标按下开始拖拽
  const handleMouseDown = useCallback((e: React.MouseEvent) => {
    if (!scrollRef.current) return;
    setIsDragging(true);
    setHasDragged(false);
    setStartX(e.pageX - scrollRef.current.offsetLeft);
    setScrollLeft(scrollRef.current.scrollLeft);
  }, []);

  // 鼠标移动拖拽
  const handleMouseMove = useCallback((e: React.MouseEvent) => {
    if (!isDragging || !scrollRef.current) return;
    e.preventDefault();
    const x = e.pageX - scrollRef.current.offsetLeft;
    const walk = (x - startX) * 2;

    if (Math.abs(walk) > 5) {
      setHasDragged(true);
    }

    scrollRef.current.scrollLeft = scrollLeft - walk;
  }, [isDragging, startX, scrollLeft]);

  // 鼠标抬起停止拖拽
  const handleMouseUp = useCallback(() => {
    setIsDragging(false);
  }, []);

  // 鼠标离开容器停止拖拽
  const handleMouseLeave = useCallback(() => {
    setIsDragging(false);
  }, []);

  if (skills.length === 0) return null;

  // 计算可见卡片数和总数
  const visibleCount = Math.min(3, displaySkills.length); // 移动端大约能看到2-3个
  const hiddenCount = displaySkills.length - visibleCount;

  return (
    <section
      className="space-y-4 relative group/section"
      onMouseEnter={() => setIsHovered(true)}
      onMouseLeave={() => setIsHovered(false)}
    >
      {/* Header */}
      <div className="flex items-end justify-between">
        <div className="flex-1">
          <div className="flex items-center gap-3">
            <h2 className="text-2xl font-bold text-text-primary">{title}</h2>
            {/* 显示更多数量提示 */}
            {hiddenCount > 0 && (
              <span className="text-xs text-text-tertiary bg-bg-secondary px-2 py-0.5 rounded-full">
                +{hiddenCount} 更多
              </span>
            )}
          </div>
          {subtitle && (
            <p className="text-sm text-text-secondary mt-1">{subtitle}</p>
          )}
        </div>
        {onViewAll && skills.length > 3 && (
          <button
            onClick={onViewAll}
            className="flex items-center gap-1 text-sm font-medium text-accent-primary hover:gap-2 transition-all"
          >
            <span>查看全部</span>
            <ChevronRight className="w-4 h-4" />
          </button>
        )}
      </div>

      {/* 横向滚动容器 */}
      <div className="relative">
        {/* 左侧导航箭头 - PC hover显示 */}
        {canScrollLeft && (
          <button
            onClick={() => scroll('left')}
            className="absolute left-0 top-1/2 -translate-y-1/2 z-10 w-10 h-10
                       bg-bg-card/95 backdrop-blur-sm border border-subtle rounded-full
                       shadow-lg flex items-center justify-center
                       opacity-0 group-hover/section:opacity-100 transition-opacity duration-200
                       hover:bg-bg-secondary hover:scale-110 -ml-5
                       hidden lg:flex"
            aria-label="向左滚动"
          >
            <ChevronLeft className="w-5 h-5 text-text-primary" />
          </button>
        )}

        {/* 右侧导航箭头 - PC hover显示 */}
        {canScrollRight && (
          <button
            onClick={() => scroll('right')}
            className="absolute right-0 top-1/2 -translate-y-1/2 z-10 w-10 h-10
                       bg-bg-card/95 backdrop-blur-sm border border-subtle rounded-full
                       shadow-lg flex items-center justify-center
                       opacity-0 group-hover/section:opacity-100 transition-opacity duration-200
                       hover:bg-bg-secondary hover:scale-110 -mr-5
                       hidden lg:flex"
            aria-label="向右滚动"
          >
            <ChevronRight className="w-5 h-5 text-text-primary" />
          </button>
        )}

        {/* 右侧渐变遮罩 - 暗示可滚动 */}
        {canScrollRight && (
          <div className="absolute right-0 top-0 bottom-4 w-16 bg-gradient-to-l from-bg-primary to-transparent pointer-events-none z-[1]" />
        )}

        {/* 横向滚动卡片 */}
        <div
          ref={scrollRef}
          onMouseDown={handleMouseDown}
          onMouseMove={handleMouseMove}
          onMouseUp={handleMouseUp}
          onMouseLeave={handleMouseLeave}
          className="overflow-x-auto pb-4 scrollbar-hide -mx-4 px-4 cursor-grab active:cursor-grabbing select-none scroll-smooth"
        >
          <div className="flex gap-3 min-w-min">
            {displaySkills.map((skill) => (
              <div key={skill.id} className="w-64 flex-shrink-0">
                <SkillShowcaseCard
                  skill={skill}
                  userStatus={userStatuses[skill.id]}
                  onClick={() => {
                    if (!hasDragged) {
                      onSkillClick(skill.id);
                    }
                  }}
                  onSubscribe={() => {
                    onSubscribe(skill.id);
                  }}
                />
              </div>
            ))}
          </div>
        </div>

        {/* 滚动进度指示器 - 仅在有多个可滚动时显示 */}
        {displaySkills.length > 2 && (
          <div className="flex justify-center gap-1.5 mt-2">
            {displaySkills.map((_, index) => (
              <button
                key={index}
                onClick={() => {
                  scrollRef.current?.scrollTo({
                    left: index * cardWidth,
                    behavior: 'smooth'
                  });
                }}
                className={`h-1.5 rounded-full transition-all duration-200 ${
                  index === currentIndex
                    ? 'w-6 bg-accent-primary'
                    : 'w-1.5 bg-bg-tertiary hover:bg-text-tertiary'
                }`}
                aria-label={`跳转到第 ${index + 1} 个`}
              />
            ))}
          </div>
        )}
      </div>

      {/* 移动端滑动提示 - 首次显示 */}
      {displaySkills.length > 2 && (
        <p className="text-xs text-text-tertiary text-center lg:hidden">
          <span className="inline-flex items-center gap-1">
            <span>←</span>
            左右滑动查看更多
            <span>→</span>
          </span>
        </p>
      )}
    </section>
  );
}
