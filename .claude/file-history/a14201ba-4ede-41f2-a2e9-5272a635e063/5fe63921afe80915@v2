"use client"

import { cn } from "@/lib/utils"
import type { Block, TaskBlock, ToggleBlock, DiffBlock, ActionButtonsBlock, MarkdownTextBlock, ActionButton } from "@/types"
import { ChevronDown, ChevronRight, Check, Clock, AlertCircle, Play, Calendar, ExternalLink, X, Heart } from "lucide-react"
import { useState } from "react"

interface BlockRendererProps {
  block: Block
  onAction?: (action: ActionButton["action"]) => void
}

export function BlockRenderer({ block, onAction }: BlockRendererProps) {
  switch (block.type) {
    case "callout":
      return <CalloutBlock block={block} />
    case "toggle":
      return <ToggleBlockComponent block={block as ToggleBlock} />
    case "task":
      return <TaskBlockComponent block={block as TaskBlock} />
    case "diff":
      return <DiffBlockComponent block={block as DiffBlock} />
    case "action_buttons":
      return <ActionButtonsBlockComponent block={block as ActionButtonsBlock} onAction={onAction} />
    case "markdown_text":
      return <MarkdownTextBlockComponent block={block as MarkdownTextBlock} />
    default:
      return <TextBlock block={block} />
  }
}

// Callout Block - ä¸€å¥è¯ç»“è®º
function CalloutBlock({ block }: { block: Block }) {
  return (
    <div
      className={cn(
        "flex items-start gap-3 p-4 rounded-lg",
        "bg-advice border-l-4 border-advice-foreground"
      )}
    >
      <div className="flex-shrink-0 w-6 h-6 rounded-full bg-advice-foreground/10 flex items-center justify-center">
        <span className="text-advice-foreground text-sm">ğŸ’¡</span>
      </div>
      <p className="text-foreground font-medium">{block.content}</p>
    </div>
  )
}

// Toggle Block - åŸå› ä¸è¯æ® (é»˜è®¤æŠ˜å )
function ToggleBlockComponent({ block }: { block: ToggleBlock }) {
  const [isOpen, setIsOpen] = useState(block.isOpen ?? false)

  return (
    <div className="border border-border rounded-lg overflow-hidden">
      <button
        onClick={() => setIsOpen(!isOpen)}
        className={cn(
          "w-full flex items-center gap-2 px-4 py-3",
          "text-left hover:bg-hover transition-colors"
        )}
      >
        {isOpen ? (
          <ChevronDown className="w-4 h-4 text-muted-foreground" />
        ) : (
          <ChevronRight className="w-4 h-4 text-muted-foreground" />
        )}
        <span className="font-medium text-foreground">{block.content}</span>
      </button>

      {isOpen && block.children && (
        <div className="px-4 pb-4 pl-10 space-y-2">
          {block.children.map((child) => (
            <BlockRenderer key={child.id} block={child} />
          ))}
        </div>
      )}
    </div>
  )
}

// Task Block - ä¸‹ä¸€æ­¥è¡ŒåŠ¨
function TaskBlockComponent({ block }: { block: TaskBlock }) {
  const [status, setStatus] = useState(block.status ?? "pending")

  const handleComplete = () => {
    setStatus("completed")
    // TODO: è§¦å‘çŠ¶æ€æ›´æ–°å’Œ Pulse åŠ¨æ•ˆ
  }

  return (
    <div
      className={cn(
        "flex items-center gap-3 p-3 rounded-lg",
        "bg-sidebar border border-border",
        "transition-all duration-300",
        status === "completed" && "opacity-60"
      )}
    >
      {/* å®ŒæˆæŒ‰é’® */}
      <button
        onClick={handleComplete}
        disabled={status === "completed"}
        className={cn(
          "flex-shrink-0 w-5 h-5 rounded border-2",
          "transition-colors",
          status === "completed"
            ? "bg-status border-status-foreground"
            : "border-muted-foreground hover:border-foreground"
        )}
      >
        {status === "completed" && (
          <Check className="w-full h-full text-status-foreground p-0.5" />
        )}
      </button>

      {/* ä»»åŠ¡å†…å®¹ */}
      <span
        className={cn(
          "flex-1 text-foreground",
          status === "completed" && "line-through"
        )}
      >
        {block.content}
      </span>

      {/* æ—¶é•¿æ ‡ç­¾ */}
      <span
        className={cn(
          "flex items-center gap-1 px-2 py-1 rounded-full text-xs",
          "bg-hover text-muted-foreground"
        )}
      >
        <Clock className="w-3 h-3" />
        {block.duration}åˆ†é’Ÿ
      </span>
    </div>
  )
}

// Diff Block - å›å†™æ›´æ–°
function DiffBlockComponent({ block }: { block: DiffBlock }) {
  const [status, setStatus] = useState(block.status)

  if (status === "applied" || status === "rejected") {
    return null // å·²å¤„ç†çš„ä¸æ˜¾ç¤º
  }

  return (
    <div
      className={cn(
        "p-4 rounded-lg",
        "bg-alert/50 border border-alert-foreground/20"
      )}
    >
      <div className="flex items-center gap-2 mb-3">
        <AlertCircle className="w-4 h-4 text-alert-foreground" />
        <span className="font-medium text-foreground">å°†æ›´æ–°</span>
      </div>

      {/* å˜æ›´åˆ—è¡¨ */}
      <div className="space-y-2 mb-4">
        {block.changes.map((change, i) => (
          <div key={i} className="flex items-center gap-2 text-sm">
            <span className="text-muted-foreground">{change.field}:</span>
            <span className="text-foreground">
              {typeof change.oldValue === "number" && typeof change.newValue === "number"
                ? `${change.newValue > change.oldValue ? "+" : ""}${change.newValue - change.oldValue}`
                : `${change.oldValue} â†’ ${change.newValue}`}
            </span>
            <span className="text-muted-foreground">({change.reason})</span>
          </div>
        ))}
      </div>

      {/* æ“ä½œæŒ‰é’® */}
      <div className="flex items-center gap-2">
        <button
          onClick={() => setStatus("applied")}
          className={cn(
            "flex items-center gap-1 px-3 py-1.5 rounded-lg text-sm font-medium",
            "bg-status text-status-foreground hover:opacity-90 transition-opacity"
          )}
        >
          <Check className="w-4 h-4" />
          åº”ç”¨æ›´æ–°
        </button>
        <button
          onClick={() => setStatus("rejected")}
          className={cn(
            "px-3 py-1.5 rounded-lg text-sm",
            "text-muted-foreground hover:text-foreground hover:bg-hover transition-colors"
          )}
        >
          âœ çº æ­£
        </button>
        <button
          onClick={() => setStatus("paused")}
          className={cn(
            "px-3 py-1.5 rounded-lg text-sm",
            "text-muted-foreground hover:text-foreground hover:bg-hover transition-colors"
          )}
        >
          â¸ æš‚ä¸æ›´æ–°
        </button>
      </div>
    </div>
  )
}

// Action Buttons Block - A2UI æ“ä½œæŒ‰é’®ç»„
function ActionButtonsBlockComponent({
  block,
  onAction,
}: {
  block: ActionButtonsBlock
  onAction?: (action: ActionButton["action"]) => void
}) {
  const handleClick = async (action: ActionButton["action"]) => {
    if (onAction) {
      onAction(action)
    } else {
      // é»˜è®¤å¤„ç†é€»è¾‘
      switch (action.type) {
        case "start_task":
          if (action.task_id) {
            try {
              const res = await fetch("/api/dashboard/task/accept", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                credentials: "include",
                body: JSON.stringify({
                  task_id: action.task_id,
                  commitment_type: "start_task",
                }),
              })
              if (res.ok) {
                window.location.reload()
              }
            } catch (e) {
              console.error("Failed to start task:", e)
            }
          }
          break
        case "schedule_task":
          if (action.task_id) {
            try {
              const res = await fetch("/api/dashboard/task/accept", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                credentials: "include",
                body: JSON.stringify({
                  task_id: action.task_id,
                  commitment_type: "schedule_task",
                }),
              })
              if (res.ok) {
                window.location.reload()
              }
            } catch (e) {
              console.error("Failed to schedule task:", e)
            }
          }
          break
        case "open_panel":
          // æ˜ å°„ panel åç§°åˆ° Tab ID
          const panelMap: Record<string, string> = {
            quests: "tasks",
            tasks: "tasks",
            status: "status",
            trends: "trends",
            overview: "overview",
            relations: "relations",
            explore: "explore",
          }
          const tabId = panelMap[action.panel || ""] || action.panel
          // è§¦å‘ Tab åˆ‡æ¢ï¼ˆé€šè¿‡ URL æˆ– stateï¼‰
          if (typeof window !== "undefined") {
            window.dispatchEvent(
              new CustomEvent("switchTab", { detail: { tab: tabId } })
            )
          }
          break
        case "opt_out":
          // è®°å½•ç”¨æˆ·é€‰æ‹©æš‚ä¸æ‰§è¡Œ
          console.log("User opted out")
          break
        case "checkin":
          // æ‰“å¼€ checkin modal
          if (typeof window !== "undefined") {
            window.dispatchEvent(new CustomEvent("openCheckin"))
          }
          break
      }
    }
  }

  const getButtonIcon = (actionType: ActionButton["action"]["type"]) => {
    switch (actionType) {
      case "start_task":
        return <Play className="w-4 h-4" />
      case "schedule_task":
        return <Calendar className="w-4 h-4" />
      case "open_panel":
        return <ExternalLink className="w-4 h-4" />
      case "opt_out":
        return <X className="w-4 h-4" />
      case "checkin":
        return <Heart className="w-4 h-4" />
      default:
        return null
    }
  }

  const getButtonStyle = (actionType: ActionButton["action"]["type"], index: number) => {
    // ç¬¬ä¸€ä¸ªæŒ‰é’®æ˜¯ä¸»è¦æŒ‰é’®
    if (index === 0) {
      return "bg-primary text-primary-foreground hover:bg-primary/90"
    }
    // å…¶ä»–æŒ‰é’®æ˜¯æ¬¡è¦æŒ‰é’®
    return "bg-secondary text-secondary-foreground hover:bg-secondary/80"
  }

  return (
    <div className="flex flex-wrap gap-2 mt-3">
      {block.buttons.map((button, index) => (
        <button
          key={index}
          onClick={() => handleClick(button.action)}
          className={cn(
            "flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium",
            "transition-colors duration-200",
            getButtonStyle(button.action.type, index)
          )}
        >
          {getButtonIcon(button.action.type)}
          {button.label}
        </button>
      ))}
    </div>
  )
}

// Markdown Text Block - A2UI æ–‡æœ¬å†…å®¹
function MarkdownTextBlockComponent({ block }: { block: MarkdownTextBlock }) {
  // ç®€å•çš„ Markdown è§£æ
  const renderMarkdown = (content: string) => {
    // å¤„ç†æ ‡é¢˜
    const lines = content.split("\n")
    return lines.map((line, i) => {
      if (line.startsWith("### ")) {
        return (
          <h3 key={i} className="text-lg font-semibold mt-4 mb-2 text-foreground">
            {line.replace("### ", "")}
          </h3>
        )
      }
      if (line.startsWith("## ")) {
        return (
          <h2 key={i} className="text-xl font-bold mt-4 mb-2 text-foreground">
            {line.replace("## ", "")}
          </h2>
        )
      }
      if (line.startsWith("# ")) {
        return (
          <h1 key={i} className="text-2xl font-bold mt-4 mb-2 text-foreground">
            {line.replace("# ", "")}
          </h1>
        )
      }
      if (line.startsWith("- ")) {
        return (
          <li key={i} className="ml-4 text-foreground">
            {renderInlineMarkdown(line.replace("- ", ""))}
          </li>
        )
      }
      if (line.startsWith("> ")) {
        return (
          <blockquote key={i} className="border-l-4 border-primary pl-4 my-2 text-muted-foreground italic">
            {renderInlineMarkdown(line.replace("> ", ""))}
          </blockquote>
        )
      }
      if (line.trim() === "") {
        return <br key={i} />
      }
      return (
        <p key={i} className="text-foreground leading-relaxed">
          {renderInlineMarkdown(line)}
        </p>
      )
    })
  }

  // å¤„ç†è¡Œå†… Markdownï¼ˆç²—ä½“ã€æ–œä½“ï¼‰
  const renderInlineMarkdown = (text: string) => {
    // å¤„ç† **bold**
    const parts = text.split(/(\*\*[^*]+\*\*)/g)
    return parts.map((part, i) => {
      if (part.startsWith("**") && part.endsWith("**")) {
        return (
          <strong key={i} className="font-semibold">
            {part.slice(2, -2)}
          </strong>
        )
      }
      return part
    })
  }

  return (
    <div className="prose prose-neutral dark:prose-invert max-w-none">
      {block.title && (
        <h4 className="text-sm font-medium text-muted-foreground mb-2">{block.title}</h4>
      )}
      {renderMarkdown(block.content)}
    </div>
  )
}

// æ™®é€šæ–‡æœ¬ Block
function TextBlock({ block }: { block: Block }) {
  return <p className="text-foreground leading-relaxed">{block.content}</p>
}
