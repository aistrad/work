"use client"

import { cn } from "@/lib/utils"
import { useAppStore } from "@/stores/app-store"
import { useEffect, useState } from "react"
import { Loader2, TrendingUp, Calendar } from "lucide-react"

export function TrendsTab() {
  const {
    trendHistory,
    trendEvents,
    isLoading,
    loadingTab,
    fetchTrends,
  } = useAppStore()

  const [days, setDays] = useState(7)

  useEffect(() => {
    fetchTrends(days)
  }, [fetchTrends, days])

  const isTabLoading = isLoading && loadingTab === 'trends'

  return (
    <div className="p-4 space-y-4">
      {/* 时间范围选择 */}
      <div className="flex items-center gap-2">
        {[7, 14, 30].map((d) => (
          <button
            key={d}
            onClick={() => setDays(d)}
            className={cn(
              "px-3 py-1.5 text-sm rounded-lg transition-colors",
              days === d
                ? "bg-foreground text-background"
                : "bg-sidebar text-muted-foreground hover:text-foreground"
            )}
          >
            {d}天
          </button>
        ))}
      </div>

      {isTabLoading ? (
        <div className="flex items-center justify-center h-64">
          <Loader2 className="w-6 h-6 animate-spin text-muted-foreground" />
        </div>
      ) : (
        <>
          {/* State Score 趋势图 */}
          <TrendChart data={trendHistory} />

          {/* 事件时间线 */}
          <EventTimeline events={trendEvents} />
        </>
      )}
    </div>
  )
}

function TrendChart({
  data,
}: {
  data: { date: string; score: number }[]
}) {
  const [hoveredIndex, setHoveredIndex] = useState<number | null>(null)

  if (data.length === 0) {
    return (
      <div className="p-4 rounded-lg bg-sidebar">
        <div className="flex items-center gap-2 mb-3">
          <TrendingUp className="w-4 h-4 text-status-foreground" />
          <h3 className="font-medium text-foreground">状态趋势</h3>
        </div>
        <p className="text-sm text-muted-foreground">暂无趋势数据</p>
      </div>
    )
  }

  const maxScore = Math.max(...data.map((d) => d.score), 100)
  const minScore = Math.min(...data.map((d) => d.score), 0)
  const range = maxScore - minScore || 1

  const width = 300
  const height = 120
  const padding = 10
  const chartWidth = width - padding * 2
  const chartHeight = height - padding * 2

  const points = data.map((d, i) => ({
    x: padding + (i / (data.length - 1 || 1)) * chartWidth,
    y: padding + chartHeight - ((d.score - minScore) / range) * chartHeight,
    ...d,
  }))

  const pathD = points
    .map((p, i) => {
      if (i === 0) return `M ${p.x} ${p.y}`
      const prev = points[i - 1]
      const cpx = (prev.x + p.x) / 2
      return `C ${cpx} ${prev.y}, ${cpx} ${p.y}, ${p.x} ${p.y}`
    })
    .join(' ')

  const hoveredData = hoveredIndex !== null ? data[hoveredIndex] : null

  return (
    <div className="p-4 rounded-lg bg-sidebar">
      <div className="flex items-center justify-between mb-3">
        <div className="flex items-center gap-2">
          <TrendingUp className="w-4 h-4 text-status-foreground" />
          <h3 className="font-medium text-foreground">状态趋势</h3>
        </div>
        {hoveredData ? (
          <div className="text-right">
            <div className="text-xs text-muted-foreground">{formatDate(hoveredData.date)}</div>
            <div className="text-sm font-medium">分数: {hoveredData.score}</div>
          </div>
        ) : (
          <span className="text-sm text-muted-foreground">
            当前: {data[data.length - 1]?.score || 0}
          </span>
        )}
      </div>

      {/* SVG Chart */}
      <div className="relative h-32">
        <svg
          viewBox={`0 0 ${width} ${height}`}
          className="w-full h-full"
          preserveAspectRatio="none"
        >
          {/* Gradient fill */}
          <defs>
            <linearGradient id="trendGradient" x1="0" y1="0" x2="0" y2="1">
              <stop offset="0%" stopColor="hsl(var(--status-foreground))" stopOpacity="0.3" />
              <stop offset="100%" stopColor="hsl(var(--status-foreground))" stopOpacity="0" />
            </linearGradient>
          </defs>

          {/* Area */}
          <path
            d={`${pathD} L ${points[points.length - 1].x} ${height - padding} L ${padding} ${height - padding} Z`}
            fill="url(#trendGradient)"
          />

          {/* Line */}
          <path
            d={pathD}
            fill="none"
            stroke="hsl(var(--status-foreground))"
            strokeWidth="2"
            vectorEffect="non-scaling-stroke"
          />

          {/* Points */}
          {points.map((p, i) => (
            <circle
              key={i}
              cx={p.x}
              cy={p.y}
              r={hoveredIndex === i ? 6 : 4}
              fill="hsl(var(--background))"
              stroke="hsl(var(--status-foreground))"
              strokeWidth="2"
              vectorEffect="non-scaling-stroke"
              className="cursor-pointer transition-all duration-150"
              onMouseEnter={() => setHoveredIndex(i)}
              onMouseLeave={() => setHoveredIndex(null)}
            />
          ))}
        </svg>
      </div>

      {/* X-axis labels */}
      <div className="flex justify-between mt-2 text-xs text-muted-foreground">
        {data.length > 0 && (
          <>
            <span>{formatDate(data[0].date)}</span>
            {data.length > 2 && <span>{formatDate(data[Math.floor(data.length / 2)].date)}</span>}
            <span>{formatDate(data[data.length - 1].date)}</span>
          </>
        )}
      </div>
    </div>
  )
}

function EventTimeline({
  events,
}: {
  events: { date: string; type: string; title: string }[]
}) {
  if (events.length === 0) {
    return (
      <div className="p-4 rounded-lg bg-sidebar">
        <div className="flex items-center gap-2 mb-3">
          <Calendar className="w-4 h-4 text-advice-foreground" />
          <h3 className="font-medium text-foreground">事件记录</h3>
        </div>
        <p className="text-sm text-muted-foreground">暂无事件记录</p>
      </div>
    )
  }

  return (
    <div className="p-4 rounded-lg bg-sidebar">
      <div className="flex items-center gap-2 mb-3">
        <Calendar className="w-4 h-4 text-advice-foreground" />
        <h3 className="font-medium text-foreground">事件记录</h3>
      </div>

      <div className="space-y-3">
        {events.map((event, i) => (
          <div key={i} className="flex items-start gap-3">
            <div className="flex-shrink-0 w-2 h-2 mt-2 rounded-full bg-advice-foreground" />
            <div className="flex-1 min-w-0">
              <div className="flex items-center gap-2">
                <span className="text-xs text-muted-foreground">
                  {formatDate(event.date)}
                </span>
                <span className={cn(
                  "text-xs px-1.5 py-0.5 rounded",
                  event.type === 'commitment_done' && "bg-status/20 text-status-foreground",
                  event.type === 'checkin' && "bg-advice/20 text-advice-foreground",
                  event.type === 'milestone' && "bg-mystic/20 text-mystic-foreground"
                )}>
                  {getEventTypeLabel(event.type)}
                </span>
              </div>
              <p className="text-sm text-foreground mt-0.5 truncate">{event.title}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  )
}

function formatDate(dateStr: string): string {
  const date = new Date(dateStr)
  return `${date.getMonth() + 1}/${date.getDate()}`
}

function getEventTypeLabel(type: string): string {
  const labels: Record<string, string> = {
    commitment_done: '完成任务',
    checkin: '情绪打卡',
    milestone: '里程碑',
    reflection: '复盘',
  }
  return labels[type] || type
}
