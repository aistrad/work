"use client"

import { cn } from "@/lib/utils"
import { useAppStore } from "@/stores/app-store"
import { RefreshCw, Pin, AlertTriangle, ChevronDown, Play, Check, Clock } from "lucide-react"
import { useState, useEffect } from "react"

export function OverviewTab() {
  const {
    insight,
    stateScore,
    perma,
    todayTasks,
    riskAlerts,
    pinnedArtifacts,
    isLoading,
    loadingTab,
    fetchOverview,
    acceptTask,
    completeTask,
  } = useAppStore()

  const [showRisk, setShowRisk] = useState(false)

  // Fetch data on mount
  useEffect(() => {
    fetchOverview()
  }, [fetchOverview])

  const isTabLoading = isLoading && loadingTab === 'overview'

  return (
    <div className="p-4 space-y-4">
      {/* Bento Grid å¸ƒå±€ */}
      <div className="grid grid-cols-2 gap-4">
        {/* 1. ä»Šæ—¥ä¸€å¥è¯æ´å¯Ÿ - å æ»¡å®½åº¦ */}
        <InsightCard
          insight={insight}
          stateScore={stateScore.score}
          recoveryAction={stateScore.recoveryAction}
          isLoading={isTabLoading}
          onRefresh={fetchOverview}
          className="col-span-2"
        />

        {/* 2. ä»Šæ—¥ä¸‰ä»»åŠ¡ */}
        <TodayQuestsCard
          tasks={todayTasks}
          onAccept={acceptTask}
          onComplete={completeTask}
          isLoading={isTabLoading}
          className="col-span-2"
        />

        {/* 3. äº”ç»´çŠ¶æ€æ¡ (åŸºäº PERMA) */}
        <StatusBarsCard perma={perma} stateScore={stateScore} isLoading={isTabLoading} />

        {/* 4. æœ€è¿‘é’‰ä½ */}
        <PinnedCard artifacts={pinnedArtifacts} />
      </div>

      {/* 5. é£é™©æç¤º (æŠ˜å ) */}
      {riskAlerts.length > 0 && (
        <RiskCard
          alerts={riskAlerts}
          isOpen={showRisk}
          onToggle={() => setShowRisk(!showRisk)}
        />
      )}
    </div>
  )
}

// ä¸€å¥è¯æ´å¯Ÿå¡ç‰‡
function InsightCard({
  insight,
  stateScore,
  recoveryAction,
  isLoading,
  onRefresh,
  className,
}: {
  insight: string
  stateScore: number
  recoveryAction: string | null
  isLoading: boolean
  onRefresh: () => void
  className?: string
}) {
  return (
    <div
      className={cn(
        "p-4 rounded-lg",
        "bg-advice",
        "relative group",
        className
      )}
    >
      <div className="flex items-start gap-3">
        <div className="flex-shrink-0 text-2xl">ğŸ’¡</div>
        <div className="flex-1">
          {isLoading ? (
            <div className="animate-pulse">
              <div className="h-5 bg-foreground/10 rounded w-3/4 mb-2" />
              <div className="h-4 bg-foreground/10 rounded w-1/2" />
            </div>
          ) : (
            <>
              <p className="text-foreground font-medium">{insight}</p>
              <div className="flex items-center gap-2 mt-1">
                <span className="text-sm text-muted-foreground">
                  çŠ¶æ€åˆ†æ•°: <strong>{stateScore}</strong>
                </span>
                {recoveryAction && (
                  <span className="text-xs text-advice-foreground">
                    Â· {recoveryAction}
                  </span>
                )}
              </div>
            </>
          )}
        </div>
      </div>
      {/* åˆ·æ–°æŒ‰é’® */}
      <button
        onClick={onRefresh}
        disabled={isLoading}
        className={cn(
          "absolute top-3 right-3",
          "p-1.5 rounded-md",
          "text-muted-foreground hover:text-foreground hover:bg-hover/50",
          "opacity-0 group-hover:opacity-100 transition-opacity",
          isLoading && "animate-spin"
        )}
      >
        <RefreshCw className="w-4 h-4" />
      </button>
    </div>
  )
}

// ä»Šæ—¥ä»»åŠ¡å¡ç‰‡
function TodayQuestsCard({
  tasks,
  onAccept,
  onComplete,
  isLoading,
  className,
}: {
  tasks: { task_id: string; title: string; status: string; commitment_type?: string; minutes?: number }[]
  onAccept: (taskId: string, type?: 'start_task' | 'schedule_task') => void
  onComplete: (taskId: string) => void
  isLoading: boolean
  className?: string
}) {
  return (
    <div className={cn("p-4 rounded-lg bg-sidebar", className)}>
      <h3 className="font-medium text-foreground mb-3">ä»Šæ—¥ä»»åŠ¡</h3>
      <div className="space-y-2">
        {isLoading ? (
          <>
            {[1, 2, 3].map((i) => (
              <div key={i} className="animate-pulse flex items-center gap-3 p-2">
                <div className="w-4 h-4 rounded bg-foreground/10" />
                <div className="h-4 bg-foreground/10 rounded flex-1" />
              </div>
            ))}
          </>
        ) : tasks.length === 0 ? (
          <p className="text-sm text-muted-foreground py-2">æš‚æ— ä»»åŠ¡ï¼ŒçŠ¶æ€è‰¯å¥½ï¼</p>
        ) : (
          tasks.map((task) => (
            <div
              key={task.task_id}
              className={cn(
                "flex items-center gap-3 p-2 rounded-md",
                "hover:bg-hover transition-colors",
                task.status === "done" && "opacity-60"
              )}
            >
              {task.status === "done" ? (
                <div className="w-4 h-4 rounded bg-status border-2 border-status-foreground flex items-center justify-center">
                  <Check className="w-3 h-3 text-status-foreground" />
                </div>
              ) : task.status === "active" ? (
                <button
                  onClick={() => onComplete(task.task_id)}
                  className="w-4 h-4 rounded border-2 border-status-foreground hover:bg-status transition-colors"
                  title="å®Œæˆä»»åŠ¡"
                />
              ) : (
                <button
                  onClick={() => onAccept(task.task_id, 'start_task')}
                  className="w-4 h-4 rounded border-2 border-muted-foreground hover:border-foreground transition-colors"
                  title="å¼€å§‹ä»»åŠ¡"
                />
              )}
              <span
                className={cn(
                  "flex-1 text-sm",
                  task.status === "done" && "line-through"
                )}
              >
                {task.title}
              </span>
              {task.minutes && (
                <span className="flex items-center gap-1 text-xs text-muted-foreground">
                  <Clock className="w-3 h-3" />
                  {task.minutes}åˆ†é’Ÿ
                </span>
              )}
              {task.status === "suggested" && (
                <button
                  onClick={() => onAccept(task.task_id, 'start_task')}
                  className="p-1 rounded hover:bg-hover transition-colors"
                  title="å¼€å§‹"
                >
                  <Play className="w-3 h-3 text-muted-foreground" />
                </button>
              )}
            </div>
          ))
        )}
      </div>
    </div>
  )
}

// äº”ç»´çŠ¶æ€æ¡ (åŸºäº PERMA + State Score)
function StatusBarsCard({
  perma,
  stateScore,
  isLoading,
  className,
}: {
  perma: {
    positiveEmotion: { score: number }
    engagement: { score: number }
    relationships: { score: number }
    meaning: { score: number }
    accomplishment: { score: number }
  }
  stateScore: { score: number; breakdown: { emotion: number; action: number; streak: number } }
  isLoading: boolean
  className?: string
}) {
  const dimensions = [
    { key: "P", label: "ç§¯ææƒ…ç»ª", value: perma.positiveEmotion.score * 10, color: "bg-status-foreground" },
    { key: "E", label: "æŠ•å…¥", value: perma.engagement.score * 10, color: "bg-advice-foreground" },
    { key: "R", label: "å…³ç³»", value: perma.relationships.score * 10, color: "bg-mystic-foreground" },
    { key: "M", label: "æ„ä¹‰", value: perma.meaning.score * 10, color: "bg-alert-foreground" },
    { key: "A", label: "æˆå°±", value: perma.accomplishment.score * 10, color: "bg-foreground" },
  ]

  return (
    <div className={cn("p-4 rounded-lg bg-sidebar", className)}>
      <div className="flex items-center justify-between mb-3">
        <h3 className="font-medium text-foreground">PERMA çŠ¶æ€</h3>
        <span className="text-xs text-muted-foreground">
          æ€»åˆ†: {stateScore.score}
        </span>
      </div>
      <div className="space-y-3">
        {isLoading ? (
          <>
            {[1, 2, 3, 4, 5].map((i) => (
              <div key={i} className="animate-pulse space-y-1">
                <div className="h-3 bg-foreground/10 rounded w-1/4" />
                <div className="h-1.5 bg-foreground/10 rounded" />
              </div>
            ))}
          </>
        ) : (
          dimensions.map((dim) => (
            <div key={dim.key} className="space-y-1">
              <div className="flex items-center justify-between text-xs">
                <span className="text-muted-foreground">{dim.label}</span>
                <span className="text-foreground font-medium">{Math.round(dim.value)}</span>
              </div>
              <div className="h-1.5 bg-hover rounded-full overflow-hidden">
                <div
                  className={cn("h-full rounded-full transition-all duration-500", dim.color)}
                  style={{ width: `${Math.min(100, dim.value)}%` }}
                />
              </div>
            </div>
          ))
        )}
      </div>

      {/* State Score Breakdown */}
      <div className="mt-4 pt-3 border-t border-border">
        <div className="flex items-center justify-between text-xs text-muted-foreground">
          <span>æƒ…ç»ª: {stateScore.breakdown.emotion}</span>
          <span>è¡ŒåŠ¨: {stateScore.breakdown.action}</span>
          <span>è¿ç»­: {stateScore.breakdown.streak}</span>
        </div>
      </div>
    </div>
  )
}

// æœ€è¿‘é’‰ä½å¡ç‰‡
function PinnedCard({
  artifacts,
  className,
}: {
  artifacts: { id: string; title: string; type: string }[]
  className?: string
}) {
  const displayArtifacts = artifacts.length
    ? artifacts.slice(0, 3)
    : [
        { id: "placeholder-1", title: "æš‚æ— é’‰ä½çš„å†…å®¹", type: "placeholder" },
      ]

  return (
    <div className={cn("p-4 rounded-lg bg-sidebar", className)}>
      <div className="flex items-center gap-2 mb-3">
        <Pin className="w-4 h-4 text-muted-foreground" />
        <h3 className="font-medium text-foreground">æœ€è¿‘é’‰ä½</h3>
      </div>
      <div className="space-y-2">
        {displayArtifacts.map((artifact) => (
          <div
            key={artifact.id}
            className={cn(
              "flex items-center gap-2 p-2 rounded-md",
              artifact.type !== "placeholder" && "hover:bg-hover transition-colors cursor-pointer",
              artifact.type === "placeholder" && "opacity-50"
            )}
          >
            <span className="text-sm">
              {artifact.type === "analysis" ? "ğŸ“Š" :
               artifact.type === "chart" ? "ğŸ“ˆ" :
               artifact.type === "suggestion" ? "ğŸ’¡" :
               "ğŸ“Œ"}
            </span>
            <span className="text-sm text-foreground truncate">{artifact.title}</span>
          </div>
        ))}
      </div>
    </div>
  )
}

// é£é™©æç¤º (æŠ˜å )
function RiskCard({
  alerts,
  isOpen,
  onToggle,
}: {
  alerts: { type: string; message: string }[]
  isOpen: boolean
  onToggle: () => void
}) {
  return (
    <div className="rounded-lg bg-alert/50 overflow-hidden">
      <button
        onClick={onToggle}
        className={cn(
          "w-full flex items-center justify-between",
          "p-3 text-left",
          "hover:bg-alert/70 transition-colors"
        )}
      >
        <div className="flex items-center gap-2">
          <AlertTriangle className="w-4 h-4 text-alert-foreground" />
          <span className="text-sm font-medium text-foreground">
            é£é™©æç¤º ({alerts.length})
          </span>
        </div>
        <ChevronDown
          className={cn(
            "w-4 h-4 text-muted-foreground transition-transform",
            isOpen && "rotate-180"
          )}
        />
      </button>
      {isOpen && (
        <div className="px-3 pb-3 space-y-2">
          {alerts.map((alert, i) => (
            <p key={i} className="text-sm text-muted-foreground">
              <span className="font-medium text-alert-foreground">[{alert.type}]</span>{" "}
              {alert.message}
            </p>
          ))}
        </div>
      )}
    </div>
  )
}
