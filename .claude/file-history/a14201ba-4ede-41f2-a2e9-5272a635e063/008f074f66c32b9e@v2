"use client"

import { useCallback, useEffect } from "react"
import { cn } from "@/lib/utils"
import { useAppStore } from "@/stores/app-store"
import { MessageList } from "./message-list"
import { Omnibar } from "./omnibar"
import { PanelRight, PanelRightClose } from "lucide-react"

export function ChatZone() {
  const {
    messages,
    isStreaming,
    sendMessage,
    isSidebarOpen,
    setSidebarOpen,
    isMobile,
    chatBackend,
    fetchPreferences,
    updateChatBackend,
  } = useAppStore()

  // Load preferences on mount
  useEffect(() => {
    fetchPreferences()
  }, [fetchPreferences])

  // 发送消息 - 使用 store 的 sendMessage (已对接后端 API)
  const handleSend = useCallback(
    async (content: string) => {
      await sendMessage(content)
    },
    [sendMessage]
  )

  // 处理命令
  const handleCommand = useCallback(
    (command: string) => {
      console.log("Command:", command)
      // TODO: 实现命令处理
      // 命令格式: /checkin, /tarot, /report 等
      switch (command) {
        case 'checkin':
          // 触发情绪打卡
          break
        case 'status':
          // 查看状态
          break
        case 'tasks':
          // 查看任务
          break
        default:
          // 将命令作为普通消息发送
          sendMessage(`/${command}`)
      }
    },
    [sendMessage]
  )

  // 沉浸模式：Dashboard 关闭时
  const isImmersive = !isSidebarOpen && !isMobile

  return (
    <div className="flex flex-col h-full">
      {/* Header */}
      <header
        className={cn(
          "flex items-center justify-between",
          "h-14 px-4 border-b border-border",
          "bg-background",
          // 沉浸模式下内容居中
          isImmersive && "max-w-4xl mx-auto w-full"
        )}
      >
        <div className="flex items-center gap-3">
          <h1 className="font-semibold text-foreground">Fortune AI</h1>

          {/* Chat backend selector */}
          <select
            value={chatBackend}
            onChange={(e) => updateChatBackend(e.target.value as typeof chatBackend)}
            className={cn(
              "text-xs px-2 py-1 rounded-md border border-border bg-background",
              "text-muted-foreground hover:text-foreground",
              "focus:outline-none focus:ring-2 focus:ring-foreground/10"
            )}
            title="Chat 后端"
          >
            <option value="agent_service">Agent（Vercel）</option>
            <option value="fastapi">LLM API（Direct）</option>
          </select>
        </div>

        {/* 桌面端: 侧边栏切换按钮 */}
        {!isMobile && (
          <button
            onClick={() => setSidebarOpen(!isSidebarOpen)}
            className={cn(
              "p-2 rounded-lg",
              "text-muted-foreground hover:text-foreground hover:bg-hover",
              "transition-colors"
            )}
            title={isSidebarOpen ? "进入沉浸模式" : "显示 Dashboard"}
          >
            {isSidebarOpen ? (
              <PanelRightClose className="w-5 h-5" />
            ) : (
              <PanelRight className="w-5 h-5" />
            )}
          </button>
        )}
      </header>

      {/* 内容区域 - 沉浸模式下居中并限制最大宽度 */}
      <div className={cn(
        "flex-1 flex flex-col min-h-0",
        isImmersive && "max-w-4xl mx-auto w-full"
      )}>
        {/* Message List */}
        <MessageList messages={messages} isStreaming={isStreaming} />

        {/* Omnibar */}
        <Omnibar
          onSend={handleSend}
          onCommand={handleCommand}
          isStreaming={isStreaming}
        />
      </div>
    </div>
  )
}
