function RelationCard({
  relation,
}: {
  relation: {
    id: string
    name: string
    type: string
    compatibility?: number
    avatar?: string
    suggestions?: string[]
  }
}) {
  const typeLabels: Record<string, string> = {
    friend: "å¥½å‹",
    family: "å®¶äºº",
    partner: "ä¼´ä¾£",
    colleague: "åŒäº‹",
  }

  const typeEmojis: Record<string, string> = {
    friend: "ğŸ˜Š",
    family: "ğŸ‘¨â€ğŸ‘©â€ğŸ‘§",
    partner: "â¤ï¸",
    colleague: "ğŸ‘”",
  }

  return (
    <div className="p-4 rounded-lg bg-sidebar">
      <div className="flex items-start gap-3">
        {/* å¤´åƒ */}
        <div className="flex-shrink-0 w-10 h-10 rounded-full bg-hover flex items-center justify-center text-xl">
          {relation.avatar || typeEmojis[relation.type] || "ğŸ‘¤"}
        </div>

        <div className="flex-1 min-w-0">
          {/* åç§°å’Œç±»å‹ */}
          <div className="flex items-center gap-2">
            <span className="font-medium text-foreground">{relation.name}</span>
            <span className="text-xs px-1.5 py-0.5 rounded bg-hover text-muted-foreground">
              {typeLabels[relation.type] || relation.type}
            </span>
          </div>

          {/* å¥‘åˆåº¦ */}
          {relation.compatibility !== undefined && (
            <div className="flex items-center gap-2 mt-1">
              <Heart className="w-3 h-3 text-alert-foreground" />
              <span className="text-xs text-muted-foreground">
                å¥‘åˆåº¦ {relation.compatibility}%
              </span>
            </div>
          )}

          {/* å»ºè®® */}
          {relation.suggestions && relation.suggestions.length > 0 && (
            <div className="mt-3 space-y-1.5">
              <div className="flex items-center gap-1 text-xs text-muted-foreground">
                <Sparkles className="w-3 h-3" />
                <span>æ²Ÿé€šå»ºè®®</span>
              </div>
              {relation.suggestions.map((suggestion, i) => (
                <div
                  key={i}
                  className={cn(
                    "flex items-center gap-2 p-2 rounded-md",
                    "bg-hover text-sm text-foreground",
                    "hover:bg-foreground/5 transition-colors cursor-pointer"
                  )}
                >
                  <MessageCircle className="w-3 h-3 text-muted-foreground flex-shrink-0" />
                  <span>{suggestion}</span>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  )
}

function SocialFeatureCard({
  icon,
  title,
  description,
}: {
  icon: string
  title: string
  description: string
}) {
  return (
    <div className="p-3 rounded-lg bg-sidebar hover:bg-hover transition-colors cursor-pointer">
      <div className="text-2xl mb-2">{icon}</div>
      <div className="font-medium text-sm text-foreground">{title}</div>
      <div className="text-xs text-muted-foreground">{description}</div>
    </div>
  )
}
