version: "3.8"

services:
  # ─────────────────────────────────────────────────────────────────
  # API Service (FastAPI)
  # ─────────────────────────────────────────────────────────────────
  api:
    build:
      context: ./apps/api
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    environment:
      - VIBELIFE_DB_URL=${VIBELIFE_DB_URL}
      - VIBELIFE_JWT_SECRET=${VIBELIFE_JWT_SECRET}
      - GLM_API_KEY=${GLM_API_KEY}
      - GEMINI_API_KEY=${GEMINI_API_KEY}
      - PINECONE_API_KEY=${PINECONE_API_KEY}
      - PINECONE_HOST=${PINECONE_HOST}
      - VIBELIFE_DEV=1
    volumes:
      - ./apps/api:/app
    command: uvicorn main:app --host 0.0.0.0 --port 8000 --reload
    networks:
      - vibelife-network

  # ─────────────────────────────────────────────────────────────────
  # Web Service (Next.js)
  # ─────────────────────────────────────────────────────────────────
  web:
    build:
      context: ./apps/web
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    environment:
      - NEXT_PUBLIC_API_BASE=http://api:8000/api/v1
    volumes:
      - ./apps/web:/app
      - /app/node_modules
      - /app/.next
    command: pnpm dev
    depends_on:
      - api
    networks:
      - vibelife-network

  # ─────────────────────────────────────────────────────────────────
  # Local PostgreSQL (optional, for local dev without remote DB)
  # ─────────────────────────────────────────────────────────────────
  # postgres:
  #   image: pgvector/pgvector:pg16
  #   ports:
  #     - "5432:5432"
  #   environment:
  #     POSTGRES_USER: postgres
  #     POSTGRES_PASSWORD: postgres
  #     POSTGRES_DB: vibelife
  #   volumes:
  #     - postgres_data:/var/lib/postgresql/data
  #     - ./migrations:/docker-entrypoint-initdb.d
  #   networks:
  #     - vibelife-network

networks:
  vibelife-network:
    driver: bridge

