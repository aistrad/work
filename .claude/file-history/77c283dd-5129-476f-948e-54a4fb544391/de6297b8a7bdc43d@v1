                {"name": "沟通效果", "score": 75, "description": "工作沟通顺畅"},
                {"name": "信任基础", "score": 72, "description": "专业信任建立中"},
                {"name": "目标一致", "score": 80, "description": "工作目标一致"},
            ],
            "strengths": ["专业互补", "目标一致", "高效协作"],
            "challenges": ["风格差异", "压力传导"],
            "advice": "明确分工，保持专业边界。",
