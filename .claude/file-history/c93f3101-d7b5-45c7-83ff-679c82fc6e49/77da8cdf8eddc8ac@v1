"use client";

/**
 * ChatWelcomeMessageDemo - 欢迎消息效果演示
 *
 * 使用真实 Dashboard 数据展示优化后的欢迎消息效果
 */

import { useCallback } from "react";
import { useDashboard } from "@/hooks/useDashboard";
import { useDashboardWelcomeData } from "@/hooks/useDashboardWelcomeData";
import { ChatWelcomeMessage } from "@/components/chat/ChatWelcomeMessage";
import { Skeleton } from "@/components/ui/Skeleton";
import { toast } from "sonner";

export function ChatWelcomeMessageDemo() {
  const { dashboard, isLoading, checkIn } = useDashboard();
  const welcomeData = useDashboardWelcomeData(dashboard);

  const handleSendPrompt = useCallback((prompt: string) => {
    console.log("Send prompt:", prompt);
    toast.success(`发送消息：${prompt}`);
    // 实际实现中，这里应该调用 sendMessage
  }, []);

  const handleShowLifecoachDetail = useCallback(() => {
    console.log("Show lifecoach detail");
    toast.info("跳转到 Lifecoach 详情");
    // 实际实现中，可以跳转到 /journey 或展开详情
  }, []);

  if (isLoading) {
    return (
      <div className="p-4 space-y-4">
        <Skeleton className="h-64 w-full rounded-2xl" />
      </div>
    );
  }

  if (!welcomeData) {
    return (
      <div className="p-4">
        <div className="bg-muted/30 rounded-lg p-6 text-center">
          <p className="text-muted-foreground">无法加载欢迎消息数据</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-bg-primary">
      {/* 顶部说明 */}
      <div className="p-4 bg-card border-b border-border">
        <h1 className="text-lg font-semibold text-foreground mb-1">
          欢迎消息优化预览
        </h1>
        <p className="text-sm text-muted-foreground">
          这是优化后的 Chat 空状态欢迎消息效果演示
        </p>
      </div>

      {/* 欢迎消息 */}
      <ChatWelcomeMessage
        data={welcomeData}
        onCheckIn={checkIn}
        onSendPrompt={handleSendPrompt}
        onShowLifecoachDetail={handleShowLifecoachDetail}
      />

      {/* 底部对比说明 */}
      <div className="p-4">
        <div className="bg-card rounded-lg p-4 border border-border">
          <h3 className="text-sm font-semibold text-foreground mb-2">
            优化要点
          </h3>
          <ul className="text-xs text-muted-foreground space-y-1">
            <li>✅ 单一消息气泡，减少信息割裂</li>
            <li>✅ 个性化运势建议（行动导向）</li>
            <li>✅ 对话式 Lifecoach 进度（情感化）</li>
            <li>✅ 动态快捷按钮（根据状态自动调整）</li>
            <li>✅ 温暖的渐变配色（绿色/琥珀色）</li>
            <li>✅ 一屏内完整展示（无需滚动）</li>
          </ul>
        </div>
      </div>
    </div>
  );
}
