"use client";

/**
 * Interview Page - 独立访谈页面
 * 用于生成报告前的深度访谈流程
 */

import { useState, useCallback } from "react";
import { useRouter, useSearchParams } from "next/navigation";
import { motion } from "framer-motion";
import { ArrowLeft, Sparkles } from "lucide-react";
import { useSkill } from "@/providers";
import { LuminousPaper, BreathAura, VibeGlyph } from "@/components/core";
import InterviewModal from "@/components/interview/InterviewModal";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

interface InterviewResult {
  success: boolean;
  extracted_profile: Record<string, unknown>;
  summary: string;
  questions_answered: number;
  total_questions: number;
}

// ═══════════════════════════════════════════════════════════════════════════
// Interview Page Component
// ═══════════════════════════════════════════════════════════════════════════

export default function InterviewPage() {
  const router = useRouter();
  const searchParams = useSearchParams();
  const { skill } = useSkill();

  const [showModal, setShowModal] = useState(false);
  const [isCompleted, setIsCompleted] = useState(false);
  const [result, setResult] = useState<InterviewResult | null>(null);

  // 从 URL 获取回调地址
  const returnTo = searchParams.get("returnTo") || "/chat";

  const handleComplete = useCallback((interviewResult: InterviewResult) => {
    setResult(interviewResult);
    setIsCompleted(true);
    setShowModal(false);
  }, []);

  const handleGenerateReport = () => {
    // 跳转到聊天页面
    router.push(`/chat`);
  };

  const handleBack = () => {
    router.back();
  };

  return (
    <LuminousPaper skill={skill} variant="default" className="min-h-screen">
      {/* Background */}
      <BreathAura
        skill={skill}
        size="xl"
        position="center"
        intensity="medium"
        className="opacity-30"
      />

      <div className="relative z-10 min-h-screen flex flex-col">
        {/* Header */}
        <header className="py-4 px-6 flex items-center gap-4">
          <button
            onClick={handleBack}
            className="p-2 rounded-lg hover:bg-foreground/5 transition-colors"
          >
            <ArrowLeft className="w-5 h-5 text-foreground" />
          </button>
          <div className="flex items-center gap-2">
            <VibeGlyph size="sm" skill={skill} showAura={false} />
            <span className="font-serif font-semibold text-foreground">深度访谈</span>
          </div>
        </header>

        {/* Main Content */}
        <main className="flex-1 flex items-center justify-center px-6 pb-20">
          <div className="max-w-lg w-full">
            {!isCompleted ? (
              // 开始访谈界面
              <motion.div
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                className="text-center"
              >
                {/* Icon */}
                <div className="relative inline-block mb-8">
                  <BreathAura
                    skill={skill}
                    size="lg"
                    position="center"
                    intensity="high"
                    className="opacity-50"
                  />
                  <div className="w-24 h-24 rounded-full bg-card border border-border flex items-center justify-center">
                    <Sparkles className="w-10 h-10 text-skill-primary" />
                  </div>
                </div>

                {/* Title */}
                <h1 className="font-serif text-3xl font-bold text-foreground mb-4">
                  在生成报告之前...
                </h1>

                {/* Description */}
                <p className="text-muted-foreground mb-8 leading-relaxed">
                  我想更了解你一点。通过几个简单的问题，
                  <br />
                  我能为你生成更精准、更有价值的分析报告。
                </p>

                {/* Features */}
                <div className="bg-card rounded-xl p-6 mb-8 text-left">
                  <h3 className="font-medium text-foreground mb-4">访谈将帮助我了解：</h3>
                  <ul className="space-y-3 text-muted-foreground">
                    <li className="flex items-start gap-3">
                      <span className="text-skill-primary">•</span>
                      <span>你当前最关心的问题和困惑</span>
                    </li>
                    <li className="flex items-start gap-3">
                      <span className="text-skill-primary">•</span>
                      <span>你的生活状态和背景</span>
                    </li>
                    <li className="flex items-start gap-3">
                      <span className="text-skill-primary">•</span>
                      <span>你对这次分析的期望</span>
                    </li>
                  </ul>
                </div>

                {/* CTA */}
                <button
                  onClick={() => setShowModal(true)}
                  className="w-full py-4 bg-skill-primary text-white rounded-xl font-medium text-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5"
                >
                  开始访谈（约2分钟）
                </button>

                {/* Skip option */}
                <button
                  onClick={() => router.push(returnTo)}
                  className="mt-4 text-sm text-muted-foreground hover:text-foreground transition-colors"
                >
                  跳过，直接生成基础报告
                </button>
              </motion.div>
            ) : (
              // 访谈完成界面
              <motion.div
                initial={{ opacity: 0, scale: 0.95 }}
                animate={{ opacity: 1, scale: 1 }}
                className="text-center"
              >
                {/* Success Icon */}
                <div className="w-20 h-20 mx-auto mb-6 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                  <svg className="w-10 h-10 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                  </svg>
                </div>

                {/* Title */}
                <h1 className="font-serif text-3xl font-bold text-foreground mb-4">
                  访谈完成
                </h1>

                {/* Summary */}
                <p className="text-muted-foreground mb-2">
                  已回答 {result?.questions_answered || 0} / {result?.total_questions || 3} 个问题
                </p>
                {result?.summary && (
                  <p className="text-sm text-muted-foreground/70 mb-8">
                    {result.summary}
                  </p>
                )}

                {/* Result Card */}
                <div className="bg-card rounded-xl p-6 mb-8">
                  <p className="text-foreground leading-relaxed">
                    太好了！现在我对你有了更深入的了解。
                    <br />
                    接下来，我将为你生成一份专属的深度分析报告。
                  </p>
                </div>

                {/* CTA */}
                <button
                  onClick={handleGenerateReport}
                  className="w-full py-4 bg-skill-primary text-white rounded-xl font-medium text-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5 flex items-center justify-center gap-2"
                >
                  <Sparkles className="w-5 h-5" />
                  生成专属报告
                </button>
              </motion.div>
            )}
          </div>
        </main>
      </div>

      {/* Interview Modal */}
      <InterviewModal
        isOpen={showModal}
        onClose={() => setShowModal(false)}
        onComplete={handleComplete}
        skill={skill === "bazi" || skill === "zodiac" ? skill : "bazi"}
      />
    </LuminousPaper>
  );
}
