// Report Detail Page Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export default function ReportDetailPage() {
  const router = useRouter();
  const params = useParams();
  const { skill } = useSkill();
  const { shareReport, ShareModal } = useShare();

  const reportId = params.id as string;

  const [report, setReport] = useState<Report | null>(null);
  const [isLoading, setIsLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [showUpgradeModal, setShowUpgradeModal] = useState(false);

  // åŠ è½½æŠ¥å‘Š
  useEffect(() => {
    loadReport();
  }, [reportId]);

  const loadReport = async () => {
    setIsLoading(true);
    setError(null);

    try {
      const response = await fetch(`/api/v1/report/${reportId}`);
      if (response.ok) {
        const data = await response.json();
        setReport(data.report);
      } else if (response.status === 404) {
        // Demo fallback
        setReport({ ...DEMO_REPORT, id: reportId });
      } else {
        setError("åŠ è½½æŠ¥å‘Šå¤±è´¥");
      }
    } catch {
      // Demo fallback
      setReport({ ...DEMO_REPORT, id: reportId });
    } finally {
      setIsLoading(false);
    }
  };

  const handleBack = () => {
    router.push("/chat");
  };

  const handleUpgrade = () => {
    setShowUpgradeModal(true);
  };

  const handleShare = () => {
    if (report) {
      const title = report.skill === "bazi" ? "æˆ‘çš„å…«å­—åˆ†ææŠ¥å‘Š" : "æˆ‘çš„æ˜Ÿåº§åˆ†ææŠ¥å‘Š";
      shareReport(report.id, title, report.poster_thumbnail_url);
    }
  };

  const handleDownload = () => {
    // TODO: Implement PDF download
    alert("PDF ä¸‹è½½åŠŸèƒ½å³å°†ä¸Šçº¿");
  };

  // Loading state
  if (isLoading) {
    return (
      <LuminousPaper skill={skill} variant="default" className="min-h-screen">
        <div className="flex items-center justify-center min-h-screen">
          <div className="text-center">
            <div className="w-12 h-12 mx-auto mb-4 border-4 border-skill-primary/20 border-t-skill-primary rounded-full animate-spin" />
            <p className="text-muted-foreground">åŠ è½½æŠ¥å‘Šä¸­...</p>
          </div>
        </div>
      </LuminousPaper>
    );
  }

  // Error state
  if (error || !report) {
    return (
      <LuminousPaper skill={skill} variant="default" className="min-h-screen">
        <div className="flex items-center justify-center min-h-screen">
          <div className="text-center px-6">
            <div className="w-16 h-16 mx-auto mb-4 rounded-full bg-red-100 dark:bg-red-900/30 flex items-center justify-center">
              <span className="text-2xl">ğŸ˜•</span>
            </div>
            <h2 className="font-serif text-xl font-semibold text-foreground mb-2">
              {error || "æŠ¥å‘Šä¸å­˜åœ¨"}
            </h2>
            <p className="text-muted-foreground mb-6">
              è¯·æ£€æŸ¥é“¾æ¥æ˜¯å¦æ­£ç¡®ï¼Œæˆ–è¿”å›æŠ¥å‘Šåˆ—è¡¨
            </p>
            <button
              onClick={handleBack}
              className="px-6 py-3 bg-skill-primary text-white rounded-xl font-medium"
            >
              è¿”å›æŠ¥å‘Šåˆ—è¡¨
            </button>
          </div>
        </div>
      </LuminousPaper>
    );
  }

  // Generating state
  if (report.status === "generating") {
    return (
      <LuminousPaper skill={skill} variant="default" className="min-h-screen">
        <BreathAura
          skill={skill}
          size="xl"
          position="center"
          intensity="high"
          className="opacity-40"
        />

        <div className="relative z-10 min-h-screen flex items-center justify-center">
          <motion.div
            initial={{ opacity: 0, scale: 0.95 }}
            animate={{ opacity: 1, scale: 1 }}
            className="text-center px-6"
          >
            <div className="relative w-24 h-24 mx-auto mb-8">
              <motion.div
                className="absolute inset-0 rounded-full border-4 border-skill-primary/20"
                animate={{ rotate: 360 }}
                transition={{ duration: 2, repeat: Infinity, ease: "linear" }}
              />
              <motion.div
                className="absolute inset-2 rounded-full border-4 border-t-skill-primary border-r-transparent border-b-transparent border-l-transparent"
                animate={{ rotate: -360 }}
