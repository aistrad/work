"use client";

/**
 * Payment Success Page - 支付成功页面
 */

import { useEffect, useState } from "react";
import { useRouter, useSearchParams } from "next/navigation";
import { motion } from "framer-motion";
import { Check, FileText, ArrowRight, Sparkles } from "lucide-react";
import { useSkill } from "@/providers";
import { LuminousPaper, BreathAura, VibeGlyph } from "@/components/core";

export default function PaymentSuccessPage() {
  const router = useRouter();
  const searchParams = useSearchParams();
  const { skill } = useSkill();

  const sessionId = searchParams.get("session_id");
  const [isVerifying, setIsVerifying] = useState(true);
  const [paymentInfo, setPaymentInfo] = useState<{
    product_id?: string;
    report_id?: string;
  } | null>(null);

  useEffect(() => {
    verifyPayment();
  }, [sessionId]);

  const verifyPayment = async () => {
    if (!sessionId) {
      setIsVerifying(false);
      return;
    }

    try {
      // 开发模式直接成功
      if (sessionId.startsWith("dev_")) {
        setPaymentInfo({
          product_id: "report_full",
          report_id: "demo-report",
        });
        setIsVerifying(false);
        return;
      }

      // 生产模式验证支付
      const response = await fetch("/api/v1/payment/verify", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          session_id: sessionId,
          user_id: "current-user", // TODO: 从认证获取
        }),
      });

      if (response.ok) {
        const data = await response.json();
        if (data.paid) {
          setPaymentInfo({
            product_id: data.product_id,
            report_id: data.metadata?.report_id,
          });
        }
      }
    } catch (error) {
      console.error("Payment verification failed:", error);
    } finally {
      setIsVerifying(false);
    }
  };

  const handleViewReport = () => {
    if (paymentInfo?.report_id) {
      router.push(`/report/${paymentInfo.report_id}?full=true`);
    } else {
      router.push("/chat");
    }
  };

  const handleBackToChat = () => {
    router.push("/chat");
  };

  if (isVerifying) {
    return (
      <LuminousPaper skill={skill} variant="default" className="min-h-screen">
        <div className="flex items-center justify-center min-h-screen">
          <div className="text-center">
            <div className="w-12 h-12 mx-auto mb-4 border-4 border-skill-primary/20 border-t-skill-primary rounded-full animate-spin" />
            <p className="text-muted-foreground">验证支付状态...</p>
          </div>
        </div>
      </LuminousPaper>
    );
  }

  return (
    <LuminousPaper skill={skill} variant="default" className="min-h-screen">
      <BreathAura
        skill={skill}
        size="xl"
        position="center"
        intensity="medium"
        className="opacity-30"
      />

      <div className="relative z-10 min-h-screen flex items-center justify-center px-6">
        <motion.div
          initial={{ opacity: 0, scale: 0.95 }}
          animate={{ opacity: 1, scale: 1 }}
          className="w-full md:max-w-md text-center"
        >
          {/* Success Icon */}
          <motion.div
            initial={{ scale: 0 }}
            animate={{ scale: 1 }}
            transition={{ type: "spring", delay: 0.2 }}
            className="w-24 h-24 mx-auto mb-8 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center"
          >
            <motion.div
              initial={{ scale: 0 }}
              animate={{ scale: 1 }}
              transition={{ type: "spring", delay: 0.4 }}
            >
              <Check className="w-12 h-12 text-green-600 dark:text-green-400" />
            </motion.div>
          </motion.div>

          {/* Title */}
          <motion.h1
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.3 }}
            className="font-serif text-3xl font-bold text-foreground mb-4"
          >
            支付成功！
          </motion.h1>

          {/* Description */}
          <motion.p
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.4 }}
            className="text-muted-foreground mb-8"
          >
            感谢您的购买，您的内容已解锁
          </motion.p>

          {/* Benefits Card */}
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.5 }}
            className="bg-card rounded-2xl p-6 mb-8 text-left"
          >
            <h3 className="font-medium text-foreground mb-4 flex items-center gap-2">
              <Sparkles className="w-5 h-5 text-skill-primary" />
              您已获得
            </h3>
            <ul className="space-y-3">
              <li className="flex items-center gap-3 text-sm">
                <Check className="w-4 h-4 text-green-500" />
                <span className="text-foreground">完整深度分析报告</span>
              </li>
              <li className="flex items-center gap-3 text-sm">
                <Check className="w-4 h-4 text-green-500" />
                <span className="text-foreground">高清 AI 海报</span>
              </li>
              <li className="flex items-center gap-3 text-sm">
                <Check className="w-4 h-4 text-green-500" />
                <span className="text-foreground">永久保存</span>
              </li>
              <li className="flex items-center gap-3 text-sm">
                <Check className="w-4 h-4 text-green-500" />
                <span className="text-foreground">首月订阅权益</span>
              </li>
            </ul>
          </motion.div>

          {/* Actions */}
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.6 }}
            className="space-y-3"
          >
            <button
              onClick={handleViewReport}
              className="w-full py-4 bg-skill-primary text-white rounded-xl font-medium text-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5 flex items-center justify-center gap-2"
            >
              <FileText className="w-5 h-5" />
              查看完整报告
              <ArrowRight className="w-5 h-5" />
            </button>

            <button
              onClick={handleBackToChat}
              className="w-full py-3 text-muted-foreground hover:text-foreground transition-colors"
            >
              返回对话
            </button>
          </motion.div>

          {/* Order Info */}
          {sessionId && (
            <motion.p
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              transition={{ delay: 0.7 }}
              className="text-xs text-muted-foreground mt-8"
            >
              订单号: {sessionId.slice(0, 20)}...
            </motion.p>
          )}
        </motion.div>
      </div>
    </LuminousPaper>
  );
}
