'use client';

/**
 * Skill 市场页面
 *
 * 展示所有可用 Skill，支持订阅/取消订阅操作
 */

import React, { useMemo } from 'react';
import { useRouter } from 'next/navigation';
import { ArrowLeft, Search, Sparkles } from 'lucide-react';
import { SkillList, SkillCard } from '@/components/skill';
import { useSkills, useSkillSubscription, useSkillRecommendations } from '@/hooks/useSkillSubscription';
import { useAuth } from '@/providers/AuthProvider';
import type { SkillUserStatus } from '@/types/skill';

export default function SkillMarketPage() {
  const router = useRouter();
  const { user } = useAuth();
  const { skills, categories, isLoading: skillsLoading } = useSkills();
  const {
    userStatuses,
    subscribe,
    unsubscribe,
    togglePush,
    isLoading: subscriptionsLoading,
  } = useSkillSubscription();
  const { recommendations } = useSkillRecommendations({ limit: 2 });

  const isLoading = skillsLoading || subscriptionsLoading;

  // 将 skills 中的 user_status 合并到 userStatuses
  const mergedUserStatuses = useMemo(() => {
    const statuses: Record<string, SkillUserStatus> = { ...userStatuses };
    for (const skill of skills) {
      if (skill.user_status && !statuses[skill.id]) {
        statuses[skill.id] = skill.user_status;
      }
    }
    return statuses;
  }, [skills, userStatuses]);

  // 处理订阅
  const handleSubscribe = async (skillId: string) => {
    if (!user) {
      router.push('/auth/login?redirect=/skills');
      return;
    }
    try {
      await subscribe(skillId);
    } catch (error: any) {
      // 处理 Premium 要求错误 (402)
      if (error?.response?.status === 402) {
        const detail = error.response.data?.detail;
        if (detail?.code === 'PREMIUM_REQUIRED') {
          router.push(`/membership?reason=skill_subscribe&skill=${skillId}`);
          return;
        }
      }
      console.error('Subscribe failed:', error);
    }
  };

  // 处理取消订阅
  const handleUnsubscribe = async (skillId: string) => {
    if (!user) return;
    try {
      await unsubscribe(skillId);
    } catch (error) {
      console.error('Unsubscribe failed:', error);
    }
  };

  // 处理推送开关
  const handleTogglePush = async (skillId: string, enabled: boolean) => {
    if (!user) return;
    try {
      await togglePush(skillId, enabled);
    } catch (error) {
      console.error('Toggle push failed:', error);
    }
  };

  // 处理点击 Skill
  const handleSkillClick = (skillId: string) => {
    router.push(`/skills/${skillId}`);
  };

  return (
    <div className="min-h-screen bg-gradient-to-b from-bg-primary to-bg-secondary">
      {/* Header */}
      <header className="sticky top-0 z-10 bg-bg-primary/80 backdrop-blur-xl border-b border-white/5">
        <div className="max-w-6xl mx-auto px-4 py-4">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-3">
              <button
                onClick={() => router.back()}
                className="p-2 rounded-lg hover:bg-white/5 transition-colors"
              >
                <ArrowLeft className="w-5 h-5 text-text-secondary" />
              </button>
              <div>
                <h1 className="text-xl font-bold text-text-primary">探索 Skill</h1>
                <p className="text-sm text-text-secondary">发现更多能力，提升你的体验</p>
              </div>
            </div>
          </div>
        </div>
      </header>

      <main className="max-w-6xl mx-auto px-4 py-6 space-y-8">
        {/* 推荐区块 */}
        {recommendations.length > 0 && (
          <section>
            <div className="flex items-center gap-2 mb-4">
              <Sparkles className="w-5 h-5 text-accent" />
              <h2 className="text-lg font-semibold text-text-primary">为你推荐</h2>
            </div>
            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
              {recommendations.map((rec) => {
                const skill = skills.find((s) => s.id === rec.skill_id);
                if (!skill) return null;
                return (
                  <div
                    key={rec.skill_id}
                    className="p-3 rounded-lg border border-white/10 hover:border-accent/30 transition-colors cursor-pointer"
                    style={{ background: `linear-gradient(135deg, ${skill.color}10, transparent)` }}
                    onClick={() => handleSkillClick(rec.skill_id)}
                  >
                    <div className="flex items-start gap-2.5">
                      <div
                        className="w-10 h-10 rounded-lg flex items-center justify-center text-xl shrink-0"
                        style={{ backgroundColor: `${skill.color}20` }}
                      >
                        {skill.icon}
                      </div>
                      <div className="flex-1 min-w-0">
                        <h3 className="text-sm font-semibold text-text-primary truncate">{skill.name}</h3>
                        <p className="text-xs text-text-secondary mt-0.5 line-clamp-2">{rec.context}</p>
                        <button
                          onClick={(e) => {
                            e.stopPropagation();
                            handleSubscribe(rec.skill_id);
                          }}
                          className="mt-2 px-3 py-1 text-xs font-semibold rounded-full bg-accent text-white hover:bg-accent/90 transition-colors"
                        >
                          立即体验
                        </button>
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          </section>
        )}

        {/* 分类统计 */}
        {categories && (
          <section className="grid grid-cols-3 gap-4">
            <div className="p-4 rounded-xl bg-indigo-500/10 border border-indigo-500/20">
              <div className="text-2xl font-bold text-indigo-400">{categories.core.count}</div>
              <div className="text-sm text-text-secondary">{categories.core.name}</div>
            </div>
            <div className="p-4 rounded-xl bg-green-500/10 border border-green-500/20">
              <div className="text-2xl font-bold text-green-400">{categories.default.count}</div>
              <div className="text-sm text-text-secondary">{categories.default.name}</div>
            </div>
            <div className="p-4 rounded-xl bg-amber-500/10 border border-amber-500/20">
              <div className="text-2xl font-bold text-amber-400">{categories.professional.count}</div>
              <div className="text-sm text-text-secondary">{categories.professional.name}</div>
            </div>
          </section>
        )}

        {/* Skill 列表 */}
        <section>
          {isLoading ? (
            <div className="space-y-4">
              {[1, 2, 3, 4, 5, 6].map((i) => (
                <div key={i} className="h-32 rounded-xl bg-white/5 animate-pulse" />
              ))}
            </div>
          ) : (
            <SkillList
              skills={skills}
              userStatuses={mergedUserStatuses}
              layout="grid"
              groupBy="category"
              showFilters
              onSkillClick={handleSkillClick}
              onSubscribe={handleSubscribe}
              onUnsubscribe={handleUnsubscribe}
              onTogglePush={handleTogglePush}
            />
          )}
        </section>
      </main>
    </div>
  );
}
