### 4.1 EmbeddedChatStep.tsx (æ–°å¢)

```tsx
'use client';

import { useEffect, useMemo, useState, useCallback } from 'react';
import { useOnboarding } from '../context';
import { useVibeChat } from '@/hooks/useVibeChat';
import { ChatMessage } from '@/components/chat/ChatMessage';
import { ChatInput } from '@/components/chat/ChatInput';

export default function EmbeddedChatStep() {
  const { state, nextStep } = useOnboarding();
  const [hasTriggered, setHasTriggered] = useState(false);

  const { messages, sendMessage, isLoading } = useVibeChat({
    skillId: 'onboarding',
  });

  // è‡ªåŠ¨è§¦å‘ onboarding skill
  useEffect(() => {
    if (!hasTriggered && state.baziData) {
      setHasTriggered(true);
      sendMessage('å¼€å§‹');  // è§¦å‘ onboarding skill
    }
  }, [hasTriggered, state.baziData, sendMessage]);

  // æ£€æµ‹é¦–æ¬¡ç›¸é‡å®Œæˆ
  const isComplete = useMemo(() => {
    const lastAssistant = messages
      .filter(m => m.role === 'assistant')
      .slice(-1)[0];

    if (!lastAssistant) return false;

    const endKeywords = ['æ˜å¤©æ—©ä¸Š', 'æœŸå¾…æ˜å¤©è§', 'æ™šå®‰'];
    return endKeywords.some(k => lastAssistant.content?.includes(k));
  }, [messages]);

  // å®Œæˆåå»¶è¿Ÿè·³è½¬åˆ° ConversionStep
  useEffect(() => {
    if (isComplete) {
      setTimeout(() => nextStep(), 2500);
    }
  }, [isComplete, nextStep]);

  const handleSendMessage = useCallback((msg: string) => {
    sendMessage(msg);
  }, [sendMessage]);

  return (
    <div className="min-h-screen bg-bg-primary flex flex-col">
      {/* æ¶ˆæ¯åˆ—è¡¨ */}
      <div className="flex-1 overflow-y-auto px-4 py-6 space-y-4">
        {messages.map((message) => (
          <ChatMessage
            key={message.id}
            role={message.role as 'user' | 'assistant'}
            content={message.content}
            skill="bazi"
            isStreaming={isLoading && message === messages[messages.length - 1]}
            onSendMessage={handleSendMessage}
          />
        ))}
      </div>

      {/* è¾“å…¥æ¡† */}
      <div className="flex-shrink-0 p-4 border-t border-subtle">
        <ChatInput
          onSend={handleSendMessage}
          disabled={isLoading || isComplete}
          placeholder={isComplete ? "æ­£åœ¨ä¸ºä½ å‡†å¤‡..." : "æœ‰è¯æƒ³è¯´..."}
        />
      </div>
    </div>
  );
}
```

