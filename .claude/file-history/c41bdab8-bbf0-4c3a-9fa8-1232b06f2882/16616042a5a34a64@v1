version: "1.0"
skill_id: lifecoach

# 展示型工具
display:
  - name: show_pattern_insight
    description: |
      展示行为模式洞察。当发现用户的重复模式或卡点时调用。
    card_type: pattern_insight
    fallback_type: list
    when_to_call: |
      - 发现用户重复的行为模式
      - 识别出隐藏的目标冲突
      - 分析用户的卡点原因
    parameters:
      - name: pattern_type
        type: string
        required: false
        description: 模式类型
        enum:
          - behavior      # 行为模式
          - stuck         # 卡点分析
          - conflict      # 目标冲突
          - protection    # 自我保护模式
      - name: surface_pattern
        type: string
        required: true
        description: 表层模式描述
      - name: hidden_goal
        type: string
        required: false
        description: 隐藏的目标
      - name: cost
        type: string
        required: false
        description: 这个模式的代价
      - name: insight
        type: string
        required: false
        description: 核心洞察

  - name: show_identity_design
    description: |
      展示身份设计卡片。当帮助用户设计新身份时调用。
    card_type: identity_design
    fallback_type: list
    when_to_call: |
      - 用户想改变自己
      - 进行身份转换引导
      - 设计新的自我认同
    parameters:
      - name: old_identity
        type: string
        required: false
        description: 旧身份描述（我是那种会...的人）
      - name: new_identity
        type: string
        required: true
        description: 新身份描述（我是那种会...的人）
      - name: bridge_belief
        type: string
        required: false
        description: 连接两个身份的核心信念
      - name: anchor_behaviors
        type: array
        required: false
        description: 锚定新身份的具体行为列表

  - name: show_vision_map
    description: |
      展示愿景/反愿景地图。当帮助用户设计愿景或反愿景时调用。
    card_type: vision_map
    fallback_type: list
    when_to_call: |
      - 用户探索自己想要什么
      - 用户定义不想要的人生
      - 进行愿景设计
    parameters:
      - name: map_type
        type: string
        required: true
        description: 地图类型
        enum:
          - vision        # 正向愿景
          - anti_vision   # 反愿景
          - both          # 同时展示
      - name: vision_statement
        type: string
        required: false
        description: 一句话愿景
      - name: anti_vision_statement
        type: string
        required: false
        description: 一句话反愿景
      - name: three_year_picture
        type: string
        required: false
        description: 三年后的画面描述
      - name: five_year_picture
        type: string
        required: false
        description: 如果不改变，五年后的画面
      - name: identity_belief
        type: string
        required: false
        description: 支撑愿景的身份信念
      - name: one_year_milestone
        type: string
        required: false
        description: 一年里程碑

  - name: show_action_plan
    description: |
      展示行动计划卡片。当为用户设计具体行动时调用。
    card_type: action_plan
    fallback_type: list
    when_to_call: |
      - 完成分析后需要给出行动建议
      - 用户问"然后呢"或"怎么做"
      - 需要将洞察转化为行动
    parameters:
      - name: context
        type: string
        required: false
        description: 行动计划的背景/目的
      - name: one_year_goal
        type: string
        required: false
        description: 一年目标/里程碑
      - name: one_month_project
        type: string
        required: false
        description: 本月项目/重点
      - name: daily_actions
        type: array
        required: true
        description: 每日杠杆行动列表
      - name: first_step
        type: string
        required: false
        description: 立即可做的第一步

  - name: show_life_game
    description: |
      展示人生游戏设计卡片。当帮助用户进行人生游戏化设计时调用。
    card_type: life_game
    fallback_type: list
    when_to_call: |
      - 用户想系统规划人生
      - 进行人生游戏化设计
      - 整合愿景、目标、行动
    parameters:
      - name: win_condition
        type: string
        required: true
        description: 胜利条件/愿景
      - name: lose_condition
        type: string
        required: true
        description: 失败条件/反愿景
      - name: main_mission
        type: string
        required: true
        description: 主线任务/年度目标
      - name: current_boss
        type: string
        required: false
        description: 当前Boss/月度项目
      - name: boss_reward
        type: string
        required: false
        description: 打败Boss获得的奖励
      - name: daily_quests
        type: array
        required: false
        description: 每日任务列表
      - name: game_rules
        type: array
        required: false
        description: 游戏规则/约束条件

# 场景筛选配置
scenarios_filter_config:
  # 入门级场景无需筛选
  pattern_aware:
    required_context: []
  anti_vision:
    required_context: []
  # 标准级场景
  stuck_point:
    required_context: []
  identity_shift:
    required_context: []
  vision_mvp:
    required_context: []
  # 专业级场景
  one_day_reset:
    required_context:
      - willingness_for_deep_work
  life_game:
    required_context: []
