"use client"

import { useState, useCallback } from "react"
import { motion, AnimatePresence } from "framer-motion"
import { Calendar, Clock, User, Sparkles, Loader2 } from "lucide-react"
import { cn } from "@/lib/utils"

interface BirthInfo {
  date: string
  time: string
  gender: "male" | "female" | ""
}

interface BirthInputCapsuleProps {
  onSubmit: (info: BirthInfo) => void
  isLoading?: boolean
  className?: string
}

export function BirthInputCapsule({
  onSubmit,
  isLoading = false,
  className,
}: BirthInputCapsuleProps) {
  const [birthInfo, setBirthInfo] = useState<BirthInfo>({
    date: "",
    time: "",
    gender: "",
  })
  const [focused, setFocused] = useState<string | null>(null)

  const isValid = birthInfo.date && birthInfo.time && birthInfo.gender

  const handleSubmit = useCallback(() => {
    if (!isValid || isLoading) return
    onSubmit(birthInfo)
  }, [birthInfo, isValid, isLoading, onSubmit])

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.5, ease: [0.16, 1, 0.3, 1] }}
      className={cn(
        "capsule-glass rounded-2xl sm:rounded-full p-3 sm:p-4",
        "flex flex-col sm:flex-row items-stretch sm:items-center gap-3 sm:gap-4",
        "transition-all duration-300",
        focused && "ring-2 ring-accent/20",
        className
      )}
    >
      {/* Date Input */}
      <div className="relative flex-1 min-w-0">
        <Calendar className="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-foreground-muted" />
        <input
          type="date"
          value={birthInfo.date}
          onChange={(e) => setBirthInfo((prev) => ({ ...prev, date: e.target.value }))}
          onFocus={() => setFocused("date")}
          onBlur={() => setFocused(null)}
          className={cn(
            "w-full bg-transparent pl-10 pr-3 py-2.5 rounded-lg",
            "text-sm text-foreground outline-none",
            "placeholder:text-foreground-muted",
            "border border-transparent",
            "focus:bg-background/50 focus:border-border",
            "transition-all duration-200"
          )}
          placeholder="出生日期"
        />
      </div>

      {/* Divider (Desktop) */}
      <div className="hidden sm:block w-px h-8 bg-border" />

      {/* Time Input */}
      <div className="relative flex-1 min-w-0">
        <Clock className="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-foreground-muted" />
        <input
          type="time"
          value={birthInfo.time}
          onChange={(e) => setBirthInfo((prev) => ({ ...prev, time: e.target.value }))}
          onFocus={() => setFocused("time")}
          onBlur={() => setFocused(null)}
          className={cn(
            "w-full bg-transparent pl-10 pr-3 py-2.5 rounded-lg",
            "text-sm text-foreground outline-none",
            "placeholder:text-foreground-muted",
            "border border-transparent",
            "focus:bg-background/50 focus:border-border",
            "transition-all duration-200"
          )}
          placeholder="出生时间"
        />
      </div>

      {/* Divider (Desktop) */}
      <div className="hidden sm:block w-px h-8 bg-border" />

      {/* Gender Select */}
      <div className="relative">
        <User className="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-foreground-muted pointer-events-none" />
        <select
          value={birthInfo.gender}
          onChange={(e) =>
            setBirthInfo((prev) => ({
              ...prev,
              gender: e.target.value as "male" | "female" | "",
            }))
          }
          onFocus={() => setFocused("gender")}
          onBlur={() => setFocused(null)}
          className={cn(
            "w-full sm:w-auto bg-transparent pl-10 pr-8 py-2.5 rounded-lg",
            "text-sm text-foreground outline-none appearance-none",
            "border border-transparent",
            "focus:bg-background/50 focus:border-border",
            "transition-all duration-200",
            !birthInfo.gender && "text-foreground-muted"
          )}
        >
          <option value="">性别</option>
          <option value="male">男</option>
          <option value="female">女</option>
        </select>
        <div className="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none">
          <svg
            className="w-4 h-4 text-foreground-muted"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 9l-7 7-7-7" />
          </svg>
        </div>
      </div>

      {/* Submit Button */}
      <motion.button
        type="button"
        onClick={handleSubmit}
        disabled={!isValid || isLoading}
        whileHover={isValid && !isLoading ? { scale: 1.02 } : {}}
        whileTap={isValid && !isLoading ? { scale: 0.98 } : {}}
        className={cn(
          "flex items-center justify-center gap-2 px-6 py-2.5 rounded-full",
          "text-sm font-medium transition-all duration-200",
          isValid && !isLoading
            ? "bg-foreground text-background hover:opacity-90 shadow-lg"
            : "bg-muted text-muted-foreground cursor-not-allowed"
        )}
      >
        <AnimatePresence mode="wait">
          {isLoading ? (
            <motion.div
              key="loading"
              initial={{ opacity: 0 }}
              animate={{ opacity: 1, rotate: 360 }}
              exit={{ opacity: 0 }}
              transition={{ rotate: { repeat: Infinity, duration: 1, ease: "linear" } }}
            >
              <Loader2 className="w-4 h-4" />
            </motion.div>
          ) : (
            <motion.div
              key="sparkles"
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              exit={{ opacity: 0 }}
            >
              <Sparkles className="w-4 h-4" />
            </motion.div>
          )}
        </AnimatePresence>
        <span>{isLoading ? "解读中..." : "获取洞察"}</span>
      </motion.button>
    </motion.div>
  )
}
