"use client";

/**
 * Bazi Relationship Page - 八字关系模拟器
 */

import { useState, useCallback } from "react";
import { useRouter } from "next/navigation";
import { motion } from "framer-motion";
import { ArrowLeft, Heart, Users, Briefcase, Home, Sparkles } from "lucide-react";
import { LuminousPaper, BreathAura, VibeGlyph } from "@/components/core";
import RelationshipSimulator from "@/components/relationship/RelationshipSimulator";
import { useShare } from "@/components/share/ShareModal";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

interface RelationshipAnalysis {
  id: string;
  headline: string;
  communication_style: string;
  summary: string;
  scores?: Array<{
    dimension: string;
    score: number;
    description: string;
    is_strength: boolean;
  }>;
  overall_score?: number;
  prescriptions: Array<{
    category: string;
    template: string;
    context: string;
  }>;
  warnings: string[];
}

// ═══════════════════════════════════════════════════════════════════════════
// Page Component
// ═══════════════════════════════════════════════════════════════════════════

export default function BaziRelationshipPage() {
  const router = useRouter();
  const { shareRelationship, ShareModal } = useShare();
  const skill = "bazi";

  const [showSimulator, setShowSimulator] = useState(false);
  const [analysis, setAnalysis] = useState<RelationshipAnalysis | null>(null);
  const [showResult, setShowResult] = useState(false);

  const userProfile = {
    skill: skill,
    dayMaster: "甲木",
  };

  const handleAnalysisComplete = useCallback((result: RelationshipAnalysis) => {
    setAnalysis(result);
    setShowResult(true);
    setShowSimulator(false);
  }, []);

  const handleBack = () => {
    if (showResult) {
      setShowResult(false);
      setAnalysis(null);
    } else if (showSimulator) {
      setShowSimulator(false);
    } else {
      router.push("/bazi/chat");
    }
  };

  const handleNewAnalysis = () => {
    setShowResult(false);
    setAnalysis(null);
    setShowSimulator(true);
  };

  const handleShare = () => {
    if (analysis) {
      shareRelationship(analysis.id, analysis.headline);
    }
  };

  return (
    <LuminousPaper skill={skill} variant="default" className="min-h-screen">
      <BreathAura
        skill={skill}
        size="xl"
        position="center"
        intensity="low"
        className="opacity-20"
      />

      <div className="relative z-10 min-h-screen flex flex-col">
        {/* Header */}
        <header className="py-4 px-6 flex items-center gap-4 border-b border-border">
          <button
            onClick={handleBack}
            className="p-2 rounded-lg hover:bg-foreground/5 transition-colors"
          >
            <ArrowLeft className="w-5 h-5 text-foreground" />
          </button>
          <div className="flex items-center gap-2">
            <VibeGlyph size="sm" skill={skill} showAura={false} />
            <span className="font-serif font-semibold text-foreground">关系模拟器</span>
          </div>
        </header>

        {/* Main Content */}
        <main className="flex-1 px-6 py-8">
          <div className="max-w-lg mx-auto">
            {showResult && analysis ? (
              <motion.div
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                className="space-y-6"
              >
                {/* Result Header */}
                <div className="text-center">
                  <motion.div
                    initial={{ scale: 0 }}
                    animate={{ scale: 1 }}
                    transition={{ type: "spring", delay: 0.2 }}
                    className="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-pink-400 to-rose-500 flex items-center justify-center"
                  >
                    <Heart className="w-10 h-10 text-white" />
                  </motion.div>
                  <h1 className="font-serif text-2xl font-bold text-foreground mb-2">
                    {analysis.headline}
                  </h1>
                  <p className="text-muted-foreground">
                    {analysis.communication_style}
                  </p>
                </div>

                {/* Overall Score */}
                {analysis.overall_score !== undefined && (
                  <div className="bg-card rounded-xl p-6 text-center">
                    <p className="text-sm text-muted-foreground mb-2">契合度</p>
                    <div className="relative w-32 h-32 mx-auto">
                      <svg className="w-full h-full transform -rotate-90">
                        <circle
                          cx="64"
                          cy="64"
                          r="56"
                          fill="none"
                          stroke="currentColor"
                          strokeWidth="8"
                          className="text-muted"
                        />
                        <motion.circle
                          cx="64"
                          cy="64"
                          r="56"
                          fill="none"
                          stroke="currentColor"
                          strokeWidth="8"
                          strokeLinecap="round"
                          className="text-skill-primary"
                          strokeDasharray={`${2 * Math.PI * 56}`}
                          initial={{ strokeDashoffset: 2 * Math.PI * 56 }}
                          animate={{
                            strokeDashoffset: 2 * Math.PI * 56 * (1 - analysis.overall_score / 100),
                          }}
                          transition={{ duration: 1, delay: 0.5 }}
                        />
                      </svg>
                      <div className="absolute inset-0 flex items-center justify-center">
                        <span className="text-3xl font-bold text-foreground">
                          {analysis.overall_score}
                        </span>
                      </div>
                    </div>
                  </div>
                )}

                {/* Summary */}
                <div className="bg-card rounded-xl p-6">
                  <p className="text-foreground leading-relaxed">{analysis.summary}</p>
                </div>

                {/* Dimension Scores */}
                {analysis.scores && analysis.scores.length > 0 && (
                  <div className="bg-card rounded-xl p-6 space-y-4">
                    <h3 className="font-medium text-foreground">维度分析</h3>
                    {analysis.scores.map((score, index) => (
                      <div key={index}>
                        <div className="flex items-center justify-between mb-1">
                          <span className="text-sm text-foreground">{score.dimension}</span>
                          <span className="text-sm font-medium text-skill-primary">{score.score}%</span>
                        </div>
                        <div className="h-2 bg-muted rounded-full overflow-hidden">
                          <motion.div
                            className={`h-full ${score.is_strength ? "bg-green-500" : "bg-skill-primary"}`}
                            initial={{ width: 0 }}
                            animate={{ width: `${score.score}%` }}
                            transition={{ duration: 0.5, delay: 0.3 + index * 0.1 }}
                          />
                        </div>
                        <p className="text-xs text-muted-foreground mt-1">{score.description}</p>
                      </div>
                    ))}
                  </div>
                )}

                {/* Prescriptions */}
                {analysis.prescriptions.length > 0 && (
                  <div className="bg-card rounded-xl p-6 space-y-4">
                    <h3 className="font-medium text-foreground flex items-center gap-2">
                      <Sparkles className="w-4 h-4 text-skill-primary" />
                      沟通建议
                    </h3>
                    {analysis.prescriptions.map((p, i) => (
                      <div key={i} className="p-4 bg-background rounded-lg border border-border">
                        <p className="text-foreground font-medium mb-1">&ldquo;{p.template}&rdquo;</p>
                        <p className="text-sm text-muted-foreground">{p.context}</p>
                      </div>
                    ))}
                  </div>
                )}

                {/* Warnings */}
                {analysis.warnings.length > 0 && (
                  <div className="bg-amber-50 dark:bg-amber-900/20 rounded-xl p-6">
                    <h3 className="font-medium text-amber-800 dark:text-amber-200 mb-3">注意事项</h3>
                    <ul className="space-y-2">
                      {analysis.warnings.map((w, i) => (
                        <li key={i} className="text-sm text-amber-700 dark:text-amber-300">{w}</li>
                      ))}
                    </ul>
                  </div>
                )}

                {/* Actions */}
                <div className="flex gap-3">
                  <button
                    onClick={handleNewAnalysis}
                    className="flex-1 py-3 border border-border text-foreground rounded-xl hover:bg-foreground/5 transition-colors"
                  >
                    重新分析
                  </button>
                  <button
                    onClick={handleShare}
                    className="flex-1 py-3 bg-skill-primary text-white rounded-xl hover:bg-skill-primary/90 transition-colors"
                  >
                    分享结果
                  </button>
                </div>
              </motion.div>
            ) : showSimulator ? (
              <RelationshipSimulator
                userProfile={userProfile}
                userId="current-user"
                onAnalysisComplete={handleAnalysisComplete}
                className="shadow-lg"
              />
            ) : (
              <motion.div
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                className="text-center"
              >
                <div className="relative inline-block mb-8">
                  <BreathAura skill={skill} size="lg" position="center" intensity="high" className="opacity-50" />
                  <div className="w-24 h-24 rounded-full bg-gradient-to-br from-pink-400 to-rose-500 flex items-center justify-center">
                    <Heart className="w-12 h-12 text-white" />
                  </div>
                </div>

                <h1 className="font-serif text-3xl font-bold text-foreground mb-4">关系模拟器</h1>
                <p className="text-muted-foreground mb-8 leading-relaxed">
                  探索你与 TA 的关系契合度<br />获取专属的沟通建议
                </p>

                <div className="grid grid-cols-2 gap-4 mb-8">
                  <button
                    onClick={() => setShowSimulator(true)}
                    className="p-6 bg-card rounded-xl border border-border hover:border-skill-primary hover:shadow-md transition-all group"
                  >
                    <Heart className="w-8 h-8 mx-auto mb-3 text-pink-500 group-hover:scale-110 transition-transform" />
                    <span className="font-medium text-foreground">恋爱/伴侣</span>
                  </button>
                  <button
                    onClick={() => setShowSimulator(true)}
                    className="p-6 bg-card rounded-xl border border-border hover:border-skill-primary hover:shadow-md transition-all group"
                  >
                    <Home className="w-8 h-8 mx-auto mb-3 text-amber-500 group-hover:scale-110 transition-transform" />
                    <span className="font-medium text-foreground">家人</span>
                  </button>
                  <button
                    onClick={() => setShowSimulator(true)}
                    className="p-6 bg-card rounded-xl border border-border hover:border-skill-primary hover:shadow-md transition-all group"
                  >
                    <Users className="w-8 h-8 mx-auto mb-3 text-blue-500 group-hover:scale-110 transition-transform" />
                    <span className="font-medium text-foreground">朋友</span>
                  </button>
                  <button
                    onClick={() => setShowSimulator(true)}
                    className="p-6 bg-card rounded-xl border border-border hover:border-skill-primary hover:shadow-md transition-all group"
                  >
                    <Briefcase className="w-8 h-8 mx-auto mb-3 text-green-500 group-hover:scale-110 transition-transform" />
                    <span className="font-medium text-foreground">同事</span>
                  </button>
                </div>

                <button
                  onClick={() => setShowSimulator(true)}
                  className="w-full py-4 bg-skill-primary text-white rounded-xl font-medium text-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5"
                >
                  开始分析
                </button>
              </motion.div>
            )}
          </div>
        </main>
      </div>

      {ShareModal}
    </LuminousPaper>
  );
}
