"use client";

/**
 * Zodiac Relationship Page - /zodiac/relationship
 */

import { useState, useCallback } from "react";
import { useRouter } from "next/navigation";
import { motion } from "framer-motion";
import { ArrowLeft, Heart, Users, Briefcase, Home, Sparkles } from "lucide-react";
import { LuminousPaper, BreathAura, VibeGlyph } from "@/components/core";
import RelationshipSimulator from "@/components/relationship/RelationshipSimulator";
import { useShare } from "@/components/share/ShareModal";

interface RelationshipAnalysis {
  id: string;
  headline: string;
  communication_style: string;
  summary: string;
  overall_score?: number;
  prescriptions: Array<{ category: string; template: string; context: string }>;
  warnings: string[];
}

export default function ZodiacRelationshipPage() {
  const router = useRouter();
  const { shareRelationship, ShareModal } = useShare();
  const skill = "zodiac";

  const [showSimulator, setShowSimulator] = useState(false);
  const [analysis, setAnalysis] = useState<RelationshipAnalysis | null>(null);
  const [showResult, setShowResult] = useState(false);

  const userProfile = { skill, sunSign: "双子座" };

  const handleAnalysisComplete = useCallback((result: RelationshipAnalysis) => {
    setAnalysis(result);
    setShowResult(true);
    setShowSimulator(false);
  }, []);

  const handleBack = () => {
    if (showResult) { setShowResult(false); setAnalysis(null); }
    else if (showSimulator) { setShowSimulator(false); }
    else { router.push("/zodiac/chat"); }
  };

  const handleNewAnalysis = () => { setShowResult(false); setAnalysis(null); setShowSimulator(true); };
  const handleShare = () => { if (analysis) shareRelationship(analysis.id, analysis.headline); };

  return (
    <LuminousPaper skill={skill} variant="default" className="min-h-screen">
      <BreathAura skill={skill} size="xl" position="center" intensity="low" className="opacity-20" />

      <div className="relative z-10 min-h-screen flex flex-col">
        <header className="py-4 px-6 flex items-center gap-4 border-b border-border">
          <button onClick={handleBack} className="p-2 rounded-lg hover:bg-foreground/5 transition-colors"><ArrowLeft className="w-5 h-5 text-foreground" /></button>
          <div className="flex items-center gap-2"><VibeGlyph size="sm" skill={skill} showAura={false} /><span className="font-serif font-semibold text-foreground">关系模拟器</span></div>
        </header>

        <main className="flex-1 px-6 py-8">
          <div className="max-w-lg mx-auto">
            {showResult && analysis ? (
              <motion.div initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }} className="space-y-6">
                <div className="text-center">
                  <motion.div initial={{ scale: 0 }} animate={{ scale: 1 }} transition={{ type: "spring", delay: 0.2 }} className="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-purple-400 to-indigo-500 flex items-center justify-center">
                    <Heart className="w-10 h-10 text-white" />
                  </motion.div>
                  <h1 className="font-serif text-2xl font-bold text-foreground mb-2">{analysis.headline}</h1>
                  <p className="text-muted-foreground">{analysis.communication_style}</p>
                </div>
                <div className="bg-card rounded-xl p-6"><p className="text-foreground leading-relaxed">{analysis.summary}</p></div>
                {analysis.prescriptions.length > 0 && (
                  <div className="bg-card rounded-xl p-6 space-y-4">
                    <h3 className="font-medium text-foreground flex items-center gap-2"><Sparkles className="w-4 h-4 text-skill-primary" />建议</h3>
                    {analysis.prescriptions.map((p, i) => <div key={i} className="p-4 bg-background rounded-lg border border-border"><p className="text-foreground font-medium mb-1">&ldquo;{p.template}&rdquo;</p><p className="text-sm text-muted-foreground">{p.context}</p></div>)}
                  </div>
                )}
                <div className="flex gap-3">
                  <button onClick={handleNewAnalysis} className="flex-1 py-3 border border-border text-foreground rounded-xl hover:bg-foreground/5 transition-colors">重新分析</button>
                  <button onClick={handleShare} className="flex-1 py-3 bg-skill-primary text-white rounded-xl hover:bg-skill-primary/90 transition-colors">分享结果</button>
                </div>
              </motion.div>
            ) : showSimulator ? (
              <RelationshipSimulator userProfile={userProfile} userId="current-user" onAnalysisComplete={handleAnalysisComplete} className="shadow-lg" />
            ) : (
              <motion.div initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }} className="text-center">
                <div className="relative inline-block mb-8">
                  <BreathAura skill={skill} size="lg" position="center" intensity="high" className="opacity-50" />
                  <div className="w-24 h-24 rounded-full bg-gradient-to-br from-purple-400 to-indigo-500 flex items-center justify-center"><Heart className="w-12 h-12 text-white" /></div>
                </div>
                <h1 className="font-serif text-3xl font-bold text-foreground mb-4">关系模拟器</h1>
                <p className="text-muted-foreground mb-8 leading-relaxed">探索你与 TA 的星座契合度</p>
                <div className="grid grid-cols-2 gap-4 mb-8">
                  <button onClick={() => setShowSimulator(true)} className="p-6 bg-card rounded-xl border border-border hover:border-skill-primary hover:shadow-md transition-all group"><Heart className="w-8 h-8 mx-auto mb-3 text-pink-500 group-hover:scale-110 transition-transform" /><span className="font-medium text-foreground">恋爱/伴侣</span></button>
                  <button onClick={() => setShowSimulator(true)} className="p-6 bg-card rounded-xl border border-border hover:border-skill-primary hover:shadow-md transition-all group"><Home className="w-8 h-8 mx-auto mb-3 text-amber-500 group-hover:scale-110 transition-transform" /><span className="font-medium text-foreground">家人</span></button>
                  <button onClick={() => setShowSimulator(true)} className="p-6 bg-card rounded-xl border border-border hover:border-skill-primary hover:shadow-md transition-all group"><Users className="w-8 h-8 mx-auto mb-3 text-blue-500 group-hover:scale-110 transition-transform" /><span className="font-medium text-foreground">朋友</span></button>
                  <button onClick={() => setShowSimulator(true)} className="p-6 bg-card rounded-xl border border-border hover:border-skill-primary hover:shadow-md transition-all group"><Briefcase className="w-8 h-8 mx-auto mb-3 text-green-500 group-hover:scale-110 transition-transform" /><span className="font-medium text-foreground">同事</span></button>
                </div>
                <button onClick={() => setShowSimulator(true)} className="w-full py-4 bg-skill-primary text-white rounded-xl font-medium text-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5">开始分析</button>
              </motion.div>
            )}
          </div>
        </main>
      </div>
      {ShareModal}
    </LuminousPaper>
  );
}
