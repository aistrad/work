"use client";

/**
 * Zodiac Report Page - 星座报告列表/生成页面
 */

import { useState, useEffect } from "react";
import { useRouter, useSearchParams } from "next/navigation";
import { motion } from "framer-motion";
import { ArrowLeft, FileText, Plus, Sparkles, Clock, ChevronRight } from "lucide-react";
import { LuminousPaper, BreathAura, VibeGlyph } from "@/components/core";

// ═══════════════════════════════════════════════════════════════════════════
// Types
// ═══════════════════════════════════════════════════════════════════════════

interface ReportSummary {
  id: string;
  skill: "bazi" | "zodiac";
  report_type: "lite" | "full";
  status: "pending" | "generating" | "completed" | "failed";
  created_at: string;
  title?: string;
}

// ═══════════════════════════════════════════════════════════════════════════
// Page Component
// ═══════════════════════════════════════════════════════════════════════════

export default function ZodiacReportPage() {
  const router = useRouter();
  const searchParams = useSearchParams();
  const skill = "zodiac";

  const [reports, setReports] = useState<ReportSummary[]>([]);
  const [isLoading, setIsLoading] = useState(true);
  const [isGenerating, setIsGenerating] = useState(false);
  const [error, setError] = useState<string | null>(null);

  const fromInterview = searchParams.get("fromInterview") === "true";

  useEffect(() => {
    loadReports();
  }, []);

  useEffect(() => {
    if (fromInterview && !isGenerating) {
      handleGenerateReport();
    }
  }, [fromInterview]);

  const loadReports = async () => {
    setIsLoading(true);
    try {
      const response = await fetch("/api/v1/report/list?skill=zodiac");
      if (response.ok) {
        const data = await response.json();
        setReports(data.reports || []);
      } else {
        setReports([
          {
            id: "demo-1",
            skill: "zodiac",
            report_type: "lite",
            status: "completed",
            created_at: new Date().toISOString(),
            title: "星座占星分析报告",
          },
        ]);
      }
    } catch {
      setReports([]);
    } finally {
      setIsLoading(false);
    }
  };

  const handleGenerateReport = async () => {
    setIsGenerating(true);
    setError(null);

    try {
      const response = await fetch("/api/v1/report/generate", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ skill: "zodiac", report_type: "lite" }),
      });

      if (response.ok) {
        const data = await response.json();
        router.push(`/zodiac/report/${data.report_id}`);
      } else {
        const data = await response.json();
        setError(data.error || "生成报告失败");
        setIsGenerating(false);
      }
    } catch {
      setTimeout(() => {
        router.push("/zodiac/report/demo-new");
      }, 2000);
    }
  };

  const handleBack = () => {
    router.push("/zodiac/chat");
  };

  const handleViewReport = (reportId: string) => {
    router.push(`/zodiac/report/${reportId}`);
  };

  const handleStartInterview = () => {
    router.push("/interview?returnTo=/zodiac/report");
  };

  if (isGenerating) {
    return (
      <LuminousPaper skill={skill} variant="default" className="min-h-screen">
        <BreathAura skill={skill} size="xl" position="center" intensity="high" className="opacity-40" />
        <div className="relative z-10 min-h-screen flex items-center justify-center">
          <motion.div
            initial={{ opacity: 0, scale: 0.95 }}
            animate={{ opacity: 1, scale: 1 }}
            className="text-center px-6"
          >
            <div className="relative w-24 h-24 mx-auto mb-8">
              <motion.div
                className="absolute inset-0 rounded-full border-4 border-skill-primary/20"
                animate={{ rotate: 360 }}
                transition={{ duration: 2, repeat: Infinity, ease: "linear" }}
              />
              <motion.div
                className="absolute inset-2 rounded-full border-4 border-t-skill-primary border-r-transparent border-b-transparent border-l-transparent"
                animate={{ rotate: -360 }}
                transition={{ duration: 1.5, repeat: Infinity, ease: "linear" }}
              />
              <div className="absolute inset-0 flex items-center justify-center">
                <Sparkles className="w-8 h-8 text-skill-primary" />
              </div>
            </div>
            <h2 className="font-serif text-2xl font-bold text-foreground mb-4">正在生成你的专属报告</h2>
            <p className="text-muted-foreground mb-2">AI 正在分析你的星盘...</p>
            <p className="text-sm text-muted-foreground/70">这可能需要 30-60 秒</p>
          </motion.div>
        </div>
      </LuminousPaper>
    );
  }

  return (
    <LuminousPaper skill={skill} variant="default" className="min-h-screen">
      <BreathAura skill={skill} size="xl" position="top" intensity="low" className="opacity-20" />

      <div className="relative z-10 min-h-screen flex flex-col">
        {/* Header */}
        <header className="py-4 px-6 flex items-center justify-between border-b border-border">
          <div className="flex items-center gap-4">
            <button onClick={handleBack} className="p-2 rounded-lg hover:bg-foreground/5 transition-colors">
              <ArrowLeft className="w-5 h-5 text-foreground" />
            </button>
            <div className="flex items-center gap-2">
              <VibeGlyph size="sm" skill={skill} showAura={false} />
              <span className="font-serif font-semibold text-foreground">我的报告</span>
            </div>
          </div>

          <button
            onClick={handleStartInterview}
            className="flex items-center gap-2 px-4 py-2 bg-skill-primary text-white rounded-lg text-sm font-medium hover:bg-skill-primary/90 transition-colors"
          >
            <Plus className="w-4 h-4" />
            生成新报告
          </button>
        </header>

        {/* Main Content */}
        <main className="flex-1 px-6 py-8">
          <div className="max-w-2xl mx-auto">
            {error && (
              <motion.div
                initial={{ opacity: 0, y: -10 }}
                animate={{ opacity: 1, y: 0 }}
                className="mb-6 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl text-red-700 dark:text-red-300"
              >
                {error}
              </motion.div>
            )}

            {isLoading ? (
              <div className="space-y-4">
                {[1, 2].map((i) => (
                  <div key={i} className="bg-card rounded-xl p-6 animate-pulse">
                    <div className="h-5 bg-muted rounded w-1/3 mb-3" />
                    <div className="h-4 bg-muted rounded w-1/2" />
                  </div>
                ))}
              </div>
            ) : reports.length === 0 ? (
              <motion.div initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }} className="text-center py-16">
                <div className="w-20 h-20 mx-auto mb-6 rounded-full bg-muted flex items-center justify-center">
                  <FileText className="w-10 h-10 text-muted-foreground" />
                </div>
                <h2 className="font-serif text-xl font-semibold text-foreground mb-2">还没有报告</h2>
                <p className="text-muted-foreground mb-8">生成你的第一份深度分析报告</p>
                <button
                  onClick={handleStartInterview}
                  className="inline-flex items-center gap-2 px-6 py-3 bg-skill-primary text-white rounded-xl font-medium hover:bg-skill-primary/90 transition-colors"
                >
                  <Sparkles className="w-5 h-5" />
                  开始生成
                </button>
              </motion.div>
            ) : (
              <div className="space-y-4">
                {reports.map((report, index) => (
                  <motion.button
                    key={report.id}
                    initial={{ opacity: 0, y: 20 }}
                    animate={{ opacity: 1, y: 0 }}
                    transition={{ delay: index * 0.1 }}
                    onClick={() => handleViewReport(report.id)}
                    className="w-full bg-card rounded-xl p-6 text-left hover:shadow-md transition-shadow group"
                  >
                    <div className="flex items-start justify-between">
                      <div className="flex-1">
                        <div className="flex items-center gap-2 mb-2">
                          <span className="text-lg">✨</span>
                          <h3 className="font-semibold text-foreground">{report.title || "星座分析报告"}</h3>
                          <span
                            className={`px-2 py-0.5 text-xs rounded ${
                              report.report_type === "full"
                                ? "bg-skill-primary/10 text-skill-primary"
                                : "bg-muted text-muted-foreground"
                            }`}
                          >
                            {report.report_type === "full" ? "完整版" : "基础版"}
                          </span>
                        </div>
                        <div className="flex items-center gap-4 text-sm text-muted-foreground">
                          <span className="flex items-center gap-1">
                            <Clock className="w-4 h-4" />
                            {new Date(report.created_at).toLocaleDateString("zh-CN")}
                          </span>
                          {report.status === "generating" && (
                            <span className="text-amber-600 dark:text-amber-400">生成中...</span>
                          )}
                          {report.status === "failed" && (
                            <span className="text-red-600 dark:text-red-400">生成失败</span>
                          )}
                        </div>
                      </div>
                      <ChevronRight className="w-5 h-5 text-muted-foreground group-hover:text-foreground transition-colors" />
                    </div>
                  </motion.button>
                ))}
              </div>
            )}
          </div>
        </main>
      </div>
    </LuminousPaper>
  );
}
