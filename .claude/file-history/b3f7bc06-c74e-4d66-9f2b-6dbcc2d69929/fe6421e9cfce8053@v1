"use client";

/**
 * VibeLife Brand Index Page
 * 品牌首页 - 展示所有 Skill 入口
 * 访问 vibelife.app 时显示此页面
 */

import { useRouter } from "next/navigation";
import { motion } from "framer-motion";
import { ArrowRight, Compass, Star, Brain, Heart, Briefcase } from "lucide-react";
import { LuminousPaper, VibeGlyph, BreathAura, type SkillType } from "@/components/core";

// ═══════════════════════════════════════════════════════════════════════════
// Skill Cards Configuration
// ═══════════════════════════════════════════════════════════════════════════

const SKILLS: Array<{
  id: SkillType;
  name: string;
  subtitle: string;
  icon: typeof Compass;
  href: string;
  available: boolean;
}> = [
  {
    id: "bazi",
    name: "八字命理",
    subtitle: "千年智慧，解读生命密码",
    icon: Compass,
    href: "/bazi",
    available: true,
  },
  {
    id: "zodiac",
    name: "星座占星",
    subtitle: "星辰指引，探索内在潜能",
    icon: Star,
    href: "/zodiac",
    available: true,
  },
  {
    id: "mbti",
    name: "MBTI 人格",
    subtitle: "发现真我，理解人格特质",
    icon: Brain,
    href: "/mbti",
    available: false,
  },
  {
    id: "attach",
    name: "依恋模式",
    subtitle: "理解依恋，改善亲密关系",
    icon: Heart,
    href: "/attach",
    available: false,
  },
  {
    id: "career",
    name: "职业发展",
    subtitle: "规划蓝图，找到人生方向",
    icon: Briefcase,
    href: "/career",
    available: false,
  },
];

// ═══════════════════════════════════════════════════════════════════════════
// Brand Index Page
// ═══════════════════════════════════════════════════════════════════════════

export default function BrandIndexPage() {
  const router = useRouter();

  const handleSkillClick = (skill: typeof SKILLS[0]) => {
    if (!skill.available) return;

    // Set cookie and navigate
    document.cookie = `vibelife-skill=${skill.id}; path=/; max-age=${60 * 60 * 24 * 365}`;
    router.push(skill.href);
  };

  return (
    <LuminousPaper skill="bazi" variant="default" className="min-h-screen">
      {/* Background */}
      <BreathAura
        skill="bazi"
        size="xl"
        position="center"
        intensity="low"
        className="opacity-30"
      />

      <div className="relative z-10 min-h-screen flex flex-col">
        {/* Header */}
        <header className="py-6 px-6">
          <div className="flex items-center gap-2">
            <VibeGlyph size="sm" skill="bazi" showAura={false} />
            <span className="font-serif font-semibold text-foreground">VibeLife</span>
          </div>
        </header>

        {/* Main Content */}
        <main className="flex-1 flex items-center justify-center px-6 pb-20">
          <div className="max-w-4xl w-full">
            {/* Title */}
            <motion.div
              initial={{ y: 20, opacity: 0 }}
              animate={{ y: 0, opacity: 1 }}
              transition={{ duration: 0.6 }}
              className="text-center mb-12"
            >
              <h1 className="font-serif text-4xl md:text-5xl font-bold text-foreground mb-4">
                每个人都值得被深度理解
              </h1>
              <p className="text-lg text-muted-foreground max-w-2xl mx-auto">
                融合东方智慧与现代心理学，AI 陪伴你探索自我、理解关系、规划未来
              </p>
            </motion.div>

            {/* Skill Cards Grid */}
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {SKILLS.map((skill, index) => (
                <motion.div
                  key={skill.id}
                  initial={{ y: 20, opacity: 0 }}
                  animate={{ y: 0, opacity: 1 }}
                  transition={{ delay: 0.1 * (index + 1), duration: 0.5 }}
                >
                  <button
                    onClick={() => handleSkillClick(skill)}
                    disabled={!skill.available}
                    className={`
                      w-full p-6 rounded-2xl border text-left transition-all duration-300
                      ${skill.available
                        ? "bg-card hover:bg-card/80 border-border hover:border-skill-primary/50 hover:shadow-lg hover:-translate-y-1 cursor-pointer"
                        : "bg-muted/50 border-border/50 cursor-not-allowed opacity-60"
                      }
                    `}
                  >
                    <div className="flex items-start justify-between mb-4">
                      <div className={`
                        w-12 h-12 rounded-xl flex items-center justify-center
                        ${skill.available ? "bg-skill-primary/10 text-skill-primary" : "bg-muted text-muted-foreground"}
                      `}>
                        <skill.icon className="w-6 h-6" />
                      </div>
                      {skill.available && (
                        <ArrowRight className="w-5 h-5 text-muted-foreground" />
                      )}
                      {!skill.available && (
                        <span className="text-xs text-muted-foreground bg-muted px-2 py-1 rounded">
                          即将推出
                        </span>
                      )}
                    </div>
                    <h3 className="font-serif text-xl font-semibold text-foreground mb-2">
                      {skill.name}
                    </h3>
                    <p className="text-sm text-muted-foreground">
                      {skill.subtitle}
                    </p>
                  </button>
                </motion.div>
              ))}
            </div>

            {/* Tagline */}
            <motion.p
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              transition={{ delay: 0.8, duration: 0.6 }}
              className="mt-12 text-center text-sm text-muted-foreground/60"
            >
              The Living Companion
            </motion.p>
          </div>
        </main>
      </div>
    </LuminousPaper>
  );
}
