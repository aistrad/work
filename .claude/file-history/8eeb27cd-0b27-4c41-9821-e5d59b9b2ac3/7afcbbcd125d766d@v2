/**
 * Authentication Provider (Clerk Disabled)
 * Based on: vibelife spec v3.0
 */

interface AuthProviderProps {
  children: React.ReactNode;
}

export function AuthProvider({ children }: AuthProviderProps) {
  // Clerk is disabled, just pass through children
  return <>{children}</>;
}

// Mock auth exports for compatibility
export const useAuth = () => ({ isSignedIn: false, userId: null });
export const useUser = () => ({ user: null, isLoaded: true });
export const useClerk = () => ({ signOut: () => Promise.resolve() });
export const SignIn = () => null;
export const SignUp = () => null;
export const UserButton = () => null;
