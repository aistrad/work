/**
 * RoleBalanceCard - ç›®æ ‡å¹³è¡¡è½®å¡ç‰‡
 *
 * å±•ç¤ºç”¨æˆ·åœ¨ä¸åŒäººç”Ÿè§’è‰²ä¸Šçš„ç›®æ ‡å’Œè¿›åº¦
 * card_type: "role_balance"
 */

"use client";

import { motion } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";

// æ”¯æŒ Goalï¼ˆæ–°ç»“æ„ï¼‰å’Œ Roleï¼ˆæ—§ç»“æ„ï¼‰
interface Goal {
  id: string;
  name: string;
  icon?: string;
  progress?: number;        // æ–°ç»“æ„ä½¿ç”¨ progress
  current_score?: number;   // å…¼å®¹æ—§ç»“æ„
  target_score?: number;
  weekly_focus?: string;
  year_target?: string;
}

interface RoleBalanceData {
  goals?: Goal[];   // æ–°ç»“æ„ï¼šgoals[] (ä¸ DATA-STRUCTURE.md å¯¹é½)
  roles?: Goal[];   // å…¼å®¹æ—§ç»“æ„ï¼šroles[]
  balance_score?: number;
  insight?: string;
  generated_at?: string;
}

interface RoleBalanceCardProps {
  data: RoleBalanceData;
}

function RoleBalanceCard({ data }: RoleBalanceCardProps) {
  // ä¼˜å…ˆä½¿ç”¨ goalsï¼Œå…¼å®¹ roles
  const items = data.goals || data.roles || [];
  const { balance_score, insight } = data;

  if (!items || items.length === 0) return null;

  // ç»Ÿä¸€ä½¿ç”¨ progress æˆ– current_score
  const normalizedItems = items.map(item => ({
    ...item,
    current_score: item.progress ?? item.current_score ?? 0
  }));

  // è®¡ç®—é›·è¾¾å›¾çš„ç‚¹
  const centerX = 100;
  const centerY = 100;
  const radius = 70;
  const angleStep = (2 * Math.PI) / normalizedItems.length;

  const getPoint = (index: number, score: number) => {
    const angle = angleStep * index - Math.PI / 2;
    const r = (score / 10) * radius;
    return {
      x: centerX + r * Math.cos(angle),
      y: centerY + r * Math.sin(angle),
    };
  };

  const currentPoints = normalizedItems.map((item, i) => getPoint(i, item.current_score || 0));
  const currentPath = currentPoints.map((p, i) => `${i === 0 ? "M" : "L"} ${p.x} ${p.y}`).join(" ") + " Z";

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.5 }}
      className="role-balance-card bg-gradient-to-br from-violet-50 to-purple-50 dark:from-violet-950/30 dark:to-purple-950/30 rounded-xl border border-violet-200 dark:border-violet-800 p-4 my-2 overflow-hidden"
    >
      {/* Header */}
      <div className="flex items-center justify-between mb-4">
        <div className="flex items-center gap-2">
          <span className="text-2xl">âš–ï¸</span>
          <h3 className="text-lg font-semibold text-violet-900 dark:text-violet-100">
            ç›®æ ‡å¹³è¡¡è½®
          </h3>
        </div>
        {balance_score !== undefined && (
          <div className="flex items-center gap-1">
            <span className="text-sm text-muted-foreground">å¹³è¡¡åº¦</span>
            <span className={`text-lg font-bold ${
              balance_score >= 70 ? "text-green-500" :
              balance_score >= 40 ? "text-yellow-500" : "text-red-500"
            }`}>
              {Math.round(balance_score)}%
            </span>
          </div>
        )}
      </div>

      {/* Radar Chart */}
      <motion.div
        initial={{ scale: 0.8, opacity: 0 }}
        animate={{ scale: 1, opacity: 1 }}
        transition={{ delay: 0.2, duration: 0.5 }}
        className="flex justify-center mb-4"
      >
        <svg width="200" height="200" viewBox="0 0 200 200">
          {/* Background circles */}
          {[2, 4, 6, 8, 10].map((level) => (
            <circle
              key={level}
              cx={centerX}
              cy={centerY}
              r={(level / 10) * radius}
              fill="none"
              stroke="currentColor"
              strokeOpacity={0.1}
              strokeWidth={1}
            />
          ))}

          {/* Axis lines */}
          {normalizedItems.map((_, i) => {
            const point = getPoint(i, 10);
            return (
              <line
                key={i}
                x1={centerX}
                y1={centerY}
                x2={point.x}
                y2={point.y}
                stroke="currentColor"
                strokeOpacity={0.2}
                strokeWidth={1}
              />
            );
          })}

          {/* Current values polygon */}
          <motion.path
            d={currentPath}
            fill="rgba(139, 92, 246, 0.3)"
            stroke="rgb(139, 92, 246)"
            strokeWidth={2}
            initial={{ pathLength: 0, opacity: 0 }}
            animate={{ pathLength: 1, opacity: 1 }}
            transition={{ delay: 0.5, duration: 1 }}
          />

          {/* Points and labels */}
          {normalizedItems.map((item, i) => {
            const point = getPoint(i, item.current_score || 0);
            const labelPoint = getPoint(i, 12);
            return (
              <g key={item.id}>
                <motion.circle
                  cx={point.x}
                  cy={point.y}
                  r={4}
                  fill="rgb(139, 92, 246)"
                  initial={{ scale: 0 }}
                  animate={{ scale: 1 }}
                  transition={{ delay: 0.8 + i * 0.1 }}
                />
                <text
                  x={labelPoint.x}
                  y={labelPoint.y}
                  textAnchor="middle"
                  dominantBaseline="middle"
                  className="text-xs fill-current"
                >
                  {item.icon || "ğŸ“Œ"} {item.name}
                </text>
              </g>
            );
          })}
        </svg>
      </motion.div>

      {/* Goal/Role List */}
      <div className="space-y-2 mb-4">
        {normalizedItems.map((item, index) => (
          <motion.div
            key={item.id}
            initial={{ opacity: 0, x: -10 }}
            animate={{ opacity: 1, x: 0 }}
            transition={{ delay: 0.3 + index * 0.1 }}
            className="flex items-center gap-3 bg-white/50 dark:bg-black/20 rounded-lg p-2"
          >
            <span>{item.icon || "ğŸ“Œ"}</span>
            <span className="flex-1 text-sm font-medium">{item.name}</span>
            <div className="flex items-center gap-2">
              <div className="w-20 h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                <motion.div
                  className="h-full bg-violet-500 rounded-full"
                  initial={{ width: 0 }}
                  animate={{ width: `${(item.current_score || 0) * 10}%` }}
                  transition={{ delay: 0.5 + index * 0.1, duration: 0.5 }}
                />
              </div>
              <span className="text-xs text-muted-foreground w-8">
                {item.current_score || 0}/10
              </span>
            </div>
          </motion.div>
        ))}
      </div>

      {/* Insight */}
      {insight && (
        <motion.div
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          transition={{ delay: 1 }}
          className="bg-violet-100/50 dark:bg-violet-900/30 rounded-lg p-3 text-sm"
        >
          <span className="font-medium">ğŸ’¡ æ´å¯Ÿï¼š</span>
          <span className="text-muted-foreground">{insight}</span>
        </motion.div>
      )}
    </motion.div>
  );
}

registerCard("role_balance", RoleBalanceCard);

export default RoleBalanceCard;
