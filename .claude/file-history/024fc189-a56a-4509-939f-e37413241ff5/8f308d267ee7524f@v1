import { cn } from "@/lib/utils";
import { ChevronRight, Sparkles } from "lucide-react";
import { GradientEmojiIcon, SkillIcon } from "@/components/core/GradientEmojiIcon";

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Types
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export interface ZodiacData {
  sun?: { sign: string; keywords: string[] };
  moon?: { sign: string; keywords: string[] };
  rising?: { sign: string; keywords: string[] };
  transitHighlight?: string;
  // Legacy support
  sunSign?: string;
  ascendant?: string;
  todayEnergy?: string;
  energyLevel?: 1 | 2 | 3 | 4 | 5;
}

export interface ZodiacSummaryCardProps {
  data?: ZodiacData | null;
  onExplore?: () => void;
  /** æ˜¯å¦æ˜¾ç¤ºè¡Œè¿æç¤ºï¼ˆå¦‚æœå·²åœ¨ TodayEnergyCard æ˜¾ç¤ºåˆ™å¯éšè—ï¼‰*/
  showTransit?: boolean;
  className?: string;
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Static Constants - Sign to Element Mapping
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

type Element = "fire" | "earth" | "air" | "water";

const SIGN_ELEMENTS: Record<string, Element> = {
  // Fire signs
  ç™½ç¾Šåº§: "fire", ç‹®å­åº§: "fire", å°„æ‰‹åº§: "fire",
  // Earth signs
  é‡‘ç‰›åº§: "earth", å¤„å¥³åº§: "earth", æ‘©ç¾¯åº§: "earth",
  // Air signs
  åŒå­åº§: "air", å¤©ç§¤åº§: "air", æ°´ç“¶åº§: "air",
  // Water signs
  å·¨èŸ¹åº§: "water", å¤©èåº§: "water", åŒé±¼åº§: "water",
};

const SIGN_SYMBOLS: Record<string, string> = {
  ç™½ç¾Šåº§: "â™ˆ", é‡‘ç‰›åº§: "â™‰", åŒå­åº§: "â™Š", å·¨èŸ¹åº§: "â™‹",
  ç‹®å­åº§: "â™Œ", å¤„å¥³åº§: "â™", å¤©ç§¤åº§: "â™", å¤©èåº§: "â™",
  å°„æ‰‹åº§: "â™", æ‘©ç¾¯åº§: "â™‘", æ°´ç“¶åº§: "â™’", åŒé±¼åº§: "â™“",
};

const ELEMENT_STYLES: Record<Element, {
  gradient: string;
  bg: string;
  text: string;
  border: string;
  icon: string;
}> = {
  fire: {
    gradient: "from-red-400 to-orange-500",
    bg: "bg-red-50",
    text: "text-red-700",
    border: "border-red-200/50",
    icon: "ğŸ”¥",
  },
  earth: {
    gradient: "from-amber-400 to-yellow-500",
    bg: "bg-amber-50",
    text: "text-amber-700",
    border: "border-amber-200/50",
    icon: "ğŸŒ",
  },
  air: {
    gradient: "from-sky-400 to-blue-500",
    bg: "bg-sky-50",
    text: "text-sky-700",
    border: "border-sky-200/50",
    icon: "ğŸ’¨",
  },
  water: {
    gradient: "from-blue-400 to-indigo-500",
    bg: "bg-blue-50",
    text: "text-blue-700",
    border: "border-blue-200/50",
    icon: "ğŸ’§",
  },
};

function getSignElement(sign: string): Element {
  return SIGN_ELEMENTS[sign] || "air";
}

function getSignSymbol(sign: string): string {
  return SIGN_SYMBOLS[sign] || "â­";
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Sub-components
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function SignBadge({
  label,
  labelIcon,
  sign,
  keywords,
  size = "normal",
}: {
  label: string;
  labelIcon: string;
  sign: string;
  keywords: string[];
  size?: "normal" | "large";
}) {
  const element = getSignElement(sign);
  const styles = ELEMENT_STYLES[element];
  const symbol = getSignSymbol(sign);

  return (
    <div className={cn("text-center", size === "large" && "scale-105")}>
      {/* Label */}
      <div className="flex items-center justify-center gap-1 mb-2">
        <span className="text-base">{labelIcon}</span>
        <span className="text-xs text-text-tertiary">{label}</span>
      </div>

      {/* Sign Badge with Gradient */}
      <div
        className={cn(
          "relative inline-flex items-center justify-center",
          "w-14 h-14 rounded-xl",
          "bg-gradient-to-br",
          styles.gradient,
          "shadow-lg"
        )}
        style={{
          boxShadow: `0 4px 12px ${element === 'fire' ? 'rgba(239, 68, 68, 0.3)' :
                                   element === 'water' ? 'rgba(59, 130, 246, 0.3)' :
                                   element === 'earth' ? 'rgba(245, 158, 11, 0.3)' :
                                   'rgba(14, 165, 233, 0.3)'}`,
        }}
      >
        <span className="text-2xl text-white">{symbol}</span>
      </div>

      {/* Sign Name */}
      <p className={cn("text-sm font-semibold mt-2", styles.text)}>
        {sign}
      </p>

      {/* Keywords */}
      {keywords.length > 0 && (
        <p className="text-xs text-text-tertiary mt-1">
          {keywords.slice(0, 2).join(" Â· ")}
        </p>
      )}
    </div>
  );
}

function TripleLayout({
  sun,
  moon,
  rising,
}: {
  sun: { sign: string; keywords: string[] };
  moon: { sign: string; keywords: string[] };
  rising: { sign: string; keywords: string[] };
}) {
  return (
    <div className="relative p-5 rounded-xl bg-gradient-to-br from-purple-50/80 via-indigo-50/50 to-violet-50/60 border border-purple-200/30">
      {/* Background decoration - stars */}
      <div className="absolute top-2 right-2 text-purple-200 text-lg">âœ§</div>
      <div className="absolute bottom-2 left-2 text-indigo-200 text-sm">âœ¦</div>

      {/* Top row: Sun and Moon */}
      <div className="flex justify-around mb-5">
        <SignBadge
          label="å¤ªé˜³"
          labelIcon="â˜‰"
          sign={sun.sign}
          keywords={sun.keywords}
        />
        <SignBadge
          label="æœˆäº®"
          labelIcon="â˜½"
          sign={moon.sign}
          keywords={moon.keywords}
        />
      </div>

      {/* Connecting lines (decorative) */}
      <div className="flex justify-center mb-3">
        <div className="w-24 h-px bg-gradient-to-r from-transparent via-purple-300/50 to-transparent" />
      </div>

      {/* Bottom row: Rising (centered) */}
      <div className="flex justify-center">
        <SignBadge
          label="ä¸Šå‡"
          labelIcon="â†‘"
          sign={rising.sign}
          keywords={rising.keywords}
          size="large"
        />
      </div>
    </div>
  );
}

function SimpleSignDisplay({
  sun,
  rising,
}: {
  sun?: { sign: string; keywords: string[] };
  rising?: { sign: string; keywords: string[] };
}) {
  return (
    <div className="p-4 rounded-xl bg-purple-50/50 border border-purple-200/30">
      <div className="space-y-3">
        {sun && (
          <div className="flex items-center gap-3">
            <div
              className={cn(
                "w-10 h-10 rounded-lg flex items-center justify-center",
                "bg-gradient-to-br",
                ELEMENT_STYLES[getSignElement(sun.sign)].gradient
              )}
            >
              <span className="text-lg text-white">{getSignSymbol(sun.sign)}</span>
            </div>
            <div>
              <span className="text-xs text-text-tertiary">å¤ªé˜³ â˜‰</span>
              <p className={cn("text-sm font-medium", ELEMENT_STYLES[getSignElement(sun.sign)].text)}>
                {sun.sign}
              </p>
            </div>
          </div>
        )}
        {rising && (
          <div className="flex items-center gap-3">
            <div
              className={cn(
                "w-10 h-10 rounded-lg flex items-center justify-center",
                "bg-gradient-to-br",
                ELEMENT_STYLES[getSignElement(rising.sign)].gradient
              )}
            >
              <span className="text-lg text-white">{getSignSymbol(rising.sign)}</span>
            </div>
            <div>
              <span className="text-xs text-text-tertiary">ä¸Šå‡ â†‘</span>
              <p className={cn("text-sm font-medium", ELEMENT_STYLES[getSignElement(rising.sign)].text)}>
                {rising.sign}
              </p>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Main Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export function ZodiacSummaryCard({
  data,
  onExplore,
  showTransit = false,
  className,
}: ZodiacSummaryCardProps) {
  // Empty state
  if (!data) {
    return (
      <div
        onClick={onExplore}
        className={cn(
          "relative p-5 rounded-2xl cursor-pointer overflow-hidden",
          "bg-gradient-to-br from-purple-50/50 to-indigo-50/30",
          "border border-purple-200/30 shadow-card",
          "hover:shadow-card-hover hover:border-purple-200/50",
          "transition-all duration-200",
          className
        )}
      >
        <div className="flex items-center gap-3 mb-4">
          <SkillIcon skillId="zodiac" size="md" glow />
          <div>
            <span className="font-serif text-base font-semibold text-text-primary">
              è¥¿æ–¹å æ˜Ÿ
            </span>
            <p className="text-xs text-text-tertiary">æ˜Ÿåº§æ™ºæ…§ï¼Œæ´å¯Ÿäººç”Ÿ</p>
          </div>
        </div>
        <p className="text-sm text-text-secondary mb-4">
          è¾“å…¥å‡ºç”Ÿæ—¥æœŸå’Œæ—¶é—´ï¼Œè§£é”ä½ çš„æ˜Ÿç›˜åˆ†æã€‚
        </p>
        <div className="flex items-center justify-center gap-2 px-4 py-2.5 bg-purple-500/10 hover:bg-purple-500/20 text-purple-700 rounded-xl text-sm font-medium transition-colors">
          <Sparkles className="w-4 h-4" />
          <span>å¼€å§‹æµ‹ç®—</span>
          <ChevronRight className="w-4 h-4" />
        </div>
      </div>
    );
  }

  // Convert legacy data format
  const sun = data.sun || (data.sunSign ? { sign: data.sunSign, keywords: [] } : undefined);
  const moon = data.moon || { sign: "æœªçŸ¥", keywords: [] };
  const rising = data.rising || (data.ascendant ? { sign: data.ascendant, keywords: [] } : undefined);
  const transitHighlight = data.transitHighlight || data.todayEnergy;

  // Check if we have complete triple data
  const hasTriple = sun && moon && rising;

  return (
    <div
      onClick={onExplore}
      className={cn(
        "relative p-5 rounded-2xl cursor-pointer overflow-hidden",
        "bg-gradient-to-br from-purple-50/50 to-indigo-50/30",
        "border border-purple-200/30 shadow-card",
        "hover:shadow-card-hover hover:border-purple-200/50",
        "transition-all duration-200 hover:scale-[1.01]",
        className
      )}
    >
      {/* Background decoration */}
      <div className="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-purple-200/10 to-transparent rounded-full blur-2xl" />
      <div className="absolute bottom-0 left-0 w-24 h-24 bg-gradient-to-tr from-indigo-200/10 to-transparent rounded-full blur-xl" />

      <div className="relative">
        {/* Header */}
        <div className="flex items-center justify-between mb-4">
          <div className="flex items-center gap-2">
            <SkillIcon skillId="zodiac" size="sm" />
            <span className="font-serif text-base font-semibold text-text-primary">
              è¥¿æ–¹å æ˜Ÿ
            </span>
          </div>
          <div className="flex items-center gap-1 text-purple-600">
            <span className="text-xs">æ·±å…¥</span>
            <ChevronRight className="w-4 h-4" />
          </div>
        </div>

        {/* Triple Layout or Simple Display */}
        {hasTriple ? (
          <TripleLayout
            sun={sun}
            moon={moon}
            rising={rising!}
          />
        ) : (
          <SimpleSignDisplay sun={sun} rising={rising} />
        )}

        {/* Transit Highlight - å¯é€‰æ˜¾ç¤º */}
        {showTransit && transitHighlight ? (
          <div className="mt-4 p-3 rounded-xl bg-gradient-to-r from-purple-100/50 to-indigo-100/50 border border-purple-200/30">
            <div className="flex items-start gap-2">
              <GradientEmojiIcon emoji="ğŸª" theme="purple" size="xs" />
              <div>
                <p className="text-xs font-medium text-purple-700 mb-0.5">
                  å½“å‰è¡Œè¿
                </p>
                <p className="text-sm text-ink-700 leading-relaxed">
                  {transitHighlight}
                </p>
              </div>
            </div>
          </div>
        ) : null}
      </div>
    </div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Skeleton
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export function ZodiacSummaryCardSkeleton({ className }: { className?: string }) {
  return (
    <div
      className={cn(
        "p-5 rounded-2xl",
        "bg-gradient-to-br from-purple-50/50 to-indigo-50/30",
        "border border-purple-200/30 shadow-card animate-pulse",
        className
      )}
    >
      {/* Header */}
      <div className="flex items-center gap-2 mb-4">
        <div className="w-10 h-10 rounded-xl bg-purple-200" />
        <div className="h-5 bg-purple-200 rounded w-20" />
      </div>

      {/* Triple layout placeholder */}
      <div className="p-5 rounded-xl bg-purple-100/50 mb-4">
        <div className="flex justify-around mb-5">
          <div className="text-center">
            <div className="w-14 h-14 bg-purple-200 rounded-xl mx-auto mb-2" />
            <div className="w-12 h-4 bg-purple-200 rounded mx-auto" />
          </div>
          <div className="text-center">
            <div className="w-14 h-14 bg-purple-200 rounded-xl mx-auto mb-2" />
            <div className="w-12 h-4 bg-purple-200 rounded mx-auto" />
          </div>
        </div>
        <div className="flex justify-center">
          <div className="text-center">
            <div className="w-14 h-14 bg-purple-200 rounded-xl mx-auto mb-2" />
            <div className="w-12 h-4 bg-purple-200 rounded mx-auto" />
          </div>
        </div>
      </div>
    </div>
  );
