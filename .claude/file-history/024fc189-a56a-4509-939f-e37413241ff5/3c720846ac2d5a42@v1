import { cn } from "@/lib/utils";
import { ChevronRight, Sparkles } from "lucide-react";
import { GradientEmojiIcon, SkillIcon } from "@/components/core/GradientEmojiIcon";

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Types
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export interface BaziData {
  dayMaster?: {
    element: string;
    character: string;
    description: string;
  };
  fiveElements?: Record<string, number>;
  dailyFortune?: string;
  // Legacy support
  pattern?: string;
  fortuneLevel?: 1 | 2 | 3 | 4 | 5;
  todayFortune?: string;
}

export interface BaziSummaryCardProps {
  data?: BaziData | null;
  onExplore?: () => void;
  /** æ˜¯å¦æ˜¾ç¤ºä»Šæ—¥è¿åŠ¿ï¼ˆå¦‚æœå·²åœ¨ TodayEnergyCard æ˜¾ç¤ºåˆ™å¯éšè—ï¼‰*/
  showDailyFortune?: boolean;
  className?: string;
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Static Constants
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

const ELEMENT_STYLES: Record<string, {
  bar: string;
  text: string;
  bg: string;
  emoji: string;
}> = {
  æœ¨: { bar: "from-green-400 to-emerald-500", text: "text-green-700", bg: "bg-green-100", emoji: "ğŸŒ³" },
  ç«: { bar: "from-red-400 to-orange-500", text: "text-red-700", bg: "bg-red-100", emoji: "ğŸ”¥" },
  åœŸ: { bar: "from-yellow-400 to-amber-500", text: "text-yellow-700", bg: "bg-yellow-100", emoji: "ğŸ”ï¸" },
  é‡‘: { bar: "from-slate-300 to-gray-400", text: "text-slate-700", bg: "bg-slate-100", emoji: "âš”ï¸" },
  æ°´: { bar: "from-blue-400 to-indigo-500", text: "text-blue-700", bg: "bg-blue-100", emoji: "ğŸ’§" },
};

const ELEMENT_ORDER = ["æœ¨", "ç«", "åœŸ", "é‡‘", "æ°´"] as const;

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Sub-components
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function DayMasterSeal({
  element,
  character,
  description,
}: {
  element: string;
  character: string;
  description: string;
}) {
  const style = ELEMENT_STYLES[element] || ELEMENT_STYLES["æœ¨"];

  return (
    <div className="p-4 rounded-xl bg-gradient-to-br from-amber-50/80 to-orange-50/60 border border-amber-200/30">
      <div className="flex items-center gap-4">
        {/* Traditional Seal Style - ä¿ç•™ä¸œæ–¹ç‰¹è‰² */}
        <div
          className={cn(
            "relative w-16 h-16 rounded-xl flex items-center justify-center",
            "bg-gradient-to-br from-red-700 to-red-800",
            "shadow-lg",
            "ring-2 ring-red-900/20 ring-offset-2 ring-offset-amber-50"
          )}
        >
          {/* Decorative corners */}
          <div className="absolute top-1 left-1 w-2 h-2 border-t border-l border-amber-300/50" />
          <div className="absolute top-1 right-1 w-2 h-2 border-t border-r border-amber-300/50" />
          <div className="absolute bottom-1 left-1 w-2 h-2 border-b border-l border-amber-300/50" />
          <div className="absolute bottom-1 right-1 w-2 h-2 border-b border-r border-amber-300/50" />

          <span className="text-3xl font-serif text-amber-100 font-bold">
            {character}
          </span>
        </div>

        {/* Description */}
        <div className="flex-1">
          <div className="flex items-center gap-2 mb-1.5">
            <span className="text-xs text-text-tertiary">æ—¥ä¸»</span>
            <span className={cn("text-sm font-semibold", style.text)}>
              {character}{element}
            </span>
            <span className="text-base">{style.emoji}</span>
          </div>
          <p className="text-sm text-ink-600 leading-relaxed">
            {description}
          </p>
        </div>
      </div>
    </div>
  );
}

function FiveElementsChart({ elements }: { elements: Record<string, number> }) {
  const maxValue = Math.max(...Object.values(elements), 1);

  return (
    <div className="space-y-2.5">
      <h4 className="text-xs text-text-tertiary mb-3 flex items-center gap-2">
        <span className="w-3 h-px bg-vellum-300" />
        äº”è¡Œåˆ†å¸ƒ
        <span className="flex-1 h-px bg-vellum-300" />
      </h4>

      {ELEMENT_ORDER.map((element) => {
        const value = elements[element] || 0;
        const percentage = (value / maxValue) * 100;
        const style = ELEMENT_STYLES[element];

        return (
          <div key={element} className="flex items-center gap-2.5">
            {/* Element badge */}
            <div
              className={cn(
                "w-6 h-6 rounded-md flex items-center justify-center",
                "bg-gradient-to-br",
                style.bar,
                "shadow-sm"
              )}
            >
              <span className="text-xs text-white font-medium">{element}</span>
            </div>

            {/* Progress bar */}
            <div className="flex-1 h-2.5 bg-vellum-100 rounded-full overflow-hidden">
              <div
                className={cn(
                  "h-full rounded-full transition-all duration-700 ease-out",
                  "bg-gradient-to-r",
                  style.bar
                )}
                style={{ width: `${percentage}%` }}
              />
            </div>

            {/* Percentage */}
            <span className="w-10 text-xs text-text-tertiary text-right tabular-nums">
              {value}%
            </span>
          </div>
        );
      })}
    </div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Main Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export function BaziSummaryCard({
  data,
  onExplore,
  showDailyFortune = false,
  className,
}: BaziSummaryCardProps) {
  // Empty state
  if (!data) {
    return (
      <div
        onClick={onExplore}
        className={cn(
          "relative p-5 rounded-2xl cursor-pointer overflow-hidden",
          "bg-gradient-to-br from-amber-50/50 to-orange-50/30",
          "border border-amber-200/30 shadow-card",
          "hover:shadow-card-hover hover:border-amber-200/50",
          "transition-all duration-200",
          className
        )}
      >
        <div className="flex items-center gap-3 mb-4">
          <SkillIcon skillId="bazi" size="md" glow />
          <div>
            <span className="font-serif text-base font-semibold text-text-primary">
              å…«å­—å‘½ç†
            </span>
            <p className="text-xs text-text-tertiary">ä¸œæ–¹æ™ºæ…§ï¼Œè§£è¯»å‘½è¿</p>
          </div>
        </div>
        <p className="text-sm text-text-secondary mb-4">
          è¾“å…¥å‡ºç”Ÿæ—¥æœŸå’Œæ—¶è¾°ï¼Œè§£é”ä½ çš„å…«å­—å‘½ç›˜åˆ†æã€‚
        </p>
        <div className="flex items-center justify-center gap-2 px-4 py-2.5 bg-amber-500/10 hover:bg-amber-500/20 text-amber-700 rounded-xl text-sm font-medium transition-colors">
          <Sparkles className="w-4 h-4" />
          <span>å¼€å§‹æµ‹ç®—</span>
          <ChevronRight className="w-4 h-4" />
        </div>
      </div>
    );
  }

  // Convert legacy data format
  const dayMaster = data.dayMaster || (data.pattern ? {
    element: "æœ¨",
    character: "ç”²",
    description: data.pattern,
  } : undefined);

  const fiveElements = data.fiveElements || {
    æœ¨: 20,
    ç«: 20,
    åœŸ: 20,
    é‡‘: 20,
    æ°´: 20,
  };

  const dailyFortune = data.dailyFortune || data.todayFortune;

  return (
    <div
      onClick={onExplore}
      className={cn(
        "relative p-5 rounded-2xl cursor-pointer overflow-hidden",
        "bg-gradient-to-br from-amber-50/50 to-orange-50/30",
        "border border-amber-200/30 shadow-card",
        "hover:shadow-card-hover hover:border-amber-200/50",
        "transition-all duration-200 hover:scale-[1.01]",
        className
      )}
    >
      {/* Background decoration */}
      <div className="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-amber-200/10 to-transparent rounded-full blur-2xl" />

      <div className="relative">
        {/* Header */}
        <div className="flex items-center justify-between mb-4">
          <div className="flex items-center gap-2">
            <SkillIcon skillId="bazi" size="sm" />
            <span className="font-serif text-base font-semibold text-text-primary">
              å…«å­—å‘½ç†
            </span>
          </div>
          <div className="flex items-center gap-1 text-amber-600">
            <span className="text-xs">æ·±å…¥</span>
            <ChevronRight className="w-4 h-4" />
          </div>
        </div>

        {/* Day Master Seal */}
        {dayMaster ? (
          <DayMasterSeal
            element={dayMaster.element}
            character={dayMaster.character}
            description={dayMaster.description}
          />
        ) : null}

        {/* Five Elements Chart */}
        <div className="mt-4">
          <FiveElementsChart elements={fiveElements} />
        </div>

        {/* Daily Fortune - å¯é€‰æ˜¾ç¤º */}
        {showDailyFortune && dailyFortune ? (
          <div className="mt-4 p-3 rounded-xl bg-gradient-to-r from-amber-100/50 to-orange-100/50 border border-amber-200/30">
            <div className="flex items-start gap-2">
              <GradientEmojiIcon emoji="ğŸŒŸ" theme="amber" size="xs" />
              <div>
                <p className="text-xs font-medium text-amber-700 mb-0.5">
                  ä»Šæ—¥è¿åŠ¿
                </p>
                <p className="text-sm text-ink-700 leading-relaxed">
                  {dailyFortune}
                </p>
              </div>
            </div>
          </div>
        ) : null}
      </div>
    </div>
  );
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Skeleton
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export function BaziSummaryCardSkeleton({ className }: { className?: string }) {
  return (
    <div
      className={cn(
        "p-5 rounded-2xl",
        "bg-gradient-to-br from-amber-50/50 to-orange-50/30",
        "border border-amber-200/30 shadow-card animate-pulse",
        className
      )}
    >
      {/* Header */}
      <div className="flex items-center gap-2 mb-4">
        <div className="w-10 h-10 rounded-xl bg-amber-200" />
        <div className="h-5 bg-amber-200 rounded w-20" />
      </div>

      {/* Day Master */}
      <div className="p-4 rounded-xl bg-amber-100/50 mb-4">
        <div className="flex items-center gap-4">
          <div className="w-16 h-16 rounded-xl bg-amber-200" />
          <div className="flex-1 space-y-2">
            <div className="h-4 bg-amber-200 rounded w-24" />
            <div className="h-4 bg-amber-200 rounded w-full" />
          </div>
        </div>
      </div>

      {/* Five Elements */}
      <div className="space-y-2.5">
        {[1, 2, 3, 4, 5].map((i) => (
          <div key={i} className="flex items-center gap-2.5">
            <div className="w-6 h-6 bg-amber-200 rounded-md" />
            <div className="flex-1 h-2.5 bg-amber-100 rounded-full" />
            <div className="w-10 h-4 bg-amber-200 rounded" />
          </div>
        ))}
      </div>
    </div>
  );
}

export default BaziSummaryCard;
