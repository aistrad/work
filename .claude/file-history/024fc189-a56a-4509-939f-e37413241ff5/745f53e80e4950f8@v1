          <div className="h-3 bg-vellum-100 rounded w-24" />
        </div>
      </div>

      {/* Energy Meter */}
      <div className="flex items-center gap-3 mb-5">
        <div className="w-16 h-16 rounded-full bg-vellum-200" />
