/**
 * Clerk Authentication Provider
 * Based on: vibelife spec v3.0
 */

import { ClerkProvider } from "@clerk/nextjs";
import { zhCN } from "@clerk/localizations";

// Clerk appearance customization for VibeLife
const clerkAppearance = {
  variables: {
    colorPrimary: "#B88A44", // antique-gold
    colorBackground: "#FBF7F1", // luminous-paper
    colorText: "#1C1A17", // ink-black
    colorTextSecondary: "#6B6560",
    fontFamily: "'Noto Serif SC', 'Source Han Serif CN', serif",
    borderRadius: "0.75rem",
  },
  elements: {
    card: "shadow-lg",
    formButtonPrimary: "bg-skill-primary hover:bg-skill-primary/90",
    footerActionLink: "text-skill-primary hover:text-skill-primary/80",
  },
};

interface AuthProviderProps {
  children: React.ReactNode;
}

export function AuthProvider({ children }: AuthProviderProps) {
  return (
    <ClerkProvider
      localization={zhCN}
      appearance={clerkAppearance}
      signInUrl="/auth/sign-in"
      signUpUrl="/auth/sign-up"
      afterSignInUrl="/chat"
      afterSignUpUrl="/chat"
    >
      {children}
    </ClerkProvider>
  );
}

export { useAuth, useUser, useClerk, SignIn, SignUp, UserButton } from "@clerk/nextjs";
