// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// Checkout Page Component
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export default function CheckoutPage() {
  const router = useRouter();
  const params = useParams();
  const { skill } = useSkill();

  const sessionId = params.sessionId as string;

  const [session, setSession] = useState<CheckoutSession | null>(null);
  const [isLoading, setIsLoading] = useState(true);
  const [isProcessing, setIsProcessing] = useState(false);
  const [error, setError] = useState<string | null>(null);

  // åŠ è½½æ”¯ä»˜ä¼šè¯
  useEffect(() => {
    loadSession();
  }, [sessionId]);

  const loadSession = async () => {
    setIsLoading(true);
    setError(null);

    try {
      // å¼€å‘æ¨¡å¼ï¼šä» sessionId è§£æäº§å“ä¿¡æ¯
      if (sessionId.startsWith("dev_")) {
        // Mock session for development
        setSession({
          id: sessionId,
          product_id: "report_full",
          product_name: "å®Œæ•´æŠ¥å‘Š + é«˜æ¸…æµ·æŠ¥",
          product_description: "å®Œæ•´æ·±åº¦åˆ†ææŠ¥å‘Šã€é«˜æ¸…AIæµ·æŠ¥ã€æ°¸ä¹…ä¿å­˜ã€é¦–æœˆè®¢é˜…æƒç›Š",
          amount: 19.9,
          currency: "CNY",
          status: "pending",
        });
      } else {
        // ç”Ÿäº§æ¨¡å¼ï¼šä» API è·å–
        const response = await fetch(`/api/v1/payment/session/${sessionId}`);
        if (response.ok) {
          const data = await response.json();
          setSession(data.session);
        } else {
          setError("æ”¯ä»˜ä¼šè¯ä¸å­˜åœ¨æˆ–å·²è¿‡æœŸ");
        }
      }
    } catch {
      setError("åŠ è½½æ”¯ä»˜ä¿¡æ¯å¤±è´¥");
    } finally {
      setIsLoading(false);
    }
  };

  const handlePayment = async () => {
    if (!session) return;

    setIsProcessing(true);
    setError(null);

    try {
      // å¼€å‘æ¨¡å¼ï¼šæ¨¡æ‹Ÿæ”¯ä»˜æˆåŠŸ
      if (sessionId.startsWith("dev_")) {
        // æ¨¡æ‹Ÿæ”¯ä»˜å¤„ç†
        await new Promise((resolve) => setTimeout(resolve, 2000));

        // æ ‡è®°æ”¯ä»˜æˆåŠŸ
        const response = await fetch("/api/v1/payment/dev-complete", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ session_id: sessionId }),
        });

        if (response.ok) {
          router.push(`/payment/success?session_id=${sessionId}`);
        } else {
          // å³ä½¿ API å¤±è´¥ï¼Œå¼€å‘æ¨¡å¼ä¹Ÿè·³è½¬æˆåŠŸé¡µ
          router.push(`/payment/success?session_id=${sessionId}`);
        }
        return;
      }

      // ç”Ÿäº§æ¨¡å¼ï¼šè·³è½¬åˆ° Stripe
      const response = await fetch("/api/v1/payment/redirect", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ session_id: sessionId }),
      });

      if (response.ok) {
        const data = await response.json();
        if (data.checkout_url) {
          window.location.href = data.checkout_url;
        }
      } else {
        setError("æ”¯ä»˜åˆå§‹åŒ–å¤±è´¥ï¼Œè¯·é‡è¯•");
        setIsProcessing(false);
      }
    } catch {
      setError("æ”¯ä»˜å¤„ç†å¤±è´¥ï¼Œè¯·é‡è¯•");
      setIsProcessing(false);
    }
  };

  const handleBack = () => {
    router.back();
  };

  const formatPrice = (amount: number, currency: string) => {
    if (currency === "CNY") {
      return `Â¥${amount.toFixed(2)}`;
    }
    return `$${amount.toFixed(2)}`;
  };

  // Loading state
  if (isLoading) {
    return (
      <LuminousPaper skill={skill} variant="default" className="min-h-screen">
        <div className="flex items-center justify-center min-h-screen">
          <div className="text-center">
            <div className="w-12 h-12 mx-auto mb-4 border-4 border-skill-primary/20 border-t-skill-primary rounded-full animate-spin" />
            <p className="text-muted-foreground">åŠ è½½æ”¯ä»˜ä¿¡æ¯...</p>
          </div>
        </div>
      </LuminousPaper>
    );
  }

  // Error state
  if (error && !session) {
    return (
      <LuminousPaper skill={skill} variant="default" className="min-h-screen">
        <div className="flex items-center justify-center min-h-screen">
          <div className="text-center px-6">
            <div className="w-16 h-16 mx-auto mb-4 rounded-full bg-red-100 dark:bg-red-900/30 flex items-center justify-center">
              <span className="text-2xl">ğŸ˜•</span>
            </div>
            <h2 className="font-serif text-xl font-semibold text-foreground mb-2">
              {error}
            </h2>
            <p className="text-muted-foreground mb-6">
              è¯·è¿”å›é‡æ–°å‘èµ·æ”¯ä»˜
            </p>
            <button
              onClick={handleBack}
              className="px-6 py-3 bg-skill-primary text-white rounded-xl font-medium"
            >
              è¿”å›
            </button>
          </div>
        </div>
      </LuminousPaper>
    );
  }

  if (!session) return null;

  const productInfo = PRODUCT_INFO[session.product_id] || {
    icon: "ğŸ“¦",
    features: [],
  };

  return (
    <LuminousPaper skill={skill} variant="default" className="min-h-screen">
      <BreathAura
        skill={skill}
        size="xl"
        position="top"
        intensity="low"
        className="opacity-20"
      />

      <div className="relative z-10 min-h-screen flex flex-col">
        {/* Header */}
        <header className="py-4 px-6 flex items-center gap-4 border-b border-border">
          <button
            onClick={handleBack}
            className="p-2 rounded-lg hover:bg-foreground/5 transition-colors"
            disabled={isProcessing}
          >
            <ArrowLeft className="w-5 h-5 text-foreground" />
          </button>
          <div className="flex items-center gap-2">
            <VibeGlyph size="sm" skill={skill} showAura={false} />
            <span className="font-serif font-semibold text-foreground">ç¡®è®¤è®¢å•</span>
          </div>
        </header>

        {/* Main Content */}
        <main className="flex-1 px-6 py-8">
          <div className="max-w-md mx-auto">
            {error && (
              <motion.div
                initial={{ opacity: 0, y: -10 }}
                animate={{ opacity: 1, y: 0 }}
                className="mb-6 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl text-red-700 dark:text-red-300 text-sm"
              >
                {error}
              </motion.div>
            )}

            {/* Product Card */}
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              className="bg-card rounded-2xl p-6 mb-6"
            >
              <div className="flex items-start gap-4 mb-6">
                <div className="w-16 h-16 rounded-xl bg-skill-primary/10 flex items-center justify-center text-3xl">
                  {productInfo.icon}
                </div>
                <div className="flex-1">
                  <h2 className="font-semibold text-foreground text-lg">
                    {session.product_name}
                  </h2>
                  <p className="text-sm text-muted-foreground mt-1">
                    {session.product_description}
                  </p>
                </div>
              </div>

              {/* Features */}
              <div className="space-y-2 mb-6">
                {productInfo.features.map((feature, index) => (
                  <div key={index} className="flex items-center gap-2 text-sm">
                    <Check className="w-4 h-4 text-green-500 flex-shrink-0" />
                    <span className="text-foreground">{feature}</span>
                  </div>
                ))}
              </div>

              {/* Price */}
              <div className="border-t border-border pt-4">
                <div className="flex items-center justify-between">
                  <span className="text-muted-foreground">è®¢å•é‡‘é¢</span>
                  <span className="text-2xl font-bold text-skill-primary">
                    {formatPrice(session.amount, session.currency)}
                  </span>
                </div>
              </div>
            </motion.div>

            {/* Payment Methods */}
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.1 }}
              className="bg-card rounded-2xl p-6 mb-6"
            >
              <h3 className="font-medium text-foreground mb-4 flex items-center gap-2">
                <CreditCard className="w-5 h-5" />
                æ”¯ä»˜æ–¹å¼
              </h3>

              <div className="space-y-3">
                {/* WeChat Pay - Coming Soon */}
                <div className="flex items-center gap-3 p-3 border border-border rounded-xl opacity-50">
                  <div className="w-10 h-10 rounded-lg bg-green-500 flex items-center justify-center">
                    <span className="text-white text-lg">å¾®</span>
                  </div>
                  <div className="flex-1">
                    <p className="font-medium text-foreground">å¾®ä¿¡æ”¯ä»˜</p>
                    <p className="text-xs text-muted-foreground">å³å°†ä¸Šçº¿</p>
                  </div>
                </div>

                {/* Alipay - Coming Soon */}
                <div className="flex items-center gap-3 p-3 border border-border rounded-xl opacity-50">
                  <div className="w-10 h-10 rounded-lg bg-blue-500 flex items-center justify-center">
                    <span className="text-white text-lg">æ”¯</span>
                  </div>
                  <div className="flex-1">
                    <p className="font-medium text-foreground">æ”¯ä»˜å®</p>
                    <p className="text-xs text-muted-foreground">å³å°†ä¸Šçº¿</p>
                  </div>
                </div>

                {/* Card Payment */}
                <div className="flex items-center gap-3 p-3 border-2 border-skill-primary rounded-xl bg-skill-primary/5">
                  <div className="w-10 h-10 rounded-lg bg-gradient-to-br from-purple-500 to-blue-500 flex items-center justify-center">
                    <CreditCard className="w-5 h-5 text-white" />
                  </div>
                  <div className="flex-1">
                    <p className="font-medium text-foreground">é“¶è¡Œå¡æ”¯ä»˜</p>
                    <p className="text-xs text-muted-foreground">Visa / Mastercard / é“¶è”</p>
                  </div>
                  <Check className="w-5 h-5 text-skill-primary" />
                </div>
              </div>
            </motion.div>

            {/* Security Notice */}
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.2 }}
              className="flex items-center gap-2 text-sm text-muted-foreground mb-6"
            >
              <Shield className="w-4 h-4" />
              <span>æ”¯ä»˜ç”± Stripe å®‰å…¨å¤„ç†ï¼Œæˆ‘ä»¬ä¸ä¼šå­˜å‚¨æ‚¨çš„æ”¯ä»˜ä¿¡æ¯</span>
            </motion.div>

            {/* Pay Button */}
            <motion.button
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.3 }}
              onClick={handlePayment}
              disabled={isProcessing}
              className="w-full py-4 bg-skill-primary text-white rounded-xl font-medium text-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:translate-y-0"
            >
              {isProcessing ? (
                <span className="flex items-center justify-center gap-2">
                  <div className="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin" />
                  å¤„ç†ä¸­...
                </span>
              ) : (
                `æ”¯ä»˜ ${formatPrice(session.amount, session.currency)}`
              )}
            </motion.button>

            {/* Terms */}
            <p className="text-xs text-muted-foreground text-center mt-4">
              ç‚¹å‡»æ”¯ä»˜å³è¡¨ç¤ºæ‚¨åŒæ„æˆ‘ä»¬çš„
              <a href="/terms" className="text-skill-primary hover:underline">æœåŠ¡æ¡æ¬¾</a>
              å’Œ
              <a href="/privacy" className="text-skill-primary hover:underline">éšç§æ”¿ç­–</a>
            </p>
          </div>
        </main>
      </div>
    </LuminousPaper>
  );
}
