  report_full: {
    icon: "ğŸ“Š",
    features: [
      "å®Œæ•´æ·±åº¦åˆ†ææŠ¥å‘Š",
      "å¤§è¿æµå¹´è¯¦è§£",
      "ä¸ªæ€§åŒ–è¡ŒåŠ¨å»ºè®®",
      "é«˜æ¸… AI æµ·æŠ¥",
      "æ°¸ä¹…ä¿å­˜",
      "èµ é€é¦–æœˆè®¢é˜…æƒç›Š",
    ],
  },
  relationship_card_premium: {
    icon: "ğŸ’•",
    features: [
      "å®Œæ•´å…³ç³»åˆ†æ",
      "å¤šç»´åº¦åŒ¹é…è¯„åˆ†",
      "æ²Ÿé€šå»ºè®®",
      "AI å…³ç³»æµ·æŠ¥",
    ],
  },
  subscription_monthly: {
    icon: "â­",
    features: [
      "æ— é™å¯¹è¯æ¬¡æ•°",
      "æ— é™æŠ¥å‘Šç”Ÿæˆ",
