@import "tailwindcss";

/* ============================================
   Fortune AI Design System - HSL Token System
   基于 frontend_final_v1.md 规范
   ============================================ */

:root {
  /* Neutral - Light Mode */
  --background: 0 0% 100%;           /* #FFFFFF */
  --sidebar: 40 9% 98%;              /* #FBFBFA */
  --hover: 40 6% 94%;                /* #F1F1EF */
  --border: 40 5% 91%;               /* #E9E9E7 */
  --foreground: 42 8% 20%;           /* #37352F */
  --muted-foreground: 40 3% 47%;     /* #787774 */
  --muted: 40 2% 67%;                /* #ACABA9 */

  /* Functional - Light Mode (粉笔色原则) */
  --mystic: 292 47% 95%;             /* #F3E5F5 */
  --mystic-foreground: 282 53% 37%;  /* #692B96 */
  --advice: 207 89% 94%;             /* #E3F2FD */
  --advice-foreground: 210 79% 46%;  /* #1565C0 */
  --status: 122 39% 94%;             /* #E8F5E9 */
  --status-foreground: 123 43% 33%;  /* #2E7D32 */
  --alert: 36 100% 94%;              /* #FFF3E0 */
  --alert-foreground: 27 100% 47%;   /* #EF6C00 */

  /* Markdown 专用 */
  --code-bg: 40 17% 96%;             /* #F7F6F3 */

  /* Radius */
  --radius: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
}

.dark {
  /* Neutral - Dark Mode */
  --background: 0 0% 10%;            /* #191919 */
  --sidebar: 0 0% 13%;               /* #202020 */
  --hover: 0 0% 17%;                 /* #2C2C2C */
  --border: 0 0% 22%;                /* #373737 */
  --foreground: 0 0% 83%;            /* #D4D4D4 */
  --muted-foreground: 0 0% 61%;      /* #9B9B9B */
  --muted: 0 0% 38%;                 /* #606060 */

  /* Functional - Dark Mode */
  --mystic: 280 18% 17%;             /* #2A2430 */
  --mystic-foreground: 285 54% 76%; /* #D0A3E8 */
  --advice: 203 25% 15%;             /* #1F282D */
  --advice-foreground: 207 90% 68%; /* #64B5F6 */
  --status: 135 12% 16%;             /* #242B26 */
  --status-foreground: 123 38% 63%; /* #81C784 */
  --alert: 27 29% 17%;               /* #36291F */
  --alert-foreground: 36 100% 65%;  /* #FFB74D */

  /* Markdown 专用 */
  --code-bg: 0 0% 15%;
}

/* Tailwind v4 Theme 映射 */
@theme inline {
  /* Colors */
  --color-background: hsl(var(--background));
  --color-foreground: hsl(var(--foreground));
  --color-sidebar: hsl(var(--sidebar));
  --color-hover: hsl(var(--hover));
  --color-border: hsl(var(--border));
  --color-muted: hsl(var(--muted));
  --color-muted-foreground: hsl(var(--muted-foreground));

  /* Functional Colors */
  --color-mystic: hsl(var(--mystic));
  --color-mystic-foreground: hsl(var(--mystic-foreground));
  --color-advice: hsl(var(--advice));
  --color-advice-foreground: hsl(var(--advice-foreground));
  --color-status: hsl(var(--status));
  --color-status-foreground: hsl(var(--status-foreground));
  --color-alert: hsl(var(--alert));
  --color-alert-foreground: hsl(var(--alert-foreground));

  /* Code */
  --color-code-bg: hsl(var(--code-bg));

  /* Fonts - 系统字体堆栈 */
  --font-sans: ui-sans-serif, -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
  --font-serif: ui-serif, Georgia, Cambria, "Times New Roman", serif;
  --font-mono: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;

  /* Shadows */
  --shadow-hover: 0 2px 4px rgba(0, 0, 0, 0.02);
  --shadow-float: 0 8px 16px rgba(0, 0, 0, 0.08);
  --shadow-pulse: 0 0 0 3px hsl(var(--foreground) / 0.1);

  /* Radius */
  --radius-sm: 0.25rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;

  /* Spacing - 8px grid */
  --spacing-1: 0.25rem;   /* 4px */
  --spacing-2: 0.5rem;    /* 8px */
  --spacing-3: 0.75rem;   /* 12px */
  --spacing-4: 1rem;      /* 16px */
  --spacing-6: 1.5rem;    /* 24px */
  --spacing-8: 2rem;      /* 32px */

  /* Animation */
  --animate-duration: 150ms;
  --animate-timing: cubic-bezier(0.4, 0, 0.2, 1);
}

/* Base Styles */
body {
  background: hsl(var(--background));
  color: hsl(var(--foreground));
  font-family: var(--font-sans);
  font-size: 16px;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Typography Scale - Major Third (1.250) */
h1 { font-size: 1.875rem; line-height: 1.2; font-weight: 600; } /* 30px */
h2 { font-size: 1.5rem; line-height: 1.3; font-weight: 600; }   /* 24px */
h3 { font-size: 1.25rem; line-height: 1.4; font-weight: 500; }  /* 20px */
h4 { font-size: 1rem; line-height: 1.5; font-weight: 500; }     /* 16px */

/* Utility Classes */
.text-caption { font-size: 0.875rem; line-height: 1.5; }        /* 14px */
.text-tiny { font-size: 0.75rem; line-height: 1.0; font-weight: 500; } /* 12px */

/* Scrollbar Styling */
::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: hsl(var(--muted));
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: hsl(var(--muted-foreground));
}

/* Focus Ring */
*:focus-visible {
  outline: 2px solid hsl(var(--foreground));
  outline-offset: 2px;
}

/* Selection */
::selection {
  background: hsl(var(--foreground) / 0.1);
}

/* Reduce Motion */
@media (prefers-reduced-motion: reduce) {
  *, *::before, *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* Skeleton Animation */
@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

.skeleton {
  background: linear-gradient(
    90deg,
    hsl(var(--hover)) 25%,
    hsl(var(--sidebar)) 50%,
    hsl(var(--hover)) 75%
  );
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

/* Pulse Animation */
@keyframes pulse-glow {
  0%, 100% { box-shadow: 0 0 0 0 hsl(var(--foreground) / 0.2); }
  50% { box-shadow: 0 0 0 4px hsl(var(--foreground) / 0); }
}

.pulse {
  animation: pulse-glow 0.5s ease-out;
}

/* iOS Safe Area Support */
.safe-area-pb {
  padding-bottom: env(safe-area-inset-bottom, 0px);
}

.safe-area-pt {
  padding-top: env(safe-area-inset-top, 0px);
}

/* 隐藏滚动条 */
.scrollbar-none {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.scrollbar-none::-webkit-scrollbar {
  display: none;
}
