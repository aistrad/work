import { NextResponse } from 'next/server'
import type { NextRequest } from 'next/server'

/**
 * Auth middleware - Protects main page, redirects unauthenticated users to login
 *
 * Protected routes: / (main page)
 * Public routes: /login, /register
 */
export function middleware(request: NextRequest) {
  const { pathname } = request.nextUrl

  // Public routes that don't require auth
  const publicPaths = ['/login', '/register']
  if (publicPaths.some(path => pathname === path || pathname.startsWith(path + '/'))) {
    return NextResponse.next()
  }

  // Check for session cookie (set by FastAPI backend)
  const sessionCookie = request.cookies.get('fortune_session')

  if (!sessionCookie?.value) {
    // No session - redirect to login
    const loginUrl = new URL('/new/login', request.url)
    // Preserve the original destination for post-login redirect
    if (pathname !== '/') {
      loginUrl.searchParams.set('redirect', pathname)
    }
    return NextResponse.redirect(loginUrl)
  }

  return NextResponse.next()
}

// Only run middleware on specific paths (exclude static files, api, etc.)
export const config = {
  matcher: [
    /*
     * Match all request paths except:
     * - api routes (handled by backend)
     * - _next/static (static files)
     * - _next/image (image optimization)
     * - favicon.ico, sitemap.xml, robots.txt
     * - public files with extensions
     */
    '/((?!api|_next/static|_next/image|favicon.ico|sitemap.xml|robots.txt|.*\\..*).*)'
  ],
}
