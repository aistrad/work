'use client'

/**
 * Onboarding Page - v2.1
 *
 * 根据当前 step 显示对应的流程组件
 */

import { useOnboarding } from './context'
import LandingStep from './steps/LandingStep'
import LoadingStep from './steps/LoadingStep'
import AhaStep from './steps/AhaStep'
import PersonaStep from './steps/PersonaStep'
import InterviewStep from './steps/InterviewStep'
import LetterStep from './steps/LetterStep'
import ConversionStep from './steps/ConversionStep'

export default function OnboardingPage() {
  const { state } = useOnboarding()

  switch (state.step) {
    case 'landing':
      return <LandingStep />
    case 'loading':
      return <LoadingStep />
    case 'aha':
      return <AhaStep />
    case 'persona':
      return <PersonaStep />
    case 'interview':
      return <InterviewStep />
    case 'letter':
      return <LetterStep />
    case 'conversion':
      return <ConversionStep />
    default:
      return <LandingStep />
  }
}
