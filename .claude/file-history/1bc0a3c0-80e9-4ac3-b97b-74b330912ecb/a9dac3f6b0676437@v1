```typescript
const [errors, setErrors] = useState({
  year: '',
  month: '',
  day: ''
})

const validate = () => {
  const newErrors = { year: '', month: '', day: '' }

  if (formData.year && parseInt(formData.year) < 1900) {
    newErrors.year = 'è¯·è¾“å…¥1900å¹´ä»¥åçš„å¹´ä»½'
  }

  if (formData.month && (parseInt(formData.month) < 1 || parseInt(formData.month) > 12)) {
    newErrors.month = 'æœˆä»½å¿…é¡»åœ¨1-12ä¹‹é—´'
  }

  // ... å…¶ä»–éªŒè¯

  setErrors(newErrors)
  return !Object.values(newErrors).some(e => e !== '')
}
