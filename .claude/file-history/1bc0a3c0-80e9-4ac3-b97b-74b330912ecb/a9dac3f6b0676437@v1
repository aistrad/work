## ä¸‰ã€å®Œæ•´ä»£ç å®ç°

```typescript
// apps/web/src/app/onboarding/page.tsx
'use client'

import { useState, useRef } from 'react'
import { useRouter } from 'next/navigation'
import { motion } from 'framer-motion'
import './onboarding.css'

export default function OnboardingPage() {
  const router = useRouter()

  // è¡¨å•çŠ¶æ€
  const [formData, setFormData] = useState({
    year: '',
    month: '',
    day: '',
    hour: '',
    location: '',
    intro: ''
  })

  // Input refs (ç”¨äºè‡ªåŠ¨èšç„¦)
  const monthRef = useRef<HTMLInputElement>(null)
  const dayRef = useRef<HTMLInputElement>(null)
  const hourRef = useRef<HTMLInputElement>(null)

  // éªŒè¯é€»è¾‘
  const isValid =
    formData.year.length === 4 &&
    parseInt(formData.year) >= 1900 &&
    parseInt(formData.year) <= 2100 &&
    parseInt(formData.month) >= 1 &&
    parseInt(formData.month) <= 12 &&
    parseInt(formData.day) >= 1 &&
    parseInt(formData.day) <= 31

  // è¾“å…¥å¤„ç† + è‡ªåŠ¨èšç„¦
  const handleYearChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const value = e.target.value.replace(/\D/g, '')
    setFormData({ ...formData, year: value })
    if (value.length === 4) {
      monthRef.current?.focus()
    }
  }

  const handleMonthChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const value = e.target.value.replace(/\D/g, '')
    setFormData({ ...formData, month: value })
    if (value.length === 2) {
      dayRef.current?.focus()
    }
  }

  const handleDayChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const value = e.target.value.replace(/\D/g, '')
    setFormData({ ...formData, day: value })
    if (value.length === 2) {
      hourRef.current?.focus()
    }
  }

  const handleHourChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const value = e.target.value.replace(/\D/g, '')
    if (parseInt(value) <= 23 || value === '') {
      setFormData({ ...formData, hour: value })
    }
  }

  // æäº¤å¤„ç†
  const handleSubmit = async () => {
    if (!isValid) return

    try {
      // è°ƒç”¨APIè®¡ç®—VibeID
      const response = await fetch('/api/v1/vibe-id/calculate', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formData)
      })

      if (!response.ok) throw new Error('è®¡ç®—å¤±è´¥')

      const result = await response.json()

      // è·³è½¬åˆ°ç»“æœé¡µ
      router.push(`/onboarding/result?id=${result.vibeId}`)
    } catch (error) {
      console.error('Error:', error)
      // TODO: æ˜¾ç¤ºé”™è¯¯æç¤º
    }
  }

  // å›è½¦æäº¤
  const handleKeyDown = (e: React.KeyboardEvent) => {
    if (e.key === 'Enter' && isValid) {
      handleSubmit()
    }
  }

  return (
    <div className="onboarding-page">
      {/* æ ‡é¢˜ */}
      <motion.div
        className="onboarding-title"
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.8 }}
      >
        <h1>ä½ çš„çµé­‚å¯†ç ï¼Œ</h1>
        <h2>è—åœ¨å‡ºç”Ÿçš„é‚£ä¸€åˆ»ã€‚</h2>
      </motion.div>

      {/* è¡¨å•å¡ç‰‡ */}
      <motion.div
        className="form-card"
        initial={{ opacity: 0, y: 30 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.8, delay: 0.2 }}
      >
        {/* å‡ºç”Ÿæ—¶é—´ (å¿…å¡«) */}
        <div className="form-field">
          <label className="field-label">
            å‡ºç”Ÿæ—¶é—´ <span className="required">*</span>
          </label>
          <div className="birthday-inputs">
            <div className="input-wrapper">
              <input
                type="text"
                inputMode="numeric"
                maxLength={4}
                placeholder="1990"
                value={formData.year}
                onChange={handleYearChange}
                onKeyDown={handleKeyDown}
                className="input-field year-input"
                autoFocus
              />
              <span className="input-suffix">å¹´</span>
            </div>
            <div className="input-wrapper">
              <input
                ref={monthRef}
                type="text"
                inputMode="numeric"
                maxLength={2}
                placeholder="5"
                value={formData.month}
                onChange={handleMonthChange}
                onKeyDown={handleKeyDown}
                className="input-field small-input"
              />
              <span className="input-suffix">æœˆ</span>
            </div>
            <div className="input-wrapper">
              <input
                ref={dayRef}
                type="text"
                inputMode="numeric"
                maxLength={2}
                placeholder="15"
                value={formData.day}
                onChange={handleDayChange}
                onKeyDown={handleKeyDown}
                className="input-field small-input"
              />
              <span className="input-suffix">æ—¥</span>
            </div>
            <div className="input-wrapper">
              <input
                ref={hourRef}
                type="text"
                inputMode="numeric"
                maxLength={2}
                placeholder="08"
                value={formData.hour}
                onChange={handleHourChange}
                onKeyDown={handleKeyDown}
                className="input-field small-input"
              />
              <span className="input-suffix">æ—¶</span>
            </div>
          </div>
        </div>

        {/* åˆ†éš”çº¿ */}
        <div className="divider" />

        {/* å‡ºç”Ÿåœ°ç‚¹ (å¯é€‰) */}
        <div className="form-field">
          <label className="field-label">å‡ºç”Ÿåœ°ç‚¹ï¼ˆå¯é€‰ï¼‰</label>
          <div className="input-with-icon">
            <input
              type="text"
              placeholder="åŒ—äº¬"
              value={formData.location}
              onChange={(e) => setFormData({ ...formData, location: e.target.value })}
              onKeyDown={handleKeyDown}
              className="input-field"
            />
            <span className="input-icon">ğŸ”</span>
          </div>
          <p className="field-hint">ç”¨äºç²¾ç¡®è®¡ç®—ä¸Šå‡æ˜Ÿåº§</p>
        </div>

        {/* åˆ†éš”çº¿ */}
        <div className="divider" />

        {/* è‡ªæˆ‘ä»‹ç» (å¯é€‰) */}
        <div className="form-field">
          <label className="field-label">ç”¨ä¸€å¥è¯ä»‹ç»è‡ªå·±ï¼ˆå¯é€‰ï¼‰</label>
          <input
            type="text"
            placeholder="ä¸€ä¸ªè¿½æ±‚ç¾çš„äº§å“è®¾è®¡å¸ˆ"
            maxLength={50}
            value={formData.intro}
            onChange={(e) => setFormData({ ...formData, intro: e.target.value })}
            onKeyDown={handleKeyDown}
            className="input-field"
          />
          <p className="field-hint">å¸®åŠ©æˆ‘ä»¬æ›´ç²¾å‡†åœ°ç†è§£ä½ </p>
        </div>

        {/* åˆ†éš”çº¿ */}
        <div className="divider" />

        {/* æäº¤æŒ‰é’® */}
        <motion.button
          onClick={handleSubmit}
          disabled={!isValid}
          className={`submit-button ${isValid ? 'enabled' : 'disabled'}`}
          whileHover={isValid ? { scale: 1.02 } : {}}
          whileTap={isValid ? { scale: 0.98 } : {}}
        >
          å¼€å§‹è®¡ç®— â†’
        </motion.button>

        {/* éšç§æç¤º */}
        <p className="privacy-hint">
          ğŸ”’ ä½ çš„ä¿¡æ¯å®Œå…¨ä¿å¯†ï¼Œä»…ç”¨äºç”Ÿæˆä¸“å± VibeID
        </p>
      </motion.div>

      {/* è¿”å›é“¾æ¥ */}
      <motion.button
        onClick={() => router.back()}
        className="back-button"
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        transition={{ delay: 0.5 }}
      >
        â† è¿”å›
      </motion.button>
    </div>
  )
}
```

