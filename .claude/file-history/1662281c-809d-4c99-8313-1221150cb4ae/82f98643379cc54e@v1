          <div className="flex-shrink-0 w-12 h-12 rounded-xl bg-white/20 backdrop-blur-sm flex items-center justify-center">
            <Brain className="w-6 h-6" />
          </div>
          <div>
            <h3 className="text-lg font-semibold">è®¤çŸ¥åˆ†æ</h3>
            <p className="text-sm text-white/80">è®©æˆ‘ä»¬ä¸€èµ·çœ‹çœ‹è¿™ä¸ªæƒ³æ³•</p>
          </div>
        </div>
      </div>

      <motion.div
        variants={containerVariants}
        initial="hidden"
        animate="visible"
        className="relative"
