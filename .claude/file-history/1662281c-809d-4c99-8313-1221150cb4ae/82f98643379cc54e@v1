            <MessageSquare className="w-3.5 h-3.5" />
            åŸå§‹æƒ³æ³•
          </h4>
          <div className="p-4 rounded-xl bg-white/60 dark:bg-gray-800/40 backdrop-blur-sm border border-white/50 dark:border-gray-700/50">
            <p className="text-gray-800 dark:text-gray-200 italic leading-relaxed">
              &ldquo;{data.original_thought}&rdquo;
            </p>
          </div>
          {data.context && (
            <p className="text-xs text-gray-500 dark:text-gray-400 mt-3 flex items-center gap-1.5">
              <span className="w-1 h-1 rounded-full bg-gray-400" />
              æƒ…å¢ƒï¼š{data.context}
            </p>
          )}
        </motion.div>

        {/* è¯†åˆ«çš„è®¤çŸ¥æ¨¡å¼ */}
        <motion.div
          variants={itemVariants}
          className="p-5 border-b border-white/30 dark:border-gray-800/30"
