"use client";

/**
 * GreetingCard - 问候卡片 (v2.0)
 *
 * 展示：
 * - 个性化问候语
 * - 节气信息
 * - 每日名言
 */

import { cn } from "@/lib/utils";

interface GreetingCardProps {
  greeting: string;
  solarTerm?: string;
  quote?: {
    text: string;
    author: string | null;
  };
  className?: string;
}

export function GreetingCard({
  greeting,
  solarTerm,
  quote,
  className,
}: GreetingCardProps) {
  return (
    <div
      className={cn(
        "relative overflow-hidden rounded-2xl",
        "bg-gradient-to-br from-amber-50 via-orange-50 to-yellow-50",
        "dark:from-amber-950/30 dark:via-orange-950/20 dark:to-yellow-950/20",
        "p-4 lg:p-5 border border-amber-100/50 dark:border-amber-800/30",
        className
      )}
    >
      {/* 装饰性背景 */}
      <div className="absolute top-0 right-0 w-24 h-24 lg:w-32 lg:h-32 bg-gradient-to-bl from-amber-200/30 to-transparent rounded-full -translate-y-1/2 translate-x-1/2" />

      <div className="relative">
        {/* 问候语 */}
        <h2 className="text-lg lg:text-xl font-semibold text-amber-900 dark:text-amber-100 mb-1.5">
          {greeting}
        </h2>

        {/* 节气 */}
        {solarTerm && (
          <div className="flex items-center gap-2 text-xs text-amber-700 dark:text-amber-300 mb-3">
            <span className="px-2 py-0.5 bg-amber-100 dark:bg-amber-900/50 rounded-full font-medium">
              {solarTerm}
            </span>
            <span className="text-amber-400">·</span>
            <span>阳气回升</span>
          </div>
        )}

        {/* 每日名言 */}
        {quote && (
          <div className="mt-3 pt-3 border-t border-amber-200/50 dark:border-amber-800/30">
            <p className="text-sm text-amber-800 dark:text-amber-200 italic leading-relaxed">
              &ldquo;{quote.text}&rdquo;
            </p>
            {quote.author && (
              <p className="mt-1.5 text-xs text-amber-600 dark:text-amber-400 text-right">
                — {quote.author}
              </p>
            )}
          </div>
        )}
      </div>
    </div>
  );
}

export default GreetingCard;
