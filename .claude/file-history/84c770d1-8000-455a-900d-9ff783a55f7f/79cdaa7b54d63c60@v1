"use client";

/**
 * Zodiac Route Layout
 * 星座占星专属布局 - 强制设置 skill="zodiac"
 */

import { ReactNode, useEffect, Suspense } from "react";
import { useSkill } from "@/providers";
import { ErrorBoundary, ErrorFallback } from "@/components/error";
import { VibeGlyph, LuminousPaper } from "@/components/core";

// Loading fallback for Suspense
function ZodiacLoading() {
  return (
    <LuminousPaper skill="zodiac" variant="default" className="min-h-screen">
      <div className="flex items-center justify-center min-h-screen">
        <VibeGlyph size="md" skill="zodiac" showAura={true} animate={true} />
      </div>
    </LuminousPaper>
  );
}

// Error fallback for ErrorBoundary
function ZodiacErrorFallback() {
  return (
    <LuminousPaper skill="zodiac" variant="default" className="min-h-screen">
      <ErrorFallback
        error={new Error("星座占星功能暂时不可用")}
        resetError={() => window.location.reload()}
      />
    </LuminousPaper>
  );
}

export default function ZodiacLayout({ children }: { children: ReactNode }) {
  const { setSkill } = useSkill();

  useEffect(() => {
    setSkill("zodiac");
    document.cookie = `vibelife-skill=zodiac; path=/; max-age=${60 * 60 * 24 * 365}`;
  }, [setSkill]);

  return (
    <ErrorBoundary fallback={<ZodiacErrorFallback />}>
      <Suspense fallback={<ZodiacLoading />}>
        {children}
      </Suspense>
    </ErrorBoundary>
  );
}
