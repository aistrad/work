"use client";

import { motion } from "framer-motion";
import { registerCard } from "@/skills/CardRegistry";

interface ProtocolProgressData {
  protocol_id: string;
  protocol_name: string;
  step: number;
  total: number;
  phase: string;
  phase_name: string;
  is_completed?: boolean;
  generated_at?: string;
}

interface ProtocolProgressCardProps {
  data: ProtocolProgressData;
}

function ProtocolProgressCard({ data }: ProtocolProgressCardProps) {
  const {
    protocol_name,
    step,
    total,
    phase,
    phase_name,
    is_completed
  } = data;

  const progress = (step / total) * 100;

  // é˜¶æ®µé¢œè‰²
  const phaseColors = {
    "Phase 1": "from-emerald-500 to-teal-500",
    "Phase 2": "from-blue-500 to-indigo-500",
    "Phase 3": "from-purple-500 to-pink-500",
    default: "from-emerald-500 to-teal-500"
  };

  const gradientClass = phaseColors[phase as keyof typeof phaseColors] || phaseColors.default;

  if (is_completed) {
    return (
      <motion.div
        initial={{ opacity: 0, scale: 0.95 }}
        animate={{ opacity: 1, scale: 1 }}
        transition={{ duration: 0.5 }}
        className="protocol-progress-card bg-gradient-to-br from-emerald-50 to-teal-50 dark:from-emerald-950/30 dark:to-teal-950/30 rounded-xl border-2 border-emerald-200 dark:border-emerald-800 p-4 my-2"
      >
        <div className="flex items-center gap-3">
          <div className="flex-shrink-0 w-10 h-10 rounded-full bg-gradient-to-br from-emerald-500 to-teal-500 flex items-center justify-center">
            <span className="text-xl">âœ…</span>
          </div>
          <div className="flex-1">
            <div className="text-sm font-medium text-emerald-700 dark:text-emerald-300">
              {protocol_name} å·²å®Œæˆ
            </div>
            <div className="text-xs text-muted-foreground">
              äººç”Ÿåœ°å›¾å·²æ›´æ–°
            </div>
          </div>
        </div>
      </motion.div>
    );
  }

  return (
    <motion.div
      initial={{ opacity: 0, y: 10 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.3 }}
      className="protocol-progress-card bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50 dark:from-emerald-950/20 dark:via-teal-950/20 dark:to-cyan-950/20 rounded-xl border border-emerald-200 dark:border-emerald-800 p-4 my-2"
    >
      {/* Header */}
      <div className="flex items-center justify-between mb-3">
        <div className="flex items-center gap-2">
          <span className="text-lg">ğŸ“Š</span>
          <span className="text-sm font-medium text-emerald-700 dark:text-emerald-300">
            {protocol_name}
          </span>
        </div>
        <span className="text-xs text-muted-foreground">
          {step}/{total}
        </span>
      </div>

      {/* Progress Bar */}
      <div className="w-full bg-emerald-100 dark:bg-emerald-900/30 rounded-full h-2 mb-2 overflow-hidden">
        <motion.div
          initial={{ width: 0 }}
          animate={{ width: `${progress}%` }}
          transition={{ duration: 0.5, ease: "easeOut" }}
          className={`h-2 rounded-full bg-gradient-to-r ${gradientClass}`}
        />
      </div>

      {/* Phase Info */}
      <div className="flex items-center justify-between">
        <span className="text-xs text-emerald-600 dark:text-emerald-400">
          {phase}
        </span>
        <span className="text-xs text-muted-foreground">
          {phase_name}
        </span>
      </div>
    </motion.div>
  );
}

registerCard("protocol_progress", ProtocolProgressCard);

export default ProtocolProgressCard;
