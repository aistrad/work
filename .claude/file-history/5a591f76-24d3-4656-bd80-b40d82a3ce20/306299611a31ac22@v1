"use client";

/**
 * NewChatButton - Start a new conversation
 */

import { Plus } from "lucide-react";
import { cn } from "@/lib/utils";

interface NewChatButtonProps {
  onClick: () => void;
  disabled?: boolean;
  className?: string;
}

export function NewChatButton({ onClick, disabled, className }: NewChatButtonProps) {
  return (
    <button
      onClick={onClick}
      disabled={disabled}
      className={cn(
        "w-full flex items-center gap-2 px-3 py-2.5 rounded-lg",
        "bg-skill-primary/10 hover:bg-skill-primary/20",
        "text-skill-primary font-medium text-sm",
        "transition-colors duration-200",
        "disabled:opacity-50 disabled:cursor-not-allowed",
        className
      )}
    >
      <Plus className="w-4 h-4" />
      <span>新对话</span>
    </button>
  );
}

export default NewChatButton;
