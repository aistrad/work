"use client";

/**
 * ProtocolStep - 协议步骤组件
 *
 * 显示当前步骤的问题和输入区域
 * v10.3: 优化输入体验 - 自动增高、字数统计、快捷提示
 */

import { memo, useState, useCallback, useRef, useEffect } from "react";
import { cn } from "@/lib/utils";

export interface StepConfig {
  phase: string;
  name: string;
  question: string;
  placeholder?: string;
  minLength?: number;
  hints?: string[];
}

export interface ProtocolStepProps {
  step: number;
  config: StepConfig;
  isLoading?: boolean;
  onSubmit: (answer: string) => void;
  className?: string;
}

// 最小/最大行数
const MIN_ROWS = 4;
const MAX_ROWS = 12;

export const ProtocolStep = memo(function ProtocolStep({
  step,
  config,
  isLoading = false,
  onSubmit,
  className,
}: ProtocolStepProps) {
  const [answer, setAnswer] = useState("");
  const textareaRef = useRef<HTMLTextAreaElement>(null);

  // 自动调整高度
  useEffect(() => {
    const textarea = textareaRef.current;
    if (!textarea) return;

    // 重置高度以获取正确的 scrollHeight
    textarea.style.height = "auto";
    const lineHeight = 24; // 约等于 text-base 的行高
    const minHeight = MIN_ROWS * lineHeight;
    const maxHeight = MAX_ROWS * lineHeight;
    const newHeight = Math.min(Math.max(textarea.scrollHeight, minHeight), maxHeight);
    textarea.style.height = `${newHeight}px`;
  }, [answer]);

  const handleSubmit = useCallback(() => {
    if (answer.trim() && !isLoading) {
      onSubmit(answer.trim());
      setAnswer("");
    }
  }, [answer, isLoading, onSubmit]);

  const handleKeyDown = useCallback(
    (e: React.KeyboardEvent<HTMLTextAreaElement>) => {
      // Cmd/Ctrl + Enter 提交
      if (e.key === "Enter" && (e.metaKey || e.ctrlKey)) {
        e.preventDefault();
        handleSubmit();
      }
    },
    [handleSubmit]
  );

  // 使用提示填充
  const handleHintClick = useCallback((hint: string) => {
    setAnswer((prev) => (prev ? `${prev}\n${hint}` : hint));
    textareaRef.current?.focus();
  }, []);

  const charCount = answer.length;
  const minLength = config.minLength || 20;
  const isValid = charCount >= minLength;

  return (
    <div className={cn("w-full", className)}>
      {/* Question Card */}
      <div className="bg-gradient-to-br from-emerald-500/5 to-teal-500/5 border border-emerald-500/20 rounded-2xl p-6 mb-6">
        {/* Step badge */}
        <div className="flex items-center gap-2 mb-4">
          <span className="inline-flex items-center justify-center w-6 h-6 rounded-full bg-emerald-500/20 text-emerald-600 text-xs font-bold">
            Q{step}
          </span>
          <span className="text-sm font-medium text-emerald-600">
            {config.name}
          </span>
        </div>

        {/* Question text */}
        <p className="text-foreground text-base leading-relaxed whitespace-pre-line">
          {config.question}
        </p>
      </div>

      {/* Quick hints */}
      {config.hints && config.hints.length > 0 && (
        <div className="flex flex-wrap gap-2 mb-4">
          <span className="text-xs text-muted-foreground">快捷提示:</span>
          {config.hints.map((hint, idx) => (
            <button
              key={idx}
              onClick={() => handleHintClick(hint)}
              className="text-xs px-2 py-1 rounded-lg bg-muted hover:bg-muted/80 text-muted-foreground hover:text-foreground transition-colors"
            >
              {hint}
            </button>
          ))}
        </div>
      )}

      {/* Answer Input */}
      <div className="relative">
        <textarea
          ref={textareaRef}
          value={answer}
          onChange={(e) => setAnswer(e.target.value)}
          onKeyDown={handleKeyDown}
          placeholder={config.placeholder || "输入你的回答...（越具体越好）"}
          disabled={isLoading}
          className={cn(
            "w-full px-4 py-3 rounded-xl",
            "bg-background border border-border",
            "text-foreground placeholder:text-muted-foreground",
            "focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-emerald-500",
            "resize-none transition-all duration-200",
            "min-h-[96px]", // 4 行最小高度
            isLoading && "opacity-50 cursor-not-allowed"
          )}
          style={{ overflow: "hidden" }}
        />

        {/* Footer: char count + submit */}
        <div className="flex items-center justify-between mt-3">
          {/* Char count */}
          <div className="flex items-center gap-2 text-xs">
            <span className={cn(
              "transition-colors",
              charCount === 0 ? "text-muted-foreground" :
              isValid ? "text-emerald-500" : "text-amber-500"
            )}>
              {charCount} 字
            </span>
            {charCount > 0 && charCount < minLength && (
              <span className="text-muted-foreground">
                (建议至少 {minLength} 字)
              </span>
            )}
            <span className="text-muted-foreground hidden sm:inline">
              · ⌘+Enter 提交
            </span>
          </div>

          {/* Submit button */}
          <button
            onClick={handleSubmit}
            disabled={!answer.trim() || isLoading}
            className={cn(
              "px-6 py-2.5 rounded-xl font-medium text-sm",
              "bg-gradient-to-r from-emerald-500 to-teal-500",
              "text-white shadow-lg shadow-emerald-500/25",
              "hover:shadow-xl hover:shadow-emerald-500/30",
              "active:scale-[0.98] transition-all duration-200",
              "disabled:opacity-50 disabled:cursor-not-allowed disabled:shadow-none"
            )}
          >
            {isLoading ? (
              <span className="flex items-center gap-2">
                <svg
                  className="animate-spin h-4 w-4"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <circle
                    className="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    strokeWidth="4"
                  />
                  <path
                    className="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  />
                </svg>
                思考中...
              </span>
            ) : (
              <span className="flex items-center gap-2">
                提交
                <span>→</span>
              </span>
            )}
          </button>
        </div>
      </div>
    </div>
  );
});

export default ProtocolStep;
