    // Navigate to bazi with birth data
    const params = new URLSearchParams();
    if (year) params.set("year", year);
    if (month) params.set("month", month);
    if (day) params.set("day", day);
    if (hour && hour !== "unknown") params.set("hour", hour);

    window.location.href = `/bazi?${params.toString()}`;
  };

  const isFormValid = year && month && day;

  return (
    <LuminousPaper skill="bazi" variant="hero" className="min-h-screen">
      {/* Multi-layer breath aura for hero */}
