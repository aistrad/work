            VIBELIFE
          </Link>
          <div className="nav-links">
            <Link href="#features" className="nav-link">
              Features
            </Link>
            <Link href="#skills" className="nav-link">
              Skills
            </Link>
            <Link href="/auth/login">
              <Button variant="primary" size="sm">
                Login
              </Button>
            </Link>
          </div>
        </div>
      </nav>

      {/* Hero Section */}
      <section className="pt-24 pb-20 px-4">
        <div className="max-w-4xl mx-auto text-center">
          {/* Vibe Glyph */}
          <div className="flex justify-center mb-8">
            <VibeGlyph size="lg" skill="bazi" showAura animate />
          </div>

          {/* Hero Title */}
          <h1 className="hero-title mb-4">
            每个人都值得被深度理解
          </h1>
          <p className="text-lg md:text-xl text-muted-foreground italic font-serif mb-10">
            "Everyone deserves to be deeply understood"
          </p>

          {/* Birth Input Capsule */}
          <GlassCard className="max-w-lg mx-auto p-6 md:p-8">
            <h2 className="font-serif text-lg font-medium text-foreground mb-6">
              输入你的出生信息
            </h2>

            <BirthDateInputs
              year={year}
              month={month}
              day={day}
              hour={hour}
              onYearChange={setYear}
              onMonthChange={setMonth}
              onDayChange={setDay}
              onHourChange={setHour}
              showHour
              className="mb-6"
            />

            <Button
              onClick={handleStart}
              disabled={!isFormValid}
              className="w-full"
              size="lg"
            >
              开始了解自己
              <ArrowRight className="w-5 h-5" />
            </Button>
          </GlassCard>

          {/* Social Proof */}
          <p className="text-sm text-muted-foreground mt-6">
            已有 <span className="font-medium text-foreground">10,000+</span> 用户发现了自己的生命密码
          </p>
        </div>
      </section>

      {/* Value Props Section */}
      <section id="features" className="py-20 px-4 border-t border-border/50">
        <div className="max-w-5xl mx-auto">
          {/* Section Title */}
          <div className="text-center mb-12">
            <h2 className="section-title mb-2">
