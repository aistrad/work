"use client";

import Link from "next/link";
import { useState } from "react";
import { ArrowRight, Eye, MessageCircle, TrendingUp, BookOpen } from "lucide-react";
import { LuminousPaper, VibeGlyph, MultiBreathAura } from "@/components/core";
import { Button } from "@/components/ui/Button";
import { Card, CardContent, GlassCard } from "@/components/ui/Card";
import { BirthDateInputs } from "@/components/ui/Input";

// ═══════════════════════════════════════════════════════════════════════════
// VibeLife Landing Page - LUMINOUS PAPER Design System
// ═══════════════════════════════════════════════════════════════════════════

export default function Home() {
