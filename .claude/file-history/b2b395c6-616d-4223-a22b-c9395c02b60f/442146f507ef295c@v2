  å°å¯’: { icon: Snowflake, color: "text-blue-400", element: "æ°´æ—ºä¹‹å­£" },
  å¤§å¯’: { icon: Snowflake, color: "text-blue-500", element: "æ°´æ—ºä¹‹å­£" },
