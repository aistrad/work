// æ—¶æ®µé…ç½®
const TIME_PERIODS = {
  dawn: { icon: Sunrise, label: "æ™¨æ›¦", tip: "æ–°çš„ä¸€å¤©ï¼Œé€‚åˆè§„åˆ’ä¸å¯ç¨‹", range: "5:00-7:00" },
  morning: { icon: Sun, label: "ä¸Šåˆ", tip: "ç²¾åŠ›å……æ²›ï¼Œé€‚åˆä¸“æ³¨å·¥ä½œ", range: "7:00-12:00" },
  afternoon: { icon: Sun, label: "åˆå", tip: "æ²‰ç¨³æ—¶å…‰ï¼Œé€‚åˆæ·±åº¦æ€è€ƒ", range: "12:00-18:00" },
  evening: { icon: Sunset, label: "å‚æ™š", tip: "æ”¶å°¾æ—¶åˆ»ï¼Œé€‚åˆæ€»ç»“å›é¡¾", range: "18:00-21:00" },
  night: { icon: Moon, label: "å¤œæ™š", tip: "é™è°§æ—¶åˆ†ï¼Œé€‚åˆåæ€æ²‰æ·€", range: "21:00-5:00" },
};

interface DailyGreetingProps {
  solarTerm?: string; // èŠ‚æ°”åç§°
  termDescription?: string; // èŠ‚æ°”æè¿° (deprecated, use solarTerm)
  greeting: string; // ä¸»é—®å€™è¯­
  fortuneScore?: number; // 0-100
  fortuneHint?: string; // è¿åŠ¿æç¤ºï¼ˆæ›´åƒâ€œå åœä¸€å¥è¯â€ï¼‰
  todayTip?: string; // ä»Šæ—¥å»ºè®®
  timeOfDay?: keyof typeof TIME_PERIODS; // æ—¶æ®µ
  date?: string; // æ—¥æœŸ
  baziHint?: string; // å…«å­—æç¤º
  actionItem?: {
    text: string;
    completed?: boolean;
  };
  onActionToggle?: () => void;
  shareText?: string;
  className?: string;
}

export function DailyGreeting({
  solarTerm,
  greeting,
  fortuneScore,
  fortuneHint,
  todayTip,
  timeOfDay = "morning",
  date,
  baziHint,
  actionItem,
  onActionToggle,
  shareText,
  className,
}: DailyGreetingProps) {
  const termTheme = solarTerm ? SOLAR_TERM_THEMES[solarTerm] : null;
  const timePeriod = TIME_PERIODS[timeOfDay];
  const TermIcon = termTheme?.icon || Leaf;
  const TimeIcon = timePeriod.icon;

  return (
    <div
      className={cn(
        "rounded-xl overflow-hidden animate-fade-in-up",
        "bg-gradient-to-br from-card via-card to-muted/30",
        "border border-border/50",
        "shadow-sm",
        className
      )}
    >
      {/* Header: èŠ‚æ°” + æ—¥æœŸ */}
      <div className="px-4 py-3 bg-muted/30 border-b border-border/30">
        <div className="flex items-center justify-between">
          <div className="flex items-center gap-2">
            {termTheme && (
              <TermIcon className={cn("w-4 h-4", termTheme.color)} />
            )}
            {solarTerm && (
              <span className="font-serif font-semibold text-foreground text-sm">
                {solarTerm}
              </span>
            )}
            {termTheme && (
              <span className="text-xs text-muted-foreground px-2 py-0.5 bg-muted/50 rounded-full">
                {termTheme.element}
              </span>
            )}
          </div>
          {date && (
            <span className="text-xs text-muted-foreground">
              {date}
            </span>
          )}
        </div>
      </div>

      {/* Body */}
      <div className="p-4 space-y-3">
        {/* æ—¶æ®µé—®å€™ */}
        <div className="flex items-start gap-3">
          <div className="w-8 h-8 rounded-lg bg-skill-primary/10 flex items-center justify-center flex-shrink-0">
            <TimeIcon className="w-4 h-4 text-skill-primary" />
          </div>
          <div className="flex-1 min-w-0">
            <p className="text-sm font-medium text-foreground mb-0.5">
              {timePeriod.label} Â· {greeting}
            </p>
            <p className="text-xs text-muted-foreground">
              {timePeriod.tip}
            </p>
          </div>
        </div>

        {/* ä»Šæ—¥å»ºè®® */}
        {todayTip && (
          <div className="flex items-start gap-3">
            <div className="w-8 h-8 rounded-lg bg-accent-500/10 flex items-center justify-center flex-shrink-0">
              <span className="text-sm">ğŸ’¡</span>
            </div>
            <div className="flex-1 min-w-0">
              <p className="text-xs text-muted-foreground/80 mb-0.5">ä»Šæ—¥å»ºè®®</p>
              <p className="text-sm text-foreground">
                {todayTip}
              </p>
            </div>
          </div>
        )}

        {/* è¿åŠ¿æŒ‡æ•° */}
        {(typeof fortuneScore === "number" || fortuneHint) && (
          <div className="flex items-start gap-3">
            <div className="w-8 h-8 rounded-lg bg-emerald-500/10 flex items-center justify-center flex-shrink-0">
              <span className="text-sm">ğŸ“ˆ</span>
            </div>
            <div className="flex-1 min-w-0 space-y-1">
              <div className="flex items-center justify-between gap-2">
                <p className="text-xs text-muted-foreground/80">è¿åŠ¿æŒ‡æ•°</p>
                {typeof fortuneScore === "number" && (
                  <p className="text-xs font-medium text-foreground tabular-nums">
                    {Math.max(0, Math.min(100, Math.round(fortuneScore)))}/100
                  </p>
                )}
              </div>
              {typeof fortuneScore === "number" && (
                <div className="h-1.5 rounded-full bg-muted/40 overflow-hidden">
                  <div
                    className="h-full rounded-full bg-skill-primary transition-[width] duration-500"
                    style={{ width: `${Math.max(0, Math.min(100, fortuneScore))}%` }}
                  />
                </div>
              )}
              {fortuneHint && (
                <p className="text-sm text-foreground">
                  {fortuneHint}
                </p>
              )}
            </div>
          </div>
        )}

        {/* å…«å­—æç¤º (ä»…å…«å­—æŠ€èƒ½) */}
        {baziHint && (
          <div className="flex items-start gap-3">
            <div className="w-8 h-8 rounded-lg bg-purple-500/10 flex items-center justify-center flex-shrink-0">
              <span className="text-sm">â˜¯ï¸</span>
            </div>
            <div className="flex-1 min-w-0">
              <p className="text-xs text-muted-foreground/80 mb-0.5">å‘½ç†æç¤º</p>
              <p className="text-sm text-foreground">
                {baziHint}
              </p>
            </div>
          </div>
        )}

        {/* ä»Šæ—¥ä¸€æ­¥ */}
        {actionItem && (
          <div className="pt-2 border-t border-border/30">
            <button
              onClick={onActionToggle}
              className="flex items-center gap-3 text-foreground group w-full text-left p-2 -m-2 rounded-lg hover:bg-muted/30 transition-colors"
            >
              <span
                className={cn(
                  "w-5 h-5 rounded border-2 flex items-center justify-center flex-shrink-0",
                  "transition-all duration-200",
                  actionItem.completed
                    ? "bg-skill-primary border-skill-primary text-white"
                    : "border-border group-hover:border-skill-primary/50"
                )}
              >
                {actionItem.completed && (
                  <svg
                    className="w-3 h-3"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      strokeLinecap="round"
                      strokeLinejoin="round"
                      strokeWidth={3}
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                )}
              </span>
              <div className="flex-1 min-w-0">
                <p className="text-xs text-muted-foreground mb-0.5">ä»Šæ—¥ä¸€æ­¥</p>
                <p
                  className={cn(
                    "text-sm transition-colors",
                    actionItem.completed ? "line-through text-muted-foreground" : "text-foreground"
                  )}
                >
                  {actionItem.text}
                </p>
              </div>
            </button>

            {shareText && (
              <div className="mt-2 flex items-center justify-end">
                <button
                  onClick={async () => {
                    try {
                      await navigator.clipboard.writeText(shareText);
                    } catch {
                      // ignore
                    }
                  }}
                  className="text-xs text-muted-foreground hover:text-foreground transition-colors"
                  title="å¤åˆ¶åˆ†äº«æ–‡æ¡ˆ"
                >
                  å¤åˆ¶åˆ†äº«
                </button>
              </div>
            )}
          </div>
        )}
      </div>
    </div>
  );
}

// ç´§å‡‘ç‰ˆæœ¬
export function DailyGreetingCompact({
  greeting,
  solarTerm,
  className,
}: Pick<DailyGreetingProps, "greeting" | "solarTerm" | "className">) {
  return (
    <div
      className={cn(
        "p-3 rounded-lg bg-muted/30 border-l-2 border-l-antique-gold",
        className
      )}
    >
      {solarTerm && (
        <p className="text-xs text-muted-foreground mb-1">ğŸ‹ {solarTerm}</p>
      )}
      <p className="text-sm text-foreground line-clamp-2">{greeting}</p>
    </div>
  );
}

export default DailyGreeting;
