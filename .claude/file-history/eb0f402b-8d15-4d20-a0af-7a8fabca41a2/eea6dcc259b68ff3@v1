import { NextRequest, NextResponse } from "next/server";
import { API_INTERNAL, API_PATHS } from "@/lib/backend-config";

export async function GET(request: NextRequest) {
  try {
    const headers: Record<string, string> = {
      "Content-Type": "application/json",
    };

    const auth = request.headers.get("Authorization");
    if (auth) {
      headers["Authorization"] = auth;
    }

    const response = await fetch(`${API_INTERNAL}${API_PATHS.GUEST.SESSION}`, {
      headers,
    });

    const data = await response.json();
    return NextResponse.json(data, { status: response.status });
  } catch (error) {
    return NextResponse.json(
      { error: "Failed to fetch guest session", detail: String(error) },
      { status: 500 }
    );
  }
}

export async function POST(request: NextRequest) {
  try {
    const body = await request.json();

    const response = await fetch(`${API_INTERNAL}${API_PATHS.GUEST.SESSION}`, {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(body),
    });

    const data = await response.json();
    return NextResponse.json(data, { status: response.status });
  } catch (error) {
    return NextResponse.json(
      { error: "Failed to create guest session", detail: String(error) },
      { status: 500 }
    );
  }
}
