"use client"

import { cn } from "@/lib/utils"
import { Clock, Check, ChevronDown, Zap } from "lucide-react"
import { useState } from "react"

// æ¨¡æ‹Ÿä»»åŠ¡æ•°æ®
const MOCK_QUESTS = [
  {
    id: "1",
    title: "å®Œæˆ 5 åˆ†é’Ÿå‘¼å¸ç»ƒä¹ ",
    description: "é™å¿ƒå†¥æƒ³ï¼Œè°ƒæ•´å‘¼å¸èŠ‚å¥",
    duration: 5,
    status: "pending",
    rewards: [{ field: "energy", value: 3 }],
  },
  {
    id: "2",
    title: "è®°å½•ä»Šæ—¥æ„Ÿæ©äº‹é¡¹",
    description: "å†™ä¸‹ä¸‰ä»¶ä»Šå¤©å€¼å¾—æ„Ÿæ©çš„äº‹",
    duration: 2,
    status: "in_progress",
    rewards: [{ field: "emotion", value: 2 }],
  },
  {
    id: "3",
    title: "é˜…è¯» 15 åˆ†é’Ÿ",
    description: "é€‰æ‹©ä¸€æœ¬å–œæ¬¢çš„ä¹¦ç±",
    duration: 15,
    status: "completed",
    rewards: [{ field: "growth", value: 5 }],
  },
]

export function QuestsTab() {
  const [quests, setQuests] = useState(MOCK_QUESTS)
  const [expandedId, setExpandedId] = useState<string | null>(null)

  const handleComplete = (id: string) => {
    setQuests((prev) =>
      prev.map((q) => (q.id === id ? { ...q, status: "completed" } : q))
    )
  }

  const pendingQuests = quests.filter((q) => q.status !== "completed")
  const completedQuests = quests.filter((q) => q.status === "completed")

  return (
    <div className="p-4 space-y-6">
      {/* ä»Šæ—¥è¿›åº¦ */}
      <div className="p-4 rounded-lg bg-sidebar">
        <div className="flex items-center justify-between mb-2">
          <span className="text-sm text-muted-foreground">ä»Šæ—¥è¿›åº¦</span>
          <span className="text-sm font-medium">
            {completedQuests.length}/{quests.length}
          </span>
        </div>
        <div className="h-2 bg-hover rounded-full overflow-hidden">
          <div
            className="h-full bg-status-foreground rounded-full transition-all duration-500"
            style={{
              width: `${(completedQuests.length / quests.length) * 100}%`,
            }}
          />
        </div>
      </div>

      {/* å¾…å®Œæˆä»»åŠ¡ */}
      <section>
        <h2 className="text-lg font-semibold mb-3">å¾…å®Œæˆ</h2>
        <div className="space-y-3">
          {pendingQuests.map((quest) => (
            <QuestCard
              key={quest.id}
              quest={quest}
              isExpanded={expandedId === quest.id}
              onToggle={() =>
                setExpandedId(expandedId === quest.id ? null : quest.id)
              }
              onComplete={() => handleComplete(quest.id)}
            />
          ))}
          {pendingQuests.length === 0 && (
            <div className="text-center py-8 text-muted-foreground">
              ğŸ‰ ä»Šæ—¥ä»»åŠ¡å·²å…¨éƒ¨å®Œæˆï¼
            </div>
          )}
        </div>
      </section>

      {/* å·²å®Œæˆä»»åŠ¡ */}
      {completedQuests.length > 0 && (
        <section>
          <h2 className="text-lg font-semibold mb-3 text-muted-foreground">
            å·²å®Œæˆ
          </h2>
          <div className="space-y-2">
            {completedQuests.map((quest) => (
              <div
                key={quest.id}
                className={cn(
                  "flex items-center gap-3 p-3 rounded-lg",
                  "bg-sidebar opacity-60"
                )}
              >
                <div className="w-5 h-5 rounded bg-status flex items-center justify-center">
                  <Check className="w-3 h-3 text-status-foreground" />
                </div>
                <span className="flex-1 text-sm line-through">{quest.title}</span>
              </div>
            ))}
          </div>
        </section>
      )}
    </div>
  )
}

function QuestCard({
  quest,
  isExpanded,
  onToggle,
  onComplete,
}: {
  quest: (typeof MOCK_QUESTS)[0]
  isExpanded: boolean
  onToggle: () => void
  onComplete: () => void
}) {
  return (
    <div
      className={cn(
        "rounded-lg bg-sidebar overflow-hidden",
        "border border-border",
        quest.status === "in_progress" && "border-advice-foreground"
      )}
    >
      {/* ä¸»å†…å®¹ */}
      <div className="p-4">
        <div className="flex items-start gap-3">
          {/* å®ŒæˆæŒ‰é’® */}
          <button
            onClick={onComplete}
            className={cn(
              "flex-shrink-0 w-5 h-5 mt-0.5 rounded border-2",
              "border-muted-foreground hover:border-foreground",
              "transition-colors"
            )}
          />

          <div className="flex-1 min-w-0">
            <div className="flex items-center gap-2">
              <span className="font-medium text-foreground">{quest.title}</span>
              {quest.status === "in_progress" && (
                <span className="text-xs px-1.5 py-0.5 rounded bg-advice text-advice-foreground">
                  è¿›è¡Œä¸­
                </span>
              )}
            </div>

            {/* æ—¶é•¿å’Œå¥–åŠ± */}
            <div className="flex items-center gap-3 mt-1.5">
              <span className="flex items-center gap-1 text-xs text-muted-foreground">
                <Clock className="w-3 h-3" />
                {quest.duration}åˆ†é’Ÿ
              </span>
              {quest.rewards.map((reward, i) => (
                <span
                  key={i}
                  className="flex items-center gap-1 text-xs text-status-foreground"
                >
                  <Zap className="w-3 h-3" />+{reward.value} {reward.field}
                </span>
              ))}
            </div>
          </div>

          {/* å±•å¼€æŒ‰é’® */}
          <button
            onClick={onToggle}
            className={cn(
              "p-1 rounded hover:bg-hover transition-colors",
              "text-muted-foreground"
            )}
          >
            <ChevronDown
              className={cn(
                "w-4 h-4 transition-transform",
                isExpanded && "rotate-180"
              )}
            />
          </button>
        </div>
      </div>

      {/* å±•å¼€å†…å®¹ */}
      {isExpanded && (
        <div className="px-4 pb-4 pt-0">
          <p className="text-sm text-muted-foreground pl-8">
            {quest.description}
          </p>
        </div>
      )}
    </div>
  )
}
