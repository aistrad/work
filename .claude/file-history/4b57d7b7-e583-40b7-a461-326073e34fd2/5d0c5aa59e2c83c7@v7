"use client"

import { useState, useCallback, useEffect } from "react"
import { cn } from "@/lib/utils"
import { useAppStore } from "@/stores/app-store"
import { Resizer } from "./resizer"

interface DualCoreLayoutProps {
  zoneA: React.ReactNode  // Chat 区
  zoneB: React.ReactNode  // Dashboard 区
}

const MIN_ZONE_A_WIDTH = 400
const MAX_ZONE_A_WIDTH = 800
const DEFAULT_ZONE_A_WIDTH = 520

export function DualCoreLayout({ zoneA, zoneB }: DualCoreLayoutProps) {
  const { isSidebarOpen, setSidebarOpen, isMobile, setIsMobile } = useAppStore()
  const [zoneAWidth, setZoneAWidth] = useState(DEFAULT_ZONE_A_WIDTH)

  // 检测移动端
  useEffect(() => {
    const checkMobile = () => {
      const mobile = window.innerWidth < 1024
      setIsMobile(mobile)
      // 移动端默认显示 Chat（isSidebarOpen = false）
      if (mobile) {
        setSidebarOpen(false)
      }
    }
    checkMobile()
    window.addEventListener("resize", checkMobile)
    return () => window.removeEventListener("resize", checkMobile)
  }, [setIsMobile, setSidebarOpen])

  // 处理 Resizer 拖拽
  const handleResize = useCallback((delta: number) => {
    setZoneAWidth((prev) => {
      const newWidth = prev + delta
      return Math.max(MIN_ZONE_A_WIDTH, Math.min(MAX_ZONE_A_WIDTH, newWidth))
    })
  }, [])

  // 移动端布局
  if (isMobile) {
    return (
      <div className="h-screen w-full flex flex-col bg-background">
        {/* 主内容区 - 根据当前 tab 显示 */}
        <main className="flex-1 overflow-hidden">
          {isSidebarOpen ? zoneB : zoneA}
        </main>

        {/* 底部双 Tab 导航 */}
        <MobileTabBar />
      </div>
    )
  }

  // 桌面端布局
  // 沉浸模式：Dashboard 关闭时，Chat 区填满整个屏幕
  const isImmersive = !isSidebarOpen

  return (
    <div className="h-screen w-full flex bg-sidebar overflow-hidden">
      {/* Zone A: Chat 区 */}
      <main
        className={cn(
          "flex flex-col min-w-0 bg-background relative z-10 transition-all duration-300 ease-out",
          isImmersive ? "flex-1" : "flex-shrink-0 shadow-float"
        )}
        style={{ width: isImmersive ? "100%" : zoneAWidth }}
      >
        {zoneA}
      </main>

      {/* Resizer - 仅在非沉浸模式显示 */}
      {!isImmersive && <Resizer onResize={handleResize} />}

      {/* Zone B: Dashboard 区 - 自适应填充剩余宽度 */}
      <aside
        className={cn(
          "flex flex-col min-w-0 transition-all duration-300 ease-out",
          "bg-sidebar",
          isSidebarOpen
            ? "flex-1 opacity-100"
            : "w-0 opacity-0 overflow-hidden pointer-events-none"
        )}
      >
        {zoneB}
      </aside>
    </div>
  )
}

// 移动端底部导航 tabs 配置
const MOBILE_TABS = [
  { id: "chat", label: "对话", icon: ChatIcon },
  { id: "overview", label: "概览", icon: OverviewIcon },
  { id: "status", label: "状态", icon: StatusIcon },
  { id: "quests", label: "任务", icon: QuestsIcon },
  { id: "explore", label: "探索", icon: ExploreIcon },
] as const

type MobileTabId = typeof MOBILE_TABS[number]["id"]

// 移动端底部 Tab 导航
function MobileTabBar() {
  const { isSidebarOpen, setSidebarOpen, activeTab, setActiveTab } = useAppStore()

  // 计算当前激活的 tab
  const currentTab: MobileTabId = !isSidebarOpen ? "chat" : activeTab as MobileTabId

  const handleTabClick = (tabId: MobileTabId) => {
    if (tabId === "chat") {
      setSidebarOpen(false)
    } else {
      setSidebarOpen(true)
      setActiveTab(tabId as "overview" | "status" | "trends" | "quests" | "relations" | "explore")
    }
  }

  return (
    <nav
      className={cn(
        "flex items-center justify-around",
        "h-16 border-t border-border",
        "bg-background",
        "safe-area-pb" // iOS safe area
      )}
    >
      {MOBILE_TABS.map((tab) => {
        const isActive = currentTab === tab.id
        const Icon = tab.icon
        return (
          <button
            key={tab.id}
            onClick={() => handleTabClick(tab.id)}
            className={cn(
              "relative flex flex-col items-center justify-center gap-0.5 flex-1 h-full",
              "text-muted-foreground transition-all duration-200",
              isActive && "text-foreground"
            )}
          >
            {/* 选中指示器 */}
            {isActive && (
              <div className="absolute top-1 w-8 h-1 rounded-full bg-foreground" />
            )}
            <Icon className={cn("w-5 h-5", isActive && "scale-110")} />
            <span className="text-[10px] font-medium">{tab.label}</span>
          </button>
        )
      })}
    </nav>
  )
}

// Icons
function ChatIcon({ className }: { className?: string }) {
  return (
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      strokeWidth="2"
      strokeLinecap="round"
      strokeLinejoin="round"
      className={className}
    >
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
    </svg>
  )
}

function DashboardIcon({ className }: { className?: string }) {
  return (
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      strokeWidth="2"
      strokeLinecap="round"
      strokeLinejoin="round"
      className={className}
    >
      <rect x="3" y="3" width="7" height="9" rx="1" />
      <rect x="14" y="3" width="7" height="5" rx="1" />
      <rect x="14" y="12" width="7" height="9" rx="1" />
      <rect x="3" y="16" width="7" height="5" rx="1" />
    </svg>
  )
}
