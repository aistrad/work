"use client"

import { useState, useCallback, useEffect } from "react"
import { cn } from "@/lib/utils"
import { useAppStore } from "@/stores/app-store"
import { Resizer } from "./resizer"

interface DualCoreLayoutProps {
  zoneA: React.ReactNode  // Chat 区
  zoneB: React.ReactNode  // Dashboard 区
}

const MIN_ZONE_A_WIDTH = 320
const MAX_ZONE_A_WIDTH = 800
const DEFAULT_ZONE_A_WIDTH = 500
const ZONE_B_WIDTH = 450

export function DualCoreLayout({ zoneA, zoneB }: DualCoreLayoutProps) {
  const { isSidebarOpen, setSidebarOpen, isMobile, setIsMobile } = useAppStore()
  const [zoneAWidth, setZoneAWidth] = useState(DEFAULT_ZONE_A_WIDTH)

  // 检测移动端
  useEffect(() => {
    const checkMobile = () => {
      setIsMobile(window.innerWidth < 1024)
    }
    checkMobile()
    window.addEventListener("resize", checkMobile)
    return () => window.removeEventListener("resize", checkMobile)
  }, [setIsMobile])

  // 处理 Resizer 拖拽
  const handleResize = useCallback((delta: number) => {
    setZoneAWidth((prev) => {
      const newWidth = prev + delta
      return Math.max(MIN_ZONE_A_WIDTH, Math.min(MAX_ZONE_A_WIDTH, newWidth))
    })
  }, [])

  // 移动端布局
  if (isMobile) {
    return (
      <div className="h-screen w-full flex flex-col bg-background">
        {/* 主内容区 - 根据当前 tab 显示 */}
        <main className="flex-1 overflow-hidden">
          {isSidebarOpen ? zoneB : zoneA}
        </main>

        {/* 底部双 Tab 导航 */}
        <MobileTabBar />
      </div>
    )
  }

  // 桌面端布局
  return (
    <div className="h-screen w-full flex bg-sidebar overflow-hidden">
      {/* Zone A: Chat 区 */}
      <main
        className="flex flex-col min-w-0 bg-background relative z-10 shadow-float"
        style={{ width: zoneAWidth }}
      >
        {zoneA}
      </main>

      {/* Resizer */}
      <Resizer onResize={handleResize} />

      {/* Zone B: Dashboard 区 */}
      <aside
        className={cn(
          "flex flex-col transition-all duration-300 ease-out",
          "bg-sidebar border-l border-border",
          isSidebarOpen ? "w-[450px] opacity-100" : "w-0 opacity-0 overflow-hidden"
        )}
        style={{ width: isSidebarOpen ? ZONE_B_WIDTH : 0 }}
      >
        {zoneB}
      </aside>
    </div>
  )
}

// 移动端底部 Tab 导航
function MobileTabBar() {
  const { isSidebarOpen, setSidebarOpen } = useAppStore()

  return (
    <nav
      className={cn(
        "flex items-center justify-around",
        "h-14 border-t border-border",
        "bg-sidebar/80 backdrop-blur-lg",
        "safe-area-pb" // iOS safe area
      )}
    >
      <button
        onClick={() => setSidebarOpen(false)}
        className={cn(
          "flex flex-col items-center justify-center gap-1 flex-1 h-full",
          "text-muted-foreground transition-colors",
          !isSidebarOpen && "text-foreground"
        )}
      >
        <ChatIcon className="w-5 h-5" />
        <span className="text-[10px] font-medium">Chat</span>
      </button>

      <button
        onClick={() => setSidebarOpen(true)}
        className={cn(
          "flex flex-col items-center justify-center gap-1 flex-1 h-full",
          "text-muted-foreground transition-colors",
          isSidebarOpen && "text-foreground"
        )}
      >
        <DashboardIcon className="w-5 h-5" />
        <span className="text-[10px] font-medium">Dashboard</span>
      </button>
    </nav>
  )
}

// Icons
function ChatIcon({ className }: { className?: string }) {
  return (
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      strokeWidth="2"
      strokeLinecap="round"
      strokeLinejoin="round"
      className={className}
    >
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
    </svg>
  )
}

function DashboardIcon({ className }: { className?: string }) {
  return (
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      strokeWidth="2"
      strokeLinecap="round"
      strokeLinejoin="round"
      className={className}
    >
      <rect x="3" y="3" width="7" height="9" rx="1" />
      <rect x="14" y="3" width="7" height="5" rx="1" />
      <rect x="14" y="12" width="7" height="9" rx="1" />
      <rect x="3" y="16" width="7" height="5" rx="1" />
    </svg>
  )
}
