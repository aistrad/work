  userScalable: false,
  viewportFit: "cover", // 启用 iOS safe area 支持
  themeColor: [
    { media: "(prefers-color-scheme: light)", color: "#FFFFFF" },
    { media: "(prefers-color-scheme: dark)", color: "#191919" },
