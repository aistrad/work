"use client"

import { useCallback } from "react"
import { cn } from "@/lib/utils"
import { useAppStore } from "@/stores/app-store"
import { MessageList } from "./message-list"
import { Omnibar } from "./omnibar"
import { PanelRight, PanelRightClose } from "lucide-react"

export function ChatZone() {
  const {
    messages,
    isStreaming,
    addMessage,
    setStreaming,
    isSidebarOpen,
    setSidebarOpen,
    isMobile,
  } = useAppStore()

  // 发送消息
  const handleSend = useCallback(
    async (content: string) => {
      // 添加用户消息
      const userMessage = {
        id: Date.now().toString(),
        role: "user" as const,
        content,
        timestamp: new Date(),
      }
      addMessage(userMessage)

      // 模拟 AI 回复
      setStreaming(true)

      // 模拟延迟
      await new Promise((resolve) => setTimeout(resolve, 1500))

      // 模拟 AI 回复 (带 blocks 的三段式结构)
      const aiMessage = {
        id: (Date.now() + 1).toString(),
        role: "assistant" as const,
        content: "",
        timestamp: new Date(),
        blocks: [
          {
            id: "b1",
            type: "callout" as const,
            content: "根据你的描述，这周的整体状态呈现上升趋势，特别是在情绪稳定性方面有显著提升。",
          },
          {
            id: "b2",
            type: "toggle" as const,
            content: "查看详细分析",
            children: [
              {
                id: "b2-1",
                type: "text" as const,
                content: "从你分享的日常习惯来看，规律的作息时间和适度的运动对你的能量水平有积极影响。特别是本周三的冥想练习，可能是情绪改善的关键因素。",
              },
            ],
          },
          {
            id: "b3",
            type: "task" as const,
            content: "完成 5 分钟呼吸练习",
            duration: 5 as const,
            status: "pending" as const,
          },
          {
            id: "b4",
            type: "task" as const,
            content: "记录今日感恩事项",
            duration: 2 as const,
            status: "pending" as const,
          },
        ],
        artifact: {
          id: "art1",
          type: "analysis" as const,
          title: "本周状态分析",
          summary: "能量 +5, 情绪稳定性提升 12%",
          sourceMessageId: (Date.now() + 1).toString(),
          createdAt: new Date(),
        },
      }

      addMessage(aiMessage)
      setStreaming(false)
    },
    [addMessage, setStreaming]
  )

  // 处理命令
  const handleCommand = useCallback(
    (command: string) => {
      console.log("Command:", command)
      // TODO: 实现命令处理
    },
    []
  )

  return (
    <div className="flex flex-col h-full">
      {/* Header */}
      <header
        className={cn(
          "flex items-center justify-between",
          "h-14 px-4 border-b border-border",
          "bg-background"
        )}
      >
        <h1 className="font-semibold text-foreground">Fortune AI</h1>

        {/* 桌面端: 侧边栏切换按钮 */}
        {!isMobile && (
          <button
            onClick={() => setSidebarOpen(!isSidebarOpen)}
            className={cn(
              "p-2 rounded-lg",
              "text-muted-foreground hover:text-foreground hover:bg-hover",
              "transition-colors"
            )}
          >
            {isSidebarOpen ? (
              <PanelRightClose className="w-5 h-5" />
            ) : (
              <PanelRight className="w-5 h-5" />
            )}
          </button>
        )}
      </header>

      {/* Message List */}
      <MessageList messages={messages} isStreaming={isStreaming} />

      {/* Omnibar */}
      <Omnibar
        onSend={handleSend}
        onCommand={handleCommand}
        isStreaming={isStreaming}
      />
    </div>
  )
}
