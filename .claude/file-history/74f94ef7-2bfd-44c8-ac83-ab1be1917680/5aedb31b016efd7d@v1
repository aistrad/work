apiVersion: v1
kind: Service
metadata:
  name: vibelife-api
  labels:
    app: vibelife
    component: api
spec:
  type: ClusterIP
  ports:
    - port: 8000
      targetPort: 8000
      protocol: TCP
  selector:
    app: vibelife
    component: api
---
apiVersion: v1
kind: Service
metadata:
  name: vibelife-web
  labels:
    app: vibelife
    component: web
spec:
  type: ClusterIP
  ports:
    - port: 3000
      targetPort: 3000
      protocol: TCP
  selector:
    app: vibelife
    component: web
