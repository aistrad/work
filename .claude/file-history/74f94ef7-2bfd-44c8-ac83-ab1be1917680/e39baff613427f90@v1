apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: vibelife-ingress
  labels:
    app: vibelife
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: letsencrypt-prod
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
    nginx.ingress.kubernetes.io/proxy-body-size: "10m"
spec:
  tls:
    - hosts:
        - vibelife.app
        - api.vibelife.app
        - bazi.vibelife.app
        - zodiac.vibelife.app
      secretName: vibelife-tls
  rules:
    # Main website
    - host: vibelife.app
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: vibelife-web
                port:
                  number: 3000

    # API
    - host: api.vibelife.app
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: vibelife-api
                port:
                  number: 8000

    # Bazi subdomain
    - host: bazi.vibelife.app
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: vibelife-web
                port:
                  number: 3000

    # Zodiac subdomain
    - host: zodiac.vibelife.app
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: vibelife-web
                port:
                  number: 3000
