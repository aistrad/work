# ═══════════════════════════════════════════════════════════════
# VibeLife Backend - aiscend 服务器部署配置
# ═══════════════════════════════════════════════════════════════
#
# 部署说明:
#   1. 复制 .env.example 到 .env 并填写配置
#   2. docker-compose up -d
#   3. 配置 Nginx 反向代理 (可选)
#
# ═══════════════════════════════════════════════════════════════

version: '3.8'

services:
  # ─────────────────────────────────────────────────────────────
  # FastAPI 后端
  # ─────────────────────────────────────────────────────────────
  api:
    build:
      context: ../../apps/api
      dockerfile: Dockerfile
    container_name: vibelife-api
    restart: unless-stopped
    ports:
      - "8000:8000"
    environment:
      - VIBELIFE_ENV=production
      - VIBELIFE_API_HOST=0.0.0.0
      - VIBELIFE_API_PORT=8000
    env_file:
      - .env
    volumes:
      # 持久化日志
      - ./logs:/app/logs
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - vibelife-network

  # ─────────────────────────────────────────────────────────────
  # Nginx 反向代理 (可选，如果需要 HTTPS)
  # ─────────────────────────────────────────────────────────────
  nginx:
    image: nginx:alpine
    container_name: vibelife-nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/ssl:/etc/nginx/ssl:ro
      - ./logs/nginx:/var/log/nginx
    depends_on:
      - api
    networks:
      - vibelife-network

  # ─────────────────────────────────────────────────────────────
  # Redis 缓存 (可选)
  # ─────────────────────────────────────────────────────────────
  redis:
    image: redis:7-alpine
    container_name: vibelife-redis
    restart: unless-stopped
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data
    networks:
      - vibelife-network

networks:
  vibelife-network:
    driver: bridge

volumes:
  redis-data:
