# VibeLife Kubernetes Secrets
# Copy this file to secrets.yaml and fill in the values
# Then apply with: kubectl apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: vibelife-secrets
  labels:
    app: vibelife
type: Opaque
stringData:
  # Database
  VIBELIFE_DB_URL: "postgresql://user:password@host:5432/vibelife"

  # JWT Secret
  VIBELIFE_JWT_SECRET: "your-secure-jwt-secret-key"

  # LLM API Keys
  GLM_API_KEY: "your-glm-api-key"
  CLAUDE_API_KEY: "your-claude-api-key"

  # Embedding
  GEMINI_API_KEY: "your-gemini-api-key"

  # Vector Store
  PINECONE_API_KEY: "your-pinecone-api-key"
  PINECONE_HOST: "your-index.pinecone.io"

  # Payment
  STRIPE_SECRET_KEY: "sk_live_..."
  STRIPE_WEBHOOK_SECRET: "whsec_..."
