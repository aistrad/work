{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Initialize Aliases Input",
  "type": "object",
  "properties": {
    "aliases": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["glm", "claude", "cc"]
      },
      "description": "需要初始化的 alias 列表"
    },
    "shell_config": {
      "type": "string",
      "enum": ["bashrc", "zshrc", "auto"],
      "default": "auto",
      "description": "目标 shell 配置文件"
    },
    "force": {
      "type": "boolean",
      "default": false,
      "description": "是否覆盖现有配置"
    }
  },
  "required": ["aliases"]
}
