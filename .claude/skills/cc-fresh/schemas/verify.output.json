{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Verify Config Output",
  "type": "object",
  "properties": {
    "valid": {
      "type": "boolean",
      "description": "配置是否有效"
    },
    "config": {
      "type": "object",
      "properties": {
        "endpoint": {
          "type": "string"
        },
        "models": {
          "type": "object",
          "properties": {
            "opus": {
              "type": "string"
            },
            "sonnet": {
              "type": "string"
            },
            "haiku": {
              "type": "string"
            }
          }
        }
      },
      "description": "当前配置"
    },
    "connection_test": {
      "type": "object",
      "properties": {
        "tested": {
          "type": "boolean"
        },
        "success": {
          "type": "boolean"
        },
        "latency_ms": {
          "type": "number"
        },
        "error": {
          "type": "string"
        }
      },
      "description": "连接测试结果"
    }
  }
}
